@model CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
    var hasOutOfStockItems = Model.CartItems.Any(x => x.IsOutOfStock);
}

<div class="container my-4 amazon-cart-page">

    @if (Model.CartItems.Any())
    {
        <div class="row g-4">
            @* --- Left Column: Cart Items --- *@
            <div class="col-lg-9">
                <div class="bg-white p-4 border rounded-3 shadow-sm">
                    <div class="d-flex justify-content-between align-items-end border-bottom pb-2 mb-3">
                        <h2 class="fw-bold m-0">Shopping Cart</h2>
                        <span class="text-muted small d-none d-md-block">Price</span>
                    </div>

                    @if (hasOutOfStockItems)
                    {
                        <div class="alert alert-danger d-flex align-items-center mb-4 rounded-3 p-3 stock-alert-box">
                            <i class="fas fa-exclamation-triangle fs-4 me-3"></i>
                            <div>
                                <span class="fw-bold">Stock Alert:</span>
                                <span class="ms-1">Some items exceed available stock. Please adjust quantity before checkout.</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success d-flex align-items-center mb-4 rounded-3 p-2 small border-0 bg-success-subtle">
                            <i class="fas fa-check-circle me-2 text-success"></i>
                            <div>Your order is eligible for <strong>FREE Shipping</strong>. Select this option at checkout.</div>
                        </div>
                    }

                    @foreach (var item in Model.CartItems)
                    {
                        var dangerClass = item.IsOutOfStock ? "item-out-of-stock" : "";
                        var itemTotal = item.Price * item.Quantity;

                        <div class="cart-item-row py-4 border-bottom @dangerClass">
                            <div class="row g-3">
                                @* Product Image *@
                                <div class="col-4 col-md-2">
                                    <a asp-controller="Products" asp-action="Product" asp-route-slug="@item.ProductSlug">
                                        <img src="/media/products/@item.Image" class="img-fluid rounded cart-product-img" alt="@item.ProductName">
                                    </a>
                                </div>

                                @* Product Info *@
                                <div class="col-8 col-md-8">
                                    <h5 class="fw-bold mb-1 fs-6">
                                        <a asp-controller="Products" asp-action="Product" asp-route-slug="@item.ProductSlug" class="text-amazon-link text-decoration-none">
                                            @item.ProductName
                                        </a>
                                    </h5>

                                    @if (item.IsOutOfStock)
                                    {
                                        <p class="text-danger small fw-bold mb-1">⚠ Quantity exceeds stock limit</p>
                                    }
                                    else
                                    {
                                        <p class="text-success small mb-1">In Stock</p>
                                    }

                                    <div class="text-muted small mb-2">Sold by Local Seller</div>

                                    <div class="d-flex align-items-center flex-wrap gap-2 mt-3">
                                        <form method="post" asp-action="UpdateQuantity" class="d-inline">
                                            <input type="hidden" name="id" value="@item.ProductId" />
                                            <div class="input-group input-group-sm cart-qty-group">
                                                <label class="input-group-text bg-light border-end-0">Qty:</label>
                                                <select name="quantity" class="form-select form-select-sm cart-qty-select" onchange="this.form.submit()">
                                                    @for (int q = 1; q <= 10; q++)
                                                    {
                                                        <option value="@q" selected="@(q == item.Quantity)">@q</option>
                                                    }
                                                    @if (item.Quantity > 10)
                                                    {
                                                        <option value="@item.Quantity" selected>@item.Quantity</option>
                                                    }
                                                </select>
                                            </div>
                                        </form>

                                        <span class="text-muted d-none d-md-inline">|</span>

                                        <a asp-action="Remove" asp-route-id="@item.ProductId" class="text-amazon-link small text-decoration-none">
                                            Delete
                                        </a>
                                    </div>
                                </div>

                                @* Item Price *@
                                <div class="col-12 col-md-2 text-md-end">
                                    <div class="fw-bold item-price-display">
                                        ₹@itemTotal.ToString("#,##,##0.00")
                                    </div>
                                    <div class="small text-muted d-md-none">Unit Price: ₹@item.Price.ToString("#,##,##0.00")</div>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="text-end pt-3">
                        <span class="fs-5">Subtotal (@Model.CartItems.Sum(x => x.Quantity) items): </span>
                        <span class="fw-bold fs-5 total-summary">₹@Model.GrandTotal.ToString("#,##,##0.00")</span>
                    </div>
                </div>
            </div>

            @* --- Right Column: Buy Box --- *@
            <div class="col-lg-3">
                <div class="buy-box border rounded-3 p-3 shadow-sm sticky-top" style="top: 20px;">
                    <div class="mb-3">
                        <div class="d-flex align-items-start text-success small mb-2">
                            <i class="fas fa-check-circle mt-1 me-2"></i>
                            <span>Your order is eligible for FREE Delivery.</span>
                        </div>
                        <div class="fs-5">
                            Subtotal (@Model.CartItems.Sum(x => x.Quantity) items):
                            <div class="fw-bold price-value-box mt-1">₹@Model.GrandTotal.ToString("#,##,##0.00")</div>
                        </div>
                    </div>

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <p class="text-center small text-muted mb-2">Sign in to checkout faster</p>
                        <a asp-area="Identity" asp-page="/Account/Login"
                           asp-route-ReturnUrl="@Url.Action("Index", "Cart", new { Area = "" })"
                           class="btn btn-amazon-checkout btn-lg w-100 mb-3">
                            Proceed to Checkout
                        </a>
                    }
                    else
                    {
                        <form asp-controller="Orders" asp-action="Create" method="post">
                            <button type="submit" class="btn btn-amazon-checkout btn-lg w-100 mb-3" @(hasOutOfStockItems ? "disabled" : "")>
                                Proceed to Buy
                            </button>
                        </form>
                        @if (hasOutOfStockItems)
                        {
                            <div class="alert alert-danger small py-2 text-center mb-3">
                                Fix stock issues to continue.
                            </div>
                        }
                    }

                    <div class="border-top pt-3">
                        <a asp-action="Clear" class="text-amazon-link small text-decoration-none d-block text-center mb-2">Clear Shopping Cart</a>
                        <a asp-controller="Products" asp-action="Index" class="btn btn-sm btn-outline-secondary w-100 rounded-pill">
                            Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="text-center py-5 bg-white rounded border shadow-sm empty-cart-box">
                    <i class="fas fa-shopping-cart display-1 text-light-emphasis mb-4"></i>
                    <h2 class="fw-bold">Your Cart is empty</h2>
                    <p class="text-muted mb-4">You have no items in your shopping cart. Let's find something amazing!</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-amazon-checkout btn-lg px-5">
                        Shop Now
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        :root {
            --amazon-price-red: #B12704;
            --amazon-yellow: #FFD814;
            --amazon-yellow-hover: #F7CA00;
            --amazon-teal: #007185;
            --amazon-border: #D5D9D9;
        }

        .amazon-cart-page {
            background-color: #EAEDED;
            min-height: 80vh;
            padding-top: 2rem;
        }

        .bg-white {
            background-color: #fff !important;
        }

        .text-amazon-link {
            color: var(--amazon-teal) !important;
        }

            .text-amazon-link:hover {
                color: #C45500 !important;
                text-decoration: underline !important;
            }

        /* Cart Item Styling */
        .cart-product-img {
            max-height: 180px;
            object-fit: contain;
        }

        .cart-item-row {
            transition: background 0.2s;
        }

        .item-out-of-stock {
            background-color: #FFF8F8;
            border-left: 4px solid var(--amazon-price-red);
            padding-left: 10px;
        }

        .item-price-display {
            color: #0F1111;
            font-size: 1.15rem;
        }

        .total-summary {
            color: var(--amazon-price-red);
        }

        /* Controls */
        .cart-qty-group .input-group-text {
            font-size: 0.75rem;
            font-weight: bold;
        }

        .cart-qty-select {
            background-color: #F0F2F2 !important;
            border-color: var(--amazon-border) !important;
            max-width: 80px;
        }

        /* Buy Box */
        .buy-box {
            background-color: white;
            border: 1px solid var(--amazon-border) !important;
        }

        .price-value-box {
            color: var(--amazon-price-red);
        }

        /* Buttons */
        .btn-amazon-checkout {
            background-color: var(--amazon-yellow) !important;
            border: 1px solid #FCD200 !important;
            border-radius: 8px !important;
            color: #0F1111 !important;
            font-size: 0.95rem;
            font-weight: 500;
        }

            .btn-amazon-checkout:hover {
                background-color: var(--amazon-yellow-hover) !important;
            }

            .btn-amazon-checkout:disabled {
                background-color: #eff1f3 !important;
                border-color: #d5d9d9 !important;
                color: #a7abb0 !important;
            }

        .empty-cart-box {
            background-color: white !important;
        }

        @@media (max-width: 991.98px) {
            .sticky-top {
                position: static !important;
            }

            .amazon-cart-page {
                background-color: #fff;
            }
        }
    </style>
}