@model CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";

    // Check if any item in the cart is marked as out of stock
    var hasOutOfStockItems = Model.CartItems.Any(item => item.IsOutOfStock);
}

<div class="container my-5">

    @if (Model.CartItems.Count > 0)
    {
        <h1 class="mb-4 fw-bold border-bottom pb-2">🛒 Your Shopping Cart</h1>

        @* Global warning if there are any stock issues *@
        @if (hasOutOfStockItems)
        {
            <div class="alert alert-danger d-flex align-items-center mb-4 rounded-3 shadow-sm border-0" role="alert">
                <i class="bi bi-exclamation-octagon-fill me-3 fs-5"></i>
                <div>
                    **Stock Alert:** One or more items in your cart exceed available stock. Please **adjust the quantity down or remove** the item(s) before proceeding to checkout.
                </div>
            </div>
        }

        <div class="row g-4">
            @* Added g-4 for consistent gutter spacing *@

            <div class="col-lg-8">

                <h2 class="h5 mb-3 text-secondary">Items in Cart (@Model.CartItems.Count)</h2>

                @foreach (var item in Model.CartItems)
                {
                    // Conditional class to highlight out-of-stock cards
                    var cardClass = item.IsOutOfStock ? "border border-danger border-3 bg-danger-subtle" : "border shadow-sm";

                    <div class="card mb-4 @cardClass rounded-4 overflow-hidden">
                        @if (item.IsOutOfStock)
                        {
                            <div class="text-bg-danger text-center small py-1 fw-bold">STOCK LIMIT EXCEEDED</div>
                        }
                        <div class="card-body p-4">
                            @* Increased padding for cleaner look *@
                            <div class="row align-items-center g-3">
                                @* Used g-3 for internal spacing *@

                                @* Product Image (Visible on all sizes) *@
                                <div class="col-3 col-sm-2 text-center">
                                    <img src="/media/products/@item.Image" class="img-fluid rounded-3" alt="@item.ProductName" style="max-height: 90px; object-fit: cover;">
                                </div>

                                @* Product Details (Name, Price, Stock Status) *@
                                <div class="col-9 col-sm-4">
                                    <h5 class="card-title mb-1 fs-5 fw-bold text-truncate" title="@item.ProductName">@item.ProductName</h5>
                                    <p class="text-muted small mb-0">Unit Price: **@item.Price.ToString("C2")**</p>
                                </div>

                                @* Quantity Control (Centered) *@
                                <div class="col-6 col-sm-3 d-flex justify-content-center">
                                    <div class="input-group input-group-sm w-auto">
                                        <a asp-action="Decrease" asp-route-id="@item.ProductId" class="btn btn-outline-dark border-end-0 px-3 py-2" title="Decrease Quantity">
                                            <i class="bi bi-dash"></i>
                                        </a>
                                        <input type="text" class="form-control text-center bg-white" value="@item.Quantity" readonly style="max-width: 45px; border-radius: 0; padding: 0.375rem 0.25rem;">
                                        <a asp-action="Add" asp-route-id="@item.ProductId"
                                           class="btn btn-outline-dark border-start-0 px-3 py-2 @(item.IsOutOfStock ? "disabled" : null)"
                                           aria-disabled="@(item.IsOutOfStock ? "true" : "false")"
                                           onclick="@(item.IsOutOfStock ? "return false;" : "")" title="Increase Quantity">
                                            <i class="bi bi-plus"></i>
                                        </a>
                                    </div>
                                </div>

                                @* Total Price & Remove Button (Right-aligned) *@
                                <div class="col-6 col-sm-3 text-end">
                                    @{
                                        var itemTotal = item.Quantity * item.Price;
                                    }
                                    <p class="fw-bolder mb-1 fs-4 @(item.IsOutOfStock ? "text-danger" : "text-success")">@itemTotal.ToString("C2")</p>
                                    <a asp-action="Remove" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-secondary p-1" title="Remove Item" style="font-size: 0.8rem;">
                                        <i class="bi bi-trash3 me-1"></i>Remove
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary mt-3 rounded-pill px-4 shadow-sm">
                    <i class="bi bi-bag-plus me-1"></i> Continue Shopping
                </a>

            </div>
            @* --- ORDER SUMMARY COLUMN --- *@
            <div class="col-lg-4">
                <div class="card shadow-lg border-0 rounded-4 sticky-top" style="top: 20px;">

                    <div class="card-header text-bg-dark rounded-top-4 p-3">
                        <h5 class="mb-0 fw-bold">Order Summary 💰</h5>
                    </div>

                    <div class="card-body p-4">

                        @* Grand Total Display (Large and Prominent) *@
                        <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
                            <h4 class="mb-0 fw-bold text-dark">Grand Total:</h4>
                            <h4 class="mb-0 text-success fw-bolder fs-3">@Model.GrandTotal.ToString("C2")</h4>
                        </div>

                        @* --- ACCOUNT STATUS SECTION (PERSISTENT LOGIC) --- *@
                        <hr class="mt-0" />

                        @if (!User.Identity.IsAuthenticated)
                        {
                            @*Custom styling without alert class, always visible when logged out*@
                            <div class="border border-secondary-subtle bg-light rounded-3 text-center p-3 mb-3 shadow-sm">
                                <p class="mb-2 fw-bold text-dark">Ready to check out?</p>
                                <div class="d-flex justify-content-center gap-3 small">
                                    <a asp-area="Identity" asp-controller="Account" asp-action="Login" asp-route-ReturnUrl="@Url.Action("Index", "Cart")" class="fw-bold text-primary text-decoration-none">
                                        <i class="bi bi-box-arrow-in-right me-1"></i> Log In
                                    </a>
                                    <span class="text-muted">|</span>
                                    <a asp-area="Identity" asp-controller="Account" asp-action="Register" class="text-secondary text-decoration-none">
                                        <i class="bi bi-person-plus me-1"></i> Create Account
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            @*Confirmation message when logged in*@
                            <div class="text-bg-success rounded-3 text-center py-2 mb-3 fw-bold shadow-sm">
                                <i class="bi bi-check-circle-fill me-1"></i> Logged in as **@User.Identity.Name!**
                            </div>
                        }
                        @* --------------------------------------------------------- *@

                        <div class="d-grid gap-2 mt-4">

                            @{
                                // Checkout button is disabled only if stock issues exist OR not authenticated
                                var isCheckoutDisabled = hasOutOfStockItems || !User.Identity.IsAuthenticated;
                            }

                            @if (!isCheckoutDisabled)
                            {
                                <form asp-controller="Orders" asp-action="Create" method="post">
                                    <button type="submit" class="btn btn-success btn-lg w-100 rounded-pill shadow-lg">
                                        <i class="bi bi-shield-lock-fill me-2"></i> Secure Checkout
                                    </button>
                                </form>
                            }
                            else
                            {
                                <button type="button" class="btn btn-success btn-lg w-100 rounded-pill" disabled>
                                    <i class="bi bi-shield-lock-fill me-2"></i> Secure Checkout
                                </button>

                                @* Status messages for disabled checkout *@
                                @if (hasOutOfStockItems)
                                {
                                    <div class="alert alert-danger text-center small mt-2 py-2 mb-0" role="alert">
                                        <i class="bi bi-x-circle-fill"></i> **Action Required:** Fix stock issues to proceed.
                                    </div>
                                }

                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <div class="alert alert-warning text-center small mt-2 py-2 mb-0" role="alert">
                                        <i class="bi bi-person-fill"></i> You must be **logged in** to proceed.
                                    </div>
                                }
                            }

                            <a asp-controller="Cart" asp-action="Clear" class="btn btn-outline-danger mt-3 w-100 rounded-pill">
                                <i class="bi bi-x-octagon-fill me-1"></i> Clear Cart
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        @* Empty Cart Message - Cleaned up and centralized *@
        <div class="row justify-content-center">
            <div class="col-md-8 text-center py-5 border border-primary rounded-4 shadow-lg bg-light">
                <i class="bi bi-cart-x display-1 text-primary"></i>
                <h3 class="display-6 mt-3 text-dark fw-bold">Your shopping cart is empty.</h3>
                <p class="lead text-muted">Looks like you haven't added any great finds to your cart yet.</p>
                <a asp-controller="Products" asp-action="Index" class="btn btn-lg btn-primary mt-3 rounded-pill px-5 shadow">
                    <i class="bi bi-shop me-1"></i> Start Shopping Now
                </a>
            </div>
        </div>
    }

</div>