@model CMSECommerce.Models.SubscriptionRequest
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            padding: 40px;
            color: #333;
        }

        /* --- PRINT BUTTON STYLING --- */
        .print-controls {
            margin-bottom: 30px;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 8px;
            border: 1px solid #dee2e6;
        }

        /* Hides the button and background when printing to paper/PDF */
        @@media print {
            .print-controls {
                display: none !important;
            }

            body {
                padding: 0;
            }
        }

        .receipt-header {
            border-bottom: 2px solid #21409a;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .logo {
            color: #21409a;
            font-weight: bold;
            font-size: 28px;
            letter-spacing: 1px;
        }

        .info-label {
            color: #8898aa;
            font-size: 11px;
            text-transform: uppercase;
            font-weight: bold;
            margin-bottom: 2px;
        }

        .info-value {
            font-size: 15px;
            font-weight: bold;
        }

        .table-receipt {
            margin-top: 40px;
            border-radius: 8px;
            overflow: hidden;
        }

            .table-receipt thead {
                background-color: #f8f9fe;
            }

        .footer-note {
            margin-top: 100px;
            font-size: 11px;
            color: #999;
            text-align: center;
            border-top: 1px solid #eee;
            padding-top: 15px;
        }

        .txn-id {
            font-family: monospace;
            background: #f4f6f9;
            padding: 2px 6px;
            border-radius: 4px;
        }
    </style>
</head>
<body>

    @* --- PRINT ACTION BUTTON --- *@
    <div class="print-controls text-center">
        <button onclick="window.print()" class="btn btn-primary px-5 fw-bold shadow-sm">
            <i class="fas fa-print me-2"></i> Print or Save as PDF
        </button>
        <p class="text-muted small mt-2 mb-0">Tip: Select "Save as PDF" in the printer destination to keep a digital copy.</p>
    </div>

    <div class="receipt-header d-flex justify-content-between align-items-center">
        <div class="logo">WEYPAARI</div>
        <div class="text-end">
            <h4 class="fw-bold mb-0">PAYMENT RECEIPT</h4>
            <small class="text-muted">
                TXN: <span class="txn-id">@Model.Id-@Guid.NewGuid().ToString().ToUpper()</span>
            </small>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="info-label">ITS Number</div>
            <div class="info-value">@Model.ItsNumber</div>
        </div>
        <div class="col-6 text-end">
            <div class="info-label">Date Issued</div>
            <div class="info-value">@DateTime.Now.ToString("dd MMM yyyy, hh:mm tt")</div>
        </div>
    </div>

    <table class="table table-receipt mt-5">
        <thead>
            <tr>
                <th class="py-3">Description</th>
                <th class="text-center py-3">Duration</th>
                <th class="text-end py-3">Status</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="py-3">
                    <div class="fw-bold">@Model.Tier.Name Subscription Plan</div>
                    <div class="text-muted small">Access to @Model.Tier.ProductLimit product listings</div>
                </td>
                <td class="text-center py-3 align-middle">@Model.Tier.DurationMonths Months</td>
                <td class="text-end py-3 align-middle">
                    <span class="text-success fw-bold">● PAID</span>
                </td>
            </tr>
        </tbody>
    </table>

    <div class="row mt-5">
        <div class="col-12 text-end">
            <div class="info-label">Payment Method</div>
            <div class="info-value text-dark">Processed via Admin Portal</div>
            <div class="info-label mt-3">Total Amount</div>
            <div class="fs-3 fw-bold text-primary">SUCCESSFUL</div>
        </div>
    </div>

    <div class="footer-note">
        <p class="mb-1">This is an electronically generated document. No physical signature is required.</p>
        <p class="mb-0">Weypaari Marketplace &copy; @DateTime.Now.Year</p>
    </div>
</body>
</html>