@using CMSECommerce.Models.ViewModels
@model SubscriptionRequestViewModel

@{
    ViewData["Title"] = Model.IsUpgrade ? "Upgrade Plan" : "Register Plan";
    ViewData["HideLayoutSidebar"] = true;
}

<style>
    /* Small Text UI refinements */
    .reg-container {
        font-size: 0.85rem;
    }

    .card-header h5 {
        font-size: 1rem;
        font-weight: 700;
        letter-spacing: 0.5px;
    }

    .form-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #4a5568;
    }

    .form-control-sm-custom {
        font-size: 0.85rem;
        padding: 0.5rem 0.75rem;
        border-radius: 6px;
    }

    .btn-action {
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        border-radius: 6px;
    }

    .helper-text {
        font-size: 0.7rem;
        color: #718096;
    }

    /* Upgrade specific UI theme */
    .bg-upgrade {
        background: linear-gradient(135deg, #21409a 0%, #152a66 100%) !important;
    }

    .upgrade-alert {
        background-color: #ebf4ff;
        border: 1px solid #bee3f8;
        border-radius: 8px;
        color: #2c5282;
    }

    /* Price Breakdown Styling */
    .price-summary-box {
        background-color: #f8fafc;
        border: 1px dashed #cbd5e0;
        border-radius: 8px;
        padding: 15px;
    }

    .summary-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 6px;
        font-size: 0.8rem;
    }

    .summary-total {
        display: flex;
        justify-content: space-between;
        margin-top: 10px;
        padding-top: 10px;
        border-top: 1px solid #e2e8f0;
        font-weight: 800;
        font-size: 0.95rem;
        color: #1a202c;
    }

    .credit-text {
        color: #38a169;
        font-weight: 600;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

<div class="container reg-container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm border-0">
                @* Dynamic Header Color based on Upgrade Status *@
                <div class="card-header @(Model.IsUpgrade ? "bg-upgrade" : "bg-dark") text-white text-center py-3">
                    <h5 class="mb-0">
                        <i class="fas @(Model.IsUpgrade ? "fa-arrow-circle-up" : "fa-user-plus") me-2"></i>
                        @(Model.IsUpgrade ? "Upgrade to" : "Registration:") @Model.TierName
                    </h5>
                </div>

                <div class="card-body p-4">
                    <form asp-action="SubmitRequest" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger text-xs mb-3"></div>

                        @* Hidden Fields to preserve state during Postback *@
                        <input type="hidden" asp-for="TierId" />
                        <input type="hidden" asp-for="IsUpgrade" />
                        <input type="hidden" asp-for="TierName" />
                        <input type="hidden" asp-for="Price" />
                        @* New fields for the adjustment logic *@
                        <input type="hidden" asp-for="FinalAmount" />
                        <input type="hidden" asp-for="CreditApplied" />

                        <div class="mb-3">
                            <label asp-for="ITSNumber" class="form-label fw-bold"></label>
                            <input asp-for="ITSNumber" class="form-control form-control-sm-custom bg-light" readonly />                            
                            <span asp-validation-for="ITSNumber" class="text-danger text-xs"></span>
                        </div>
                        <div class="mb-3">                           
                            <label asp-for="FullName" class="form-label fw-bold"></label>
                            <input asp-for="FullName" class="form-control form-control-sm-custom bg-light" readonly />
                            <span asp-validation-for="FullName" class="text-danger text-xs"></span>
                        </div>

                        @* Fair Adjustment Summary Section *@
                        <div class="price-summary-box mb-4">
                            <label class="form-label fw-bold mb-2 d-block">Price Breakdown</label>

                            <div class="summary-item">
                                <span>New Plan Fee (@Model.TierName):</span>
                                <span>₹@Model.Price.ToString("N0")</span>
                            </div>

                            @if (Model.IsUpgrade && Model.CreditApplied > 0)
                            {
                                <div class="summary-item credit-text">
                                    <span>Credit (Unused Previous Plan):</span>
                                    <span>- ₹@Model.CreditApplied.ToString("N0")</span>
                                </div>
                            }

                            <div class="summary-total">
                                <span>Total Amount to Pay:</span>
                                <span>₹@Model.FinalAmount.ToString("N0")</span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <label class="form-label fw-bold mb-0">Payment Receipt</label>
                            </div>
                            <input type="file" asp-for="Receipt" class="form-control form-control-sm-custom" accept="image/*" required />
                            <div class="helper-text mt-2">
                                <i class="fas fa-info-circle me-1"></i>Please upload a screenshot of your payment of <strong>₹@Model.FinalAmount.ToString("N0")</strong>.
                            </div>
                            <span asp-validation-for="Receipt" class="text-danger text-xs"></span>
                        </div>

                        @* Special Info Box for Upgraders *@
                        @if (Model.IsUpgrade)
                        {
                            <div class="upgrade-alert p-3 mb-4 d-flex align-items-start gap-2">
                                <i class="fas fa-magic mt-1"></i>
                                <div>
                                    <strong class="d-block mb-1" style="font-size: 0.8rem;">Fair Value Credit Applied</strong>
                                    <span class="helper-text" style="color: inherit;">
                                        We have adjusted the cost by crediting the remaining value of your current plan. Your new <strong>@Model.TierName Subscription Plan</strong> will start immediately upon approval.
                                    </span>
                                </div>
                            </div>
                        }

                        <hr class="opacity-10 mb-4" />

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="text-decoration-none text-muted fw-bold" style="font-size: 0.75rem;">
                                <i class="fas fa-arrow-left me-1"></i> Back to Plans
                            </a>
                            <button type="submit" class="btn @(Model.IsUpgrade ? "btn-primary" : "btn-success") btn-action px-4 py-2 shadow-sm">
                                @(Model.IsUpgrade ? "Pay & Confirm" : "Submit Request")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <p class="text-center text-muted mt-3 helper-text">
                All requests are typically reviewed within 24 hours.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Retrieve messages from Controller
            var errorMessage = '@TempData["Error"]';
            var successMessage = '@TempData["Success"]';
            var infoMessage = '@TempData["Info"]';

            // Error handling
            if (errorMessage) {
                Swal.fire({
                    icon: 'error',
                    title: '<span style="font-size: 1.1rem">Action Restricted</span>',
                    html: '<span style="font-size: 0.85rem">' + errorMessage + '</span>',
                    confirmButtonColor: '#dc3545',
                    confirmButtonText: 'Return to Plans'
                }).then(() => {
                    window.location.href = '@Url.Action("Index", "Subscription")';
                });
            }

            // Info handling
            if (infoMessage) {
                Swal.fire({
                    icon: 'info',
                    title: '<span style="font-size: 1.1rem">Notice</span>',
                    html: '<span style="font-size: 0.85rem">' + infoMessage + '</span>',
                    confirmButtonColor: '#21409a',
                    confirmButtonText: 'Check Status'
                }).then(() => {
                    window.location.href = '@Url.Action("Status", "Subscription")';
                });
            }

            // Success confirmation
            if (successMessage) {
                Swal.fire({
                    icon: 'success',
                    title: '<span style="font-size: 1.1rem">Request Submitted</span>',
                    html: '<span style="font-size: 0.85rem">' + successMessage + '</span>',
                    confirmButtonColor: '#198754'
                });
            }
        });
    </script>
}