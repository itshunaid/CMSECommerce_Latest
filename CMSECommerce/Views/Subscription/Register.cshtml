@using CMSECommerce.Models.ViewModels
@model SubscriptionRequestViewModel

@{
    ViewData["Title"] = "Register Subscription";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-dark text-white text-center">
                    <h4>Registration for @Model.TierName</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="SubmitRequest" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="TierId" />

                        <div class="mb-3">
                            <label asp-for="ITSNumber" class="form-label fw-bold"></label>
                            <input asp-for="ITSNumber" class="form-control bg-light" readonly />
                            <span asp-validation-for="ITSNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Upload Payment Receipt (Image)</label>
                            <input type="file" asp-for="Receipt" class="form-control" accept="image/*" required />
                            <small class="text-muted">Max size: 2MB (JPG, PNG)</small>
                            <span asp-validation-for="Receipt" class="text-danger"></span>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Back to Plans</a>
                            <button type="submit" class="btn btn-success px-4">Submit Request</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Read messages from TempData
            var errorMessage = '@TempData["Error"]';
            var successMessage = '@TempData["Success"]';

            // 1. If user already has a subscription (Error Pop-up)
            if (errorMessage) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Request Active',
                    text: errorMessage,
                    confirmButtonColor: '#198754',
                    confirmButtonText: 'Go to Status Page',
                    allowOutsideClick: false
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '@Url.Action("Status", "Subscription")';
                    }
                });
            }

            // 2. If the request was successful (Success Pop-up)
            if (successMessage) {
                Swal.fire({
                    icon: 'success',
                    title: 'Submitted!',
                    text: successMessage,
                    showConfirmButton: true,
                    confirmButtonColor: '#198754'
                });
            }
        });
    </script>
}