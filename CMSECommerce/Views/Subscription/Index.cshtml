@model IEnumerable<CMSECommerce.Models.SubscriptionTier>

@{
    ViewData["Title"] = "Membership Plans";
    ViewData["HideLayoutSidebar"] = true;

    // Retrieve metadata from ViewBag passed by the Controller
    int? currentTierId = ViewBag.CurrentTierId;
    bool hasPendingRequest = ViewBag.HasPendingRequest ?? false;
    bool isActiveSubscriber = ViewBag.IsActiveSubscriber ?? false;
}

@section Styles {
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #21409a 0%, #152a66 100%);
            --primary-color: #21409a;
            --text-dark: #1a202c;
            --text-light: #718096;
            --bg-light: #f7fafc;
            --white: #ffffff;
            --success: #38a169;
            --warning: #d97706;
            --info: #3182ce;
        }

        body {
            background-color: var(--bg-light);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        }

        .pricing-container {
            max-width: 1300px;
            margin: 0 auto;
        }

        .pricing-header {
            padding: 3rem 0;
            text-align: center;
        }

            .pricing-header h1 {
                font-weight: 800;
                color: var(--text-dark);
                font-size: 2.5rem;
                letter-spacing: -0.025em;
            }

        .qr-badge {
            background: var(--white);
            padding: 1rem;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            display: inline-flex;
            align-items: center;
            gap: 1rem;
            border: 1px solid #e2e8f0;
            margin-bottom: 2rem;
        }

        .pricing-card {
            background: var(--white);
            border: 1px solid #e2e8f0;
            border-radius: 24px;
            padding: 2rem 1.25rem;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            display: flex;
            flex-direction: column;
            height: 100%;
            position: relative;
        }

            .pricing-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
                border-color: var(--primary-color);
            }

            .pricing-card.premium {
                border: 2px solid var(--primary-color);
                background: linear-gradient(to bottom, #ffffff, #f0f4ff);
            }

            .pricing-card.current {
                border: 2px solid var(--success);
                background-color: #f0fff4;
            }

        .premium-label, .current-label {
            position: absolute;
            top: 0;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            padding: 0.5rem 1.5rem;
            border-radius: 99px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            white-space: nowrap;
            z-index: 10;
        }

        .premium-label {
            background: var(--primary-gradient);
        }

        .current-label {
            background: var(--success);
        }

        .plan-name {
            font-size: 0.875rem;
            font-weight: 700;
            color: var(--primary-color);
            text-transform: uppercase;
            margin-bottom: 0.5rem;
            display: block;
        }

        .plan-price {
            font-size: 2.25rem;
            font-weight: 800;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
        }

            .plan-price span {
                font-size: 0.9rem;
                font-weight: 500;
                color: var(--text-light);
            }

        .feature-list {
            margin: 1.5rem 0;
            padding: 0;
            list-style: none;
            flex-grow: 1;
        }

        .feature-item {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
            margin-bottom: 0.85rem;
            font-size: 0.88rem;
            color: #4a5568;
            line-height: 1.4;
        }

            .feature-item i {
                color: var(--success);
                font-size: 1rem;
                margin-top: 2px;
                flex-shrink: 0;
            }

            .feature-item.locked {
                color: #a0aec0;
            }

                .feature-item.locked i {
                    color: #cbd5e0;
                }

        .btn-upgrade {
            background: var(--primary-gradient);
            color: white;
            font-weight: 700;
            padding: 0.85rem;
            border-radius: 12px;
            text-align: center;
            text-decoration: none;
            transition: all 0.2s;
            border: none;
            cursor: pointer;
            width: 100%;
        }

            .btn-upgrade:hover {
                opacity: 0.95;
                color: white;
            }

        .btn-outline {
            background: transparent;
            border: 2px solid #e2e8f0;
            color: var(--text-dark);
        }

        .btn-locked {
            background: #e2e8f0;
            color: #94a3b8;
            cursor: not-allowed;
        }

        .btn-pending {
            background: var(--warning);
            color: white;
        }

        /* Enhanced Modal Styling */
        .modal-content {
            border-radius: 20px;
            border: none;
        }

        .disclaimer-list {
            padding-left: 0;
            list-style: none;
        }

            .disclaimer-list li {
                margin-bottom: 12px;
                display: flex;
                gap: 10px;
                font-size: 0.88rem;
                color: #4a5568;
                line-height: 1.5;
            }

            .disclaimer-list i {
                color: var(--primary-color);
                margin-top: 4px;
                flex-shrink: 0;
            }

        .legal-footer-links {
            font-size: 0.75rem;
            color: #718096;
            margin-top: 15px;
            text-align: center;
        }

            .legal-footer-links a {
                color: var(--primary-color);
                text-decoration: none;
                font-weight: 600;
            }

                .legal-footer-links a:hover {
                    text-decoration: underline;
                }
    </style>
}

<div class="container pricing-container py-5">
    <div class="pricing-header">
        <h1>Elevate Your Business</h1>
        <p>Choose the right tools to showcase your products and manage your orders with Weypaari’s professional seller ecosystem.</p>

        <div class="qr-badge">
            <img src="https://api.qrserver.com/v1/create-qr-code/?size=100x100&data=https://weypaari.com"
                 style="width: 60px; height: 60px;" alt="QR Code">
            <div class="text-start">
                <div class="fw-bold text-dark" style="font-size: 0.85rem;">Instant Activation</div>
                <div class="text-muted small">Scan to pay & start selling</div>
            </div>
        </div>
    </div>

    <div class="row g-4 justify-content-center">
        @foreach (var tier in Model.OrderBy(t => t.Id))
        {
            bool isTrial = tier.Name.Contains("Trial", StringComparison.OrdinalIgnoreCase);
            bool isBasic = tier.Name.Contains("Basic", StringComparison.OrdinalIgnoreCase);
            bool isAdvance = tier.Name.Contains("Advance", StringComparison.OrdinalIgnoreCase);
            bool isPremium = tier.Name.Contains("Premium", StringComparison.OrdinalIgnoreCase);

            bool isCurrentTier = currentTierId == tier.Id;
            bool isDowngrade = currentTierId != null && tier.Id < currentTierId;

            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="pricing-card @(isPremium ? "premium" : "") @(isCurrentTier ? "current" : "")">

                    @if (isCurrentTier)
                    {
                        <div class="current-label"><i class="fas fa-check me-1"></i> Your Plan</div>
                    }
                    else if (isPremium)
                    {
                        <div class="premium-label">Best Value</div>
                    }

                    <span class="plan-name">@tier.Name</span>
                    <div class="plan-price">₹@tier.Price.ToString("N0")<span>/@(tier.DurationMonths == 1 ? "1 month" : tier.DurationMonths + " months")</span></div>

                    <ul class="feature-list">
                        <li class="feature-item"><i class="fas fa-check-circle"></i> <strong>@tier.ProductLimit Products</strong></li>
                        <li class="feature-item"><i class="fas fa-check-circle"></i> Personal Store Page</li>
                        <li class="feature-item"><i class="fas fa-check-circle"></i> Seller Dashboard</li>
                        <li class="feature-item">
                            <i class="fas fa-bolt"></i>
                            <span>@(isPremium ? "Peak Hours Daily" : "Twice a week") front page display</span>
                        </li>
                        <li class="feature-item @(isAdvance || isPremium ? "" : "locked")">
                            <i class="fas @(isAdvance || isPremium ? "fa-star" : "fa-lock")"></i>
                            <span>Recommended Slider @(isPremium ? "(Peak Hours Daily)" : isAdvance ? "(Twice a week)" : "")</span>
                        </li>
                        <li class="feature-item @(isTrial ? "locked" : "")">
                            <i class="fas @(isTrial ? "fa-lock" : "fa-book")"></i>
                            <span>Seller Dictionary (B2B)</span>
                        </li>
                        <li class="feature-item @(isAdvance || isPremium ? "" : "locked")">
                            <i class="fas @(isAdvance || isPremium ? "fa-bell" : "fa-lock")"></i>
                            <span>
                                @if (isPremium)
                                {
                                    <text>Spontaneous new product alerts</text>
                                }
                                else if (isAdvance)
                                {

                                    <text>Alerts within 24 hours</text>
                                }
                                else
                                {

                                    <text>Customer notifications</text>
                                }
                            </span>
                        </li>
                    </ul>

                    @if (hasPendingRequest)
                    {
                        <a asp-action="Status" class="btn-upgrade btn-pending"><i class="fas fa-clock me-2"></i> Request Pending</a>
                    }
                    else if (isCurrentTier)
                    {
                        <a asp-action="Status" class="btn-upgrade btn-outline">Manage Subscription</a>
                    }
                    else if (isDowngrade)
                    {
                        <button class="btn-upgrade btn-locked" title="Downgrades are not available"><i class="fas fa-lock me-2"></i> Lower Plan</button>
                    }
                    else
                    {
                        <button type="button" class="btn-upgrade @(isPremium ? "" : "btn-outline")"
                                onclick="openDisclaimer(@tier.Id, '@tier.Name')">
                            @(currentTierId != null ? "Upgrade Now" : "Get Started Now")
                        </button>
                    }
                </div>
            </div>
        }
    </div>
</div>

@* Enhanced Disclaimer Modal with Legal Links *@
<div class="modal fade" id="disclaimerModal" data-bs-backdrop="static" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold"><i class="fas fa-shield-alt text-primary me-2"></i>Subscription Agreement</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted small">By subscribing to the <strong id="modalTierName" class="text-primary"></strong> plan, you acknowledge the following terms:</p>
                <ul class="disclaimer-list">
                    <li><i class="fas fa-history"></i> <span><strong>Verification:</strong> Manual ITS ID/Reference verification takes 24-48 working hours.</span></li>
                    <li><i class="fas fa-ban"></i> <span><strong>No-Refund Policy:</strong> All subscription payments are final and non-refundable.</span></li>
                    <li><i class="fas fa-layer-group"></i> <span><strong>Upgrade/Downgrade:</strong> Upgrades apply instantly; downgrades are only possible after expiry.</span></li>
                    <li><i class="fas fa-camera"></i> <span><strong>Payment Proof:</strong> You must upload a clear screenshot of the payment receipt.</span></li>
                    <li><i class="fas fa-user-shield"></i> <span><strong>Usage Policy:</strong> Account sharing or scraping B2B data results in suspension.</span></li>
                </ul>

                <div class="form-check mt-4 p-3 bg-light rounded border">
                    <input class="form-check-input ms-0 me-2" type="checkbox" id="agreeCheckbox" style="cursor:pointer">
                    <label class="form-check-label small fw-bold text-dark" for="agreeCheckbox" style="cursor:pointer">
                        I agree to the terms and the legal policies listed below.
                    </label>
                </div>

                <div class="legal-footer-links">
                    By proceeding, you agree to our
                    <a href="/Subscription/Terms" target="_blank">Terms of Service</a> &
                    <a href="/Subscription/Privacy" target="_blank">Privacy Policy</a>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-light btn-sm text-muted" data-bs-dismiss="modal">Decline</button>
                <button type="button" id="proceedBtn" class="btn btn-primary px-4 disabled" onclick="redirectToRegister()">Accept & Proceed</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let selectedTierId = null;
        const modal = new bootstrap.Modal(document.getElementById('disclaimerModal'));
        const proceedBtn = document.getElementById('proceedBtn');
        const checkbox = document.getElementById('agreeCheckbox');

        function openDisclaimer(tierId, tierName) {
            selectedTierId = tierId;
            document.getElementById('modalTierName').innerText = tierName;
            checkbox.checked = false;
            proceedBtn.classList.add('disabled');
            modal.show();
        }

        checkbox.addEventListener('change', function() {
            if (this.checked) proceedBtn.classList.remove('disabled');
            else proceedBtn.classList.add('disabled');
        });

        function redirectToRegister() {
            if (selectedTierId && checkbox.checked) {
                window.location.href = `@Url.Action("Register", "Subscription")?tierId=${selectedTierId}`;
            }
        }

        document.querySelectorAll('.pricing-card').forEach((card, index) => {
            card.style.opacity = "0";
            card.style.transform = "translateY(20px)";
            card.style.transition = "all 0.5s ease-out";
            setTimeout(() => {
                card.style.opacity = "1";
                card.style.transform = "translateY(0)";
            }, 100 * index);
        });
    </script>
}