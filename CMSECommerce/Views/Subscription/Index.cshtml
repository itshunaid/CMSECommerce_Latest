@model IEnumerable<CMSECommerce.Models.SubscriptionTier>

@{
    ViewData["Title"] = "Membership Plans";
    ViewData["HideLayoutSidebar"] = true;

    // Retrieve metadata from ViewBag passed by the Controller
    int? currentTierId = ViewBag.CurrentTierId;
    bool hasPendingRequest = ViewBag.HasPendingRequest ?? false;
    bool isActiveSubscriber = ViewBag.IsActiveSubscriber ?? false;
}

@section Styles {
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #21409a 0%, #152a66 100%);
            --primary-color: #21409a;
            --text-dark: #1a202c;
            --text-light: #64748b;
            --bg-light: #f8fafc;
            --white: #ffffff;
            --success: #10b981;
            --warning: #f59e0b;
            --border-color: #e2e8f0;
        }

        body {
            background-color: var(--bg-light);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            color: var(--text-dark);
        }

        .pricing-header {
            padding: 4rem 0 3rem;
            text-align: center;
        }

            .pricing-header h1 {
                font-weight: 800;
                font-size: 2.5rem;
                letter-spacing: -0.02em;
                margin-bottom: 1rem;
                color: var(--text-dark);
            }

            .pricing-header p {
                font-size: 1.1rem;
                color: var(--text-light);
                max-width: 700px;
                margin: 0 auto;
            }

        /* Pricing Card Base */
        .pricing-card {
            background: var(--white);
            border: 1px solid var(--border-color);
            border-radius: 24px;
            padding: 2.5rem 1.5rem;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            flex-direction: column;
            height: 100%;
            position: relative;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        }

            .pricing-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
                border-color: var(--primary-color);
            }

            /* Special States */
            .pricing-card.premium {
                border: 2px solid var(--primary-color);
                background: linear-gradient(to bottom, #ffffff, #f8faff);
            }

            .pricing-card.current {
                border: 2px solid var(--success);
                background-color: #f0fdf4;
            }

        /* Badges/Labels */
        .premium-label, .current-label {
            position: absolute;
            top: -15px;
            left: 50%;
            transform: translateX(-50%);
            color: white;
            padding: 0.5rem 1.25rem;
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            z-index: 10;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .premium-label {
            background: var(--primary-gradient);
        }

        .current-label {
            background: var(--success);
            white-space: nowrap;
            display: flex; /* Optional: ensures perfect vertical alignment */
            align-items: center; /* Optional: centers icon and text vertically */
        }

        /* Plan Details */
        .plan-name {
            font-size: 0.9rem;
            font-weight: 700;
            color: var(--primary-color);
            text-transform: uppercase;
            letter-spacing: 0.1em;
            margin-bottom: 1rem;
            display: block;
        }

        .plan-price {
            font-size: 2.75rem;
            font-weight: 800;
            margin-bottom: 1.5rem;
            color: var(--text-dark);
            display: flex;
            align-items: baseline;
        }

            .plan-price span {
                font-size: 1rem;
                font-weight: 500;
                color: var(--text-light);
                margin-left: 4px;
            }

        /* Features */
        .feature-list {
            margin-bottom: 2rem;
            padding: 0;
            list-style: none;
            flex-grow: 1;
        }

        .feature-item {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
            margin-bottom: 1rem;
            font-size: 0.95rem;
            color: #475569;
            line-height: 1.5;
        }

            .feature-item i {
                color: var(--success);
                font-size: 1.1rem;
                flex-shrink: 0;
                margin-top: 2px;
            }

            .feature-item.locked {
                color: #94a3b8;
            }

                .feature-item.locked i {
                    color: #cbd5e1;
                }

        /* Buttons */
        .btn-upgrade {
            width: 100%;
            padding: 0.8rem 1.5rem;
            border-radius: 12px;
            font-weight: 700;
            text-align: center;
            text-decoration: none;
            transition: all 0.2s;
            border: none;
            cursor: pointer;
            display: inline-block;
        }

        .btn-fill {
            background: var(--primary-gradient);
            color: white !important;
        }

            .btn-fill:hover {
                opacity: 0.9;
                transform: scale(1.02);
            }

        .btn-outline {
            background: transparent;
            border: 2px solid var(--border-color);
            color: var(--text-dark);
        }

            .btn-outline:hover {
                border-color: var(--primary-color);
                background-color: #f8faff;
            }

        .btn-locked {
            background: #e2e8f0;
            color: #94a3b8;
            cursor: not-allowed;
        }

        /* Modal Customization */
        .modal-content {
            border-radius: 24px;
            border: none;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        }

        .disclaimer-box {
            background-color: #f1f5f9;
            border-radius: 16px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .disclaimer-list {
            padding: 0;
            margin: 0;
            list-style: none;
        }

            .disclaimer-list li {
                font-size: 0.85rem;
                display: flex;
                gap: 10px;
                margin-bottom: 10px;
                color: #334155;
            }

            .disclaimer-list i {
                color: var(--primary-color);
                margin-top: 3px;
            }
    </style>
}

<div class="container py-5">
    <div class="pricing-header">
        <h1>Elevate Your Business</h1>
        <p>Unlock professional tools to manage your inventory and scale your sales with Weypaari’s ecosystem.</p>
    </div>

    <div class="row g-4 justify-content-center align-items-stretch">
        @foreach (var tier in Model.OrderBy(t => t.Id))
        {
            bool isTrial = tier.Name.Contains("Trial", StringComparison.OrdinalIgnoreCase);
            bool isBasic = tier.Name.Contains("Basic", StringComparison.OrdinalIgnoreCase);
            bool isAdvance = tier.Name.Contains("Advance", StringComparison.OrdinalIgnoreCase);
            bool isPremium = tier.Name.Contains("Premium", StringComparison.OrdinalIgnoreCase);

            bool isCurrentTier = currentTierId == tier.Id;
            bool isDowngrade = currentTierId != null && tier.Id < currentTierId;

            <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                <div class="pricing-card @(isPremium ? "premium" : "") @(isCurrentTier ? "current" : "")">

                    @if (isCurrentTier)
                    {
                        <div class="current-label text-nowrap"><i class="fas fa-check me-1"></i> Current Plan</div>
                    }
                    else if (isPremium)
                    {
                        <div class="premium-label">Best Value</div>
                    }

                    <span class="plan-name">@tier.Name</span>
                    <div class="plan-price">
                        ₹@tier.Price.ToString("N0")
                        <span>/@(tier.DurationMonths == 1 ? "mo" : tier.DurationMonths + " mos")</span>
                    </div>

                    <ul class="feature-list">
                        <li class="feature-item">
                            <i class="fas fa-check-circle"></i>
                            <span><strong>@tier.ProductLimit</strong> Product Listings</span>
                        </li>
                        <li class="feature-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Storefront Customization</span>
                        </li>
                        <li class="feature-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Sales Analytics Dashboard</span>
                        </li>
                        <li class="feature-item">
                            <i class="fas fa-bolt"></i>
                            <span>@(isPremium ? "Peak Hour Priority" : "Standard") Visibility</span>
                        </li>
                        <li class="feature-item @(isAdvance || isPremium ? "" : "locked")">
                            <i class="fas @(isAdvance || isPremium ? "fa-star" : "fa-lock")"></i>
                            <span>Recommended Slider @(isPremium ? "(Daily)" : isAdvance ? "(2x Weekly)" : "")</span>
                        </li>
                        <li class="feature-item @(isTrial ? "locked" : "")">
                            <i class="fas @(isTrial ? "fa-lock" : "fa-book-open")"></i>
                            <span>B2B Seller Directory</span>
                        </li>
                        <li class="feature-item @(isAdvance || isPremium ? "" : "locked")">
                            <i class="fas @(isAdvance || isPremium ? "fa-bell" : "fa-lock")"></i>
                            <span>
                                @if (isPremium)
                                {
                                    <text>Instant Lead Alerts</text>
                                }
                                else if (isAdvance)
                                {

                                    <text>24h Lead Alerts</text>
                                }
                                else
                                {

                                    <text>Customer Notifications</text>
                                }
                            </span>
                        </li>
                    </ul>

                    <div class="mt-auto">
                        @if (hasPendingRequest)
                        {
                            <a asp-action="Status" class="btn-upgrade" style="background:var(--warning); color:white;">
                                <i class="fas fa-clock me-2"></i> Request Pending
                            </a>
                        }
                        else if (isCurrentTier)
                        {
                            <a asp-action="Status" class="btn-upgrade btn-outline">Manage Subscription</a>
                        }
                        else if (isDowngrade)
                        {
                            <button class="btn-upgrade btn-locked" disabled title="Downgrades are not available">
                                <i class="fas fa-lock me-2"></i> Higher Plan Only
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn-upgrade @(isPremium ? "btn-fill" : "btn-outline")"
                                    onclick="openDisclaimer(@tier.Id, '@tier.Name')">
                                @(currentTierId != null ? "Upgrade Now" : "Get Started")
                            </button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@* Disclaimer Modal *@
<div class="modal fade" id="disclaimerModal" data-bs-backdrop="static" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">Plan Agreement</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted small mb-3">By continuing with the <strong id="modalTierName" class="text-primary"></strong> plan, you agree to:</p>

                <div class="disclaimer-box">
                    <ul class="disclaimer-list">
                        <li><i class="fas fa-shield-alt"></i> <span><strong>Verification:</strong> Approval takes 24-48 working hours.</span></li>
                        <li><i class="fas fa-hand-holding-usd"></i> <span><strong>Final Sale:</strong> Payments are non-refundable.</span></li>
                        <li><i class="fas fa-file-invoice"></i> <span><strong>Proof:</strong> A valid payment screenshot is required.</span></li>
                        <li><i class="fas fa-exclamation-triangle"></i> <span><strong>Conduct:</strong> Account sharing is strictly prohibited.</span></li>
                    </ul>
                </div>

                <div class="form-check p-3 rounded border bg-light">
                    <input class="form-check-input ms-0 me-2" type="checkbox" id="agreeCheckbox" style="cursor:pointer">
                    <label class="form-check-label small fw-bold text-dark" for="agreeCheckbox" style="cursor:pointer">
                        I agree to the terms and conditions.
                    </label>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" id="proceedBtn" class="btn btn-primary w-100 py-2 fw-bold disabled" onclick="redirectToRegister()">Accept & Proceed</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let selectedTierId = null;
        const modal = new bootstrap.Modal(document.getElementById('disclaimerModal'));
        const proceedBtn = document.getElementById('proceedBtn');
        const checkbox = document.getElementById('agreeCheckbox');

        function openDisclaimer(tierId, tierName) {
            selectedTierId = tierId;
            document.getElementById('modalTierName').innerText = tierName;
            checkbox.checked = false;
            proceedBtn.classList.add('disabled');
            modal.show();
        }

        checkbox.addEventListener('change', function() {
            if (this.checked) proceedBtn.classList.remove('disabled');
            else proceedBtn.classList.add('disabled');
        });

        function redirectToRegister() {
            if (selectedTierId && checkbox.checked) {
                window.location.href = `@Url.Action("Register", "Subscription")?tierId=${selectedTierId}`;
            }
        }

        // Entrance Animation
        document.addEventListener("DOMContentLoaded", function() {
            document.querySelectorAll('.pricing-card').forEach((card, index) => {
                card.style.opacity = "0";
                card.style.transform = "translateY(20px)";
                setTimeout(() => {
                    card.style.transition = "all 0.5s ease-out";
                    card.style.opacity = "1";
                    card.style.transform = "translateY(0)";
                }, 100 * index);
            });
        });
    </script>
}