@model IEnumerable<CMSECommerce.Models.SubscriptionTier>

@{
    ViewData["Title"] = "Membership Plans";
    ViewData["HideLayoutSidebar"] = true;

    int? currentTierId = ViewBag.CurrentTierId;
    bool hasPendingRequest = ViewBag.HasPendingRequest ?? false;
    bool isActiveSubscriber = ViewBag.IsActiveSubscriber ?? false;

    // Define the offer end date
    DateTime offerEndDate = new DateTime(2026, 3, 18, 23, 59, 59);
    bool isRamadanPeriod = DateTime.Now <= offerEndDate;
}

@section Styles {
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #21409a 0%, #152a66 100%);
            --primary-color: #21409a;
            --text-dark: #1a202c;
            --text-light: #64748b;
            --bg-light: #f8fafc;
            --white: #ffffff;
            --success: #10b981;
            --warning: #f59e0b;
            --border-color: #e2e8f0;
            --ramadan-gold: #e67e22;
            --ramadan-dark: #2c3e50;
        }

        body {
            background-color: var(--bg-light);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            color: var(--text-dark);
        }

        /* Ramadan Banner Styles */
        .ramadan-banner {
            background: linear-gradient(135deg, #1e3a8a 0%, #e67e22 100%);
            color: white;
            padding: 20px;
            border-radius: 16px;
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }

        .countdown-container {
            display: flex;
            gap: 15px;
            background: rgba(0,0,0,0.2);
            padding: 10px 20px;
            border-radius: 12px;
            backdrop-filter: blur(5px);
        }

        .countdown-item {
            text-align: center;
            min-width: 45px;
        }

        .countdown-value {
            font-size: 1.5rem;
            font-weight: 800;
            display: block;
            line-height: 1;
        }

        .countdown-label {
            font-size: 0.65rem;
            text-transform: uppercase;
            opacity: 0.8;
        }

        /* Existing Styles preserved... */
        .pricing-header {
            padding: 2rem 0 3rem;
            text-align: center;
        }

            .pricing-header h1 {
                font-weight: 800;
                font-size: 2.5rem;
                margin-bottom: 1rem;
                color: var(--text-dark);
            }

            .pricing-header p {
                font-size: 1.1rem;
                color: var(--text-light);
                max-width: 700px;
                margin: 0 auto;
            }

        .pricing-card {
            background: var(--white);
            border: 1px solid var(--border-color);
            border-radius: 24px;
            padding: 2.5rem 1.5rem;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            flex-direction: column;
            height: 100%;
            position: relative;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        }

            .pricing-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 25px -5px rgba(0,0,0,0.1);
                border-color: var(--primary-color);
            }

            .pricing-card.premium {
                border: 2px solid var(--primary-color);
                background: linear-gradient(to bottom, #ffffff, #f8faff);
            }

            .pricing-card.current {
                border: 2px solid var(--success);
                background-color: #f0fdf4;
            }

            .pricing-card.ramadan-special {
                border: 2px solid var(--ramadan-gold);
                background: #fffcf9;
            }

        .premium-label, .current-label, .offer-label {
            position: absolute;
            top: -15px;
            left: 50%;
            transform: translateX(-50%);
            color: white;
            padding: 0.5rem 1.25rem;
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            z-index: 10;
        }

        .premium-label {
            background: var(--primary-gradient);
        }

        .current-label {
            background: var(--success);
            white-space: nowrap;
            display: flex;
            align-items: center;
        }

        .offer-label {
            background: var(--ramadan-gold);
            white-space: nowrap;
        }

        .plan-name {
            font-size: 0.9rem;
            font-weight: 700;
            color: var(--primary-color);
            text-transform: uppercase;
            margin-bottom: 1rem;
            display: block;
        }

        .plan-price {
            font-size: 2.75rem;
            font-weight: 800;
            margin-bottom: 1.5rem;
            color: var(--text-dark);
            display: flex;
            align-items: baseline;
        }

            .plan-price span {
                font-size: 1rem;
                font-weight: 500;
                color: var(--text-light);
                margin-left: 4px;
            }

        .feature-list {
            margin-bottom: 2rem;
            padding: 0;
            list-style: none;
            flex-grow: 1;
        }

        .feature-item {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
            margin-bottom: 1rem;
            font-size: 0.95rem;
            color: #475569;
        }

            .feature-item i {
                color: var(--success);
                font-size: 1.1rem;
                flex-shrink: 0;
                margin-top: 2px;
            }

            .feature-item.locked {
                color: #94a3b8;
            }

                .feature-item.locked i {
                    color: #cbd5e1;
                }

        .btn-upgrade {
            width: 100%;
            padding: 0.8rem 1.5rem;
            border-radius: 12px;
            font-weight: 700;
            text-align: center;
            border: none;
            cursor: pointer;
            display: inline-block;
            text-decoration: none;
            transition: 0.2s;
        }

        .btn-fill {
            background: var(--primary-gradient);
            color: white !important;
        }

            .btn-fill:hover {
                opacity: 0.9;
                transform: scale(1.02);
            }

        .btn-offer {
            background: var(--ramadan-gold);
            color: white !important;
        }

        .btn-outline {
            background: transparent;
            border: 2px solid var(--border-color);
            color: var(--text-dark);
        }

            .btn-outline:hover {
                border-color: var(--primary-color);
                background-color: #f8faff;
            }

        .btn-locked {
            background: #e2e8f0;
            color: #94a3b8;
            cursor: not-allowed;
        }

        .modal-content {
            border-radius: 24px;
            border: none;
        }

        .disclaimer-box {
            background-color: #f1f5f9;
            border-radius: 16px;
            padding: 1.2rem;
            margin-bottom: 1.2rem;
            max-height: 220px;
            overflow-y: auto;
        }

        .disclaimer-list {
            padding: 0;
            margin: 0;
            list-style: none;
        }

            .disclaimer-list li {
                font-size: 0.8rem;
                display: flex;
                gap: 10px;
                margin-bottom: 8px;
                color: #334155;
                line-height: 1.4;
            }

            .disclaimer-list i {
                color: var(--primary-color);
                margin-top: 3px;
                font-size: 0.85rem;
            }

        .reading-requirement {
            background: #fff;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            padding: 12px;
            margin-bottom: 15px;
        }

        .smallest-caps {
            font-size: 0.65rem;
            font-weight: 800;
            text-transform: uppercase;
            color: #64748b;
            display: block;
            margin-bottom: 8px;
        }

        .read-link-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 6px;
            font-size: 0.85rem;
        }

        .btn-read-sm {
            font-size: 0.75rem;
            padding: 2px 10px;
            border-radius: 6px;
        }

        .locked-state {
            opacity: 0.5;
            background-color: #f8fafc !important;
            pointer-events: none;
        }
    </style>
}

<div class="container py-5">

    @if (isRamadanPeriod)
    {
        <div class="ramadan-banner">
            <div class="d-flex align-items-center mb-3 mb-md-0">
                <div class="me-3 fs-1"><i class="fas fa-moon"></i></div>
                <div>
                    <h4 class="fw-bold mb-0">Ramadan Special Offer!</h4>
                    <p class="mb-0 opacity-75">Claim your 1-month Trial for FREE. Offer ends soon!</p>
                </div>
            </div>
            <div class="countdown-container">
                <div class="countdown-item">
                    <span class="countdown-value" id="days">00</span>
                    <span class="countdown-label">Days</span>
                </div>
                <div class="countdown-item">
                    <span class="countdown-value" id="hours">00</span>
                    <span class="countdown-label">Hrs</span>
                </div>
                <div class="countdown-item">
                    <span class="countdown-value" id="minutes">00</span>
                    <span class="countdown-label">Min</span>
                </div>
                <div class="countdown-item">
                    <span class="countdown-value" id="seconds">00</span>
                    <span class="countdown-label">Sec</span>
                </div>
            </div>
        </div>
    }

    <div class="pricing-header">
        <h1>Elevate Your Business</h1>
        <p>Unlock professional tools to manage your inventory and scale your sales with Weypaari’s ecosystem.</p>
    </div>

    <div class="row g-4 justify-content-center align-items-stretch">
        @foreach (var tier in Model.OrderBy(t => t.Id))
        {
            bool isTrial = tier.Name.Contains("Trial", StringComparison.OrdinalIgnoreCase);
            bool isBasic = tier.Name.Contains("Basic", StringComparison.OrdinalIgnoreCase);
            bool isAdvance = tier.Name.Contains("Advance", StringComparison.OrdinalIgnoreCase);
            bool isPremium = tier.Name.Contains("Premium", StringComparison.OrdinalIgnoreCase);

            bool isActiveOffer = isTrial && isRamadanPeriod;
            bool isCurrentTier = currentTierId == tier.Id;
            bool isDowngrade = currentTierId != null && tier.Id < currentTierId;

            <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                <div class="pricing-card @(isPremium ? "premium" : "") @(isCurrentTier ? "current" : "") @(isActiveOffer ? "ramadan-special" : "")">

                    @if (isCurrentTier)
                    {
                        <div class="current-label text-nowrap"><i class="fas fa-check me-1"></i> Current Plan</div>
                    }
                    else if (isActiveOffer)
                    {
                        <div class="offer-label"><i class="fas fa-star me-1"></i> Special Offer</div>
                    }
                    else if (isPremium)
                    {
                        <div class="premium-label">Best Value</div>
                    }

                    <span class="plan-name">@tier.Name</span>

                    <div class="plan-price">
                        @if (isActiveOffer)
                        {
                            @:FREE
                        }
                        else
                        {
                            @:₹@tier.Price.ToString("N0")
                            <span>/@(tier.DurationMonths == 1 ? "mo" : tier.DurationMonths + " mos")</span>
                        }
                    </div>

                    @if (isActiveOffer)
                    {
                        <div class="text-warning small fw-bold mb-3" style="margin-top: -10px;">
                            <i class="fas fa-history me-1"></i> Limited Time Offer
                        </div>
                    }

                    <ul class="feature-list">
                        <li class="feature-item">
                            <i class="fas fa-check-circle"></i>
                            <span>
                                <strong>@(isActiveOffer ? "10" : tier.ProductLimit.ToString())</strong> Product Listings
                            </span>
                        </li>
                        <li class="feature-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Storefront Customization</span>
                        </li>
                        <li class="feature-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Sales Analytics Dashboard</span>
                        </li>
                        <li class="feature-item">
                            <i class="fas fa-bolt"></i>
                            <span>@(isPremium ? "Peak Hour Priority" : "Standard") Visibility</span>
                        </li>
                        <li class="feature-item @(isAdvance || isPremium ? "" : "locked")">
                            <i class="fas @(isAdvance || isPremium ? "fa-star" : "fa-lock")"></i>
                            <span>Slider @(isPremium ? "(Daily)" : isAdvance ? "(2x Weekly)" : "")</span>
                        </li>
                        <li class="feature-item @(isTrial ? "locked" : "")">
                            <i class="fas @(isTrial ? "fa-lock" : "fa-book-open")"></i>
                            <span>B2B Seller Directory</span>
                        </li>
                    </ul>

                    <div class="mt-auto">
                        @if (hasPendingRequest)
                        {
                            <a asp-action="Status" class="btn-upgrade" style="background:var(--warning); color:white;">
                                <i class="fas fa-clock me-2"></i> Request Pending
                            </a>
                        }
                        else if (isCurrentTier)
                        {
                            <a asp-action="Status" class="btn-upgrade btn-outline">Manage Subscription</a>
                        }
                        else if (isDowngrade)
                        {
                            <button class="btn-upgrade btn-locked" disabled title="Downgrades are not available">
                                <i class="fas fa-lock me-2"></i> Higher Plan Only
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn-upgrade @(isActiveOffer ? "btn-offer" : (isPremium ? "btn-fill" : "btn-outline"))"
                                    onclick="openDisclaimer(@tier.Id, '@tier.Name')">
                                @(isActiveOffer ? "Claim Free Offer" : (currentTierId != null ? "Upgrade Now" : "Get Started"))
                            </button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@* Disclaimer Modal remains unchanged *@
<div class="modal fade" id="disclaimerModal" data-bs-backdrop="static" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">Plan Agreement</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted small mb-3">Please review the following to proceed with the <strong id="modalTierName" class="text-primary"></strong> plan:</p>

                <div class="disclaimer-box">
                    <ul class="disclaimer-list">
                        <li><i class="fas fa-shield-alt"></i> <span><strong>Verification:</strong> Approval takes 24-48 working hours.</span></li>
                        <li><i class="fas fa-hand-holding-usd"></i> <span><strong>Final Sale:</strong> Payments are non-refundable once verified.</span></li>
                        <li><i class="fas fa-file-invoice"></i> <span><strong>Proof:</strong> A valid payment screenshot is required.</span></li>
                    </ul>
                </div>

                <div class="reading-requirement">
                    <span class="smallest-caps">Required Reading</span>
                    <div class="read-link-item">
                        <span><i id="icon-tc" class="fas fa-circle-notch text-muted me-2"></i> Terms & Conditions</span>
                        <a href="@Url.Action("Terms", "Subscription")" target="_blank" class="btn btn-outline-primary btn-read-sm" onclick="markAsRead('tc')">View</a>
                    </div>
                    <div class="read-link-item">
                        <span><i id="icon-pp" class="fas fa-circle-notch text-muted me-2"></i> Privacy Policy</span>
                        <a href="@Url.Action("Privacy", "Subscription")" target="_blank" class="btn btn-outline-primary btn-read-sm" onclick="markAsRead('pp')">View</a>
                    </div>
                </div>

                <div class="form-check p-3 rounded border locked-state" id="checkboxWrapper">
                    <input class="form-check-input ms-0 me-2" type="checkbox" id="agreeCheckbox" disabled>
                    <label class="form-check-label small fw-bold text-dark" for="agreeCheckbox">
                        I agree to the Terms and Privacy.
                    </label>
                </div>
                <div id="unlockMsg" class="smallest text-danger mt-2">
                    <i class="fas fa-lock me-1"></i> Please click both links above to unlock the checkbox.
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" id="proceedBtn" class="btn btn-primary w-100 py-2 fw-bold disabled" onclick="redirectToRegister()">Accept & Proceed</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // --- COUNTDOWN LOGIC ---
        const targetDate = new Date("@offerEndDate.ToString("yyyy-MM-ddTHH:mm:ss")").getTime();

        function updateCountdown() {
            const now = new Date().getTime();
            const distance = targetDate - now;

            if (distance < 0) {
                // If the offer expired, you could hide the banner or refresh
                return;
            }

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            document.getElementById("days").innerText = days.toString().padStart(2, '0');
            document.getElementById("hours").innerText = hours.toString().padStart(2, '0');
            document.getElementById("minutes").innerText = minutes.toString().padStart(2, '0');
            document.getElementById("seconds").innerText = seconds.toString().padStart(2, '0');
        }

        if(document.getElementById("days")) {
            setInterval(updateCountdown, 1000);
            updateCountdown();
        }

        // --- EXISTING REDIRECT & MODAL LOGIC ---
        let selectedTierId = null;
        let hasReadTC = false;
        let hasReadPP = false;

        const modalEl = document.getElementById('disclaimerModal');
        const modal = new bootstrap.Modal(modalEl);
        const proceedBtn = document.getElementById('proceedBtn');
        const checkbox = document.getElementById('agreeCheckbox');
        const checkboxWrapper = document.getElementById('checkboxWrapper');
        const unlockMsg = document.getElementById('unlockMsg');

        function openDisclaimer(tierId, tierName) {
            selectedTierId = tierId;
            document.getElementById('modalTierName').innerText = tierName;
            hasReadTC = false;
            hasReadPP = false;
            checkbox.checked = false;
            checkbox.disabled = true;
            checkboxWrapper.classList.add('locked-state');
            unlockMsg.classList.remove('d-none');
            proceedBtn.classList.add('disabled');
            document.getElementById('icon-tc').className = "fas fa-circle-notch text-muted me-2";
            document.getElementById('icon-pp').className = "fas fa-circle-notch text-muted me-2";
            modal.show();
        }

        function markAsRead(type) {
            if (type === 'tc') {
                hasReadTC = true;
                document.getElementById('icon-tc').className = "fas fa-check-circle text-success me-2";
            } else if (type === 'pp') {
                hasReadPP = true;
                document.getElementById('icon-pp').className = "fas fa-check-circle text-success me-2";
            }
            if (hasReadTC && hasReadPP) {
                checkbox.disabled = false;
                checkboxWrapper.classList.remove('locked-state');
                checkboxWrapper.style.backgroundColor = "#fff";
                unlockMsg.classList.add('d-none');
            }
        }

        checkbox.addEventListener('change', function() {
            if (this.checked) proceedBtn.classList.remove('disabled');
            else proceedBtn.classList.add('disabled');
        });

        function redirectToRegister() {
            if (selectedTierId && checkbox.checked) {
                window.location.href = `@Url.Action("Register", "Subscription")?tierId=${selectedTierId}`;
            }
        }

        document.addEventListener("DOMContentLoaded", function() {
            document.querySelectorAll('.pricing-card').forEach((card, index) => {
                card.style.opacity = "0";
                card.style.transform = "translateY(20px)";
                setTimeout(() => {
                    card.style.transition = "all 0.5s ease-out";
                    card.style.opacity = "1";
                    card.style.transform = "translateY(0)";
                }, 100 * index);
            });
        });
    </script>
}