@model IEnumerable<CMSECommerce.Models.SubscriptionRequest>

@{
    ViewData["Title"] = "My Subscription Status";
    var profile = (CMSECommerce.Models.UserProfile)ViewBag.UserProfile;

    // --- BUSINESS LOGIC ---

    // 1. Check if the user has an active, unexpired subscription
    bool hasActiveSub = profile != null && profile.SubscriptionEndDate.HasValue && profile.SubscriptionEndDate.Value > DateTime.Now;

    // 2. Extract the specific Request record that was approved for the current active sub
    var latestActiveRequest = Model?.OrderByDescending(r => r.CreatedAt)
                                   .FirstOrDefault(r => r.Status == RequestStatus.Approved);

    // 3. Sort the full list for the History Table: Active/Pending on top, then newest to oldest
    var sortedRequests = Model?.OrderBy(r => r.Status == RequestStatus.Approved ? 0 :
                                            r.Status == RequestStatus.Pending ? 1 : 2)
                                .ThenByDescending(r => r.CreatedAt).ToList() ?? new List<CMSECommerce.Models.SubscriptionRequest>();

    // 4. Determine if the user is allowed to create a brand new request
    bool hasPendingRequest = Model != null && Model.Any(r => r.Status == RequestStatus.Pending);
    bool canRequestNew = !hasActiveSub && !hasPendingRequest;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-11">

            @* ==========================================
               SECTION 1: LATEST ACTIVE SUBSCRIPTION BLOCK 
               ========================================== *@
            @if (hasActiveSub && latestActiveRequest != null)
            {
                var timeLeft = profile.SubscriptionEndDate.Value - DateTime.Now;
                var remainingDays = (int)timeLeft.TotalDays;

                <div class="card shadow-lg border-0 mb-5 overflow-hidden">
                    <div class="row g-0">
                        @* Left sidebar with package name *@
                        <div class="col-md-4 bg-primary d-flex flex-column justify-content-center align-items-center text-white p-4 text-center">
                            <i class="fas fa-crown fa-4x mb-3 text-warning"></i>
                            <h5 class="text-uppercase mb-1 opacity-75">Active Package</h5>
                            <h2 class="fw-bold">@latestActiveRequest.Tier.Name</h2>
                            <div class="badge bg-white text-primary mt-2 px-3">@latestActiveRequest.Tier.DurationMonths Months Plan</div>
                        </div>

                        @* Right side with detailed subscription data *@
                        <div class="col-md-8 bg-white">
                            <div class="card-body p-4">
                                <div class="row">
                                    <div class="col-sm-6 mb-4">
                                        <label class="text-muted small text-uppercase fw-bold d-block">ITS Number</label>
                                        <span class="fs-5 fw-bold text-dark"><i class="fas fa-fingerprint me-2 text-primary"></i>@latestActiveRequest.ItsNumber</span>
                                    </div>
                                    <div class="col-sm-6 mb-4 text-sm-end">
                                        <label class="text-muted small text-uppercase fw-bold d-block">Valid Until</label>
                                        <span class="fs-5 fw-bold @(remainingDays <= 5 ? "text-danger" : "text-dark")">
                                            <i class="fas fa-calendar-alt me-2 text-primary"></i>@profile.SubscriptionEndDate.Value.ToString("dd MMM yyyy")
                                        </span>
                                    </div>
                                    <hr class="mt-0" />
                                    <div class="col-sm-6">
                                        <label class="text-muted small text-uppercase fw-bold d-block">Store Capacity</label>
                                        <span class="fw-bold">@latestActiveRequest.Tier.ProductLimit Product Listings</span>
                                    </div>
                                    <div class="col-sm-6 text-sm-end">
                                        <label class="text-muted small text-uppercase fw-bold d-block">Status</label>
                                        <span class="badge @(remainingDays <= 5 ? "bg-warning text-dark" : "bg-success") px-3 py-2">
                                            <i class="fas fa-check-circle me-1"></i> @remainingDays Days Remaining
                                        </span>
                                    </div>
                                </div>
                                <div class="mt-4 pt-3 border-top">
                                    <a asp-action="DownloadReceipt" asp-route-requestId="@latestActiveRequest.Id" class="btn btn-dark shadow-sm">
                                        <i class="fas fa-file-invoice-dollar me-2"></i>Download Receipt
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (!hasActiveSub && profile?.SubscriptionEndDate.HasValue == true)
            {
                @* EXPIRED WARNING BLOCK *@
                <div class="alert alert-danger border-0 shadow-sm d-flex align-items-center p-4 mb-5">
                    <div class="bg-danger text-white rounded-circle p-3 me-3">
                        <i class="fas fa-exclamation-triangle fa-2x"></i>
                    </div>
                    <div>
                        <h5 class="mb-1 fw-bold">Your subscription has expired</h5>
                        <p class="mb-0">Access to premium features has been suspended. Renew now to resume your business.</p>
                    </div>
                    <a asp-action="Index" class="btn btn-danger ms-auto fw-bold px-4">Renew Subscription</a>
                </div>
            }

            @* ==========================================
               SECTION 2: SUBSCRIPTION HISTORY TABLE
               ========================================== *@
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-dark mb-0">
                    <i class="fas fa-history me-2 text-muted"></i>Subscription History
                </h3>

                @if (canRequestNew)
                {
                    <a asp-action="Index" class="btn btn-primary px-4 shadow-sm fw-bold">
                        <i class="fas fa-plus-circle me-1"></i> New Request
                    </a>
                }
            </div>

            @if (!sortedRequests.Any())
            {
                <div class="card border-0 shadow-sm py-5 text-center">
                    <div class="card-body">
                        <i class="fas fa-folder-open fa-4x mb-3 text-light"></i>
                        <p class="text-muted fs-5">No subscription records found in your account.</p>
                        <a asp-action="Index" class="btn btn-outline-primary mt-2">Submit Your First Request</a>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm border-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Package</th>
                                    <th>ITS Number</th>
                                    <th>Submission Date</th>
                                    <th>Status</th>
                                    <th>Rejection Reason</th>
                                    <th class="text-center pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var request in sortedRequests)
                                {
                                    <tr class="subscription-request" data-id="@request.Id" data-status="@request.Status">
                                        <td class="ps-4">
                                            <div class="fw-bold text-dark">@request.Tier.Name</div>
                                            <small class="text-muted">@request.Tier.DurationMonths Months Plan</small>
                                        </td>
                                        <td><code class="text-primary fw-bold">@request.ItsNumber</code></td>
                                        <td>@request.CreatedAt.ToString("dd MMM yyyy")</td>
                                        <td>
                                            @if (request.Status == RequestStatus.Pending)
                                            {
                                                <span class="badge rounded-pill bg-warning text-dark px-3"><i class="fas fa-sync fa-spin me-1"></i>Pending</span>
                                            }
                                            else if (request.Status == RequestStatus.Approved)
                                            {
                                                <span class="badge rounded-pill bg-success px-3"><i class="fas fa-check-circle me-1"></i>Approved</span>
                                            }
                                            else
                                            {
                                                <span class="badge rounded-pill bg-danger px-3"><i class="fas fa-times-circle me-1"></i>Rejected</span>
                                            }
                                        </td>
                                        <td>
                                            @if (request.Status == RequestStatus.Rejected)
                                            {
                                                <span class="text-danger small fw-bold">@(string.IsNullOrEmpty(request.RejectionReason) ? "No reason provided" : request.RejectionReason)</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted small">---</span>
                                            }
                                        </td>
                                        <td class="text-center pe-4">
                                            @if (request.Status == RequestStatus.Approved)
                                            {
                                                <span class="text-success small fw-bold"><i class="fas fa-check me-1"></i>Current / Active</span>
                                            }
                                            else if (request.Status == RequestStatus.Rejected)
                                            {
                                                @* RETRY BUTTON LOGIC: Only show if no current active sub *@
                                                @if (!hasActiveSub)
                                                {
                                                    <a asp-action="Register" asp-route-tierId="@request.TierId" asp-route-retryId="@request.Id" class="btn btn-sm btn-warning shadow-sm">
                                                        <i class="fas fa-redo me-1"></i> Retry
                                                    </a>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-outline-secondary" disabled title="You already have an active subscription.">
                                                        <i class="fas fa-lock me-1"></i> Locked
                                                    </button>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted small">N/A</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@* Hidden notification sound for real-time status updates *@
<audio id="notificationSound" preload="auto">
    <source src="https://assets.mixkit.co/active_storage/sfx/2869/2869-preview.mp3" type="audio/mpeg">
</audio>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 12px;
        }

        .bg-primary {
            background: linear-gradient(135deg, #0d6efd 0%, #0046af 100%) !important;
        }

        .table thead th {
            font-size: 0.75rem;
            text-transform: uppercase;
            color: #6c757d;
            border-bottom: none;
            letter-spacing: 0.5px;
        }

        .subscription-request {
            transition: all 0.3s ease;
        }

        .status-changing {
            background-color: #d1e7dd !important;
        }

        code {
            background-color: #f1f5ff;
            padding: 2px 6px;
            border-radius: 4px;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Bootstrap Tooltip Initialization
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'))
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // Status Polling: Checks for updates every 10 seconds if a Pending request exists
            if ($('.subscription-request[data-status="Pending"]').length > 0) {
                setInterval(function () {
                    $.getJSON('/Subscription/GetLatestStatuses', function (data) {
                        let needsUpdate = false;
                        data.forEach(item => {
                            const row = $(`.subscription-request[data-id="${item.id}"]`);
                            const currentUiStatus = row.attr('data-status');
                            if (currentUiStatus && currentUiStatus !== item.status) {
                                needsUpdate = true;
                                if(item.status === "Approved") {
                                    document.getElementById('notificationSound').play();
                                }
                            }
                        });

                        if (needsUpdate) {
                            $('.subscription-request[data-status="Pending"]').addClass('status-changing');
                            setTimeout(function() {
                                location.reload();
                            }, 2000);
                        }
                    });
                }, 10000);
            }
        });
    </script>
}