@model IEnumerable<CMSECommerce.Models.SubscriptionRequest>

@{
    ViewData["Title"] = "My Subscription";
    ViewData["HideLayoutSidebar"] = true;

    var profile = (CMSECommerce.Models.UserProfile)ViewBag.UserProfile;
    decimal tradeInValue = ViewBag.CurrentTradeInValue ?? 0;
    int remainingDaysFromBag = ViewBag.RemainingDays ?? 0;

    bool hasActiveSub = profile != null &&
                        profile.SubscriptionEndDate.HasValue &&
                        profile.SubscriptionEndDate.Value > DateTime.Now &&
                        profile.CurrentTierId.HasValue;

    var fullSortedList = Model?.OrderBy(r => r.Status == RequestStatus.Approved ? 0 :
                                             r.Status == RequestStatus.Pending ? 1 : 2)
                                     .ThenByDescending(r => r.CreatedAt).ToList() ?? new List<CMSECommerce.Models.SubscriptionRequest>();

    var latestActiveRequest = Model?.OrderByDescending(r => r.CreatedAt)
                                    .FirstOrDefault(r => r.Status == RequestStatus.Approved &&
                                                         r.TierId == profile?.CurrentTierId);

    bool hasPendingRequest = Model != null && Model.Any(r => r.Status == RequestStatus.Pending);
    var currentPending = Model?.FirstOrDefault(r => r.Status == RequestStatus.Pending);
    var latestRejected = Model?.OrderByDescending(r => r.CreatedAt).FirstOrDefault(r => r.Status == RequestStatus.Rejected);

    bool canRequestNew = !hasPendingRequest;
}

<div class="amazon-dashboard py-4">
    <div class="container">
        @* --- TOP BREADCRUMB & HEADER --- *@
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb smallest">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-amazon-link">Your Account</a></li>
                <li class="breadcrumb-item active">Your Memberships & Subscriptions</li>
            </ol>
        </nav>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 fw-normal text-amazon-dark">Your Memberships & Subscriptions</h1>
            @if (canRequestNew)
            {
                <a asp-action="Index" class="btn btn-amazon-primary shadow-sm">
                    @(hasActiveSub ? "Change or Upgrade Plan" : "See All Plans")
                </a>
            }
        </div>

        @* --- REJECTION ALERT --- *@
        @if (latestRejected != null && latestRejected.CreatedAt > DateTime.Now.AddDays(-2))
        {
            <div class="alert alert-amazon-error d-flex align-items-center mb-4">
                <i class="fas fa-exclamation-triangle me-3"></i>
                <div>
                    <span class="fw-bold">Payment Problem:</span> @(string.IsNullOrEmpty(latestRejected.RejectionReason) ? "We couldn't verify your last transaction. Please try again with a different payment method." : latestRejected.RejectionReason)
                </div>
            </div>
        }

        <div class="row g-4">
            @* --- CURRENT SUBSCRIPTION CARD --- *@
            <div class="col-lg-8">
                <div class="amazon-card shadow-sm border mb-4">
                    <div class="amazon-card-header d-flex justify-content-between align-items-center">
                        <span class="fw-bold">Current Subscription</span>
                        @if (hasActiveSub)
                        {
                            <span class="text-success small fw-bold"><i class="fas fa-check me-1"></i> Active</span>
                        }
                    </div>
                    <div class="amazon-card-body p-4">
                        @if (hasActiveSub && profile.CurrentTier != null)
                        {
                            <div class="row align-items-center">
                                <div class="col-md-2 d-none d-md-block">
                                    <div class="amazon-box-icon">
                                        <i class="fas fa-box-open fa-2x"></i>
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <h4 class="fw-bold mb-1">@profile.CurrentTier.Name</h4>
                                    <p class="text-muted small mb-3">Subscription automatically renews on @profile.SubscriptionEndDate.Value.ToString("MMMM dd, yyyy")</p>

                                    <div class="d-flex gap-4">
                                        <div>
                                            <div class="smallest text-muted text-uppercase">Items Limit</div>
                                            <div class="fw-bold">@profile.CurrentProductLimit / @profile.CurrentTier.ProductLimit</div>
                                        </div>
                                        <div class="border-start ps-4">
                                            <div class="smallest text-muted text-uppercase">Renewal Status</div>
                                            <div class="fw-bold">@remainingDaysFromBag Days Remaining</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 text-md-end mt-3 mt-md-0">
                                    @if (latestActiveRequest != null)
                                    {
                                        <a asp-action="DownloadReceipt" asp-route-requestId="@latestActiveRequest.Id" class="btn btn-amazon-secondary w-100 mb-2">View Receipt</a>
                                    }
                                </div>
                            </div>
                        }
                        else if (hasPendingRequest && currentPending != null)
                        {
                            <div class="pending-section text-center py-3">
                                <div class="spinner-border text-amazon-orange mb-3" role="status"></div>
                                <h5 class="fw-bold">Verifying Your Order...</h5>
                                <p class="text-muted small">We're verifying your payment for <strong>@currentPending.Tier.Name</strong>. This usually takes a few minutes.</p>
                                <div class="fw-bold text-amazon-orange">Total Amount: ₹@currentPending.FinalAmount.ToString("N0")</div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <p class="text-muted mb-0">You do not have an active subscription.</p>
                            </div>
                        }
                    </div>
                </div>

                @* --- BILLING HISTORY TABLE --- *@
                <h5 class="fw-bold mb-3 mt-5">Invoices & Payment History</h5>
                <div class="amazon-card shadow-sm border overflow-hidden">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0 amazon-table">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-3">ORDER PLACED</th>
                                    <th>PLAN</th>
                                    <th>TOTAL</th>
                                    <th>STATUS</th>
                                    <th class="text-end pe-3">ACTIONS</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!fullSortedList.Any())
                                {
                                    <tr><td colspan="5" class="text-center py-4 text-muted small">No payment history found.</td></tr>
                                }
                                @foreach (var request in fullSortedList)
                                {
                                    <tr class="subscription-request" data-id="@request.Id" data-status="@request.Status">
                                        <td class="ps-3">@request.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td class="fw-bold">@request.Tier.Name</td>
                                        <td>
                                            ₹@request.FinalAmount.ToString("N0")
                                            @if (request.CreditApplied > 0)
                                            {
                                                <div class="smallest text-success">Saved ₹@request.CreditApplied.ToString("N0")</div>
                                            }
                                        </td>
                                        <td>
                                            @if (request.Status == RequestStatus.Approved)
                                            {
                                                <span class="amazon-status-badge success">Approved</span>
                                            }
                                            else if (request.Status == RequestStatus.Pending)
                                            {
                                                <span class="amazon-status-badge warning">Processing</span>
                                            }
                                            else
                                            {
                                                <span class="amazon-status-badge danger" data-bs-toggle="tooltip" title="@request.RejectionReason">Action Required</span>
                                            }
                                        </td>
                                        <td class="text-end pe-3">
                                            @if (request.Status == RequestStatus.Approved)
                                            {
                                                <a asp-action="DownloadReceipt" asp-route-requestId="@request.Id" class="text-amazon-link smallest fw-bold text-decoration-none">
                                                    Download Invoice <i class="fas fa-chevron-right ms-1"></i>
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @* --- RIGHT SIDEBAR (Amazon Promo Style) --- *@
            <div class="col-lg-4">
                @if (tradeInValue > 0)
                {
                    <div class="amazon-card border-amazon-orange shadow-sm p-4 mb-4">
                        <h5 class="fw-bold text-amazon-orange mb-2">Trade-In Credit</h5>
                        <p class="small mb-3">You have an unused balance of <strong>₹@tradeInValue.ToString("N0")</strong> from your current plan.</p>
                        <a asp-action="Index" class="btn btn-amazon-primary w-100 btn-sm">Upgrade and Save</a>
                    </div>
                }

                <div class="amazon-card shadow-sm border p-4">
                    <h6 class="fw-bold mb-3">Membership Benefits</h6>
                    <ul class="list-unstyled smallest mb-0">
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Priority Product Listing</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Ad-free Experience</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> 24/7 Premium Support</li>
                        <li><i class="fas fa-check text-success me-2"></i> Discounted Expansion Packs</li>
                    </ul>
                </div>

                <div class="mt-4 p-3 bg-light border rounded smallest text-muted">
                    <p class="mb-2 fw-bold">Note:</p>
                    Your subscription is subject to the Terms of Service. Changes to plans take effect immediately upon payment verification.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Tooltip Init
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // Polling (Unchanged logic)
            if ($('.subscription-request[data-status="Pending"]').length > 0) {
                const statusPoller = setInterval(function () {
                    $.getJSON('/Subscription/GetLatestStatuses', function (data) {
                        let hasChange = false;
                        data.forEach(item => {
                            const row = $(`.subscription-request[data-id="${item.id}"]`);
                            if (row.length && row.attr('data-status') !== item.status) {
                                hasChange = true;
                            }
                        });
                        if (hasChange) {
                            clearInterval(statusPoller);
                            location.reload();
                        }
                    }).fail(function() { console.log("Amazon sync failed."); });
                }, 10000);
            }
        });
    </script>
}

