@model IEnumerable<CMSECommerce.Models.SubscriptionRequest>

@{
    ViewData["Title"] = "My Subscription Status";
    ViewData["HideLayoutSidebar"] = true;

    var profile = (CMSECommerce.Models.UserProfile)ViewBag.UserProfile;

    // Logic to determine active subscription status
    bool hasActiveSub = profile != null &&
                        profile.SubscriptionEndDate.HasValue &&
                        profile.SubscriptionEndDate.Value > DateTime.Now &&
                        profile.CurrentTierId.HasValue;

    // Fetch the specific request that matches the current active plan
    var latestActiveRequest = Model?.OrderByDescending(r => r.CreatedAt)
                                    .FirstOrDefault(r => r.Status == RequestStatus.Approved &&
                                                         r.TierId == profile?.CurrentTierId);

    // Sorting: Approved first, then Pending, then Rejected
    var fullSortedList = Model?.OrderBy(r => r.Status == RequestStatus.Approved ? 0 :
                                             r.Status == RequestStatus.Pending ? 1 : 2)
                                 .ThenByDescending(r => r.CreatedAt).ToList() ?? new List<CMSECommerce.Models.SubscriptionRequest>();

    // We show only the most relevant request in the detailed tracker
    var displayRequests = fullSortedList.Take(1).ToList();

    bool hasPendingRequest = Model != null && Model.Any(r => r.Status == RequestStatus.Pending);
    var currentPending = Model?.FirstOrDefault(r => r.Status == RequestStatus.Pending);

    bool canRequestNew = !hasPendingRequest;
}

<div class="container py-4 small-text-ui">
    <div class="row justify-content-center">
        <div class="col-md-11">

            @* --- SECTION: PENDING PROGRESS TRACKER --- *@
            @if (hasPendingRequest && currentPending != null)
            {
                <div class="card shadow-sm border-0 mb-4 animate-fade-in" style="border-radius: 15px; border-left: 5px solid #f59e0b;">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="d-flex align-items-center">
                                <div class="spinner-grow spinner-grow-sm text-warning me-2" role="status"></div>
                                <h6 class="fw-bold mb-0">Verification in Progress: @currentPending.Tier.Name</h6>
                            </div>
                            <div class="text-end">
                                <span class="badge bg-light text-dark border">
                                    Paid: ₹@currentPending.FinalAmount.ToString("N0")
                                    @if (currentPending.CreditApplied > 0)
                                    {
                                        <span class="text-success ms-1">(Credit Applied: -₹@currentPending.CreditApplied.ToString("N0"))</span>
                                    }
                                </span>
                            </div>
                        </div>



                        <div class="progress-tracker d-flex justify-content-between position-relative mt-4 mb-4">
                            <div class="step-item completed">
                                <div class="step-icon"><i class="fas fa-file-upload"></i></div>
                                <div class="step-label">Submitted</div>
                            </div>
                            <div class="step-item active">
                                <div class="step-icon"><i class="fas fa-search-dollar"></i></div>
                                <div class="step-label">Reviewing</div>
                            </div>
                            <div class="step-item">
                                <div class="step-icon"><i class="fas fa-check-double"></i></div>
                                <div class="step-label">Activation</div>
                            </div>
                            <div class="progress-line"></div>
                        </div>

                        <div class="bg-light p-2 rounded text-center">
                            <p class="text-muted mb-0" style="font-size: 0.75rem;">
                                Our team is verifying your receipt for <strong>₹@currentPending.FinalAmount.ToString("N0")</strong>.
                                Access will be granted shortly.
                            </p>
                        </div>
                    </div>
                </div>
            }

            @* --- SECTION: ACTIVE SUBSCRIPTION BANNER --- *@
            @if (hasActiveSub && profile.CurrentTier != null)
            {
                var timeLeft = profile.SubscriptionEndDate.Value - DateTime.Now;
                var remainingDays = (int)timeLeft.TotalDays;

                <div class="card shadow-sm border-0 mb-4 overflow-hidden animate-fade-in status-banner">
                    <div class="row g-0">
                        <div class="col-md-3 bg-navy d-flex flex-column justify-content-center align-items-center text-white p-3 text-center">
                            <i class="fas fa-crown mb-2 text-warning" style="font-size: 1.5rem;"></i>
                            <h6 class="text-uppercase mb-0 opacity-75 fw-bold" style="font-size: 0.65rem; letter-spacing: 1px;">Current Plan</h6>
                            <h4 class="fw-bold mb-0">@profile.CurrentTier.Name</h4>
                        </div>

                        <div class="col-md-9 bg-white">
                            <div class="card-body py-3 px-4">
                                <div class="row align-items-center">
                                    <div class="col-sm-4 border-end">
                                        <label class="label-muted">Product Limit</label>
                                        <div class="fw-bold text-dark">
                                            <i class="fas fa-box me-2 text-primary-light"></i>
                                            @profile.CurrentProductLimit / @profile.CurrentTier.ProductLimit
                                        </div>
                                    </div>
                                    <div class="col-sm-4 border-end">
                                        <label class="label-muted">Expiry Date</label>
                                        <div class="fw-bold @(remainingDays <= 5 ? "text-danger" : "text-dark")">
                                            <i class="fas fa-calendar-alt me-2 text-primary-light"></i>@profile.SubscriptionEndDate.Value.ToString("dd MMM yyyy")
                                        </div>
                                    </div>
                                    <div class="col-sm-4 text-center">
                                        <div class="badge-status @(remainingDays <= 5 ? "bg-warn-subtle" : "bg-success-subtle")">
                                            @remainingDays Days Remaining
                                        </div>
                                        @if (latestActiveRequest != null)
                                        {
                                            <div class="mt-2">
                                                <a asp-action="DownloadReceipt" asp-route-requestId="@latestActiveRequest.Id" class="text-primary text-decoration-none fw-bold" style="font-size: 0.65rem;">
                                                    <i class="fas fa-download me-1"></i> Official Receipt
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @* --- SECTION: HISTORY TABLE --- *@
            <div class="d-flex justify-content-between align-items-center mb-3 px-1">
                <div>
                    <h6 class="fw-bold text-dark mb-0">Transaction History</h6>
                    <p class="text-muted mb-0" style="font-size: 0.7rem;">Track your payments and plan adjustments</p>
                </div>
                @if (canRequestNew)
                {
                    <a asp-action="Index" class="btn btn-primary btn-xs-custom px-3 shadow-sm">
                        <i class="fas fa-rocket me-1"></i> @(hasActiveSub ? "Upgrade Plan" : "Get Started")
                    </a>
                }
            </div>

            <div class="card shadow-sm border-0">
                <div class="table-responsive">
                    <table class="table table-sm table-hover align-middle mb-0">
                        <thead class="bg-faded">
                            <tr>
                                <th class="ps-3 py-2">Plan Details</th>
                                <th>Amount</th>
                                <th>Adjustments</th>
                                <th>Status</th>
                                <th>Remarks</th>
                                <th class="text-center pe-3">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!fullSortedList.Any())
                            {
                                <tr>
                                    <td colspan="6" class="text-center py-5 text-muted">
                                        <i class="fas fa-folder-open d-block mb-2 fa-2x opacity-25"></i>
                                        No subscription history found.
                                    </td>
                                </tr>
                            }
                            @foreach (var request in fullSortedList)
                            {
                                <tr class="subscription-request" data-id="@request.Id" data-status="@request.Status">
                                    <td class="ps-3">
                                        <div class="fw-bold text-dark" style="font-size: 0.8rem;">@request.Tier.Name</div>
                                        <div class="text-muted" style="font-size: 0.65rem;">Requested: @request.CreatedAt.ToString("dd MMM yyyy")</div>
                                    </td>
                                    <td>
                                        <span class="fw-bold">₹@request.FinalAmount.ToString("N0")</span>
                                    </td>
                                    <td>
                                        @if (request.CreditApplied > 0)
                                        {
                                            <span class="text-success small fw-bold">- ₹@request.CreditApplied.ToString("N0")</span>
                                            <i class="fas fa-info-circle ms-1 text-muted" title="Credit from previous active plan"></i>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">None</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="dot-status @(request.Status == RequestStatus.Pending ? "bg-warning" : (request.Status == RequestStatus.Approved ? "bg-success" : "bg-danger"))"></span>
                                        <span class="ms-1" style="font-size: 0.75rem;">@request.Status</span>
                                    </td>
                                    <td class="text-muted" style="font-size: 0.7rem; max-width: 200px;">
                                        @if (request.Status == RequestStatus.Rejected)
                                        {
                                            <span class="text-danger font-italic">@request.RejectionReason</span>
                                        }
                                        else if (request.IsUpgrade)
                                        {
                                            <span class="text-info">Upgrade Plan</span>
                                        }
                                        else
                                        {
                                            <span>Standard Purchase</span>
                                        }
                                    </td>
                                    <td class="text-center pe-3">
                                        @if (request.Status == RequestStatus.Approved)
                                        {
                                            <a asp-action="DownloadReceipt" asp-route-requestId="@request.Id" class="btn btn-outline-primary btn-xs-custom">
                                                <i class="fas fa-file-invoice"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <p class="text-center mt-3 text-muted" style="font-size: 0.65rem;">
                <i class="fas fa-sync-alt me-1"></i> Status updates automatically every 10 seconds.
            </p>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --navy-blue: #0f172a;
            --primary-blue: #3b82f6;
            --bg-faded: #f8fafc;
        }

        body {
            background-color: #f1f5f9;
            font-family: 'Inter', sans-serif;
        }

        /* Tracker Styles */
        .progress-tracker {
            margin: 20px 40px;
        }

        .step-item {
            z-index: 2;
            text-align: center;
            position: relative;
            flex: 1;
        }

        .step-icon {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: #e2e8f0;
            color: #94a3b8;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 8px;
            font-size: 0.8rem;
            transition: all 0.3s;
        }

        .step-label {
            font-size: 0.6rem;
            font-weight: 700;
            text-transform: uppercase;
            color: #94a3b8;
        }

        .step-item.completed .step-icon {
            background: #dcfce7;
            color: #15803d;
        }

        .step-item.active .step-icon {
            background: var(--primary-blue);
            color: white;
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.2);
        }

        .progress-line {
            position: absolute;
            top: 16px;
            left: 0;
            width: 100%;
            height: 2px;
            background: #e2e8f0;
            z-index: 1;
        }

        /* UI Components */
        .bg-navy {
            background-color: var(--navy-blue);
        }

        .status-banner {
            border-radius: 12px;
            border-left: 6px solid var(--primary-blue) !important;
        }

        .label-muted {
            font-size: 0.6rem;
            text-transform: uppercase;
            font-weight: 800;
            color: #64748b;
            display: block;
            margin-bottom: 2px;
        }

        .badge-status {
            font-size: 0.7rem;
            font-weight: 700;
            padding: 4px 12px;
            border-radius: 20px;
            display: inline-block;
        }

        .bg-success-subtle {
            background-color: #f0fdf4;
            color: #166534;
            border: 1px solid #bbf7d0;
        }

        .bg-warn-subtle {
            background-color: #fffbeb;
            color: #92400e;
            border: 1px solid #fef3c7;
        }

        .bg-faded {
            background-color: var(--bg-faded);
        }

        .btn-xs-custom {
            font-size: 0.65rem;
            font-weight: 700;
            padding: 5px 12px;
            text-transform: uppercase;
            border-radius: 6px;
        }

        .dot-status {
            height: 8px;
            width: 8px;
            border-radius: 50%;
            display: inline-block;
        }

        .animate-fade-in {
            animation: fadeIn 0.4s ease-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(8px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Auto-refresh logic if a pending request exists
            if ($('.subscription-request[data-status="Pending"]').length > 0) {
                setInterval(function () {
                    $.getJSON('/Subscription/GetLatestStatuses', function (data) {
                        data.forEach(item => {
                            const row = $(`.subscription-request[data-id="${item.id}"]`);
                            if (row.length && row.attr('data-status') !== item.status) {
                                location.reload(); // Refresh the page to show approved state
                            }
                        });
                    });
                }, 10000); // 10 seconds
            }
        });
    </script>
}