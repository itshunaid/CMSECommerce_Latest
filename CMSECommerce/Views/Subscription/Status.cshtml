@model IEnumerable<CMSECommerce.Models.SubscriptionRequest>

@{
    ViewData["Title"] = "My Subscription Status";
    var profile = (CMSECommerce.Models.UserProfile)ViewBag.UserProfile;

    // Logic to determine if we should allow a new request
    bool hasActiveSub = profile != null && profile.SubscriptionEndDate.HasValue && profile.SubscriptionEndDate.Value > DateTime.Now;
    bool hasPendingRequest = Model != null && Model.Any(r => r.Status == RequestStatus.Pending);
    bool canRequestNew = !hasActiveSub && !hasPendingRequest;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-11">

            @* --- CURRENT SUBSCRIPTION STATUS CARD --- *@
            @if (profile != null && profile.SubscriptionEndDate.HasValue)
            {
                var timeLeft = profile.SubscriptionEndDate.Value - DateTime.Now;
                var totalDuration = (profile.SubscriptionEndDate.Value - (profile.SubscriptionStartDate ?? DateTime.Now)).TotalSeconds;
                var remainingSecs = Math.Max(0, timeLeft.TotalSeconds);
                var displayPercent = totalDuration > 0 ? Math.Max(0, Math.Min(100, (remainingSecs / totalDuration) * 100)) : 0;
                var remainingDays = timeLeft.TotalDays;

                <div class="card shadow-sm border-0 mb-5 bg-white border-start border-4 border-primary">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="fw-bold mb-0 text-dark">Current Subscription Status</h4>
                            @if (timeLeft.TotalSeconds > 0)
                            {
                                <span class="badge bg-success px-3 py-2">ACTIVE PLAN</span>
                            }
                            else
                            {
                                <span class="badge bg-danger px-3 py-2">EXPIRED</span>
                            }
                        </div>

                        <div class="progress mb-2" style="height: 18px; background-color: #e9ecef;">
                            @{
                                string barColor = "bg-success";
                                if (remainingDays <= 5) { barColor = "bg-danger"; }
                                else if (remainingDays <= 10) { barColor = "bg-warning"; }
                            }
                            <div class="progress-bar progress-bar-striped progress-bar-animated @barColor"
                                 role="progressbar"
                                 style="width: @displayPercent.ToString("0")%">
                            </div>
                        </div>

                        <div class="d-flex justify-content-between small fw-bold mt-2">
                            <span class="text-muted">Global Start: @(profile.SubscriptionStartDate?.ToString("dd MMM yyyy") ?? "---")</span>
                            <span class="@(remainingDays <= 5 ? "text-danger" : "text-success")">
                                <i class="fas fa-clock me-1"></i>
                                Final Expiry: @profile.SubscriptionEndDate.Value.ToString("dd MMM yyyy")
                                (@(remainingDays > 0 ? $"{(int)remainingDays} days remaining" : "Access Ended"))
                            </span>
                        </div>
                    </div>
                </div>
            }

            @* --- HEADER AND ACTION BUTTON --- *@
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-dark mb-0">Subscription History</h2>

                @if (canRequestNew)
                {
                    <a asp-action="Index" class="btn btn-primary px-4 shadow-sm">
                        <i class="fas fa-plus me-1"></i> New Request
                    </a>
                }
                else
                {
                    <div class="text-end">
                        <span class="badge bg-light text-muted border py-2 px-3">
                            <i class="fas fa-info-circle me-1"></i> Request Limit Reached
                        </span>
                        <p class="mb-0 xsmall text-muted mt-1" style="font-size: 0.75rem;">Only one active/pending request allowed at a time.</p>
                    </div>
                }
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center shadow-sm py-5">
                    <i class="fas fa-history fa-3x mb-3 text-secondary"></i>
                    <p class="fs-5">You haven't submitted any subscription requests yet.</p>
                </div>
            }
            else
            {
                <div class="card shadow-sm border-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Package</th>
                                    <th>ITS Number</th>
                                    <th>Duration</th>
                                    <th>Submission Date</th>
                                    <th>Status</th>
                                    <th>Reject Reason</th> @* --- NEW COLUMN --- *@
                                    <th class="text-center pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var request in Model.OrderByDescending(r => r.CreatedAt))
                                {
                                    <tr class="subscription-request" data-id="@request.Id" data-status="@request.Status">
                                        <td class="ps-4">
                                            <div class="fw-bold text-dark">@request.Tier.Name</div>
                                            <small class="text-muted">Limit: @request.Tier.ProductLimit items</small>
                                        </td>
                                        <td><code class="text-primary fw-bold">@request.ItsNumber</code></td>
                                        <td>
                                            <span class="badge bg-info text-dark">+@request.Tier.DurationMonths Months</span>
                                        </td>
                                        <td>@request.CreatedAt.ToString("dd MMM yyyy")</td>
                                        <td>
                                            @if (request.Status == RequestStatus.Pending)
                                            {
                                                <span class="badge rounded-pill bg-warning text-dark px-3"><i class="fas fa-sync fa-spin me-1"></i>Pending</span>
                                            }
                                            else if (request.Status == RequestStatus.Approved)
                                            {
                                                <span class="badge rounded-pill bg-success px-3"><i class="fas fa-check-circle me-1"></i>Approved</span>
                                            }
                                            else
                                            {
                                                <span class="badge rounded-pill bg-danger px-3" title="@request.RejectionReason"><i class="fas fa-times-circle me-1"></i>Rejected</span>
                                            }
                                        </td>
                                        <td>
                                            @if (request.Status == RequestStatus.Rejected && !string.IsNullOrEmpty(request.RejectionReason))
                                            {
                                                <span class="text-danger small fw-bold">@request.RejectionReason</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted xsmall">---</span>
                                            }
                                        </td>
                                        <td class="text-center pe-4">
                                            @if (request.Status == RequestStatus.Approved)
                                            {
                                                <a asp-action="DownloadReceipt" asp-route-requestId="@request.Id" class="btn btn-sm btn-dark">
                                                    <i class="fas fa-file-download me-1"></i> Receipt
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted small">N/A</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@* --- NOTIFICATION AUDIO --- *@
<audio id="notificationSound" preload="auto">
    <source src="https://assets.mixkit.co/active_storage/sfx/2869/2869-preview.mp3" type="audio/mpeg">
</audio>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .progress {
            border-radius: 12px;
        }

        .table thead th {
            font-size: 0.8rem;
            text-transform: uppercase;
            color: #6c757d;
            border-bottom: none;
        }

        .subscription-request {
            transition: background-color 0.4s ease;
        }

        .status-changing {
            background-color: #d1e7dd !important;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            if ($('.subscription-request[data-status="Pending"]').length > 0) {
                setInterval(function () {
                    $.getJSON('/Subscription/GetLatestStatuses', function (data) {
                        let needsUpdate = false;
                        data.forEach(item => {
                            const row = $(`.subscription-request[data-id="${item.id}"]`);
                            const currentUiStatus = row.attr('data-status');
                            if (currentUiStatus && currentUiStatus !== item.status) {
                                needsUpdate = true;
                                if(item.status === "Approved") {
                                    document.getElementById('notificationSound').play();
                                }
                            }
                        });

                        if (needsUpdate) {
                            $('.subscription-request[data-status="Pending"]').addClass('status-changing');
                            setTimeout(function() {
                                location.reload();
                            }, 2000);
                        }
                    });
                }, 10000);
            }
        });
    </script>
}