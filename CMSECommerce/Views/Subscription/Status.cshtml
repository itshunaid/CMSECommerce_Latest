@model IEnumerable<CMSECommerce.Models.SubscriptionRequest>

@{
    ViewData["Title"] = "My Subscription Status";
    ViewData["HideLayoutSidebar"] = true;

    var profile = (CMSECommerce.Models.UserProfile)ViewBag.UserProfile;

    bool hasActiveSub = profile != null &&
                        profile.SubscriptionEndDate.HasValue &&
                        profile.SubscriptionEndDate.Value > DateTime.Now &&
                        profile.CurrentTierId.HasValue;

    var latestActiveRequest = Model?.OrderByDescending(r => r.CreatedAt)
                                    .FirstOrDefault(r => r.Status == RequestStatus.Approved &&
                                                         r.TierId == profile?.CurrentTierId);

    var fullSortedList = Model?.OrderBy(r => r.Status == RequestStatus.Approved ? 0 :
                                             r.Status == RequestStatus.Pending ? 1 : 2)
                                 .ThenByDescending(r => r.CreatedAt).ToList() ?? new List<CMSECommerce.Models.SubscriptionRequest>();

    // Take the 1 most recent/relevant request
    var displayRequests = fullSortedList.Take(1).ToList();

    bool hasPendingRequest = Model != null && Model.Any(r => r.Status == RequestStatus.Pending);
    var currentPending = Model?.FirstOrDefault(r => r.Status == RequestStatus.Pending);

    bool canRequestNew = !hasPendingRequest;
}

<div class="container py-4 small-text-ui">
    <div class="row justify-content-center">
        <div class="col-md-11">

            @* --- SECTION: PENDING PROGRESS TRACKER --- *@
            @if (hasPendingRequest && currentPending != null)
            {
                <div class="card shadow-sm border-0 mb-4 animate-fade-in" style="border-radius: 15px;">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="spinner-grow spinner-grow-sm text-warning me-2" role="status"></div>
                            <h6 class="fw-bold mb-0">Verification in Progress: @currentPending.Tier.Name</h6>
                        </div>
                        <div class="progress-tracker d-flex justify-content-between position-relative">
                            <div class="step-item completed">
                                <div class="step-icon"><i class="fas fa-file-upload"></i></div>
                                <div class="step-label">Submitted</div>
                            </div>
                            <div class="step-item active">
                                <div class="step-icon"><i class="fas fa-search-dollar"></i></div>
                                <div class="step-label">Reviewing</div>
                            </div>
                            <div class="step-item">
                                <div class="step-icon"><i class="fas fa-check-double"></i></div>
                                <div class="step-label">Activation</div>
                            </div>
                            <div class="progress-line"></div>
                        </div>
                        <p class="text-muted mt-3 mb-0 text-center" style="font-size: 0.75rem;">
                            Our team is currently verifying your ITS ID: <strong>@currentPending.ItsNumber</strong>.
                            Expect activation within 24-48 hours.
                        </p>
                    </div>
                </div>
            }

            @* --- SECTION 1: ACTIVE SUBSCRIPTION COMPACT CARD --- *@
            @if (hasActiveSub && profile.CurrentTier != null)
            {
                var timeLeft = profile.SubscriptionEndDate.Value - DateTime.Now;
                var remainingDays = (int)timeLeft.TotalDays;

                <div class="card shadow-sm border-0 mb-4 overflow-hidden animate-fade-in status-banner">
                    <div class="row g-0">
                        <div class="col-md-3 bg-navy d-flex flex-column justify-content-center align-items-center text-white p-3 text-center">
                            <i class="fas fa-crown mb-2 text-warning" style="font-size: 1.5rem;"></i>
                            <h6 class="text-uppercase mb-0 opacity-75 fw-bold" style="font-size: 0.65rem; letter-spacing: 1px;">Active Plan</h6>
                            <h4 class="fw-bold mb-0">@profile.CurrentTier.Name</h4>
                        </div>

                        <div class="col-md-9 bg-white">
                            <div class="card-body py-3 px-4">
                                <div class="row align-items-center">
                                    <div class="col-sm-4 border-end">
                                        <label class="label-muted">Product Limit</label>
                                        <div class="fw-bold text-dark">
                                            <i class="fas fa-box me-2 text-primary-light"></i>
                                            @profile.CurrentProductLimit / @profile.CurrentTier.ProductLimit
                                        </div>
                                    </div>
                                    <div class="col-sm-4 border-end">
                                        <label class="label-muted">Expiration Date</label>
                                        <div class="fw-bold @(remainingDays <= 5 ? "text-danger" : "text-dark")">
                                            <i class="fas fa-calendar-alt me-2 text-primary-light"></i>@profile.SubscriptionEndDate.Value.ToString("dd MMM yyyy")
                                        </div>
                                    </div>
                                    <div class="col-sm-4 text-center">
                                        <div class="badge-status @(remainingDays <= 5 ? "bg-warn-subtle" : "bg-success-subtle")">
                                            @remainingDays Days Remaining
                                        </div>
                                        <div class="mt-2">
                                            @if (latestActiveRequest != null)
                                            {
                                                <a asp-action="DownloadReceipt" asp-route-requestId="@latestActiveRequest.Id" class="text-primary text-decoration-none fw-bold" style="font-size: 0.7rem;">
                                                    <i class="fas fa-file-invoice-dollar me-1"></i> Download Receipt
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (profile?.SubscriptionEndDate.HasValue == true && profile.SubscriptionEndDate.Value <= DateTime.Now)
            {
                <div class="alert alert-danger-custom d-flex align-items-center p-3 mb-4 shadow-sm">
                    <i class="fas fa-exclamation-circle me-3 fs-5"></i>
                    <div class="flex-grow-1">
                        <span class="fw-bold d-block" style="font-size: 0.85rem;">Subscription Expired</span>
                        <span style="font-size: 0.75rem;">Access ended on @profile.SubscriptionEndDate.Value.ToString("dd MMM yyyy").</span>
                    </div>
                    <a asp-action="Index" class="btn btn-danger btn-xs-custom px-3">Renew Now</a>
                </div>
            }

            @* --- SECTION 2: CURRENT STATUS TABLE --- *@
            <div class="d-flex justify-content-between align-items-center mb-3 px-1">
                <div>
                    <h6 class="fw-bold text-dark mb-0">Subscription Details</h6>
                    <p class="text-muted mb-0" style="font-size: 0.7rem;">Your current plan and application status</p>
                </div>

                <div class="d-flex gap-2">
                    @if (fullSortedList.Any())
                    {
                        <a asp-action="DownloadCsvHistory" class="btn btn-outline-secondary btn-xs-custom">
                            <i class="fas fa-download me-1"></i> Export History
                        </a>
                    }
                    @if (canRequestNew)
                    {
                        <a asp-action="Index" class="btn btn-primary btn-xs-custom px-3">
                            <i class="fas fa-plus me-1"></i> @(hasActiveSub ? "Upgrade Plan" : "New Request")
                        </a>
                    }
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="table-responsive">
                    <table class="table table-sm table-hover align-middle mb-0">
                        <thead class="bg-faded">
                            <tr>
                                <th class="ps-3 py-2">Package Name</th>
                                <th>ITS ID</th>
                                <th>Submission Date</th>
                                <th>Current Status</th>
                                <th>Remarks</th>
                                <th class="text-center pe-3">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!displayRequests.Any())
                            {
                                <tr>
                                    <td colspan="6" class="text-center py-4 text-muted" style="font-size: 0.8rem;">No active or recent requests found.</td>
                                </tr>
                            }
                            @foreach (var request in displayRequests)
                            {
                                <tr class="subscription-request" data-id="@request.Id" data-status="@request.Status">
                                    <td class="ps-3">
                                        <div class="fw-bold text-dark" style="font-size: 0.8rem;">@request.Tier.Name</div>
                                        <div class="text-muted" style="font-size: 0.65rem;">@request.Tier.DurationMonths Months</div>
                                    </td>
                                    <td><span class="its-badge">@request.ItsNumber</span></td>
                                    <td style="font-size: 0.75rem;">@request.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (request.Status == RequestStatus.Pending)
                                        {
                                            <span class="dot-status bg-warning"></span>
                                            <span class="text-pending ms-1">Pending Review</span>
                                        }
                                        else if (request.Status == RequestStatus.Approved)
                                        {
                                            <span class="dot-status bg-success"></span>
                                            <span class="text-success ms-1">Approved</span>
                                        }
                                        else
                                        {
                                            <span class="dot-status bg-danger"></span>
                                            <span class="text-danger ms-1">Rejected</span>
                                        }
                                    </td>
                                    <td class="text-muted" style="font-size: 0.7rem; max-width: 180px;">
                                        <div class="text-truncate" title="@request.RejectionReason">
                                            @(request.Status == RequestStatus.Rejected ? (request.RejectionReason ?? "Evidence invalid") : (request.Status == RequestStatus.Approved ? "Subscription active" : "Verification in progress"))
                                        </div>
                                    </td>
                                    <td class="text-center pe-3">
                                        @* RETRY BUTTON REMOVED ENTIRELY *@
                                        @if (request.Status == RequestStatus.Approved && request.TierId == profile?.CurrentTierId)
                                        {
                                            <span class="badge bg-success" style="font-size: 0.6rem;">CURRENT</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted" style="font-size: 0.8rem;">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="text-end px-2">
                <span class="text-muted italic" style="font-size: 0.65rem;">* Auto-refreshing status updates every 10 seconds.</span>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --navy-blue: #1e293b;
            --primary-blue: #2563eb;
            --bg-faded: #f8fafc;
        }

        body {
            background-color: #f1f5f9;
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
        }

        .progress-tracker {
            margin: 20px 40px;
        }

        .step-item {
            z-index: 2;
            text-align: center;
            position: relative;
        }

        .step-icon {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: #e2e8f0;
            color: #94a3b8;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 8px;
            font-size: 0.9rem;
            transition: all 0.3s;
        }

        .step-label {
            font-size: 0.65rem;
            font-weight: 700;
            text-transform: uppercase;
            color: #94a3b8;
        }

        .step-item.completed .step-icon {
            background: #dcfce7;
            color: #15803d;
        }

        .step-item.completed .step-label {
            color: #15803d;
        }

        .step-item.active .step-icon {
            background: var(--primary-blue);
            color: white;
            box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
        }

        .step-item.active .step-label {
            color: var(--primary-blue);
        }

        .progress-line {
            position: absolute;
            top: 17px;
            left: 0;
            width: 100%;
            height: 2px;
            background: #e2e8f0;
            z-index: 1;
        }

        .small-text-ui {
            font-size: 0.85rem;
        }

        .bg-navy {
            background-color: var(--navy-blue);
        }

        .status-banner {
            border-radius: 8px;
            border-left: 4px solid var(--primary-blue) !important;
        }

        .label-muted {
            font-size: 0.65rem;
            text-transform: uppercase;
            font-weight: 700;
            color: #94a3b8;
            display: block;
            margin-bottom: 2px;
        }

        .badge-status {
            font-size: 0.7rem;
            font-weight: 700;
            padding: 4px 12px;
            border-radius: 20px;
            display: inline-block;
        }

        .bg-success-subtle {
            background-color: #dcfce7;
            color: #15803d;
        }

        .bg-warn-subtle {
            background-color: #fef9c3;
            color: #854d0e;
        }

        .bg-faded {
            background-color: var(--bg-faded);
        }

        .table thead th {
            font-size: 0.65rem;
            text-transform: uppercase;
            color: #64748b;
            letter-spacing: 0.5px;
            border-bottom: 1px solid #e2e8f0;
        }

        .its-badge {
            background: #f1f5f9;
            color: #334155;
            padding: 2px 6px;
            border-radius: 4px;
            font-family: monospace;
            font-weight: 700;
            font-size: 0.75rem;
        }

        .btn-xs-custom {
            font-size: 0.7rem;
            font-weight: 700;
            padding: 4px 10px;
            text-transform: uppercase;
            border-radius: 4px;
        }

        .alert-danger-custom {
            background-color: #fff1f2;
            border: 1px solid #fecdd3;
            color: #be123c;
            border-radius: 8px;
        }

        .dot-status {
            height: 8px;
            width: 8px;
            border-radius: 50%;
            display: inline-block;
        }

        .text-pending {
            color: #d97706;
            font-weight: 600;
            font-size: 0.75rem;
        }

        .animate-fade-in {
            animation: fadeIn 0.3s ease-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(5px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            if ($('.subscription-request[data-status="Pending"]').length > 0) {
                setInterval(function () {
                    $.getJSON('/Subscription/GetLatestStatuses', function (data) {
                        data.forEach(item => {
                            const row = $(`.subscription-request[data-id="${item.id}"]`);
                            if (row.length && row.attr('data-status') !== item.status) {
                                location.reload();
                            }
                        });
                    });
                }, 10000);
            }
        });
    </script>
}