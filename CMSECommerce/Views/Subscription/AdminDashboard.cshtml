@model IEnumerable<CMSECommerce.Models.SubscriptionRequest>

@{
    ViewData["Title"] = "Subscription Admin";
    ViewData["HideLayoutSidebar"] = true;
}

@section Styles {
    <style>
        /* Small-Text Robust Theme */
        .admin-view {
            font-size: 0.8rem;
            background-color: #f4f7f6;
            min-height: 100vh;
        }

        /* Compact Table Styles */
        .table-main {
            background: #fff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

            .table-main thead th {
                font-size: 0.7rem;
                font-weight: 700;
                text-transform: uppercase;
                letter-spacing: 0.05em;
                background-color: #232f3e;
                color: #ffffff;
                border: none;
                padding: 12px 15px;
            }

            .table-main tbody td {
                padding: 10px 15px;
                border-bottom: 1px solid #edf2f7;
                vertical-align: middle;
            }

        /* Row Highlighting - Updated to persist highlight for Approved Upgrades */
        .row-upgrade {
            background-color: #f0f7ff !important;
            border-left: 4px solid #3182ce;
        }

        .badge-upgrade {
            background-color: #3182ce;
            color: white;
            font-size: 0.6rem;
            padding: 2px 6px;
            border-radius: 10px;
            text-transform: uppercase;
            cursor: help;
        }

        /* Search & Filter Bar */
        .search-container {
            background: #fff;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.05);
        }

        .form-control-sm-custom {
            font-size: 0.75rem;
            border-radius: 4px;
        }

        /* Typography & Components */
        .text-xs {
            font-size: 0.7rem;
        }

        .fw-600 {
            font-weight: 600;
        }

        .badge-status {
            font-size: 0.65rem;
            padding: 4px 8px;
            font-weight: 700;
            border-radius: 4px;
        }

        .btn-action {
            font-size: 0.7rem;
            font-weight: 700;
            padding: 3px 10px;
            text-transform: uppercase;
        }

        .img-preview-btn {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            color: #4a5568;
            font-size: 0.7rem;
        }

        .profile-link {
            transition: all 0.2s;
            display: inline-block;
            margin-top: 4px;
            padding: 2px 6px;
            background-color: #f0f4f8;
            border-radius: 4px;
            font-weight: 600;
        }

            .profile-link:hover {
                color: #0d6efd !important;
                background-color: #e2e8f0;
                transform: translateX(2px);
            }
    </style>
}

<div class="admin-view py-4">
    <div class="container-fluid">
        <div class="row align-items-end mb-3">
            <div class="col-md-6">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-1" style="font-size: 0.65rem; text-transform: uppercase;">
                        <li class="breadcrumb-item"><a href="#">Admin</a></li>
                        <li class="breadcrumb-item active">Subscriptions</li>
                    </ol>
                </nav>
                <h2 class="h5 mb-0 fw-bold"><i class="fas fa-user-shield me-2 text-primary"></i>Subscription Management</h2>
            </div>
            <div class="col-md-6 text-end">
                <div class="d-inline-flex gap-2">
                    <span class="badge bg-white text-dark border shadow-sm py-2 px-3">
                        <i class="fas fa-layer-group me-1 text-muted"></i> Total: @Model.Count()
                    </span>

                    <form asp-action="ForceExpiryCheck" method="post" onsubmit="return confirm('Immediately process expired users?')">
                        <button type="submit" class="btn btn-sm btn-dark shadow-sm fw-bold py-1 px-3" style="font-size:0.7rem;">
                            <i class="fas fa-sync-alt me-1"></i> FORCE EXPIRY CHECK
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="search-container">
            <div class="row g-2 align-items-center">
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0 text-muted"><i class="fas fa-search text-xs"></i></span>
                        <input type="text" id="itsSearch" class="form-control form-control-sm-custom border-start-0" placeholder="Search ITS Number...">
                    </div>
                </div>
                <div class="col-md-2">
                    <select id="statusFilter" class="form-select form-select-sm form-control-sm-custom">
                        <option value="">All Statuses</option>
                        <option value="Pending">Pending</option>
                        <option value="Approved">Approved</option>
                        <option value="Rejected">Rejected</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <div class="form-check form-switch pt-1">
                        <input class="form-check-input" type="checkbox" id="upgradeOnlyFilter">
                        <label class="form-check-label text-xs fw-bold" for="upgradeOnlyFilter">Upgrades Only</label>
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <button type="button" class="btn btn-sm btn-light border text-xs fw-bold" onclick="resetFilters()">Reset Filters</button>
                </div>
            </div>
        </div>

        @if (TempData["Success"] != null || TempData["Warning"] != null)
        {
            var msg = TempData["Success"] ?? TempData["Warning"];
            var css = TempData["Success"] != null ? "alert-success" : "alert-warning";
            <div class="alert @css border-0 shadow-sm py-2 px-3 mb-3 alert-dismissible fade show" role="alert">
                <i class="fas @(TempData["Success"] != null ? "fa-check-circle" : "fa-exclamation-triangle") me-2"></i>
                <span class="text-xs fw-600">@msg</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" style="padding: 0.8rem;"></button>
            </div>
        }

        <div class="table-main">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="requestTable">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Identity & User</th>
                            <th>Requested Plan</th>
                            <th>Payment Proof</th>
                            <th class="text-center">Status</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(r => r.CreatedAt))
                        {
                            @* Logic Update: We keep the row-upgrade class active if the request is an upgrade, regardless of status. *@
                            <tr class="request-row @(item.IsUpgrade ? "row-upgrade" : "")"
                                data-its="@item.ItsNumber"
                                data-status="@item.Status"
                                data-upgrade="@item.IsUpgrade.ToString().ToLower()">
                                <td>
                                    <div class="fw-600 text-dark">@item.CreatedAt.ToString("MMM dd, yyyy")</div>
                                    <div class="text-muted text-xs">@item.CreatedAt.ToString("hh:mm tt")</div>
                                </td>
                                <td>
                                    <div class="user-meta">
                                        <div class="text-primary fw-bold" style="font-size: 0.85rem;">
                                            ITS #@item.ItsNumber
                                            @if (item.IsUpgrade)
                                            {
                                                <span class="badge-upgrade ms-1" title="This request is a Tier Upgrade"><i class="fas fa-arrow-up me-1"></i>Upgrade</span>
                                            }
                                        </div>

                                        <a asp-action="UserDetails" asp-route-userId="@item.UserId" class="text-muted text-xs text-decoration-none profile-link">
                                            <i class="fas fa-user-circle me-1"></i> View Profile & History
                                        </a>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-600 text-dark">@item.Tier.Name</div>
                                    <div class="text-xs text-muted">@item.Tier.DurationMonths Months | Limit: @item.Tier.ProductLimit</div>
                                </td>
                                <td>
                                    <a href="~/uploads/@item.ReceiptImagePath" target="_blank" class="btn btn-sm img-preview-btn">
                                        <i class="fas fa-file-invoice me-1"></i> Proof
                                    </a>
                                </td>
                                <td class="text-center">
                                    @{
                                        var statusClass = item.Status == RequestStatus.Pending ? "bg-warning text-dark border-warning" :
                                        item.Status == RequestStatus.Approved ? "bg-success text-white" : "bg-danger text-white";
                                    }
                                    <span class="badge-status @statusClass">@item.Status</span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group shadow-xs">
                                        @if (item.Status == RequestStatus.Pending)
                                        {
                                            <a asp-action="Approve" asp-route-requestId="@item.Id" class="btn btn-sm btn-success btn-action"
                                               onclick="return confirm('Confirm Approval?')">Approve</a>
                                            <button type="button" class="btn btn-sm btn-danger btn-action" onclick="showRejectModal(@item.Id)">Reject</button>
                                        }
                                        else
                                        {
                                            <a asp-action="Revert" asp-route-requestId="@item.Id" class="btn btn-sm btn-outline-secondary btn-action"
                                               onclick="return confirm('Revert to Pending status?')"><i class="fas fa-undo-alt me-1"></i> Revert</a>
                                        }
                                    </div>
                                    @if (item.Status == RequestStatus.Rejected)
                                    {
                                        <div class="rejection-text text-danger text-xs text-end mt-1">
                                            <i class="fw-bold">Reason:</i> @item.RejectionReason
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <p class="mt-3 text-muted text-center" style="font-size: 0.65rem;">
            <i class="fas fa-info-circle me-1"></i> Row highlighting and "Upgrade" badges persist after approval to help track plan transitions.
        </p>
    </div>
</div>

@* Rejection Modal remains same *@
<div class="modal fade" id="rejectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <form asp-action="Reject" method="post">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-dark text-white py-2">
                    <h6 class="modal-title fs-7 fw-bold">Rejection Details</h6>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-3">
                    <input type="hidden" name="requestId" id="modalRequestId" />
                    <textarea name="reason" class="form-control text-xs" rows="3" required placeholder="Reason for rejection..."></textarea>
                </div>
                <div class="modal-footer py-2">
                    <button type="submit" class="btn btn-xs btn-danger text-xs px-3">Confirm Reject</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        const itsSearch = document.getElementById('itsSearch');
        const statusFilter = document.getElementById('statusFilter');
        const upgradeOnlyFilter = document.getElementById('upgradeOnlyFilter');
        const rows = document.querySelectorAll('.request-row');

        function filterTable() {
            const searchText = itsSearch.value.toLowerCase();
            const selectedStatus = statusFilter.value;
            const upgradeOnly = upgradeOnlyFilter.checked;

            rows.forEach(row => {
                const its = (row.getAttribute('data-its') || "").toLowerCase();
                const status = row.getAttribute('data-status');
                const isUpgrade = row.getAttribute('data-upgrade') === 'true';

                const matchesSearch = its.includes(searchText);
                const matchesStatus = !selectedStatus || status === selectedStatus;
                const matchesUpgrade = !upgradeOnly || isUpgrade;

                row.style.display = (matchesSearch && matchesStatus && matchesUpgrade) ? '' : 'none';
            });
        }

        itsSearch.addEventListener('keyup', filterTable);
        statusFilter.addEventListener('change', filterTable);
        upgradeOnlyFilter.addEventListener('change', filterTable);

        function resetFilters() {
            itsSearch.value = '';
            statusFilter.value = '';
            upgradeOnlyFilter.checked = false;
            filterTable();
        }

        function showRejectModal(id) {
            document.getElementById('modalRequestId').value = id;
            new bootstrap.Modal(document.getElementById('rejectModal')).show();
        }
    </script>
}