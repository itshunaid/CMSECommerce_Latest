@model IEnumerable<CMSECommerce.Models.SubscriptionRequest>

@{
    ViewData["Title"] = "Manage Subscriptions";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0 text-gray-800"><i class="fas fa-user-check me-2"></i>Subscription Management</h2>
        <span class="badge bg-dark">Total Requests: @Model.Count()</span>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-amazon-dark text-white">
                        <tr>
                            <th class="ps-3">Date</th>
                            <th>User Details</th>
                            <th>Tier</th>
                            <th>Proof</th>
                            <th class="text-center">Status</th>
                            <th class="text-end pe-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3">
                                    <div class="fw-bold">@item.CreatedAt.ToString("dd MMM yyyy")</div>
                                    <small class="text-muted">@item.CreatedAt.ToString("hh:mm tt")</small>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span><i class="fas fa-user small me-1"></i> ID: @item.UserId.Substring(0, 8)...</span>
                                        <span class="text-primary fw-bold"><i class="fas fa-id-card small me-1"></i> ITS: @item.ItsNumber</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge rounded-pill bg-info text-dark">
                                        @item.Tier.Name (@item.Tier.ProductLimit items)
                                    </span>
                                </td>
                                <td>
                                    <a href="~/uploads/@item.ReceiptImagePath" target="_blank" class="btn btn-sm btn-light border">
                                        <i class="fas fa-image me-1"></i>View Receipt
                                    </a>
                                </td>
                                <td class="text-center">
                                    @if (item.Status == RequestStatus.Pending)
                                    {
                                        <span class="badge bg-warning text-dark"><i class="fas fa-clock me-1"></i>Pending</span>
                                    }
                                    else if (item.Status == RequestStatus.Approved)
                                    {
                                        <span class="badge bg-success"><i class="fas fa-check me-1"></i>Approved</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger"><i class="fas fa-times me-1"></i>Rejected</span>
                                    }
                                </td>
                                <td class="text-end pe-3">
                                    <div class="btn-group shadow-sm">
                                        @if (item.Status == RequestStatus.Pending)
                                        {
                                            <a asp-action="Approve" asp-route-requestId="@item.Id"
                                               class="btn btn-sm btn-success"
                                               onclick="return confirm('Confirm approval? Role will change to Seller.')">
                                                Approve
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger"
                                                    onclick="showRejectModal(@item.Id)">
                                                Reject
                                            </button>
                                        }
                                        else
                                        {
                                            @* Revert Logic: Allows Admin to undo Approval or Rejection *@
                                            <a asp-action="Revert" asp-route-requestId="@item.Id"
                                               class="btn btn-sm btn-outline-secondary"
                                               onclick="return confirm('REVERT SUBSCRIPTION? User will lose Seller role and limit will reset. Status will go back to Pending.')">
                                                <i class="fas fa-undo me-1"></i>Revert
                                            </a>
                                        }
                                    </div>

                                    @if (item.Status == RequestStatus.Rejected)
                                    {
                                        <div class="mt-1">
                                            <small class="text-danger italic">Reason: @item.RejectionReason</small>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="rejectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form asp-action="Reject" method="post">
            <div class="modal-content shadow-lg border-0">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="fas fa-ban me-2"></i>Reject Subscription</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="requestId" id="modalRequestId" />
                    <p class="text-muted">State the specific reason why this request is being rejected. The user will see this message.</p>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Rejection Reason</label>
                        <textarea name="reason" class="form-control" rows="4" required
                                  placeholder="Example: Receipt image is blurry or transaction ID not found."></textarea>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger px-4">Confirm Rejection</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function showRejectModal(id) {
            document.getElementById('modalRequestId').value = id;
            var myModal = new bootstrap.Modal(document.getElementById('rejectModal'));
            myModal.show();
        }
    </script>
}