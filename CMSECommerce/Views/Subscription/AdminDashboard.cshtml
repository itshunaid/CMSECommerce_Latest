@model IEnumerable<CMSECommerce.Models.SubscriptionRequest>

@{
    ViewData["Title"] = "Subscription Admin";
    ViewData["HideLayoutSidebar"] = true;
}

@section Styles {
    <style>
        /* Small-Text Robust Theme */
        .admin-view {
            font-size: 0.8rem;
            background-color: #f4f7f6;
            min-height: 100vh;
        }

        /* Compact Table Styles */
        .table-main {
            background: #fff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

            .table-main thead th {
                font-size: 0.7rem;
                font-weight: 700;
                text-transform: uppercase;
                letter-spacing: 0.05em;
                background-color: #232f3e; /* Amazon-style dark */
                color: #ffffff;
                border: none;
                padding: 12px 15px;
            }

            .table-main tbody td {
                padding: 10px 15px;
                border-bottom: 1px solid #edf2f7;
                vertical-align: middle;
            }

        /* Typography & Components */
        .text-xs {
            font-size: 0.7rem;
        }

        .fw-600 {
            font-weight: 600;
        }

        .badge-status {
            font-size: 0.65rem;
            padding: 4px 8px;
            font-weight: 700;
            border-radius: 4px;
        }

        .user-meta {
            line-height: 1.3;
        }

        .btn-action {
            font-size: 0.7rem;
            font-weight: 700;
            padding: 3px 10px;
            text-transform: uppercase;
        }

        .img-preview-btn {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            color: #4a5568;
            font-size: 0.75rem;
            transition: all 0.2s;
        }

            .img-preview-btn:hover {
                background: #e2e8f0;
                color: #2d3748;
            }

        .rejection-text {
            max-width: 180px;
            display: block;
            line-height: 1.2;
            margin-top: 4px;
        }
    </style>
}

<div class="admin-view py-4">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-end mb-3">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-1" style="font-size: 0.65rem; text-transform: uppercase;">
                        <li class="breadcrumb-item"><a href="#">Admin</a></li>
                        <li class="breadcrumb-item active">Subscriptions</li>
                    </ol>
                </nav>
                <h2 class="h5 mb-0 fw-bold"><i class="fas fa-clipboard-check me-2 text-primary"></i>Subscription Requests</h2>
            </div>
            <div class="text-end">
                <span class="badge bg-white text-dark border shadow-sm py-2 px-3">
                    <i class="fas fa-layer-group me-1 text-muted"></i> Total: @Model.Count()
                </span>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success border-0 shadow-sm py-2 px-3 mb-3 alert-dismissible fade show" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fas fa-check-circle me-2"></i>
                    <span class="text-xs fw-600">@TempData["Success"]</span>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="padding: 0.8rem;"></button>
            </div>
        }

        <div class="table-main">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Submission Date</th>
                            <th>Identity & User</th>
                            <th>Requested Plan</th>
                            <th>Payment Proof</th>
                            <th class="text-center">Status</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(r => r.CreatedAt))
                        {
                            <tr>
                                <td>
                                    <div class="fw-600 text-dark">@item.CreatedAt.ToString("MMM dd, yyyy")</div>
                                    <div class="text-muted text-xs">@item.CreatedAt.ToString("hh:mm tt")</div>
                                </td>
                                <td>
                                    <div class="user-meta">
                                        <div class="text-primary fw-bold" style="font-size: 0.85rem;">ITS #@item.ItsNumber</div>
                                        <div class="text-muted text-xs">UID: @item.UserId.Substring(0, 12)...</div>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-600 text-dark">@item.Tier.Name</div>
                                    <div class="text-xs text-muted">Limit: @item.Tier.ProductLimit Products</div>
                                </td>
                                <td>
                                    <a href="~/uploads/@item.ReceiptImagePath" target="_blank" class="btn btn-sm img-preview-btn">
                                        <i class="fas fa-external-link-alt me-1 text-xs"></i> View Image
                                    </a>
                                </td>
                                <td class="text-center">
                                    @if (item.Status == RequestStatus.Pending)
                                    {
                                        <span class="badge-status bg-warning text-dark border border-warning"><i class="fas fa-circle me-1 text-xs"></i>Pending</span>
                                    }
                                    else if (item.Status == RequestStatus.Approved)
                                    {
                                        <span class="badge-status bg-success text-white"><i class="fas fa-check-circle me-1"></i>Approved</span>
                                    }
                                    else
                                    {
                                        <span class="badge-status bg-danger text-white"><i class="fas fa-times-circle me-1"></i>Rejected</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group shadow-xs">
                                        @if (item.Status == RequestStatus.Pending)
                                        {
                                            <a asp-action="Approve" asp-route-requestId="@item.Id"
                                               class="btn btn-sm btn-success btn-action"
                                               onclick="return confirm('Approve this user as Seller?')">Approve</a>

                                            <button type="button" class="btn btn-sm btn-danger btn-action"
                                                    onclick="showRejectModal(@item.Id)">
                                                Reject
                                            </button>
                                        }
                                        else
                                        {
                                            <a asp-action="Revert" asp-route-requestId="@item.Id"
                                               class="btn btn-sm btn-outline-secondary btn-action"
                                               onclick="return confirm('Revert status to Pending?')">
                                                <i class="fas fa-undo-alt me-1"></i> Revert
                                            </a>
                                        }
                                    </div>

                                    @if (item.Status == RequestStatus.Rejected)
                                    {
                                        <div class="rejection-text text-danger text-xs text-end">
                                            <i class="fw-bold">Reason:</i> @item.RejectionReason
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3 text-center">
            <p class="text-muted" style="font-size: 0.65rem;">
                <i class="fas fa-info-circle me-1"></i> All approved users are automatically assigned the 'Seller' role and notified via email.
            </p>
        </div>
    </div>
</div>

<div class="modal fade" id="rejectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <form asp-action="Reject" method="post">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-dark text-white py-2">
                    <h6 class="modal-title fs-7 fw-bold">Rejection Details</h6>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-3">
                    <input type="hidden" name="requestId" id="modalRequestId" />
                    <div class="mb-2">
                        <label class="form-label text-xs fw-bold">Reason for User</label>
                        <textarea name="reason" class="form-control text-xs" rows="3" required
                                  placeholder="e.g. Transaction ID mismatch or blurry image."></textarea>
                    </div>
                </div>
                <div class="modal-footer py-2">
                    <button type="button" class="btn btn-xs btn-light text-xs" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-xs btn-danger text-xs px-3">Confirm Reject</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function showRejectModal(id) {
            document.getElementById('modalRequestId').value = id;
            var myModal = new bootstrap.Modal(document.getElementById('rejectModal'));
            myModal.show();
        }
    </script>
}