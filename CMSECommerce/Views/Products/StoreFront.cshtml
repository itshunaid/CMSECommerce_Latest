@model CMSECommerce.Models.Store

@{
    ViewData["Title"] = Model.StoreName;
}

<div class="jumbotron jumbotron-fluid bg-light border-bottom mb-5 py-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold text-primary">@Model.StoreName</h1>
        <p class="lead text-muted">@Model.City, @Model.Country</p>
        <div class="d-flex justify-content-center gap-3">
            <span class="badge bg-info text-dark">
                <i class="bi bi-envelope"></i> @Model.Email
            </span>
            <span class="badge bg-secondary">
                <i class="bi bi-geo-alt"></i> @Model.PostCode
            </span>
        </div>
    </div>
</div>



<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">Our Products</h3>
        <span class="text-muted">Total Items: @Model.Products.Count</span>
    </div>

    @if (!Model.Products.Any())
    {
        <div class="alert alert-warning text-center">
            This store currently has no products available.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var item in Model.Products)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 transition-hover">
                        <img src="~/media/products/@item.Image"
                             class="card-img-top p-3"
                             alt="@item.Name"
                             style="height: 200px; object-fit: contain;"
                             onerror="this.src='/media/products/no-image.png'">

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@item.Name</h5>
                            <p class="card-text text-muted small flex-grow-1">
                                @(item.Description.Length > 60 ? item.Description.Substring(0, 57) + "..." : item.Description)
                            </p>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="fs-5 fw-bold text-success">@item.Price.ToString("C")</span>
                                @if (item.StockQuantity > 0)
                                {
                                    <span class="badge bg-light text-success border border-success">In Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-danger border border-danger">Out of Stock</span>
                                }
                            </div>
                        </div>

                        <div class="card-footer bg-transparent border-0 pb-3">
                            <div class="d-grid gap-2">
                                <a asp-controller="Products" asp-action="Product" asp-route-slug="@item.Slug"
                                   class="btn btn-outline-primary btn-sm">View Details</a>
                                <a asp-controller="Cart" asp-action="Add" asp-route-id="@item.Id"
                                   class="btn btn-primary btn-sm @(item.StockQuantity <= 0 ? "disabled" : "")">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .transition-hover:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease-in-out;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>