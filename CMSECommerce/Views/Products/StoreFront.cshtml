@model CMSECommerce.Models.Store

@{
    ViewData["Title"] = Model.StoreName;
    int currentPage = ViewBag.PageNumber ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    string currentSort = ViewBag.CurrentSort;
    string searchQuery = ViewBag.SearchQuery;
    string currentCategory = ViewBag.CurrentCategory;
    ViewData["HideLayoutSidebar"] = true;
}

<div class="amazon-bg-gray pb-5">
    @* --- STORE BRAND HEADER --- *@
    <div class="store-header mb-4 py-5 border-bottom bg-white shadow-sm">
        <div class="container-fluid" style="max-width: 1500px;">
            <div class="row justify-content-center text-center">
                <div class="col-md-10">
                    <nav aria-label="breadcrumb" class="d-flex justify-content-center">
                        <ol class="breadcrumb mb-3" style="font-size: 0.85rem;">
                            <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-amazon-teal">Stores</a></li>
                            <li class="breadcrumb-item active text-muted">@Model.StoreName</li>
                        </ol>
                    </nav>
                    <h1 class="display-4 fw-bold mb-3 text-dark">@Model.StoreName</h1>
                    <div class="d-flex align-items-center justify-content-center gap-3 text-muted mb-4">
                        <span><i class="fas fa-map-marker-alt me-1 text-amazon-teal"></i>@Model.City, @Model.Country</span>
                        <span class="text-secondary opacity-50">|</span>
                        <span><i class="fas fa-envelope me-1 text-amazon-teal"></i>@Model.Email</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid" style="max-width: 1500px;">
        <div class="row">
            @* --- SIDEBAR FILTERS --- *@
            <aside class="col-lg-2 d-none d-lg-block">
                @* 1. Search Store Filter *@
                <div class="filter-section mb-4">
                    <h6 class="fw-bold mb-2">Search Store</h6>
                    <form asp-action="StoreFront" method="get" class="input-group input-group-sm mb-3">
                        <input type="hidden" name="id" value="@Model.Id" />
                        @* Maintain category filter during search *@
                        <input type="hidden" name="category" value="@currentCategory" />
                        <input type="text" name="search" class="form-control" placeholder="Search items..." value="@searchQuery">
                        <button class="btn btn-outline-secondary" type="submit"><i class="fas fa-search"></i></button>
                    </form>
                </div>

                @* 2. Dynamic Category Filter *@
                <div class="filter-section mb-4">
                    <h6 class="fw-bold mb-2">Category</h6>
                    <ul class="list-unstyled small">
                        <li>
                            <a asp-action="StoreFront" asp-route-id="@Model.Id" asp-route-search="@searchQuery"
                               class="text-decoration-none @(string.IsNullOrEmpty(currentCategory) ? "text-dark fw-bold" : "text-amazon-teal") d-block mb-1">
                                All Categories
                            </a>
                        </li>
                        @if (ViewBag.Categories != null)
                        {
                            @foreach (var cat in ViewBag.Categories)
                            {
                                <li>
                                    <a asp-action="StoreFront" asp-route-id="@Model.Id" asp-route-category="@cat" asp-route-search="@searchQuery"
                                       class="text-decoration-none @(currentCategory == cat ? "text-dark fw-bold" : "text-amazon-teal") d-block mb-1">
                                        @cat
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>

                @* 3. Price Range Filter *@
                <div class="filter-section mb-4">
                    <h6 class="fw-bold mb-2">Price Range</h6>
                    <ul class="list-unstyled small">
                        <li><a asp-action="StoreFront" asp-route-id="@Model.Id" asp-route-maxPrice="500" asp-route-category="@currentCategory" class="text-decoration-none text-amazon-teal d-block mb-1">Under ₹500</a></li>
                        <li><a asp-action="StoreFront" asp-route-id="@Model.Id" asp-route-minPrice="500" asp-route-maxPrice="1000" asp-route-category="@currentCategory" class="text-decoration-none text-amazon-teal d-block mb-1">₹500 - ₹1,000</a></li>
                        <li><a asp-action="StoreFront" asp-route-id="@Model.Id" asp-route-minPrice="1000" asp-route-category="@currentCategory" class="text-decoration-none text-amazon-teal d-block mb-1">Over ₹1,000</a></li>
                    </ul>
                </div>
            </aside>

            @* --- MAIN CONTENT --- *@
            <main class="col-lg-10">
                @* Top bar for sorting/results count *@
                <div class="d-flex justify-content-between align-items-center bg-white p-2 mb-3 border rounded shadow-sm">
                    <span class="small text-muted ps-2">
                        Showing @Model.Products.Count results
                        @if (!string.IsNullOrEmpty(searchQuery))
                        {
                            <span>for <b>"@searchQuery"</b></span>
                        }
                    </span>

                    <div class="d-flex align-items-center gap-2 pe-2">
                        <span class="small text-muted">Sort by:</span>
                        <select class="form-select form-select-sm" style="width: auto;" onchange="location = this.value;">
                            <option value="@Url.Action("StoreFront", new { id = Model.Id, search = searchQuery, category = currentCategory, sort = "" })" selected="@(string.IsNullOrEmpty(currentSort))">Featured</option>
                            <option value="@Url.Action("StoreFront", new { id = Model.Id, search = searchQuery, category = currentCategory, sort = "price_asc" })" selected="@(currentSort == "price_asc")">Price: Low to High</option>
                            <option value="@Url.Action("StoreFront", new { id = Model.Id, search = searchQuery, category = currentCategory, sort = "price_desc" })" selected="@(currentSort == "price_desc")">Price: High to Low</option>
                            <option value="@Url.Action("StoreFront", new { id = Model.Id, search = searchQuery, category = currentCategory, sort = "newest" })" selected="@(currentSort == "newest")">Newest Arrivals</option>
                        </select>
                    </div>
                </div>

                @if (!Model.Products.Any())
                {
                    <div class="bg-white rounded shadow-sm text-center py-5">
                        <i class="fas fa-box-open display-1 text-muted opacity-25"></i>
                        <h4 class="mt-3 fw-bold">No products found</h4>
                        <p class="text-muted">Try adjusting your filters or search terms.</p>
                        <a asp-action="StoreFront" asp-route-id="@Model.Id" class="btn btn-amazon-yellow-pill px-4">Clear All Filters</a>
                    </div>
                }
                else
                {
                    <div class="row g-0 border-start border-top bg-white shadow-sm rounded overflow-hidden">
                        @foreach (var item in Model.Products)
                        {
                            <div class="col-6 col-md-4 col-lg-3 col-xl-2 d-flex align-items-stretch border-bottom border-end product-card-hover bg-white">
                                <div class="card border-0 w-100 p-3">
                                    <a asp-controller="Products" asp-action="Product" asp-route-slug="@item.Slug" class="product-image-link mb-3 text-center d-block">
                                        <img src="/media/products/@item.Image" class="product-main-img img-fluid" alt="@item.Name" loading="lazy" onerror="this.onerror=null;this.src='/media/products/noimage.png';" />
                                    </a>

                                    <div class="card-body d-flex flex-column p-0">
                                        <h5 class="amazon-product-title mb-1">
                                            <a asp-controller="Products" asp-action="Product" asp-route-slug="@item.Slug" class="text-dark text-decoration-none">@item.Name</a>
                                        </h5>

                                        <div class="mb-2 text-amazon-yellow small">
                                            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i>
                                            <span class="text-amazon-teal ms-1 small">@((new Random().Next(20, 1000)).ToString("N0"))</span>
                                        </div>

                                        <div class="product-description-snippet mb-2">
                                            <p class="text-muted x-small mb-0">
                                                @if (!string.IsNullOrEmpty(item.Description))
                                                {
                                                    var plainText = System.Text.RegularExpressions.Regex.Replace(item.Description, "<.*?>", string.Empty);
                                                    @(plainText.Length > 60 ? plainText.Substring(0, 57) + "..." : plainText)
                                                }
                                            </p>
                                        </div>

                                        <div class="price-box mb-3 mt-auto">
                                            <span class="price-symbol">₹</span>
                                            <span class="price-whole">@Math.Floor(item.Price).ToString("#,##,##0")</span>
                                            <span class="price-fraction">@((item.Price % 1).ToString(".00").Replace(".", ""))</span>
                                        </div>

                                        <div class="mt-2">
                                            <a asp-controller="Cart" asp-action="Add" asp-route-id="@item.Id" class="btn btn-amazon-yellow-pill btn-sm w-100 mb-2 @(item.StockQuantity <= 0 ? "disabled" : "")">Add to Cart</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @* --- PAGINATION --- *@
                    @if (totalPages > 1)
                    {
                        <nav aria-label="Page navigation" class="mt-5">
                            <ul class="pagination justify-content-center">
                                @if (currentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link text-amazon-teal" asp-action="StoreFront"
                                           asp-route-id="@Model.Id"
                                           asp-route-p="@(currentPage - 1)"
                                           asp-route-search="@searchQuery"
                                           asp-route-category="@currentCategory"
                                           asp-route-sort="@currentSort">Previous</a>
                                    </li>
                                }
                                @for (int i = 1; i <= totalPages; i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        @if (i == currentPage)
                                        {
                                            <span class="page-link active-page">@i</span>
                                        }
                                        else
                                        {
                                            <a class="page-link text-amazon-teal" asp-action="StoreFront"
                                               asp-route-id="@Model.Id"
                                               asp-route-p="@i"
                                               asp-route-search="@searchQuery"
                                               asp-route-category="@currentCategory"
                                               asp-route-sort="@currentSort">@i</a>
                                        }
                                    </li>
                                }
                                @if (currentPage < totalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link text-amazon-teal" asp-action="StoreFront"
                                           asp-route-id="@Model.Id"
                                           asp-route-p="@(currentPage + 1)"
                                           asp-route-search="@searchQuery"
                                           asp-route-category="@currentCategory"
                                           asp-route-sort="@currentSort">Next</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                }
            </main>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --amazon-teal: #007185;
            --amazon-yellow: #FFD814;
            --amazon-bg: #EAEDED;
            --amazon-link-hover: #C45500;
        }

        .amazon-bg-gray {
            background-color: var(--amazon-bg);
            min-height: 100vh;
        }

        .text-amazon-teal {
            color: var(--amazon-teal) !important;
        }

        .text-amazon-yellow {
            color: #FFA41C;
        }

        /* Sidebar Styling */
        .filter-section h6 {
            font-size: 0.9rem;
            border-bottom: 1px solid #ddd;
            padding-bottom: 5px;
            color: #111;
        }

        .filter-section ul li a:hover {
            color: var(--amazon-link-hover) !important;
            text-decoration: underline !important;
        }

        /* Main Content UI */
        .display-4 {
            font-weight: 800;
            color: #0F1111;
        }

        .price-box {
            color: #0F1111;
            display: flex;
            align-items: flex-start;
            line-height: 1;
        }

        .price-symbol {
            font-size: 0.85rem;
            margin-top: 4px;
            margin-right: 1px;
            font-weight: 500;
        }

        .price-whole {
            font-size: 1.5rem;
            font-weight: 700;
        }

        .price-fraction {
            font-size: 0.85rem;
            margin-top: 4px;
            font-weight: 500;
        }

        .product-main-img {
            height: 180px;
            width: 100%;
            object-fit: contain;
        }

        .amazon-product-title {
            font-size: 0.95rem;
            font-weight: 500;
            height: 2.8rem;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            line-height: 1.4;
        }

            .amazon-product-title a:hover {
                color: var(--amazon-link-hover) !important;
                text-decoration: underline !important;
            }

        .btn-amazon-yellow-pill {
            background: var(--amazon-yellow);
            border: 1px solid #FCD200;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
            color: #0f1111;
        }

            .btn-amazon-yellow-pill:hover {
                background: #f7ca00;
                border-color: #f2c200;
            }

            .btn-amazon-yellow-pill.disabled {
                background: #F7F8F8;
                border-color: #D5D9D9;
                color: #888;
                pointer-events: none;
            }

        .product-card-hover {
            transition: all 0.2s ease-in-out;
            position: relative;
        }

            .product-card-hover:hover {
                box-shadow: 0 4px 20px rgba(0,0,0,0.15);
                z-index: 5;
                transform: scale(1.01);
            }

        .active-page {
            background-color: #fff !important;
            border-color: #e77600 !important;
            color: #e77600 !important;
            font-weight: bold;
            border-width: 2px;
        }

        .x-small {
            font-size: 0.75rem;
        }
    </style>
}