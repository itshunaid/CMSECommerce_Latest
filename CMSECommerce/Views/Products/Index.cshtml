@model IEnumerable<Product>
@* Assuming Product has Id, Name, Slug, Image, Price, Category properties *@

@{
    ViewData["Title"] = "Vepari";
    var categoryName = ViewBag.CategoryName as string;
    var currentSearchTerm = ViewBag.CurrentSearchTerm as string;
    var currentCategorySlug = ViewBag.CategorySlug as string;
    var currentPage = (int)(ViewBag.PageNumber ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var sortOrder = ViewBag.SortOrder as string ?? "default";
    var pageRange = ViewBag.PageRange ?? 3;
}

<div class="container py-5">

    <!-- PAGE HEADER -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold text-dark">
                @if (!string.IsNullOrEmpty(categoryName))
                {
                    <i class="fas fa-tags me-3 text-primary"></i>
                    @categoryName
                }
                else
                {
                    <i class="fas fa-store me-2"></i>
                    @ViewData["Title"]
                }
            </h1>

            <p class="text-muted lead small mb-0">
                @if (!string.IsNullOrEmpty(currentSearchTerm))
                {
                    <span><i class="fas fa-search me-1"></i> Showing results for: <strong>"@currentSearchTerm"</strong></span>
                }
                else
                {
                    <span>Browse our complete collection.</span>
                }
            </p>
        </div>
    </div>

    <hr class="mb-5" />

    <div class="row g-4 product-card-grid">
        <div class="col-lg-12">

            <!-- SEARCH + SORT -->
            <div class="row mb-4 align-items-end">
                <div class="col-md-7">
                    <label for="searchTermInput" class="form-label fw-bold text-dark small mb-1 text-uppercase">Search Products:</label>
                    <form asp-controller="Products" asp-action="Index" method="get" class="d-flex input-group">
                        <input type="hidden" name="slug" value="@currentCategorySlug" />
                        <input type="hidden" name="p" value="1" />
                        <input type="hidden" name="sortOrder" value="@sortOrder" />

                        <input type="text" name="searchTerm" id="searchTermInput" class="form-control"
                               placeholder="e.g., monitor, keyboard" value="@currentSearchTerm" />

                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>

                <div class="col-md-5 mt-3 mt-md-0 d-flex justify-content-end align-items-end">
                    <label for="sortDropdown" class="form-label me-2 mb-0 small text-dark fw-bold">Sort By:</label>

                    @* Render options WITHOUT inline C# selected logic; initial value set by JS below *@
                    <select id="sortDropdown" class="form-select form-select-sm w-auto shadow-sm">
                        <option value="default">Default</option>
                        <option value="price-asc">Price: Low to High</option>
                        <option value="price-desc">Price: High to Low</option>
                        <option value="name-asc">Name: A to Z</option>
                    </select>
                </div>
            </div>

            <!-- RESULTS COUNT -->
            <div class="d-flex justify-content-start align-items-center mb-4 p-3 border-bottom bg-light rounded-top shadow-sm">
                <h2 class="h6 text-muted mb-0">
                    Showing @Model.Count() items on page @currentPage of @totalPages
                </h2>
            </div>

            <!-- PRODUCT GRID -->
            <div class="row g-4">
                @if (!Model.Any())
                {
                    <div class="col-12">
                        <div class="alert alert-info text-center border-0 shadow-sm py-5" role="alert">
                            <i class="fas fa-exclamation-triangle fa-3x mb-3 text-warning"></i>
                            <h4 class="alert-heading">No Products Found!</h4>
                            <p>We couldn't find any items matching your current criteria.</p>
                            <a asp-controller="Products" asp-action="Index" class="btn btn-primary mt-3"><i class="fas fa-undo me-2"></i> Browse All Products</a>
                        </div>
                    </div>
                }

                @foreach (var item in Model)
                {
                    <div class="col-xxl-3 col-xl-4 col-lg-4 col-md-4 col-sm-6 d-flex align-items-stretch">
                        <div class="card product-card w-100 rounded-3 shadow-sm">
                            <a asp-action="Product" asp-route-slug="@item.Slug" class="d-block product-image-wrapper">
                                <img src="/media/products/@item.Image" class="card-img-top product-img" alt="@item.Name" loading="lazy" />
                            </a>

                            <div class="card-body d-flex flex-column p-3">
                                @if (item.Category != null)
                                {
                                    <p class="card-text small mb-0">
                                        <a asp-action="Index" asp-route-slug="@item.Category.Slug" class="text-decoration-none product-category-link">
                                            @item.Category.Name
                                        </a>
                                    </p>
                                }

                                <h5 class="card-title product-name mt-1 mb-1">
                                    <a asp-action="Product" asp-route-slug="@item.Slug" class="text-dark text-decoration-none fw-semibold">
                                        @item.Name
                                    </a>
                                </h5>

                                <div class="mb-2 star-rating" aria-hidden="true">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half-alt"></i>
                                    <i class="far fa-star"></i>
                                </div>

                                <p class="card-text price-text text-danger fw-bolder fs-4 mt-auto mb-2">
                                    @item.Price.ToString("C2")
                                </p>

                                <div class="d-grid gap-2">
                                    <a asp-controller="Cart" asp-action="Add" asp-route-id="@item.Id"
                                       class="btn btn-amazon-yellow w-100 text-uppercase fw-bold btn-sm" role="button">
                                        <i class="fas fa-shopping-basket me-2"></i> Add to Cart
                                    </a>

                                    <a asp-controller="Cart" asp-action="Index"
                                       class="btn btn-amazon-outline w-100 text-uppercase fw-bold btn-sm" role="button">
                                        <i class="fas fa-shopping-cart me-2"></i> View Cart
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- PAGINATION -->
            @if (totalPages > 1)
            {
                <div class="d-flex w-100 justify-content-center mt-5">
                    <front-pagination page-count="@totalPages"
                                      page-target="@currentCategorySlug"
                                      page-number="@currentPage"
                                      page-range="@pageRange"
                                      current-search-term="@currentSearchTerm"
                                      sort-order="@sortOrder">
                    </front-pagination>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            // Safely pass server-side vars to JS
            const currentCategorySlug = @Html.Raw(Json.Serialize(currentCategorySlug ?? ""));
            const currentSearchTerm = @Html.Raw(Json.Serialize(currentSearchTerm ?? ""));
            const currentSortOrder = @Html.Raw(Json.Serialize(sortOrder ?? "default"));
            const productsIndexUrl = @Html.Raw(Json.Serialize(Url.Action("Index", "Products")));

            // Build URL helper (keeps clean slug path if provided)
            function buildUrl(basePath, slug, searchTerm, sortOrder, page) {
                let url = basePath;
                let queryParts = [];

                // Attach slug to path (clean URLs)
                if (slug && slug.length > 0) {
                    url = url.replace(/\/$/, '') + "/" + encodeURIComponent(slug);
                }

                if (searchTerm && searchTerm.length > 0) {
                    queryParts.push("searchTerm=" + encodeURIComponent(searchTerm));
                }

                if (sortOrder && sortOrder !== "default") {
                    queryParts.push("sortOrder=" + encodeURIComponent(sortOrder));
                }

                if (page && page > 1) {
                    queryParts.push("p=" + page);
                }

                if (queryParts.length > 0) {
                    url += "?" + queryParts.join("&");
                }

                return url;
            }

            // Apply initial sort order to dropdown (Razor-safe)
            document.addEventListener("DOMContentLoaded", function () {
                var sortDropdown = document.getElementById("sortDropdown");

                if (sortDropdown && currentSortOrder) {
                    sortDropdown.value = currentSortOrder;
                }

                if (sortDropdown) {
                    sortDropdown.addEventListener("change", function () {
                        var selected = sortDropdown.value;

                        // Reset to page 1 when sorting
                        var newUrl = buildUrl(
                            productsIndexUrl,
                            currentCategorySlug,
                            currentSearchTerm,
                            selected,
                            1
                        );

                        window.location.href = newUrl;
                    });
                }
            });
        })();
    </script>

}

@section Styles {
    <style>
        /* AMAZON-LIKE STYLES (Hybrid) */
        .product-card {
            border: 1px solid #d5d9d9 !important;
            border-radius: 12px;
            background: #fff;
            transition: box-shadow .18s ease, transform .18s ease;
            display: flex;
            flex-direction: column;
        }

            .product-card:hover {
                box-shadow: 0 8px 30px rgba(0,0,0,.12);
                transform: translateY(-3px);
                border-color: #007185 !important;
            }

        .product-image-wrapper {
            background: #fff;
            padding: 18px;
            height: 220px;
            border-bottom: 1px solid #eee;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .product-img {
            object-fit: contain;
            max-height: 100%;
            max-width: 100%;
            transition: transform .25s ease;
        }

        .product-card:hover .product-img {
            transform: scale(1.06);
        }

        .product-category-link {
            color: #007185 !important;
            font-size: 0.80rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.4px;
        }

            .product-category-link:hover {
                text-decoration: underline !important;
            }

        .product-name a {
            font-size: 1.05rem;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            line-height: 1.3;
            height: 2.6em;
            color: #0F1111 !important;
            text-decoration: none;
            font-weight: 600;
        }

        .star-rating i {
            color: #ffa41c;
            margin-right: 2px;
        }

        .price-text {
            color: #B12704 !important;
            font-size: 1.5rem !important;
            font-weight: 700 !important;
            font-family: "Amazon Ember", Arial, sans-serif;
        }

        .btn-amazon-yellow {
            background-color: #FFD814 !important;
            border-color: #FCD200 !important;
            color: #0F1111 !important;
            font-weight: 700;
            box-shadow: none;
        }

            .btn-amazon-yellow:hover {
                background-color: #F7CA00 !important;
            }

        .btn-amazon-outline {
            border: 1px solid #007185 !important;
            color: #007185 !important;
            background: transparent;
            font-weight: 700;
        }

            .btn-amazon-outline:hover {
                background-color: #E7F2F5 !important;
            }

        .product-card .card-body {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 1rem;
        }

        /* Make grid tighter on small screens */
        @@media (max-width: 576px) {
            .product-image-wrapper {
                height: 160px;
                padding: 12px;
            }

            .price-text {
                font-size: 1.25rem !important;
            }
        }
    </style>
}
