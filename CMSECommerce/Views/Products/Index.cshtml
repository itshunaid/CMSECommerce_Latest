@model IEnumerable<Product>
@* Assuming Product model has Name, Slug, Image, Price, Category properties. *@

@{
    ViewData["Title"] = "Vepari";
    var categoryName = ViewBag.CategoryName as string;
    
    // Use ViewBag set by controller
    var currentSearchTerm = ViewBag.CurrentSearchTerm as string; 
    
    var currentCategorySlug = ViewBag.CategorySlug as string;
    var currentPage = ViewBag.PageNumber ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var sortOrder = ViewBag.SortOrder as string; 
}

<div class="container py-5">

    @* --- Page Header --- *@
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold text-dark">
                @if (!string.IsNullOrEmpty(categoryName))
                {
                    <i class="fas fa-tags me-3 text-primary"></i>
                    @categoryName
                }
                else
                {
                    <i class="fas fa-store me-2"></i>
                    @ViewData["Title"]
                }
            </h1>
            <p class="text-muted lead small mb-0">
                @if (!string.IsNullOrEmpty(currentSearchTerm))
                {
                    <span><i class="fas fa-search me-1"></i> Showing results for: <strong>"@currentSearchTerm"</strong></span>
                }
                else
                {
                    <span>Browse our complete collection.</span>
                }
            </p>
        </div>
    </div>

    <hr class="mb-5" />

    <div class="row g-4 product-card-grid">
        @* --- Product Listing Column (Main Content) --- *@
        <div class="col-lg-12">

            @* === Search Bar and Sorting === *@
            <div class="row mb-4 align-items-end">
                <div class="col-md-7">
                    <label for="searchTermInput" class="form-label fw-bold text-dark small mb-1 text-uppercase">Search Products:</label>
                    <form asp-controller="Products" asp-action="Index" method="get" class="d-flex input-group">
                        
                        @* Hidden inputs to preserve category, reset page to 1 on search, and preserve sorting *@
                        <input type="hidden" name="slug" value="@currentCategorySlug" />
                        <input type="hidden" name="p" value="1" />
                        <input type="hidden" name="sortOrder" value="@sortOrder" /> 

                        <input type="text" name="searchTerm" id="searchTermInput" class="form-control"
                               placeholder="e.g., monitor, keyboard" value="@currentSearchTerm" />

                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>

                @* Sorting Header *@
                <div class="col-md-5 mt-3 mt-md-0 d-flex justify-content-end align-items-end">
                    <label for="sortDropdown" class="form-label me-2 mb-0 small text-dark fw-bold">Sort By:</label>
                    <select id="sortDropdown" class="form-select form-select-sm w-auto shadow-sm">
                        <option value="default" selected="@(string.IsNullOrEmpty(sortOrder) || sortOrder == "default")">Default</option>
                        <option value="price-asc" selected="@(sortOrder == "price-asc")">Price: Low to High</option>
                        <option value="price-desc" selected="@(sortOrder == "price-desc")">Price: High to Low</option>
                        <option value="name-asc" selected="@(sortOrder == "name-asc")">Name: A to Z</option>
                    </select>
                </div>
            </div>

            @* Results Count (Below the search/sort bar) *@
            <div class="d-flex justify-content-start align-items-center mb-4 p-3 border-bottom bg-light rounded-top shadow-sm">
                <h2 class="h6 text-muted mb-0">
                    Showing @Model.Count() items on page @currentPage of @totalPages
                </h2>
            </div>

            @* Product Grid *@
            <div class="row g-4">
                @if (!Model.Any())
                {
                    @* No Results Found Message *@
                    <div class="col-12">
                        <div class="alert alert-info text-center border-0 shadow-sm py-5" role="alert">
                            <i class="fas fa-exclamation-triangle fa-3x mb-3 text-warning"></i>
                            <h4 class="alert-heading">No Products Found!</h4>
                            <p>We couldn't find any items matching your current criteria.</p>
                            <a asp-controller="Products" asp-action="Index" class="btn btn-primary mt-3"><i class="fas fa-undo me-2"></i> Browse All Products</a>
                        </div>
                    </div>
                }

                @foreach (var item in Model)
                {
                    @* Individual Product Card (Existing Code) *@
                    <div class="col-xxl-3 col-xl-4 col-lg-4 col-md-4 col-sm-6 d-flex align-items-stretch">
                        <div class="card product-card w-100 rounded-3 shadow-sm">
                            <a asp-action="Product" asp-route-slug="@item.Slug" class="d-block product-image-wrapper">
                                <img src="/media/products/@item.Image" class="card-img-top product-img"
                                     alt="@item.Name" loading="lazy" />
                            </a>
                            <div class="card-body d-flex flex-column p-3">
                                @if (item.Category != null)
                                {
                                    <p class="card-text small mb-0">
                                        <a asp-action="Index" asp-route-slug="@item.Category.Slug" class="text-decoration-none text-primary product-category-link">
                                            @item.Category.Name
                                        </a>
                                    </p>
                                }
                                <h5 class="card-title product-name mt-1 mb-1">
                                    <a asp-action="Product" asp-route-slug="@item.Slug" class="text-dark text-decoration-none fw-semibold">
                                        @item.Name
                                    </a>
                                </h5>
                                <div class="mb-2">
                                    <span class="text-warning small">
                                        <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i><i class="far fa-star"></i>
                                    </span>
                                </div>
                                <p class="card-text price-text text-danger fw-bolder fs-4 mt-auto mb-2">
                                    @item.Price.ToString("C2")
                                </p>
                                <a asp-controller="Cart" asp-action="Add" asp-route-id="@item.Id" class="btn btn-primary w-100 btn-sm text-uppercase fw-bold">
                                    <i class="fas fa-shopping-basket me-2"></i> Add to Cart
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @* --- Pagination --- *@
            @if (totalPages > 1)
            {
                <div class="d-flex w-100 justify-content-center mt-5">
                    <front-pagination page-count="@totalPages"
                                      page-target="@currentCategorySlug"
                                      page-number="@currentPage"
                                      page-range="@ViewBag.PageRange"
                                      current-search-term="@currentSearchTerm"
                                      sort-order="@sortOrder">
                    </front-pagination>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            
            // NOTE: This helper function needs to correctly construct the URL for the Tag Helper/Pagination links.
            // The logic here is used for the Sorting dropdown.
            function buildUrl(basePath, slug, searchTerm, sortOrder, page) {
                let url = basePath;
                let queryParams = [];

                // 1. Handle Slug in the path for clean URLs (if present)
                // This logic ensures the route is /Products/Index/CategorySlug
                if (slug) {
                    url = url.replace(/\/$/, '') + "/" + slug;
                }

                // 2. Handle Search Term in query string (if present)
                if (searchTerm && searchTerm !== "") {
                    queryParams.push("searchTerm=" + encodeURIComponent(searchTerm));
                }

                // 3. Handle Sorting in query string (if not default)
                if (sortOrder && sortOrder !== "default") {
                    queryParams.push("sortOrder=" + encodeURIComponent(sortOrder));
                }

                // 4. Handle Pagination
                // When sorting, we should typically reset to page 1, unless specified otherwise.
                // However, the current JS preserves the page number when sorting.
                if (page && page > 1) {
                    queryParams.push("p=" + page);
                } else if (!slug && !searchTerm) {
                    // This specific case prevents p=1 from appearing on the main Index page without other params
                    // But we often need 'p' for correct relative URL generation, so we'll simplify this.
                }


                if (queryParams.length > 0) {
                    url += "?" + queryParams.join("&");
                }

                return url;
            }

            // --- Sorting Logic ---
            $("#sortDropdown").on("change", function () {
                const sortValue = $(this).val();
                const currentCategorySlug = '@Html.Raw(currentCategorySlug)';
                const currentSearchTerm = '@Html.Raw(currentSearchTerm)';
                
                // When sorting, it's often best practice to reset to the first page (p=1)
                const newPage = 1; 

                let newUrl = buildUrl('@Url.Action("Index", "Products")', currentCategorySlug, currentSearchTerm, sortValue, newPage);

                window.location.href = newUrl;
            });

            // --- Initial Sorting State Fix ---
            const currentSort = '@Html.Raw(sortOrder)';
            if (currentSort) {
                $("#sortDropdown").val(currentSort);
            }
        });
    </script>
}

@section Styles {
    <style>
        /* All existing CSS remains here (omitted for brevity) */
        .product-card-grid {
            --product-image-height: 220px;
        }
        .product-card {
            transition: transform 0.2s, box-shadow 0.3s, border-color 0.3s;
            border: 1px solid #dee2e6 !important;
            height: 100%;
            overflow: hidden;
        }
            .product-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.15) !important;
                border-color: var(--bs-primary) !important;
            }
        .product-image-wrapper {
            background-color: #ffffff;
            border-bottom: 1px solid #f0f0f0;
            padding: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            height: var(--product-image-height);
        }
        .product-img {
            max-height: 100%;
            width: auto;
            max-width: 100%;
            object-fit: contain;
            transition: transform 0.3s ease;
        }
        .product-card:hover .product-img {
            transform: scale(1.05);
        }
        .product-category-link {
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 600 !important;
        }
            .product-category-link:hover {
                text-decoration: underline !important;
            }
        .product-name a {
            font-size: 1.15rem;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            line-height: 1.4;
            height: 2.8em;
            text-decoration: none;
            color: #343a40 !important;
        }
        .price-text {
            line-height: 1;
            font-size: 1.8rem !important;
            color: var(--bs-danger) !important;
            font-family: 'Arial', sans-serif;
        }
        .sticky-top {
            top: 20px;
            z-index: 100;
        }
    </style>
}