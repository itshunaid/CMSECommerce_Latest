@using Microsoft.AspNetCore.Html
@using System.Linq
@using System.Globalization
@model Product

@{
    ViewData["Title"] = Model.Name;

    // --- Image Logic ---
    var allImages = new List<string>();
    if (!string.IsNullOrEmpty(Model.Image))
    {
        allImages.Add($"/media/products/{Model.Image}");
    }

    if (Model.GalleryImages?.Any() == true)
    {
        foreach (var img in Model.GalleryImages)
        {
            allImages.Add($"/media/gallery/{Model.Id}/{img}");
        }
    }

    var defaultImagePath = "/media/default-product.png";
    if (!allImages.Any())
        allImages.Add(defaultImagePath);

    // --- Logic Variables ---
    bool isInStock = Model.StockQuantity > 0;
    double averageRating = Model.AverageRating;
    int ratingCount = Model.RatingCount;
    bool userIsAuthenticated = User.Identity.IsAuthenticated;

    // Fix: Ensure reviews are handled as a List to avoid iteration errors
    var reviewsToDisplay = Model.Reviews?
        .OrderByDescending(r => r.DateCreated)
        .ToList() ?? new List<Review>();

    // Helper function to render star icons
    Func<double, IHtmlContent> RenderStars = (rating) =>
    {
        var content = new HtmlContentBuilder();
        for (int i = 1; i <= 5; i++)
        {
            if (rating >= i)
            {
                content.AppendHtml("<i class='fas fa-star'></i>");
            }
            else if (rating > i - 1 && rating < i)
            {
                content.AppendHtml("<i class='fas fa-star-half-alt'></i>");
            }
            else
            {
                content.AppendHtml("<i class='far fa-star'></i>");
            }
        }
        return content;
    };
}

<div class="container py-4">

    @* --- Breadcrumbs --- *@
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item small">
                <a asp-controller="Products" asp-action="Index" class="text-amazon-link text-decoration-none">All Products</a>
            </li>
            @if (Model.Category != null)
            {
                <li class="breadcrumb-item small">
                    <a asp-controller="Products" asp-action="Index" asp-route-slug="@Model.Category.Slug" class="text-amazon-link text-decoration-none">@Model.Category.Name</a>
                </li>
            }
            <li class="breadcrumb-item active small text-muted" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        @* --- Left: Image Gallery --- *@
        <div class="col-lg-5 mb-4 product-image-section">
            <div class="main-image-container border rounded p-3 shadow-sm bg-white text-center">
                <img id="mainImage"
                     src="@allImages.First()"
                     class="img-fluid product-main-img"
                     alt="@Model.Name" />
            </div>

            @if (allImages.Count > 1)
            {
                <div class="row g-2 mt-3 thumbnail-gallery">
                    @foreach (var img in allImages)
                    {
                        <div class="col-3 col-sm-2 col-md-3 col-lg-2">
                            <img src="@img"
                                 class="img-fluid rounded border thumb-img"
                                 data-img="@img"
                                 alt="Product thumbnail" />
                        </div>
                    }
                </div>
            }
        </div>

        @* --- Center: Product Details --- *@
        <div class="col-lg-4 mb-4 product-details-section">
            <h1 class="h3 fw-bold mb-1 product-title">@Model.Name</h1>

            @if (Model.Category != null)
            {
                <div class="mb-2 small">
                    Category: <a asp-controller="Products" asp-action="Index" asp-route-slug="@Model.Category.Slug" class="text-amazon-link text-decoration-none">@Model.Category.Name</a>
                </div>
            }

            <hr class="my-2" />

            <div class="star-rating mb-2">
                @RenderStars(averageRating)
                <a href="#reviews-section" class="text-amazon-link small ms-2 review-link">(@ratingCount ratings)</a>
            </div>

            <div class="price-box my-3 p-3 rounded bg-light-amazon">
                <span class="price-label text-danger fw-bold me-2">Price:</span>
                <span class="price-value fw-bolder">@Model.Price.ToString("C", new CultureInfo("en-IN"))</span>
            </div>

            <hr class="my-3" />

            @* --- Vendor Details (FIXED: Null-Safe and Professional) --- *@
            @if (ViewBag.UserProfile != null)
            {
                <div class="vendor-card mb-4 p-3 border rounded shadow-sm bg-white">
                    <h4 class="h6 fw-bold text-dark mb-2"><i class="fas fa-store-alt me-2"></i>Sold by:</h4>
                    <div class="small">
                        <p class="mb-1 fw-bold text-amazon-teal">@ViewBag.UserProfile.FirstName @ViewBag.UserProfile.LastName</p>

                        @* Safely check the User navigation property for Address/Phone *@
                        @if (ViewBag.UserProfile.User != null)
                        {
                            <p class="mb-1 text-muted"><i class="fas fa-map-marker-alt me-2"></i>@ViewBag.UserProfile.User.HomeAddress</p>
                            <p class="mb-1 text-muted"><i class="fas fa-phone-alt me-2"></i>@ViewBag.UserProfile.User.HomePhoneNumber</p>
                        }

                        <div class="vendor-socials mt-2 pt-2 border-top d-flex gap-3">
                            @if (!string.IsNullOrEmpty(ViewBag.UserProfile.WhatsAppNumber))
                            {
                                <a href="https://wa.me/@ViewBag.UserProfile.WhatsAppNumber" target="_blank" class="text-success" title="Contact on WhatsApp"><i class="fab fa-whatsapp fa-lg"></i></a>
                            }
                            @if (!string.IsNullOrEmpty(ViewBag.UserProfile.FacebookUrl))
                            {
                                <a href="@ViewBag.UserProfile.FacebookUrl" target="_blank" class="text-primary" title="Facebook Profile"><i class="fab fa-facebook fa-lg"></i></a>
                            }
                            @if (!string.IsNullOrEmpty(ViewBag.UserProfile.InstagramUrl))
                            {
                                <a href="@ViewBag.UserProfile.InstagramUrl" target="_blank" style="color: #E4405F;" title="Instagram Profile"><i class="fab fa-instagram fa-lg"></i></a>
                            }
                        </div>
                    </div>
                </div>
            }

            <div class="description-highlights">
                <h4 class="h6 fw-bold text-dark">About this item:</h4>
                <div class="small text-muted">
                    @Html.Raw(Model.Description.Length > 300 ? Model.Description.Substring(0, 300) + "..." : Model.Description)
                </div>
            </div>
        </div>

        @* --- Right: Buy Box --- *@
        <div class="col-lg-3">
            <div class="buy-box border rounded p-3 bg-white shadow-sm @(isInStock ? "in-stock-box" : "out-of-stock-box")">

                <h4 class="price-value-box fw-bolder mb-3">@Model.Price.ToString("C", new CultureInfo("en-IN"))</h4>

                <p class="stock-info fw-bold mb-3">
                    @if (isInStock)
                    {
                        <span class="text-success">In Stock.</span>
                        <span class="text-muted small d-block">Ships from Weypaari.</span>
                    }
                    else
                    {
                        <span class="text-danger">Temporarily out of stock.</span>
                    }
                </p>

                <form asp-controller="Cart" asp-action="Add" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />

                    <div class="d-flex align-items-center mb-3">
                        <label class="fw-bold me-3 small text-muted">Qty:</label>
                        <select name="quantity" class="form-select form-select-sm w-auto" style="min-width: 80px;" @(isInStock ? "" : "disabled")>
                            @for (int i = 1; i <= Math.Min(10, Model.StockQuantity); i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>

                    @if (isInStock)
                    {
                        <button type="submit" class="btn btn-amazon-yellow btn-lg w-100 mb-2">
                            <i class="fas fa-cart-plus me-1"></i> Add to Cart
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-danger btn-lg w-100" disabled>Out of Stock</button>
                    }
                </form>

                <ul class="list-unstyled small text-muted mt-3 pt-3 border-top">
                    <li><i class="fas fa-truck me-2 text-muted"></i> Eligible for Free Shipping</li>
                    <li><i class="fas fa-lock me-2 text-muted"></i> Secure transaction</li>
                    <li><i class="fas fa-box-open me-2 text-muted"></i> 7-Day Return Policy</li>
                </ul>
            </div>
        </div>
    </div>

    <hr class="my-5" />

    <div class="row">
        <div class="col-lg-9">
            <h3 class="fw-bold mb-3">Product Description</h3>
            <div class="text-dark product-full-description">
                @Html.Raw(Model.Description)
            </div>
        </div>
    </div>

    <hr class="my-5" id="reviews-section" />

    @* --- Reviews Section --- *@
    <div class="row">
        <div class="col-lg-9">
            <h3 class="fw-bold mb-4">Customer Reviews</h3>

            @if (userIsAuthenticated)
            {
                <div class="add-review-section mb-5 p-4 border rounded bg-light-amazon">
                    <h4 class="h5 fw-bold mb-3">Write a Customer Review</h4>
                    <form asp-controller="Reviews" asp-action="AddReview" method="post">
                        <input type="hidden" name="ProductId" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label fw-bold small">Overall Rating:</label>
                            <div id="rating-stars" class="rating-input d-flex">
                                @for (int i = 5; i >= 1; i--)
                                {
                                    <input type="radio" id="star@(i)" name="Rating" value="@i" required />
                                    <label for="star@(i)" title="@(i) stars" class="fas fa-star"></label>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="title" class="form-label fw-bold small">Review Headline:</label>
                            <input type="text" class="form-control" id="title" name="Title" maxlength="100" placeholder="Summarize your experience" required />
                        </div>

                        <div class="mb-3">
                            <label for="comment" class="form-label fw-bold small">Detailed Review:</label>
                            <textarea class="form-control" id="comment" name="Comment" rows="3" maxlength="1000" placeholder="What did you like or dislike?" required></textarea>
                        </div>

                        <button type="submit" class="btn btn-amazon-yellow mt-2">Submit Review</button>
                    </form>
                </div>
            }
            else
            {
                <div class="alert alert-info py-2" role="alert">
                    Please <a asp-controller="Account" asp-action="Login" asp-route-ReturnUrl="@Context.Request.Path" class="alert-link">log in</a> to write a review.
                </div>
            }

            <h4 class="h5 fw-bold mb-3">All Reviews (@reviewsToDisplay.Count)</h4>

            <div class="review-list">
                @if (reviewsToDisplay.Any())
                {
                    @foreach (var review in reviewsToDisplay)
                    {
                        <div class="review-item border-bottom py-3 mb-2">
                            <div class="d-flex align-items-center mb-1">
                                <div class="star-rating me-2 small">
                                    @RenderStars((double)review.Rating)
                                </div>
                                <span class="fw-bold">@review.Title</span>
                            </div>
                            <p class="small text-muted mb-2">By <strong>@review.UserName</strong> on @review.DateCreated.ToString("d MMMM yyyy")</p>
                            <p class="mb-0">@review.Comment</p>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No reviews yet. Be the first to rate this product!</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.thumb-img').forEach(img => {
            img.addEventListener('click', function () {
                document.getElementById('mainImage').src = this.dataset.img;
                document.querySelectorAll('.thumb-img').forEach(t => t.classList.remove('active-thumb'));
                this.classList.add('active-thumb');
            });
        });

        document.addEventListener('DOMContentLoaded', () => {
            const firstThumb = document.querySelector('.thumb-img');
            if(firstThumb) firstThumb.classList.add('active-thumb');

            const reviewLink = document.querySelector('.review-link');
            if (reviewLink) {
                reviewLink.addEventListener('click', function(e) {
                    e.preventDefault();
                    document.getElementById('reviews-section').scrollIntoView({ behavior: 'smooth' });
                });
            }
        });
    </script>
}

@section Styles {
    <style>
        :root {
            --amazon-price-red: #B12704;
            --amazon-yellow-action: #FFD814;
            --amazon-yellow-action-hover: #F7CA00;
            --amazon-link-teal: #007185;
            --amazon-star-gold: #ffa41c;
            --amazon-background-light: #f7f7ff;
        }

        .text-amazon-link, .text-amazon-teal {
            color: var(--amazon-link-teal) !important;
        }

        .bg-light-amazon {
            background-color: var(--amazon-background-light) !important;
        }

        .product-main-img {
            max-height: 480px;
            object-fit: contain;
            width: 100%;
        }

        .thumb-img {
            height: 60px;
            object-fit: contain;
            cursor: pointer;
            border: 1px solid #ddd !important;
            padding: 2px;
        }

        .active-thumb {
            border: 2px solid var(--amazon-link-teal) !important;
            box-shadow: 0 0 0 2px #fff;
        }

        .star-rating i {
            color: var(--amazon-star-gold);
        }

        .price-value-box {
            color: var(--amazon-price-red) !important;
            font-size: 1.7rem !important;
        }

        /* Amazon Buttons */
        .btn-amazon-yellow {
            background-color: var(--amazon-yellow-action) !important;
            border-color: #FCD200 !important;
            font-weight: 700;
            color: #111;
        }

            .btn-amazon-yellow:hover {
                background-color: var(--amazon-yellow-action-hover) !important;
            }

        /* Rating Stars Input */
        .rating-input {
            direction: rtl;
        }

            .rating-input > input {
                display: none;
            }

            .rating-input > label {
                color: #ddd;
                font-size: 1.5rem;
                cursor: pointer;
                transition: color 0.1s;
            }

                .rating-input > input:checked ~ label,
                .rating-input > label:hover,
                .rating-input > label:hover ~ label {
                    color: var(--amazon-star-gold);
                }

        @@media (min-width: 992px) {
            .buy-box {
                position: sticky;
                top: 20px;
            }
        }
    </style>
}