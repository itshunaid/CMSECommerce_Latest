@using Microsoft.AspNetCore.Html
@using System.Linq
@using System.Globalization
@model Product

@{
    ViewData["Title"] = Model.Name;

    // --- Image Logic ---
    var allImages = new List<string>();
    if (!string.IsNullOrEmpty(Model.Image))
    {
        allImages.Add($"/media/products/{Model.Image}");
    }

    if (Model.GalleryImages?.Any() == true)
    {
        foreach (var img in Model.GalleryImages)
        {
            allImages.Add($"/media/gallery/{Model.Id}/{img}");
        }
    }

    if (!allImages.Any())
        allImages.Add("/media/default-product.png");

    // --- Logic Variables ---
    bool isInStock = Model.StockQuantity > 0;
    var reviewsToDisplay = Model.Reviews?.OrderByDescending(r => r.DateCreated).ToList() ?? new List<Review>();

    // Helper function to render star icons
    Func<double, IHtmlContent> RenderStars = (rating) =>
    {
        var content = new HtmlContentBuilder();
        for (int i = 1; i <= 5; i++)
        {
            if (rating >= i) content.AppendHtml("<i class='fas fa-star'></i>");
            else if (rating > i - 1 && rating < i) content.AppendHtml("<i class='fas fa-star-half-alt'></i>");
            else content.AppendHtml("<i class='far fa-star'></i>");
        }
        return content;
    };
}

<div class="container py-3">

    @* --- Breadcrumbs (Smaller Text) --- *@
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb" style="font-size: 0.75rem;">
            <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index" class="text-amazon-link text-decoration-none">All Products</a></li>
            @if (Model.Category != null)
            {
                <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index" asp-route-slug="@Model.Category.Slug" class="text-amazon-link text-decoration-none">@Model.Category.Name</a></li>
            }
            <li class="breadcrumb-item active text-muted" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row g-4">
        @* --- Left: Image Gallery --- *@
        <div class="col-lg-5 col-md-6">
            <div class="main-image-container border rounded p-3 bg-white text-center shadow-sm">
                <img id="mainImage" src="@allImages.First()" class="img-fluid product-main-img" alt="@Model.Name" />
            </div>

            @if (allImages.Count > 1)
            {
                <div class="d-flex flex-wrap gap-2 mt-2 justify-content-center">
                    @foreach (var img in allImages)
                    {
                        <img src="@img" class="thumb-img rounded border" data-img="@img" alt="thumbnail" />
                    }
                </div>
            }
        </div>

        @* --- Center: Product Info --- *@
        <div class="col-lg-4 col-md-6">
            <h1 class="h4 fw-bold mb-1">@Model.Name</h1>

            <div class="d-flex align-items-center mb-2" style="font-size: 0.8rem;">
                <span class="star-rating me-2">@RenderStars(Model.AverageRating)</span>
                <a href="#reviews-section" class="text-amazon-link text-decoration-none">(@Model.RatingCount ratings)</a>
            </div>

            <hr class="my-2 opacity-50" />

            <div class="price-display mb-3">
                <span class="text-danger h3 fw-bold mb-0">@Model.Price.ToString("C", new CultureInfo("en-IN"))</span>
                <div class="text-muted" style="font-size: 0.75rem;">Inclusive of all taxes</div>
            </div>

            @* Vendor Card (Clean Dashboard Style) *@
            @if (ViewBag.UserProfile != null)
            {
                <div class="vendor-box p-2 border rounded bg-light mb-3" style="font-size: 0.8rem;">
                    <div class="text-muted fw-bold mb-1" style="font-size: 0.7rem; text-transform: uppercase;">Sold By</div>
                    <div class="fw-bold text-amazon-link">@ViewBag.UserProfile.FirstName @ViewBag.UserProfile.LastName</div>

                    @if (ViewBag.UserProfile.User != null)
                    {
                        <div class="text-muted mt-1"><i class="fas fa-map-marker-alt me-1"></i> @ViewBag.UserProfile.User.HomeAddress</div>
                    }

                    <div class="d-flex gap-3 mt-2 pt-2 border-top">
                        @if (!string.IsNullOrEmpty(ViewBag.UserProfile.WhatsAppNumber))
                        {
                            <a href="https://wa.me/@ViewBag.UserProfile.WhatsAppNumber" target="_blank" class="text-success text-decoration-none"><i class="fab fa-whatsapp"></i> Chat</a>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.UserProfile.FacebookUrl))
                        {
                            <a href="@ViewBag.UserProfile.FacebookUrl" target="_blank" class="text-primary text-decoration-none"><i class="fab fa-facebook"></i> Profile</a>
                        }
                    </div>
                </div>
            }

            <div class="about-item">
                <h6 class="fw-bold mb-1" style="font-size: 0.85rem;">About this item</h6>
                <div class="text-muted" style="font-size: 0.8rem; line-height: 1.5;">
                    @Html.Raw(Model.Description.Length > 300 ? Model.Description.Substring(0, 300) + "..." : Model.Description)
                </div>
            </div>
        </div>

        @* --- Right: Buy Box --- *@
        <div class="col-lg-3">
            <div class="buy-box border rounded p-3 bg-white shadow-sm sticky-top" style="top: 1rem;">
                <div class="h4 fw-bold text-danger mb-3">@Model.Price.ToString("C", new CultureInfo("en-IN"))</div>

                <div class="mb-3">
                    @if (isInStock)
                    {
                        <span class="text-success fw-bold d-block">In Stock</span>
                        <span class="text-muted" style="font-size: 0.75rem;">Ships from our local warehouse</span>
                    }
                    else
                    {
                        <span class="text-danger fw-bold">Out of Stock</span>
                    }
                </div>

                <form asp-controller="Cart" asp-action="Add" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />

                    <div class="d-flex align-items-center mb-3">
                        <label class="me-2 text-muted fw-bold" style="font-size: 0.75rem;">Quantity:</label>
                        <select name="quantity" class="form-select form-select-sm w-auto" @(isInStock ? "" : "disabled")>
                            @for (int i = 1; i <= Math.Min(10, Model.StockQuantity); i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>

                    <button type="submit" class="btn btn-amazon-yellow w-100 mb-2 py-2" @(isInStock ? "" : "disabled")>
                        <i class="fas fa-cart-plus me-1"></i> Add to Cart
                    </button>
                </form>

                <div class="border-top mt-3 pt-3" style="font-size: 0.75rem;">
                    <div class="d-flex align-items-center mb-2 text-muted">
                        <i class="fas fa-lock me-2"></i> Secure transaction
                    </div>
                    <div class="d-flex align-items-center text-muted">
                        <i class="fas fa-truck me-2"></i> Eligible for FREE Shipping
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* --- Full Description --- *@
    <div class="row mt-5">
        <div class="col-lg-9">
            <h5 class="fw-bold border-bottom pb-2">Product Description</h5>
            <div class="text-dark py-2" style="font-size: 0.9rem;">
                @Html.Raw(Model.Description)
            </div>
        </div>
    </div>

    @* --- Reviews --- *@
    <div class="row mt-5" id="reviews-section">
        <div class="col-lg-9">
            <h5 class="fw-bold mb-4">Customer Reviews</h5>

            @if (User.Identity.IsAuthenticated)
            {
                <div class="p-3 border rounded bg-light mb-4 shadow-sm">
                    <h6 class="fw-bold mb-3" style="font-size: 0.85rem;">Rate this product</h6>
                    <form asp-controller="Reviews" asp-action="AddReview" method="post">
                        <input type="hidden" name="ProductId" value="@Model.Id" />

                        <div class="mb-3">
                            <div class="rating-input d-flex">
                                @for (int i = 5; i >= 1; i--)
                                {
                                    <input type="radio" id="star@(i)" name="Rating" value="@i" required />
                                    <label for="star@(i)" class="fas fa-star"></label>
                                }
                            </div>
                        </div>

                        <div class="mb-2">
                            <input type="text" class="form-control form-control-sm" name="Title" placeholder="Headline" required />
                        </div>
                        <div class="mb-3">
                            <textarea class="form-control form-control-sm" name="Comment" rows="2" placeholder="Write your feedback..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-dark btn-sm px-4">Post</button>
                    </form>
                </div>
            }

            <div class="review-list">
                @if (reviewsToDisplay.Any())
                {
                    @foreach (var review in reviewsToDisplay)
                    {
                        <div class="border-bottom py-3">
                            <div class="d-flex align-items-center mb-1">
                                <span class="star-rating text-xs me-2" style="font-size: 0.7rem;">@RenderStars((double)review.Rating)</span>
                                <span class="fw-bold text-sm" style="font-size: 0.85rem;">@review.Title</span>
                            </div>
                            <div class="text-muted mb-2" style="font-size: 0.75rem;">By @review.UserName &bull; @review.DateCreated.ToString("MMM dd, yyyy")</div>
                            <p class="mb-0 text-sm" style="font-size: 0.85rem;">@review.Comment</p>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted italic small">No reviews yet.</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.thumb-img').forEach(img => {
            img.addEventListener('click', function () {
                document.getElementById('mainImage').src = this.dataset.img;
                document.querySelectorAll('.thumb-img').forEach(t => t.classList.remove('active-thumb'));
                this.classList.add('active-thumb');
            });
        });

        document.addEventListener('DOMContentLoaded', () => {
            const firstThumb = document.querySelector('.thumb-img');
            if(firstThumb) firstThumb.classList.add('active-thumb');
        });
    </script>
}

@section Styles {
    <style>
        :root {
            --amazon-yellow: #FFD814;
            --amazon-yellow-hover: #F7CA00;
            --amazon-teal: #007185;
            --amazon-red: #B12704;
            --star-gold: #ffa41c;
        }

        .text-amazon-link {
            color: var(--amazon-teal) !important;
        }

        .product-main-img {
            max-height: 400px;
            object-fit: contain;
            width: 100%;
        }

        .thumb-img {
            width: 50px;
            height: 50px;
            object-fit: contain;
            cursor: pointer;
            padding: 2px;
            transition: all 0.2s;
        }

        .active-thumb {
            border: 2px solid var(--amazon-teal) !important;
        }

        .star-rating i {
            color: var(--star-gold);
        }

        .btn-amazon-yellow {
            background-color: var(--amazon-yellow) !important;
            border-color: #FCD200 !important;
            font-weight: 700;
            color: #111;
            font-size: 0.85rem;
        }

            .btn-amazon-yellow:hover {
                background-color: var(--amazon-yellow-hover) !important;
            }

        .rating-input {
            direction: rtl;
            gap: 4px;
        }

            .rating-input > input {
                display: none;
            }

            .rating-input > label {
                color: #ddd;
                font-size: 1.2rem;
                cursor: pointer;
            }

                .rating-input > input:checked ~ label,
                .rating-input > label:hover,
                .rating-input > label:hover ~ label {
                    color: var(--star-gold);
                }

        @@media (min-width: 992px) {
            .sticky-top {
                z-index: 10;
            }
        }
    </style>
}