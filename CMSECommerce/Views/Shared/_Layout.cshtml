<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WEypaari</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMSECommerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    @RenderSection("Styles", required: false)
    <style>
        :root {
            --amazon-blue: #131921;
            --amazon-dark-blue: #232f3e;
            --amazon-orange: #febd69;
            --amazon-btn-yellow: #ffd814;
            --amazon-btn-yellow-hover: #f7ca00;
            --amazon-teal: #007185;
            --amazon-link-hover: #c45500;
        }

        html, body {
            font-size: 14px;
            background-color: #eaeded;
            color: #0f1111;
            font-family: "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            overflow-x: hidden;
        }

        /* --- Global Cart Styling --- */
        .nav-cart-link {
            display: flex;
            align-items: flex-end;
            padding: 5px 8px;
            border: 1px solid transparent;
            text-decoration: none;
            color: white !important;
        }

            .nav-cart-link:hover {
                border: 1px solid white;
                border-radius: 2px;
            }

        .cart-icon-container {
            position: relative;
            display: flex;
            align-items: center;
        }

        .cart-count-badge {
            position: absolute;
            top: -5px;
            left: 50%;
            transform: translateX(-50%);
            color: var(--amazon-orange);
            font-weight: 700;
            font-size: 1rem;
        }

        .cart-text {
            font-size: 0.85rem;
            font-weight: 700;
            margin-left: 2px;
            margin-bottom: 2px;
        }

        /* --- Original Styles preserved below --- */
        .brand-top-header {
            background: #000;
            padding: 8px 0;
            border-bottom: 2px solid var(--amazon-btn-yellow);
            overflow: hidden;
            display: flex;
        }

        .marquee-content {
            display: flex;
            align-items: center;
            animation: marquee-infinite 40s linear infinite;
        }

        .marquee-item {
            white-space: nowrap;
            color: #ffffff;
            font-size: 0.9rem;
            font-weight: 600;
            padding: 0 50px;
            text-transform: uppercase;
        }

            .marquee-item span {
                color: var(--amazon-btn-yellow);
            }

        @@keyframes marquee-infinite {
            0%

        {
            transform: translateX(0);
        }

        100% {
            transform: translateX(-50%);
        }

        }

        .bg-amazon-main {
            background-color: var(--amazon-blue) !important;
            padding: 5px 0;
        }

        .navbar-brand {
            padding: 2px 8px;
            border: 1px solid transparent;
            display: flex;
            align-items: center;
            line-height: 1;
        }

            .navbar-brand:hover {
                border: 1px solid white;
                border-radius: 2px;
            }

        .brand-tag-line {
            font-size: 0.7rem;
            color: #ccc;
            margin-left: 10px;
            font-weight: 400;
            letter-spacing: 0.3px;
            border-left: 1px solid #555;
            padding-left: 10px;
            white-space: nowrap;
        }

        .amazon-search-container {
            flex-grow: 1;
            margin: 0 15px;
            max-width: 800px;
        }

        .amazon-search-bar {
            background: #fff;
            border-radius: 4px;
            overflow: hidden;
            display: flex;
            width: 100%;
            border: 2px solid transparent;
        }

            .amazon-search-bar:focus-within {
                border: 2px solid #ff9900;
                box-shadow: 0 0 5px rgba(255, 153, 0, 0.5);
            }

        .search-category-pill {
            background: #f3f3f3;
            border-right: 1px solid #ccc;
            padding: 0 12px;
            display: flex;
            align-items: center;
            color: #555;
            font-size: 0.8rem;
            cursor: pointer;
        }

        .amazon-search-bar input {
            border: none;
            padding: 8px 12px;
            flex-grow: 1;
            outline: none;
        }

        .btn-amazon-search {
            background-color: var(--amazon-orange);
            border: none;
            padding: 0 15px;
            color: #333;
            font-size: 1.1rem;
        }

            .btn-amazon-search:hover {
                background-color: #f3a847;
            }

        .sub-nav-bar {
            background-color: var(--amazon-dark-blue) !important;
            padding: 0 10px;
        }

            .sub-nav-bar .nav-link {
                color: #fff !important;
                font-weight: 500;
                font-size: 0.85rem;
                border: 1px solid transparent;
                padding: 5px 10px !important;
            }

                .sub-nav-bar .nav-link:hover {
                    border: 1px solid white;
                    border-radius: 2px;
                }

        .nav-tool-link {
            border: 1px solid transparent;
            padding: 2px 8px;
            color: white !important;
            text-decoration: none;
            display: block;
        }

            .nav-tool-link:hover {
                border: 1px solid white;
                border-radius: 2px;
            }

        .nav-line-1 {
            font-size: 0.75rem;
            color: #ccc;
            display: block;
        }

        .nav-line-2 {
            font-size: 0.9rem;
            font-weight: 700;
            display: block;
        }

        .main-content-container {
            max-width: 1500px;
            margin: auto;
            min-height: 80vh;
        }

        .category-sidebar-header {
            font-weight: 700;
            font-size: 0.9rem;
            padding: 10px 0;
            color: #333;
        }

        .back-to-top {
            background: #37475a;
            color: white;
            text-align: center;
            padding: 15px;
            cursor: pointer;
            text-decoration: none;
            display: block;
            font-size: 0.85rem;
        }

            .back-to-top:hover {
                background: #485769;
                color: white;
            }

        footer.amazon-footer {
            background-color: var(--amazon-blue) !important;
            color: #ddd !important;
            padding-bottom: 40px;
        }

        .footer-link {
            color: #ddd;
            text-decoration: none;
            font-size: 0.8rem;
        }

            .footer-link:hover {
                text-decoration: underline;
                color: #fff;
            }
    </style>
</head>
<body>
    <div class="brand-top-header">
        <div class="marquee-content">
            @for (int i = 0; i < 5; i++)
            {
                <div class="marquee-item"><i class="fas fa-fire me-2"></i> Women <span>Entrepreneur</span> Home Business</div>
                <div class="marquee-item"><i class="fas fa-rocket me-2"></i> Women <span>Entrepreneur</span> Home Business</div>
                <div class="marquee-item"><i class="fas fa-bolt me-2"></i> Women <span>Entrepreneur</span> Home Business</div>
            }
        </div>
    </div>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-amazon-main shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-box text-warning me-2"></i>
                        <span style="font-weight: 300; font-size: 1.4rem;">WE</span>
                        <span class="text-warning" style="font-size: 1.4rem;">y</span>paari
                        <span class="brand-tag-line d-none d-xl-inline">Women Entrepreneur Home Business</span>
                    </div>
                </a>

                <div class="amazon-search-container d-none d-md-block">
                    <form asp-controller="Products" asp-action="Index" method="get" class="amazon-search-bar">
                        <input type="hidden" name="slug" value="@(ViewData["CurrentCategorySlug"] ?? "")" />
                        <input type="hidden" name="p" value="1" />
                        <div class="search-category-pill d-none d-lg-flex">
                            All <i class="fas fa-caret-down ms-2"></i>
                        </div>
                        <input type="text" name="searchTerm" placeholder="Search WEypaari" value="@(ViewData["CurrentSearchTerm"] ?? "")" />
                        <button type="submit" class="btn-amazon-search">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>

                <div class="d-flex align-items-center">
                    <div class="me-2">
                        <partial name="_IdentityLinksPartial" />
                    </div>

                    @* --- UPDATED DYNAMIC CART ICON --- *@
                    <a class="nav-cart-link" asp-controller="Cart" asp-action="Index">
                        <div class="cart-icon-container">
                            <span class="cart-count-badge">@(ViewBag.CartCount ?? 0)</span>
                            <i class="fas fa-shopping-cart fs-3"></i>
                        </div>
                        <div class="cart-text d-none d-lg-block">
                            Cart
                            @if (ViewBag.CartTotal > 0)
                            {
                                <div style="font-size: 0.7rem; color: var(--amazon-orange);">@ViewBag.CartTotal.ToString("C")</div>
                            }
                        </div>
                    </a>
                </div>

                <button class="navbar-toggler ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#subNavBarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>

        <nav class="navbar navbar-expand-lg navbar-dark sub-nav-bar">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="subNavBarContent">
                    <ul class="navbar-nav me-auto mb-0 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-controller="Products" asp-action="Index">
                                <i class="fas fa-bars me-2"></i> All
                            </a>
                        </li>

                        <vc:menu />
                        <li class="nav-item"><a class="nav-link" asp-controller="Subscription" asp-action="Index">Seller Plans</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Subscription" asp-action="Status">My Status</a></li>

                        @if (User.Identity.IsAuthenticated && (User.IsInRole("Subscriber") || User.IsInRole("Admin")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" asp-controller="Products" asp-action="StoreFront">
                                    <i class="fas fa-store me-1"></i> My Store
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("Subscriber") || User.IsInRole("Seller"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="UserList">
                                    <i class="fas fa-users me-1"></i> Directory
                                </a>
                            </li>
                        }
                    </ul>

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="ms-auto">
                            <a class="nav-link nav-tool-link" asp-controller="Subscription" asp-action="AdminDashboard" style="border: 1px solid #febd69;">
                                <span class="nav-line-1 text-warning">System</span>
                                <span class="nav-line-2">Admin Panel</span>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid main-content-container py-4">
        <main role="main">
            <partial name="_NotificationsPartial" />

            @if (ViewData["HideLayoutSidebar"] != null && (bool)ViewData["HideLayoutSidebar"])
            {
                <div class="row">
                    <div class="col-12">
                        @RenderBody()
                    </div>
                </div>
            }
            else
            {
                <div class="row g-4">
                    <div id="categorySidebar" class="col-lg-2 d-none d-lg-block">
                        <div class="category-sidebar-header">Departments</div>
                        <div class="category-sidebar-card">
                            <div class="list-group list-group-flush shadow-sm bg-white rounded p-2">
                                <vc:categories />
                            </div>
                        </div>
                    </div>

                    <div id="mainContent" class="col-12 col-lg-10">
                        @RenderBody()
                    </div>
                </div>
            }
        </main>
    </div>

    <a href="#" class="back-to-top mt-5" onclick="window.scrollTo({top: 0, behavior: 'smooth'}); return false;">Back to top</a>

    <footer class="amazon-footer py-5">
        <div class="container">
            <div class="row text-center text-md-start">
                <div class="col-md-4 mb-4">
                    <h6 class="fw-bold text-white mb-3">Get to Know Us</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Products" asp-action="Policies" class="footer-link">Policies & Disclaimer</a></li>
                        <li><a asp-controller="Products" asp-action="Privacy" class="footer-link">Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4 text-center">
                    <div class="d-flex align-items-center justify-content-center mb-3">
                        <span class="fw-light text-white" style="font-size: 1.2rem;">WE</span><span class="text-warning" style="font-size: 1.2rem;">y</span>paari
                    </div>
                </div>
                <div class="col-md-4 mb-4 text-md-end">
                    <h6 class="fw-bold text-white mb-3">Community</h6>
                    <p class="small text-white-50">Empowering Women Entrepreneurs in Home Business.</p>
                </div>
            </div>
            <hr class="border-secondary">
            <div class="text-center pt-3">
                <p class="mb-1 small text-white-50">&copy; @DateTime.Now.Year Weypaari CMSECommerce</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function() {
            // Initialize collapsible categories
            $('.category-toggle').on('click', function(e) {
                e.preventDefault();
                var $this = $(this);
                var targetId = $this.attr('href');
                var $target = $(targetId);

                $target.collapse('toggle');
            });

            // Auto-expand if current category is in a collapsed section
            var currentSlug = '@ViewBag.CategorySlug';
            if (currentSlug) {
                $('.category-list-item').each(function() {
                    var $item = $(this);
                    if ($item.find('a[href*="slug=' + currentSlug + '"]').length > 0) {
                        // Find parent toggle and expand
                        $item.parents('.collapse').each(function() {
                            var collapseId = '#' + $(this).attr('id');
                            $(collapseId).collapse('show');
                        });
                    }
                });
            }
        });
    </script>
</body>
</html>