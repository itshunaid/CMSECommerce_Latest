<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMSEcommerce</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMSECommerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    @RenderSection("Styles", required: false)
    <style>
        /* Navbar Links */
        .activeul a {
            color: #fff;
        }

        .admin-category-link a {
            color: #ffc107 !important;
            font-weight: bold;
        }

        /* Footer */
        footer {
            font-size: 0.9rem;
        }

        /* Sidebar Categories */
        .category-list-item .nav-link {
            color: #000 !important;
            padding: 0.5rem 1rem;
        }

        /* Mobile Categories */
        .mobile-categories-section {
            border-top: 1px solid rgba(255,255,255,0.1);
            padding-top: 10px;
            margin-top: 10px;
        }

            .mobile-categories-section .category-header {
                color: #ffc107;
                font-weight: bold;
                display: block;
                padding: 8px 15px 5px;
            }
    </style>
</head>
<body>
    <!-- HEADER: NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-lg mb-4">
            <div class="container">
                <a class="navbar-brand fs-3 fw-bolder text-warning" href="/">
                    <i class="fas fa-store me-2"></i>Vepari
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="activeul navbar-nav me-auto mb-2 mb-lg-0">
                        <vc:menu />
                        @if (User.IsInRole("Admin") || User.IsInRole("Subscriber"))
                        {
                            <li class="nav-item admin-link">
                                <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="UserList">
                                    <i class="fas fa-users me-1"></i> Business Directory
                                </a>
                            </li>
                        }
                    </ul>

                    <div class="d-lg-none mobile-categories-section w-100">
                        <span class="category-header"><i class="fas fa-list me-2"></i> Shop Categories</span>
                        <div class="card-body p-0">
                            <vc:categories />
                        </div>
                    </div>

                    <div class="d-flex align-items-center">
                        <vc:small-cart />
                        <partial name="_IdentityLinksPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN BODY -->
    <div class="container bg-light py-4">
        <main role="main" class="pb-3">
            <partial name="_NotificationsPartial" />

            <div class="row">
                <!-- Sidebar Categories -->
                <div class="col-lg-3 d-none d-lg-block">
                    <div class="card shadow-lg mb-3 border-dark">
                        <div class="card-header bg-dark text-warning fw-bold fs-5">
                            <i class="fas fa-bars me-2"></i> Categories
                        </div>
                        <div class="card-body p-0">
                            <vc:categories />
                        </div>
                    </div>
                </div>

                <!-- Page Content -->
                <div class="col-lg-9">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <hr />

    <!-- FOOTER -->
    <footer class="border-top footer mt-5 bg-dark text-white">
        <div class="container py-3">
            &copy; 2024 - CMSEcommerce -
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-warning">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(function () {
            // Navbar menu colors
            $(".activeul a").addClass('text-white');
            $(".activeul a:contains('Admin')").removeClass('text-white').addClass('text-warning fw-bold');
            $(".activeul a:contains('Logout')").removeClass('text-white').addClass('text-danger fw-bold');
            $(".admin-category-link a").removeClass('text-white').addClass('text-warning fw-bold');
            $("#login-link, #register-link").addClass('text-white');

            // Highlight active menu item
            $(".activeul li a").filter(function () { return this.href == location.href; }).parent().addClass("active");
        });
    </script>
</body>
</html>
