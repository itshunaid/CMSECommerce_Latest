<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMSEcommerce</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMSECommerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    @RenderSection("Styles", required: false)
    <style>
        /* --- Amazon-Like Design Styles --- */
        :root {
            --amazon-blue: #131921;
            --amazon-dark-blue: #232f3e;
            --amazon-orange: #ff9900;
            --amazon-text-hover: #ffad33;
            --amazon-search-btn: #febd69;
        }

        body {
            background-color: #f7f7f7;
        }

        .container.bg-light.py-4 {
            background-color: #ffffff !important;
            padding-top: 1rem !important;
        }

        /* HEADER */
        header .navbar-dark.bg-amazon-main {
            background-color: var(--amazon-blue) !important;
            padding: 0.5rem 0;
        }

        .navbar-brand {
            color: #ffffff !important;
            display: flex;
            align-items: center;
        }

        .logo-accent {
            color: var(--amazon-orange) !important;
        }

        /* SEARCH BAR */
        .amazon-search-bar {
            flex-grow: 1;
            margin: 0 15px;
            max-width: 600px;
        }

            .amazon-search-bar .input-group input:focus {
                border: 3px solid var(--amazon-orange);
                box-shadow: none;
            }

            .amazon-search-bar .btn-search {
                background-color: var(--amazon-search-btn) !important;
                border: none;
                color: #111 !important;
            }

        /* SUB-NAV */
        .sub-nav-bar {
            background-color: var(--amazon-dark-blue) !important;
            padding: 0 15px;
        }

            .sub-nav-bar .nav-link {
                color: #ffffff !important;
                font-size: 0.85rem;
                border: 1px solid transparent; /* Prevents layout jump on hover */
                transition: all 0.1s;
            }

                .sub-nav-bar .nav-link:hover {
                    border: 1px solid white;
                    border-radius: 2px;
                }

        /* SIDEBAR */
        .category-sidebar-card {
            border: 1px solid #ddd !important;
        }

        .category-sidebar-header {
            background-color: var(--amazon-dark-blue) !important;
            color: white !important;
            font-weight: bold;
        }

        /* FOOTER */
        footer.amazon-footer {
            background-color: var(--amazon-dark-blue) !important;
            color: white !important;
        }

            footer.amazon-footer a {
                color: var(--amazon-orange) !important;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-amazon-main shadow-lg">
            <div class="container-fluid">
                <a class="navbar-brand fs-3 fw-bolder" href="/">
                    <i class="fas fa-box logo-accent me-2"></i>
                    <span style="font-weight: 300;">WE</span><span class="logo-accent">y</span>paari
                </a>

                <div class="amazon-search-bar d-none d-md-flex">
                    <form asp-controller="Products" asp-action="Index" method="get" class="d-flex input-group">
                        <input type="hidden" name="slug" value="@(ViewData["CurrentCategorySlug"] ?? "")" />
                        <input type="hidden" name="p" value="1" />

                        <input type="text" name="searchTerm" class="form-control"
                               placeholder="Search for products..." value="@(ViewData["CurrentSearchTerm"] ?? "")" />

                        <button type="submit" class="btn btn-search">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>

                <div class="d-flex align-items-center order-lg-last">
                    <vc:small-cart />
                    <partial name="_IdentityLinksPartial" />
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#subNavBarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>

        <nav class="navbar navbar-expand-lg navbar-dark sub-nav-bar mb-4">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="subNavBarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">Home</a>
                        </li>
                        <vc:menu />
                        @if (User.IsInRole("Admin") || User.IsInRole("Subscriber"))
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold" style="color: var(--amazon-orange) !important;"
                                   asp-controller="Account" asp-action="UserList">
                                    <i class="fas fa-users me-1"></i> Business Directory
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container bg-light py-4 shadow-sm rounded-1">
        <main role="main" class="pb-3">
            <partial name="_NotificationsPartial" />

            <div class="row">
                <div id="categorySidebar" class="col-lg-3 d-none d-lg-block">
                    <div class="card category-sidebar-card mb-3">
                        <div class="card-header category-sidebar-header d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-bars me-2"></i> Shop by Category</span>
                        </div>
                        <div class="list-group list-group-flush">
                            <vc:categories />
                        </div>
                    </div>
                </div>

                <div id="mainContent" class="col-12 col-lg-9">
                    @* Mobile Toggler *@
                    <button class="btn btn-dark d-lg-none mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#mobileCategoryCollapse">
                        <i class="fas fa-list me-2"></i> Categories
                    </button>

                    <div class="collapse d-lg-none mb-3" id="mobileCategoryCollapse">
                        <div class="card category-sidebar-card">
                            <div class="list-group list-group-flush">
                                <vc:categories />
                            </div>
                        </div>
                    </div>

                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="amazon-footer mt-5 py-4">
        <div class="container text-center">
            <p class="mb-1">&copy; 2025 - Weypaari CMSEcommerce</p>
            <a asp-controller="Home" asp-action="Index">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(function () {
            // High-fidelity active link highlighting
            const currentPath = window.location.pathname;
            $(".sub-nav-bar .nav-link").each(function() {
                const linkPath = $(this).attr("href");
                if (linkPath === currentPath) {
                    $(this).css({
                        "border": "1px solid white",
                        "font-weight": "bold"
                    });
                }
            });
        });
    </script>
</body>
</html>