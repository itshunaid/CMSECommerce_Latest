<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMSEcommerce</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMSECommerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <style>
        /* 🛠️ FIX: Category link color set to Black for visibility on white background */
        .category-list-item .nav-link {
            color: #000 !important;
            padding: 0.75rem 1rem;
        }

        /* 🛠️ NEW: Styling for the specific Category Management link in the navbar */
        .admin-category-link .nav-link {
            color: var(--bs-warning) !important;
            font-weight: bold;
        }
        
        /* 💡 NEW MOBILE STYLE: Style for categories inside the collapsed navbar */
        .mobile-categories-section {
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            margin-top: 10px;
            padding-top: 10px;
        }
        .mobile-categories-section .category-header {
            color: #ffc107; /* Warning color for highlight */
            font-weight: bold;
            padding: 8px 15px 5px;
            display: block;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>

<body>
    <header>
        @* ROYAL DESIGN: Deep dark navbar with strong shadow (bg-dark) *@
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-lg mb-4">
            <div class="container">
                @* 🛠️ FAR LEFT FIX: Cleaned up brand link structure *@
                <a class="navbar-brand fs-3 fw-bolder text-warning" href="/">
                    @* <i class="fas fa-crown me-2"></i> Vepari *@
                    <i class="fas fa-store me-2"></i>Vepari
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    @* Functionality preserved: Menu ViewComponent *@
                    <ul class="activeul navbar-nav me-auto mb-2 mb-lg-0">
                        <vc:menu />  
                        @* ⭐ NEW: Direct link for User List - Requires Admin or Staff role *@
                        @if (User.IsInRole("Admin") || User.IsInRole("Subscriber"))
                        {
                            <li class="nav-item admin-link">
                                <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="UserList">
                                    <i class="fas fa-users me-1"></i> Business Directory
                                </a>
                            </li>
                        }
                    </ul>

                    <div class="d-lg-none mobile-categories-section w-100">
                        <span class="category-header">
                            <i class="fas fa-list me-2"></i> Shop Categories
                        </span>
                        <div class="card-body p-0">
                            <vc:categories />
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        @* 🛠️ Small Cart View Component in the navbar *@
                        <vc:small-cart />

                        @* Functionality preserved: Identity Links Partial *@
                        <partial name="_IdentityLinksPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    @* ROYAL DESIGN: Main body uses bg-light for contrast *@
    <div class="container bg-light py-4">
        <main role="main" class="pb-3">
            @* Functionality preserved: Notifications Partial *@
            <partial name="_NotificationsPartial" />

            <div class="row">
                <div class="col-lg-3 d-none d-lg-block">
                    @* ROYAL DESIGN: Sidebar card with a distinct dark header and shadow *@
                    <div class="card shadow-lg mb-3 border-dark">
                        <div class="card-header bg-dark text-warning fw-bold fs-5">
                            <i class="fas fa-bars me-2"></i> Categories
                        </div>
                        <div class="card-body p-0">
                            @* Functionality preserved: Categories ViewComponent *@
                            <vc:categories />
                        </div>
                    </div>

                    <div class="mt-4">
                        @* Small Cart View Component removed from sidebar as it is in navbar *@
                    </div>
                </div>

                <div class="col-lg-9">
                    @* Functionality preserved: RenderBody *@
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <hr />

    @* ROYAL DESIGN: Footer matches the dark theme *@
    <footer class="border-top footer mt-5 bg-dark text-white">
        <div class="container py-3">
            &copy; 2024 - CMSEcommerce -
            @* Privacy link uses gold/yellow text (text-warning) *@
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-warning">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @* SCRIPT: Add custom colors to menu links for visibility and royal flair *@
    <script>
        $(function () {
            // --- ROYAL DESIGN: Menu Color Overrides for Visibility ---

            // 1. Ensure all standard menu links are white for visibility on the dark background
            $(".activeul a").addClass('text-white');

            // 2. Highlight 'Admin' link in Gold/Yellow
            $(".activeul a:contains('Admin')").removeClass('text-white').addClass('text-warning fw-bold');

            // 3. Highlight a 'Danger' action (e.g., Logout) in Red
            $(".activeul a:contains('Logout')").removeClass('text-white').addClass('text-danger fw-bold');

            // 4. Highlight the Category Management link specifically, overriding the text-white above
            $(".admin-category-link a").removeClass('text-white').addClass('text-warning fw-bold');

            // 5. Ensure Identity Links are light
            $("#login-link, #register-link").addClass('text-white');
        });

        // Functionality preserved: Active Nav Item Script
        $(".activeul li a").filter(function () {
            return this.href == location.href
        }).parent().addClass("active");
    </script>
</body>
</html>