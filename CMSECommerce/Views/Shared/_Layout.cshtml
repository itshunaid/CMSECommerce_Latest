<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMSEcommerce</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMSECommerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    @RenderSection("Styles", required: false)
    <style>
        :root {
            --amazon-blue: #131921;
            --amazon-dark-blue: #232f3e;
            --amazon-orange: #ff9900;
            --amazon-search-btn: #febd69;
        }

        /* --- Global Small Text & Base Styles --- */
        html, body {
            font-size: 13px;
            background-color: #f7f7f7;
            color: #111;
        }

        .container.bg-light.py-4 {
            background-color: #ffffff !important;
            padding-top: 1rem !important;
            border-radius: 4px;
        }

        /* --- Header & Search --- */
        header .navbar-dark.bg-amazon-main {
            background-color: var(--amazon-blue) !important;
            padding: 0.3rem 0;
        }

        .navbar-brand {
            font-size: 1.3rem !important;
            color: #fff !important;
        }

        .logo-accent {
            color: var(--amazon-orange) !important;
        }

        .amazon-search-bar {
            flex-grow: 1;
            margin: 0 15px;
            max-width: 600px;
        }

            .amazon-search-bar input {
                height: 32px;
                font-size: 0.85rem;
                border: none;
            }

            .amazon-search-bar .btn-search {
                background-color: var(--amazon-search-btn) !important;
                border: none;
                height: 32px;
                padding: 0 15px;
            }

        /* --- Sub Nav --- */
        .sub-nav-bar {
            background-color: var(--amazon-dark-blue) !important;
            min-height: 32px;
            padding: 0 10px;
        }

            .sub-nav-bar .nav-link {
                color: #fff !important;
                font-size: 0.8rem;
                padding: 5px 10px !important;
                border: 1px solid transparent;
            }

                .sub-nav-bar .nav-link:hover {
                    border: 1px solid white;
                    border-radius: 2px;
                }

        /* --- Sidebar --- */
        .category-sidebar-card {
            border: 1px solid #ddd !important;
        }

        .category-sidebar-header {
            background-color: #f3f3f3 !important;
            color: #111 !important;
            font-weight: bold;
            font-size: 0.85rem;
        }

        /* --- COMPACT PRODUCT CARDS --- */
        .product-card {
            transition: all 0.2s;
            border: 1px solid #e7e7e7 !important;
            background: #fff;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

            .product-card:hover {
                box-shadow: 0 4px 10px rgba(0,0,0,0.1);
                border-color: #bbb !important;
            }

        .product-img-container {
            height: 160px;
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #fff;
        }

            .product-img-container img {
                max-height: 100%;
                max-width: 100%;
                object-fit: contain;
            }

        .product-card-body {
            padding: 8px 12px;
            flex-grow: 1;
        }

        .product-title {
            font-size: 0.85rem !important;
            line-height: 1.1rem;
            height: 2.2rem;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            color: #007185;
            text-decoration: none;
            margin-bottom: 4px;
        }

        .product-price {
            font-size: 1.1rem;
            font-weight: bold;
            color: #111;
        }

        .btn-amazon-cart {
            background-color: var(--amazon-search-btn);
            border: 1px solid #a88734;
            border-radius: 20px;
            font-size: 0.75rem;
            padding: 3px 12px;
            color: #111;
            text-decoration: none;
            display: inline-block;
        }

            .btn-amazon-cart:hover {
                background-color: #f7ca00;
            }

        /* --- Footer --- */
        footer.amazon-footer {
            background-color: var(--amazon-dark-blue) !important;
            color: white !important;
            font-size: 0.8rem;
        }

            footer.amazon-footer a {
                color: var(--amazon-orange) !important;
            }

        .nav-admin-link {
            border: 1px solid var(--amazon-orange) !important;
            color: var(--amazon-orange) !important;
            font-size: 0.75rem !important;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-amazon-main shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="/">
                    <i class="fas fa-box logo-accent me-2"></i>
                    <span style="font-weight: 300;">WE</span><span class="logo-accent">y</span>paari
                </a>

                <div class="amazon-search-bar d-none d-md-flex">
                    <form asp-controller="Products" asp-action="Index" method="get" class="d-flex input-group">
                        <input type="hidden" name="slug" value="@(ViewData["CurrentCategorySlug"] ?? "")" />
                        <input type="hidden" name="p" value="1" />
                        <input type="text" name="searchTerm" class="form-control"
                               placeholder="Search for products..." value="@(ViewData["CurrentSearchTerm"] ?? "")" />
                        <button type="submit" class="btn btn-search"><i class="fas fa-search"></i></button>
                    </form>
                </div>

                <div class="d-flex align-items-center order-lg-last">
                    <vc:small-cart />
                    <partial name="_IdentityLinksPartial" />
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#subNavBarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>

        <nav class="navbar navbar-expand-lg navbar-dark sub-nav-bar mb-3">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="subNavBarContent">
                    <ul class="navbar-nav me-auto mb-0 w-100 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">Home</a>
                        </li>
                        <vc:menu />
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Subscription" asp-action="Index">Subscriptions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Subscription" asp-action="Status">Status</a>
                        </li>

                        @if (User.IsInRole("Admin") || User.IsInRole("Subscriber") || User.IsInRole("Seller"))
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold" style="color: var(--amazon-orange) !important;"
                                   asp-area="" asp-controller="Account" asp-action="UserList">
                                    <i class="fas fa-users me-1"></i> Directory
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item ms-auto">
                                <a class="nav-link nav-admin-link" asp-controller="Subscription" asp-action="AdminDashboard">
                                    <i class="fas fa-user-shield me-1"></i> Admin Console
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container bg-white py-3 shadow-sm mb-5">
        <main role="main">
            <partial name="_NotificationsPartial" />
            <div class="row g-3">
                <div id="categorySidebar" class="col-lg-3 d-none d-lg-block">
                    <div class="card category-sidebar-card">
                        <div class="card-header category-sidebar-header py-2">Departments</div>
                        <div class="list-group list-group-flush"><vc:categories /></div>
                    </div>
                </div>
                <div id="mainContent" class="col-12 col-lg-9">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="amazon-footer mt-5 py-4">
        <div class="container text-center">
            <p class="mb-1">&copy; 2025 - Weypaari CMSEcommerce</p>
            <a asp-controller="Home" asp-action="Index">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>