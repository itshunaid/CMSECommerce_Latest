<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMSEcommerce</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMSECommerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    @RenderSection("Styles", required: false)
    <style>
        :root {
            --amazon-blue: #131921;
            --amazon-dark-blue: #232f3e;
            --amazon-orange: #ff9900;
            --amazon-search-btn: #febd69;
        }

        /* --- Global Base Styles --- */
        html, body {
            font-size: 13px;
            background-color: #f7f7f7;
            color: #111;
            overflow-x: hidden;
        }

        /* --- SLIDING BRAND HEADING (Adjusted Speed) --- */
        .brand-top-header {
            background: #000;
            padding: 10px 0;
            border-bottom: 3px solid var(--amazon-orange);
            position: relative;
            z-index: 1050;
            overflow: hidden;
            display: flex;
        }

        .marquee-wrapper {
            display: flex;
            white-space: nowrap;
        }

        .marquee-content {
            display: flex;
            align-items: center;
            /* SLOWER SPEED: 35s for a smoother, readable glide */
            animation: marquee-infinite 35s linear infinite;
        }

        .marquee-item {
            display: inline-block;
            color: #ffffff;
            font-size: 1.05rem;
            font-weight: 700;
            letter-spacing: 2px;
            text-transform: uppercase;
            padding: 0 60px;
            text-shadow: 0 0 8px rgba(255, 255, 255, 0.2);
        }

            .marquee-item span {
                color: var(--amazon-orange);
                animation: pulse-glow 2s infinite alternate;
            }

            .marquee-item i {
                margin: 0 12px;
                color: var(--amazon-orange);
                font-size: 0.9rem;
            }

        @@keyframes marquee-infinite {
            0% {
                transform: translateX(0);
            }

            100% {
                transform: translateX(-50%);
            }
        }

        @@keyframes pulse-glow {
            from {
                text-shadow: 0 0 5px var(--amazon-orange);
            }

            to {
                text-shadow: 0 0 15px var(--amazon-orange);
            }
        }

        .brand-top-header:hover .marquee-content {
            animation-play-state: paused;
        }

        /* --- Brand Logo & Tagline Styles --- */
        .navbar-brand {
            display: flex;
            align-items: center; /* Center-aligns logo and tagline vertically */
            gap: 12px;
            font-size: 1.3rem !important;
            color: #fff !important;
        }

        .brand-tagline {
            font-size: 0.72rem;
            font-weight: 400;
            color: #bbb;
            letter-spacing: 0.3px;
            border-left: 1px solid #555;
            padding-left: 12px;
            line-height: 1.2;
            text-transform: none;
        }

        /* --- Header & Search --- */
        header .navbar-dark.bg-amazon-main {
            background-color: var(--amazon-blue) !important;
            padding: 0.4rem 0;
        }

        .logo-accent {
            color: var(--amazon-orange) !important;
        }

        .amazon-search-bar {
            flex-grow: 1;
            margin: 0 20px;
            max-width: 650px;
        }

            .amazon-search-bar input {
                height: 34px;
                font-size: 0.9rem;
                border: none;
            }

            .amazon-search-bar .btn-search {
                background-color: var(--amazon-search-btn) !important;
                border: none;
                height: 34px;
                padding: 0 18px;
            }

        /* --- Sub Nav --- */
        .sub-nav-bar {
            background-color: var(--amazon-dark-blue) !important;
            min-height: 34px;
            padding: 0 10px;
        }

            .sub-nav-bar .nav-link {
                color: #fff !important;
                font-size: 0.85rem;
                padding: 6px 12px !important;
                border: 1px solid transparent;
            }

                .sub-nav-bar .nav-link:hover {
                    border: 1px solid white;
                    border-radius: 2px;
                }

        /* --- Product Cards & Layout --- */
        .product-card {
            transition: all 0.2s;
            border: 1px solid #e7e7e7 !important;
            background: #fff;
            height: 100%;
        }

        .category-sidebar-header {
            background-color: #f3f3f3 !important;
            color: #111 !important;
            font-weight: bold;
        }

        footer.amazon-footer {
            background-color: var(--amazon-dark-blue) !important;
            color: white !important;
            font-size: 0.85rem;
        }

        .nav-admin-link {
            border: 1px solid var(--amazon-orange) !important;
            color: var(--amazon-orange) !important;
            font-size: 0.8rem !important;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div class="brand-top-header">
        <div class="marquee-wrapper">
            <div class="marquee-content">
                <div class="marquee-item"><i class="fas fa-fire"></i> Women <span>Entrepreneur</span> Home Business</div>
                <div class="marquee-item"><i class="fas fa-rocket"></i> Women <span>Entrepreneur</span> Home Business</div>
                <div class="marquee-item"><i class="fas fa-bolt"></i> Women <span>Entrepreneur</span> Home Business</div>
                <div class="marquee-item"><i class="fas fa-award"></i> Women <span>Entrepreneur</span> Home Business</div>
                <div class="marquee-item"><i class="fas fa-fire"></i> Women <span>Entrepreneur</span> Home Business</div>
                <div class="marquee-item"><i class="fas fa-rocket"></i> Women <span>Entrepreneur</span> Home Business</div>
                <div class="marquee-item"><i class="fas fa-bolt"></i> Women <span>Entrepreneur</span> Home Business</div>
                <div class="marquee-item"><i class="fas fa-award"></i> Women <span>Entrepreneur</span> Home Business</div>
            </div>
        </div>
    </div>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-amazon-main shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="/">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-box logo-accent me-2"></i>
                        <span style="font-weight: 300;">WE</span><span class="logo-accent">y</span>paari
                    </div>
                    <span class="brand-tagline d-none d-sm-inline-block">
                        Women Entrepreneur Home Business
                    </span>
                </a>

                <div class="amazon-search-bar d-none d-md-flex">
                    <form asp-controller="Products" asp-action="Index" method="get" class="d-flex input-group">
                        <input type="hidden" name="slug" value="@(ViewData["CurrentCategorySlug"] ?? "")" />
                        <input type="hidden" name="p" value="1" />
                        <input type="text" name="searchTerm" class="form-control"
                               placeholder="Search for products..." value="@(ViewData["CurrentSearchTerm"] ?? "")" />
                        <button type="submit" class="btn btn-search"><i class="fas fa-search"></i></button>
                    </form>
                </div>

                <div class="d-flex align-items-center order-lg-last">
                    <vc:small-cart />
                    <partial name="_IdentityLinksPartial" />
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#subNavBarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>

        <nav class="navbar navbar-expand-lg navbar-dark sub-nav-bar mb-3">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="subNavBarContent">
                    <ul class="navbar-nav me-auto mb-0 w-100 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">Home</a>
                        </li>
                        <vc:menu />
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Subscription" asp-action="Index">Subscriptions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Subscription" asp-action="Status">Status</a>
                        </li>

                        @if (User.IsInRole("Admin") || User.IsInRole("Subscriber") || User.IsInRole("Seller"))
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold" style="color: var(--amazon-orange) !important;"
                                   asp-area="" asp-controller="Account" asp-action="UserList">
                                    <i class="fas fa-users me-1"></i> Directory
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item ms-auto">
                                <a class="nav-link nav-admin-link" asp-controller="Subscription" asp-action="AdminDashboard">
                                    <i class="fas fa-user-shield me-1"></i> Admin Console
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container bg-white py-3 shadow-sm mb-5">
        <main role="main">
            <partial name="_NotificationsPartial" />
            <div class="row g-3">
                <div id="categorySidebar" class="col-lg-3 d-none d-lg-block">
                    <div class="card category-sidebar-card">
                        <div class="card-header category-sidebar-header py-2">Departments</div>
                        <div class="list-group list-group-flush"><vc:categories /></div>
                    </div>
                </div>
                <div id="mainContent" class="col-12 col-lg-9">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="amazon-footer mt-5 py-4">
        <div class="container text-center">
            <p class="mb-1">&copy; @DateTime.Now.Year - Weypaari CMSEcommerce</p>
            <a asp-controller="Home" asp-action="Index">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>