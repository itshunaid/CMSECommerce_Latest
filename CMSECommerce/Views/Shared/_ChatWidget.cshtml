@* Chat widget partial - Yahoo-style floating chat box *@
<div id="chat-widget" class="chat-widget minimized" aria-live="polite">
    <div class="chat-header" role="button" aria-label="Open chat" tabindex="0">
        <div class="chat-title">Weypaari Chat <span class="chat-status">?</span></div>
        <div class="chat-controls">
            <button type="button" class="chat-btn chat-minimize" aria-label="Minimize">_</button>
            <button type="button" class="chat-btn chat-close" aria-label="Close">×</button>
        </div>
    </div>

    <div class="chat-body">
        <div class="chat-contacts">
            <div class="contact-item active" data-contact-id="1">
                <div class="contact-name">Support</div>
                <div class="contact-meta">Online</div>
            </div>
            <div class="contact-item" data-contact-id="2">
                <div class="contact-name">Sales</div>
                <div class="contact-meta">Away</div>
            </div>
        </div>

        <div class="chat-window">
            <div id="chatMessages" class="messages" role="log" aria-live="polite"></div>

            <form class="chat-form" novalidate>
                <div class="input-group">
                    <input type="text" id="floating-chat-input" class="form-control form-control-sm" placeholder="Type a message..." aria-label="Type a message" autocomplete="off" />
                    <button type="button" id="floating-chat-send" class="btn btn-primary btn-sm" data-target="#floating-chat-input" aria-label="Send message">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>
