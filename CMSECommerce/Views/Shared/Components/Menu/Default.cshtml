@model IEnumerable<CMSECommerce.Infrastructure.Components.MenuItemViewModel>

<style>
    /* Styling to match Amazon Dark Blue Sub-Nav Bar */
    .amazon-sub-nav__link {
        color: #ffffff !important; /* Force white text for dark blue background */
        font-size: 0.85rem;
        font-weight: 500;
        padding: 5px 10px;
        border: 1px solid transparent;
        text-decoration: none !important;
        transition: all 0.1s;
    }

        .amazon-sub-nav__link:hover {
            border: 1px solid #ffffff; /* Amazon white border hover */
            border-radius: 2px;
            color: #ffffff !important;
        }

    /* Specialized color for the Request Seller Access to make it stand out */
    .amazon-sub-nav__link--request {
        color: #febd69 !important; /* Amazon Orange/Gold */
        font-weight: 700;
    }

        .amazon-sub-nav__link--request:hover {
            border-color: #febd69;
        }

    .amazon-sub-nav__link--muted {
        color: #cccccc !important;
        font-size: 0.75rem;
    }
</style>

@foreach (var item in Model)
{
    @* Skip Admin items if they are handled elsewhere, or keep logic for future use *@
    if (item.IsAdmin) { continue; }

    @* Standard Menu Items (Pages like About, Contact, etc.) *@
    if (item.Title != "Home")
    {
        <li class="nav-item">
            <a class="nav-link amazon-sub-nav__link"
               asp-controller="Pages"
               asp-action="Index"
               asp-route-slug="@item.Slug">
                @item.Title
            </a>
        </li>
    }
}

