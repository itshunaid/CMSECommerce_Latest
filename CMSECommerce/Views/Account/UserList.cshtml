@model IEnumerable<CMSECommerce.Models.ViewModels.ProfileUpdateViewModel>

@{
    ViewData["Title"] = "Business Directory";
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="display-5 fw-bold text-dark"><i class="fas fa-store me-2"></i> Business Directory</h2>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info py-3 shadow-sm" role="alert">
            <h4 class="alert-heading"><i class="fas fa-info-circle me-2"></i>No Businesses Found</h4>
            <p class="mb-0">There are currently no registered sellers or businesses to display.</p>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover table-striped mb-0" id="sellerTable">
                <thead class="bg-primary text-white">
                    <tr>
                        <th scope="col">Business / Seller</th>
                        <th scope="col">Location (City)</th>
                        <th scope="col">Email</th>
                        <th scope="col">Contact</th>
                        <th scope="col">Profession</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                    @* Filter Row *@
                    <tr class="bg-light">
                        <th><input type="text" class="form-control form-control-sm column-filter" placeholder="Filter Business..." data-col="0"></th>
                        <th><input type="text" class="form-control form-control-sm column-filter" placeholder="Filter City..." data-col="1"></th>
                        <th><input type="text" class="form-control form-control-sm column-filter" placeholder="Filter Email..." data-col="2"></th>
                        <th><input type="text" class="form-control form-control-sm column-filter" placeholder="Filter Contact..." data-col="3"></th>
                        <th><input type="text" class="form-control form-control-sm column-filter" placeholder="Filter Profession..." data-col="4"></th>
                        <th><button id="clearFilters" class="btn btn-sm btn-secondary w-100">Reset</button></th>
                    </tr>
                </thead>
                <tbody id="sellerTableBody">
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(user.ExistingProfileImagePath))
                                    {
                                        <img src="/@user.ExistingProfileImagePath.TrimStart('/')" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover; border: 1px solid #ddd;" />
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                            <i class="fas fa-user text-white" style="font-size: 0.9rem;"></i>
                                        </div>
                                    }
                                    <div>
                                        @* Prioritize Store Name, Fallback to Full Name *@
                                        <div class="fw-bold text-dark">
                                            @(!string.IsNullOrEmpty(user.StoreName) && user.StoreName != "Independent" ? user.StoreName : $"{user.FirstName} {user.LastName}")
                                        </div>

                                        @* If it's a store, show the Proprietor name underneath *@
                                        @if (!string.IsNullOrEmpty(user.StoreName) && user.StoreName != "Independent")
                                        {
                                            <small class="text-muted d-block" style="font-size: 0.75rem;">
                                                <i class="fas fa-user-tie me-1"></i>Prop: @user.FirstName @user.LastName
                                            </small>
                                        }
                                        else
                                        {
                                            <small class="text-muted d-block" style="font-size: 0.75rem;">
                                                <i class="fas fa-user me-1"></i>Independent Seller
                                            </small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td class="align-middle">@(user.StoreCity ?? "N/A")</td>
                            <td class="align-middle">
                                <a href="mailto:@(user.StoreEmail ?? user.Email)" class="text-decoration-none text-muted small">
                                    <i class="fas fa-envelope me-1"></i>@(user.StoreEmail ?? user.Email)
                                </a>
                            </td>
                            <td class="align-middle">
                                <a href="tel:@(user.StoreContact ?? user.PhoneNumber)" class="text-decoration-none text-muted small">
                                    <i class="fas fa-phone-alt me-1"></i>@(user.StoreContact ?? user.PhoneNumber ?? "N/A")
                                </a>
                            </td>
                            <td class="align-middle">
                                <span class="badge bg-light text-dark border">@(user.Profession ?? "Seller")</span>
                            </td>
                            <td class="text-center align-middle">
                                <a asp-action="UserDetails" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                    <i class="fas fa-id-card me-1"></i> View Profile
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <p class="text-muted small">Showing <span id="visibleCount" class="fw-bold">@Model.Count()</span> matching businesses</p>
            <nav aria-label="Table status">
                <span class="badge bg-info text-dark">Verified Directory</span>
            </nav>
        </div>
    }
</div>

@section Styles {
    <style>
        .bg-primary {
            background-color: #004d40 !important;
        }

        .column-filter {
            border: 1px solid #ced4da;
            font-size: 0.85rem;
        }

            .column-filter:focus {
                border-color: #004d40;
                box-shadow: none;
            }

        .table thead th {
            border-bottom: 2px solid #004d40;
            vertical-align: middle;
            font-weight: 600;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 77, 64, 0.05);
        }

        .rounded-pill {
            border-radius: 50px !important;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const filters = document.querySelectorAll(".column-filter");
            const rows = document.querySelectorAll("#sellerTableBody tr");
            const countDisplay = document.getElementById("visibleCount");
            const clearBtn = document.getElementById("clearFilters");

            function filterTable() {
                let visibleCount = 0;
                rows.forEach(row => {
                    let isVisible = true;
                    filters.forEach(filter => {
                        const colIndex = filter.getAttribute("data-col");
                        const filterValue = filter.value.toLowerCase();
                        const cellText = row.cells[colIndex].textContent.toLowerCase();
                        if (!cellText.includes(filterValue)) { isVisible = false; }
                    });
                    row.style.display = isVisible ? "" : "none";
                    if (isVisible) visibleCount++;
                });
                countDisplay.textContent = visibleCount;
            }

            filters.forEach(filter => { filter.addEventListener("keyup", filterTable); });
            clearBtn.addEventListener("click", function () {
                filters.forEach(filter => filter.value = "");
                filterTable();
            });
        });
    </script>
}