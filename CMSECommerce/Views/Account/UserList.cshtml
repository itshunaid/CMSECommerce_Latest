@model IEnumerable<CMSECommerce.Models.ViewModels.ProfileUpdateViewModel>

@{
    ViewData["Title"] = "Registered Seller List";
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="display-5 fw-bold text-dark"><i class="fas fa-users me-2"></i> Registered Sellers</h2>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info py-3 shadow-sm" role="alert">
            <h4 class="alert-heading"><i class="fas fa-info-circle me-2"></i>No Users Found</h4>
            <p class="mb-0">There are currently no registered sellers in the system to display.</p>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover table-striped mb-0" id="sellerTable">
                <thead class="bg-primary text-white">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">ITS Number</th>
                        <th scope="col">Profession</th>
                        <th scope="col">Actions</th>
                    </tr>
                    @* Filter Row *@
                    <tr class="bg-light">
                        <th><input type="text" class="form-control form-control-sm column-filter" placeholder="Filter Name..." data-col="0"></th>
                        <th><input type="text" class="form-control form-control-sm column-filter" placeholder="Filter Email..." data-col="1"></th>
                        <th><input type="text" class="form-control form-control-sm column-filter" placeholder="Filter Phone..." data-col="2"></th>
                        <th><input type="text" class="form-control form-control-sm column-filter" placeholder="Filter ITS..." data-col="3"></th>
                        <th><input type="text" class="form-control form-control-sm column-filter" placeholder="Filter Profession..." data-col="4"></th>
                        <th><button id="clearFilters" class="btn btn-sm btn-secondary w-100">Reset</button></th>
                    </tr>
                </thead>
                <tbody id="sellerTableBody">
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                @{
                                    var firstName = user.FirstName ?? "N/A";
                                    var lastName = user.LastName ?? "";
                                    var fullName = string.IsNullOrWhiteSpace(lastName) ? firstName : $"{firstName} {lastName}";
                                }
                                @fullName
                            </td>
                            <td>@user.Email</td>
                            <td>@(user.PhoneNumber ?? "N/A")</td>
                            <td>@(user.ITSNumber ?? "-")</td>
                            <td>@(user.Profession ?? "-")</td>
                            <td>
                                <a asp-action="UserDetails" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-eye me-1"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <p class="text-muted small mt-3">Total Registered Sellers: <span id="visibleCount">@Model.Count()</span></p>
    }
</div>

@section Styles {
    <style>
        .bg-primary {
            background-color: #1e3a8a !important;
        }

        /* Styling for the filter inputs */
        .column-filter {
            border: 1px solid #ced4da;
            font-size: 0.85rem;
        }

            .column-filter:focus {
                border-color: #007bff;
                box-shadow: none;
            }

        /* Keep header clean */
        .table thead th {
            border-bottom: 2px solid #007bff;
            vertical-align: middle;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const filters = document.querySelectorAll(".column-filter");
            const rows = document.querySelectorAll("#sellerTableBody tr");
            const countDisplay = document.getElementById("visibleCount");
            const clearBtn = document.getElementById("clearFilters");

            function filterTable() {
                let visibleCount = 0;

                rows.forEach(row => {
                    let isVisible = true;

                    filters.forEach(filter => {
                        const colIndex = filter.getAttribute("data-col");
                        const filterValue = filter.value.toLowerCase();
                        const cellText = row.cells[colIndex].textContent.toLowerCase();

                        if (!cellText.includes(filterValue)) {
                            isVisible = false;
                        }
                    });

                    row.style.display = isVisible ? "" : "none";
                    if (isVisible) visibleCount++;
                });

                countDisplay.textContent = visibleCount;
            }

            // Trigger filtering on input
            filters.forEach(filter => {
                filter.addEventListener("keyup", filterTable);
            });

            // Reset functionality
            clearBtn.addEventListener("click", function () {
                filters.forEach(filter => filter.value = "");
                filterTable();
            });
        });
    </script>
}