@model CMSECommerce.Models.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    ViewData["HideLayoutSidebar"] = true;
}

<div class="amazon-login-wrapper py-3 py-md-5 d-flex align-items-center">
    <div class="container">
        <div class="row g-0 justify-content-center align-items-stretch">

            @* --- LEFT PANEL: BRANDING (Hidden on Mobile) --- *@
            <div class="col-lg-5 d-none d-lg-flex flex-column justify-content-center p-5 bg-white border-end rounded-start-2 shadow-sm">
                <div class="brand-logo mb-4">
                    <div class="d-flex align-items-center h2 fw-bold text-amazon-dark m-0">
                        <i class="fas fa-box text-amazon-orange me-2"></i>
                        <span style="font-weight: 300;">WE</span><span class="text-amazon-orange">y</span>paari
                    </div>
                </div>
                <h1 class="display-6 fw-bold mb-3 text-amazon-dark">Password Assistance</h1>
                <p class="text-secondary mb-5">
                    Enter your email address and we'll send you a link to reset your password. Your account security is our top priority.
                </p>

                <div class="features-list">
                    <div class="d-flex align-items-center mb-4">
                        <div class="feature-icon-circle me-3">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">Secure Email Reset</h6>
                            <p class="small text-muted mb-0">Receive a secure link to reset your password.</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-4">
                        <div class="feature-icon-circle me-3">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">Account Protection</h6>
                            <p class="small text-muted mb-0">Your account remains secure during the process.</p>
                        </div>
                    </div>
                </div>
            </div>

            @* --- RIGHT PANEL: FORM --- *@
            <div class="col-12 col-sm-10 col-md-8 col-lg-4 p-4 p-lg-5 bg-white shadow-sm border rounded-2 rounded-lg-start-0">

                @* Mobile Logo *@
                <div class="text-center mb-4 d-lg-none">
                    <div class="d-flex align-items-center justify-content-center h3 fw-bold text-amazon-dark">
                        <i class="fas fa-box text-amazon-orange me-2"></i>
                        <span style="font-weight: 300;">WE</span><span class="text-amazon-orange">y</span>paari
                    </div>
                </div>

                <div class="signin-header mb-4">
                    <h2 class="fw-normal text-amazon-dark h4">Forgot Password</h2>
                    <p class="text-muted small">Enter your email address to receive reset instructions.</p>
                </div>

                <form method="post" asp-controller="Account" asp-action="ForgotPassword" role="form">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                    @* EMAIL FIELD *@
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold mb-1 small required-label">Email address</label>
                        <input asp-for="Email" class="form-control amazon-modern-input" autocomplete="email" />
                        <span asp-validation-for="Email" class="text-danger x-small mt-1 d-block"></span>
                    </div>

                    @* Submit Button *@
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-amazon-primary py-2 shadow-sm">
                            <span>Send Reset Link</span> <i class="fas fa-arrow-right ms-2"></i>
                        </button>
                    </div>

                </form>

                <hr class="my-4" />

                <div class="text-center">
                    <p class="small fw-bold text-amazon-dark mb-2">
                        Need different help?
                    </p>
                    <p class="small text-muted mb-3">
                        If you no longer use the email address associated with your account, contact our customer service for assistance.
                    </p>
                    <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left me-2"></i>Back to Sign In
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --amazon-dark: #111111;
            --amazon-orange: #e47911;
            --amazon-yellow: #f0c14b;
            --amazon-link: #0066c0;
        }

        body {
            font-family: "Segoe UI", system-ui, -apple-system, sans-serif;
            background-color: #fcfcfc;
        }

        /* Responsive UI Improvements */
        .amazon-modern-input {
            border: 1px solid #a6a6a6;
            border-radius: 4px;
            height: 44px; /* Mobile standard touch target */
            font-size: 16px !important; /* Prevents iOS auto-zoom on focus */
            padding: 10px 12px;
            transition: all 0.2s;
        }

            .amazon-modern-input:focus {
                border-color: var(--amazon-orange);
                box-shadow: 0 0 0 3px rgba(228, 121, 17, .15);
                outline: 0;
            }

        .btn-amazon-primary {
            background: linear-gradient(to bottom, #f7dfa5, #f0c14b);
            border: 1px solid #a88734;
            color: #111;
            height: 44px;
            font-weight: 500;
        }

            .btn-amazon-primary:active {
                background: #f0c14b;
            }

        .feature-icon-circle {
            width: 48px;
            height: 48px;
            background: rgba(255, 153, 0, 0.1);
            color: var(--amazon-orange);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .required-label::after {
            content: " *";
            color: #d00;
            font-weight: bold;
        }

        .x-small {
            font-size: 0.8rem;
        }

        .text-amazon-orange {
            color: var(--amazon-orange);
        }

        .text-amazon-dark {
            color: var(--amazon-dark);
        }

        .text-amazon-link {
            color: var(--amazon-link);
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
