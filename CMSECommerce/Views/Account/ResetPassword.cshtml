@model CMSECommerce.Models.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    ViewData["HideLayoutSidebar"] = true;
}

<div class="amazon-login-wrapper py-3 py-md-5 d-flex align-items-center">
    <div class="container">
        <div class="row g-0 justify-content-center align-items-stretch">

            @* --- LEFT PANEL: BRANDING (Hidden on Mobile) --- *@
            <div class="col-lg-5 d-none d-lg-flex flex-column justify-content-center p-5 bg-white border-end rounded-start-2 shadow-sm">
                <div class="brand-logo mb-4">
                    <div class="d-flex align-items-center h2 fw-bold text-amazon-dark m-0">
                        <i class="fas fa-box text-amazon-orange me-2"></i>
                        <span style="font-weight: 300;">WE</span><span class="text-amazon-orange">y</span>paari
                    </div>
                </div>
                <h1 class="display-6 fw-bold mb-3 text-amazon-dark">Create New Password</h1>
                <p class="text-secondary mb-5">
                    Choose a strong password for your account. Make sure it's unique and contains a mix of letters, numbers, and symbols.
                </p>

                <div class="features-list">
                    <div class="d-flex align-items-center mb-4">
                        <div class="feature-icon-circle me-3">
                            <i class="fas fa-lock"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">Secure Password</h6>
                            <p class="small text-muted mb-0">Use at least 8 characters with mixed case.</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-4">
                        <div class="feature-icon-circle me-3">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">Account Protection</h6>
                            <p class="small text-muted mb-0">Your new password secures your account.</p>
                        </div>
                    </div>
                </div>
            </div>

            @* --- RIGHT PANEL: FORM --- *@
            <div class="col-12 col-sm-10 col-md-8 col-lg-4 p-4 p-lg-5 bg-white shadow-sm border rounded-2 rounded-lg-start-0">

                @* Mobile Logo *@
                <div class="text-center mb-4 d-lg-none">
                    <div class="d-flex align-items-center justify-content-center h3 fw-bold text-amazon-dark">
                        <i class="fas fa-box text-amazon-orange me-2"></i>
                        <span style="font-weight: 300;">WE</span><span class="text-amazon-orange">y</span>paari
                    </div>
                </div>

                <div class="signin-header mb-4">
                    <h2 class="fw-normal text-amazon-dark h4">Reset Your Password</h2>
                    <p class="text-muted small">Enter your new password below.</p>
                </div>

                <form method="post" asp-controller="Account" asp-action="ResetPassword" role="form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Token" />

                    <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                    @* EMAIL FIELD (READONLY) *@
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold mb-1 small">Email address</label>
                        <input asp-for="Email" readonly class="form-control amazon-modern-input bg-light" />
                    </div>

                    @* PASSWORD FIELD *@
                    <div class="mb-3 position-relative">
                        <label asp-for="Password" class="form-label fw-bold mb-1 small required-label">New password</label>
                        <div class="position-relative">
                            <input asp-for="Password" type="password" class="form-control amazon-modern-input" id="PasswordInput" autocomplete="new-password" />
                            <button type="button" id="togglePassword" class="btn position-absolute end-0 top-0 h-100 px-3 border-0 bg-transparent text-muted" style="z-index: 5;">
                                <i class="fas fa-eye" id="eyeIcon"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger x-small mt-1 d-block"></span>
                        <div class="form-text small text-muted">Password must be at least 4 characters long.</div>
                    </div>

                    @* CONFIRM PASSWORD FIELD *@
                    <div class="mb-3 position-relative">
                        <label asp-for="ConfirmPassword" class="form-label fw-bold mb-1 small required-label">Confirm new password</label>
                        <div class="position-relative">
                            <input asp-for="ConfirmPassword" type="password" class="form-control amazon-modern-input" id="ConfirmPasswordInput" autocomplete="new-password" />
                            <button type="button" id="toggleConfirmPassword" class="btn position-absolute end-0 top-0 h-100 px-3 border-0 bg-transparent text-muted" style="z-index: 5;">
                                <i class="fas fa-eye" id="confirmEyeIcon"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger x-small mt-1 d-block"></span>
                    </div>

                    @* Submit Button *@
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-amazon-primary py-2 shadow-sm">
                            <span>Reset Password</span> <i class="fas fa-key ms-2"></i>
                        </button>
                    </div>

                </form>

                <div class="text-center mt-4">
                    <p class="small text-muted mb-0">
                        Remember your password? <a href="@Url.Action("Login", "Account")" class="text-amazon-link text-decoration-none">Sign in here</a>
                    </p>
                </div>

            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --amazon-dark: #111111;
            --amazon-orange: #e47911;
            --amazon-yellow: #f0c14b;
            --amazon-link: #0066c0;
        }

        body {
            font-family: "Segoe UI", system-ui, -apple-system, sans-serif;
            background-color: #fcfcfc;
        }

        /* Responsive UI Improvements */
        .amazon-modern-input {
            border: 1px solid #a6a6a6;
            border-radius: 4px;
            height: 44px; /* Mobile standard touch target */
            font-size: 16px !important; /* Prevents iOS auto-zoom on focus */
            padding: 10px 40px 10px 12px; /* Extra right padding for eye icon */
            transition: all 0.2s;
        }

            .amazon-modern-input:focus {
                border-color: var(--amazon-orange);
                box-shadow: 0 0 0 3px rgba(228, 121, 17, .15);
                outline: 0;
            }

        .btn-amazon-primary {
            background: linear-gradient(to bottom, #f7dfa5, #f0c14b);
            border: 1px solid #a88734;
            color: #111;
            height: 44px;
            font-weight: 500;
        }

            .btn-amazon-primary:active {
                background: #f0c14b;
            }

        .feature-icon-circle {
            width: 48px;
            height: 48px;
            background: rgba(255, 153, 0, 0.1);
            color: var(--amazon-orange);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .required-label::after {
            content: " *";
            color: #d00;
            font-weight: bold;
        }

        .x-small {
            font-size: 0.8rem;
        }

        .text-amazon-orange {
            color: var(--amazon-orange);
        }

        .text-amazon-dark {
            color: var(--amazon-dark);
        }

        .text-amazon-link {
            color: var(--amazon-link);
        }

            .text-amazon-link:hover {
                color: var(--amazon-link);
                text-decoration: underline;
            }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Toggle password visibility for new password
            $('#togglePassword').on('click', function (e) {
                e.preventDefault();
                const $passInput = $('#PasswordInput');
                const isPass = $passInput.attr('type') === 'password';
                $passInput.attr('type', isPass ? 'text' : 'password');
                $('#eyeIcon').toggleClass('fa-eye fa-eye-slash');
            });

            // Toggle password visibility for confirm password
            $('#toggleConfirmPassword').on('click', function (e) {
                e.preventDefault();
                const $confirmPassInput = $('#ConfirmPasswordInput');
                const isPass = $confirmPassInput.attr('type') === 'password';
                $confirmPassInput.attr('type', isPass ? 'text' : 'password');
                $('#confirmEyeIcon').toggleClass('fa-eye fa-eye-slash');
            });
        });
    </script>
}
