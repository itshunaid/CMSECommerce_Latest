@model CMSECommerce.Areas.Admin.Models.EditUserModel

@{
    ViewData["Title"] = "Profile Details";
}

<div class="container-fluid px-4 py-5" style="background: #EAEDED; min-height: 100vh;">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="amazon-card bg-white">
                <div class="amazon-header">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h1 class="h2 mb-0 fw-bold"><i class="fas fa-user-edit me-3"></i>Profile Details</h1>
                                <p class="mb-0 mt-2 opacity-75">Admin view for managing user profiles</p>
                            </div>
                            <div class="col-md-4 text-end">
                                @if (User.IsInRole("Admin") || User.Identity.Name == Model.UserName)
                                {
                                    <a asp-action="Profile" asp-route-id="@Model.Id" class="btn amazon-btn-secondary btn-sm">
                                        <i class="fas fa-edit me-1"></i>Edit Profile
                                    </a>
                                }
                                <i class="fas fa-user-circle fa-3x opacity-75 ms-3"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ProfileDetails" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="Id" />

                        <!-- Basic Information -->
                        <div class="amazon-section">
                            <h5><i class="fas fa-user me-2"></i>Basic Information</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="FirstName" class="form-label"></label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="LastName" class="form-label"></label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label asp-for="UserName" class="form-label"></label>
                                    <input asp-for="UserName" class="form-control" readonly />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" type="email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label asp-for="PhoneNumber" class="form-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Role" class="form-label"></label>
                                    <select asp-for="Role" class="form-select" asp-items="@(new SelectList(ViewBag.Roles ?? new List<string>(), Model.Role))">
                                        <option value="">Select Role</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mt-3">
                                <label asp-for="ITSNumber" class="form-label"></label>
                                <input asp-for="ITSNumber" class="form-control" />
                                <span asp-validation-for="ITSNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Professional Information -->
                        <div class="amazon-section">
                            <h5><i class="fas fa-briefcase me-2"></i>Professional Information</h5>
                            <div class="mb-3">
                                <label asp-for="Profession" class="form-label"></label>
                                <input asp-for="Profession" class="form-control" />
                                <span asp-validation-for="Profession" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="About" class="form-label"></label>
                                <textarea asp-for="About" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="About" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ServicesProvided" class="form-label"></label>
                                <input asp-for="ServicesProvided" class="form-control" placeholder="Separate services with commas" />
                                <span asp-validation-for="ServicesProvided" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Addresses -->
                        <div class="amazon-section">
                            <h5><i class="fas fa-map-marker-alt me-2"></i>Addresses</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="HomeAddress" class="form-label"></label>
                                    <textarea asp-for="HomeAddress" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="HomeAddress" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="BusinessAddress" class="form-label"></label>
                                    <textarea asp-for="BusinessAddress" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="BusinessAddress" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label asp-for="HomePhoneNumber" class="form-label"></label>
                                    <input asp-for="HomePhoneNumber" class="form-control" />
                                    <span asp-validation-for="HomePhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="BusinessPhoneNumber" class="form-label"></label>
                                    <input asp-for="BusinessPhoneNumber" class="form-control" />
                                    <span asp-validation-for="BusinessPhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Social Media -->
                        <div class="amazon-section">
                            <h5><i class="fas fa-share-alt me-2"></i>Social Media</h5>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label asp-for="LinkedInUrl" class="form-label"></label>
                                    <input asp-for="LinkedInUrl" class="form-control" type="url" />
                                    <span asp-validation-for="LinkedInUrl" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="FacebookUrl" class="form-label"></label>
                                    <input asp-for="FacebookUrl" class="form-control" type="url" />
                                    <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="InstagramUrl" class="form-label"></label>
                                    <input asp-for="InstagramUrl" class="form-control" type="url" />
                                    <span asp-validation-for="InstagramUrl" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mt-3">
                                <label asp-for="WhatsAppNumber" class="form-label"></label>
                                <input asp-for="WhatsAppNumber" class="form-control" />
                                <span asp-validation-for="WhatsAppNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Store Information -->
                        <div class="amazon-section">
                            <h5><i class="fas fa-store me-2"></i>Store Information</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="StoreName" class="form-label"></label>
                                    <input asp-for="StoreName" class="form-control" />
                                    <span asp-validation-for="StoreName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="GSTIN" class="form-label"></label>
                                    <input asp-for="GSTIN" class="form-control" />
                                    <span asp-validation-for="GSTIN" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label asp-for="StoreEmail" class="form-label"></label>
                                    <input asp-for="StoreEmail" class="form-control" type="email" />
                                    <span asp-validation-for="StoreEmail" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="StoreContact" class="form-label"></label>
                                    <input asp-for="StoreContact" class="form-control" />
                                    <span asp-validation-for="StoreContact" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-md-4">
                                    <label asp-for="StoreStreetAddress" class="form-label"></label>
                                    <input asp-for="StoreStreetAddress" class="form-control" />
                                    <span asp-validation-for="StoreStreetAddress" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="StoreCity" class="form-label"></label>
                                    <input asp-for="StoreCity" class="form-control" />
                                    <span asp-validation-for="StoreCity" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="StorePostCode" class="form-label"></label>
                                    <input asp-for="StorePostCode" class="form-control" />
                                    <span asp-validation-for="StorePostCode" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mt-3">
                                <label asp-for="StoreCountry" class="form-label"></label>
                                <input asp-for="StoreCountry" class="form-control" />
                                <span asp-validation-for="StoreCountry" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- File Uploads -->
                        <div class="amazon-section">
                            <h5><i class="fas fa-upload me-2"></i>File Uploads</h5>

                            <!-- Profile Image -->
                            <div class="mb-4">
                                <label asp-for="ProfileImageFile" class="form-label"></label>
                                @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                                {
                                    <div class="mb-3 d-flex align-items-center">
                                        <img src="/@Model.ProfileImagePath" alt="Current Profile Image" class="rounded-circle border me-3" style="width: 80px; height: 80px; object-fit: cover;" />
                                        <div>
                                            <small class="text-muted d-block">Current profile image</small>
                                            <small class="text-warning">Upload a new image to replace it</small>
                                        </div>
                                    </div>
                                }
                                <input asp-for="ProfileImageFile" class="form-control" type="file" accept="image/*" />
                                <div class="form-check mt-2">
                                    <input asp-for="IsImageApproved" class="form-check-input" />
                                    <label asp-for="IsImageApproved" class="form-check-label fw-bold"></label>
                                </div>
                            </div>

                            <!-- GPay QR Code -->
                            <div class="mb-4">
                                <label asp-for="GpayQRCodeFile" class="form-label"></label>
                                @if (!string.IsNullOrEmpty(Model.GpayQRCodePath))
                                {
                                    <div class="mb-3 d-flex align-items-center">
                                        <img src="/@Model.GpayQRCodePath" alt="Current GPay QR" class="border rounded me-3" style="width: 80px; height: 80px; object-fit: cover;" />
                                        <div>
                                            <small class="text-muted d-block">Current GPay QR code</small>
                                            <small class="text-warning">Upload a new QR code to replace it</small>
                                        </div>
                                    </div>
                                }
                                <input asp-for="GpayQRCodeFile" class="form-control" type="file" accept="image/*" />
                            </div>

                            <!-- PhonePe QR Code -->
                            <div class="mb-4">
                                <label asp-for="PhonePeQRCodeFile" class="form-label"></label>
                                @if (!string.IsNullOrEmpty(Model.PhonePeQRCodePath))
                                {
                                    <div class="mb-3 d-flex align-items-center">
                                        <img src="/@Model.PhonePeQRCodePath" alt="Current PhonePe QR" class="border rounded me-3" style="width: 80px; height: 80px; object-fit: cover;" />
                                        <div>
                                            <small class="text-muted d-block">Current PhonePe QR code</small>
                                            <small class="text-warning">Upload a new QR code to replace it</small>
                                        </div>
                                    </div>
                                }
                                <input asp-for="PhonePeQRCodeFile" class="form-control" type="file" accept="image/*" />
                            </div>

                            <!-- Profile Visibility -->
                            <div class="mt-3">
                                <div class="form-check">
                                    <input asp-for="IsProfileVisible" class="form-check-input" />
                                    <label asp-for="IsProfileVisible" class="form-check-label fw-bold"></label>
                                </div>
                            </div>
                        </div>

                        <!-- Password Change (Admin only) -->
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="amazon-section">
                                <h5><i class="fas fa-key me-2"></i>Password Management</h5>
                                <div class="mb-3">
                                    <label asp-for="NewPassword" class="form-label"></label>
                                    <input asp-for="NewPassword" class="form-control" type="password" />
                                    <small class="text-muted">Leave blank to keep existing password</small>
                                </div>
                            </div>
                        }

                        <!-- Submit Buttons -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Home
                            </a>
                            <div>
                                @if (User.IsInRole("Admin"))
                                {
                                    <button type="submit" class="btn btn-success me-2">
                                        <i class="fas fa-save me-2"></i>Save Changes
                                    </button>
                                    <a asp-action="DeleteUser" asp-route-userId="@Model.Id" class="btn btn-danger"
                                       onclick="return confirm('Are you sure you want to delete this user? This action cannot be undone.')">
                                        <i class="fas fa-trash me-2"></i>Delete User
                                    </a>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-2"></i>Save Changes
                                    </button>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
