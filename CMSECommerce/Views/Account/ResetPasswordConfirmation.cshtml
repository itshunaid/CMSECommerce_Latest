@{
    ViewData["Title"] = "Password Reset Successful";
    ViewData["HideLayoutSidebar"] = true;
}

<div class="amazon-login-wrapper py-3 py-md-5 d-flex align-items-center">
    <div class="container">
        <div class="row g-0 justify-content-center align-items-stretch">

            @* --- LEFT PANEL: BRANDING (Hidden on Mobile) --- *@
            <div class="col-lg-5 d-none d-lg-flex flex-column justify-content-center p-5 bg-white border-end rounded-start-2 shadow-sm">
                <div class="brand-logo mb-4">
                    <div class="d-flex align-items-center h2 fw-bold text-amazon-dark m-0">
                        <i class="fas fa-box text-amazon-orange me-2"></i>
                        <span style="font-weight: 300;">WE</span><span class="text-amazon-orange">y</span>paari
                    </div>
                </div>
                <h1 class="display-6 fw-bold mb-3 text-amazon-dark">Secure Password Reset</h1>
                <p class="text-secondary mb-5">
                    Your password has been successfully updated. You can now access your account with enhanced security.
                </p>

                <div class="features-list">
                    <div class="d-flex align-items-center mb-4">
                        <div class="feature-icon-circle me-3">
                            <i class="fas fa-lock"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">Enhanced Security</h6>
                            <p class="small text-muted mb-0">Your account is now protected with your new password.</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-4">
                        <div class="feature-icon-circle me-3">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">Account Protection</h6>
                            <p class="small text-muted mb-0">Multi-factor authentication available for added security.</p>
                        </div>
                    </div>
                </div>
            </div>

            @* --- RIGHT PANEL: CONFIRMATION --- *@
            <div class="col-12 col-sm-10 col-md-8 col-lg-4 p-4 p-lg-5 bg-white shadow-sm border rounded-2 rounded-lg-start-0">

                @* Mobile Logo *@
                <div class="text-center mb-4 d-lg-none">
                    <div class="d-flex align-items-center justify-content-center h3 fw-bold text-amazon-dark">
                        <i class="fas fa-box text-amazon-orange me-2"></i>
                        <span style="font-weight: 300;">WE</span><span class="text-amazon-orange">y</span>paari
                    </div>
                </div>

                @* Success Alert *@
                <div class="alert alert-success border-0 border-start border-4 border-success shadow-sm py-3 mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-check-circle fs-4 me-3 text-success"></i>
                        <h6 class="fw-bold mb-0">Password Reset Complete</h6>
                    </div>
                    <div class="small ps-5">
                        Your password has been successfully reset. You can now sign in with your new password.
                    </div>
                </div>

                <div class="confirmation-header mb-4">
                    <h2 class="fw-normal text-amazon-dark h4">Welcome Back</h2>
                    <p class="text-muted small">Access your account and continue shopping securely.</p>
                </div>

                <div class="d-grid mt-4">
                    <a href="@Url.Action("Login", "Account")" class="btn btn-amazon-primary py-2 shadow-sm text-decoration-none">
                        <span>Sign In to Your Account</span> <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>

                <div class="text-center mt-4">
                    <p class="small text-muted mb-0">
                        Need help? <a href="@Url.Action("ForgotPassword", "Account")" class="text-amazon-link text-decoration-none">Reset password again</a>
                    </p>
                </div>

            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --amazon-dark: #111111;
            --amazon-orange: #e47911;
            --amazon-yellow: #f0c14b;
            --amazon-link: #0066c0;
        }

        body {
            font-family: "Segoe UI", system-ui, -apple-system, sans-serif;
            background-color: #fcfcfc;
        }

        .btn-amazon-primary {
            background: linear-gradient(to bottom, #f7dfa5, #f0c14b);
            border: 1px solid #a88734;
            color: #111;
            height: 44px;
            font-weight: 500;
            text-decoration: none;
        }

            .btn-amazon-primary:hover {
                background: #f0c14b;
                color: #111;
                text-decoration: none;
            }

        .feature-icon-circle {
            width: 48px;
            height: 48px;
            background: rgba(255, 153, 0, 0.1);
            color: var(--amazon-orange);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .text-amazon-orange {
            color: var(--amazon-orange);
        }

        .text-amazon-dark {
            color: var(--amazon-dark);
        }

        .text-amazon-link {
            color: var(--amazon-link);
        }

            .text-amazon-link:hover {
                color: var(--amazon-link);
                text-decoration: underline;
            }
    </style>
}
