@model OrderDetailsViewModel

@{
    // Set the page title dynamically
    ViewData["Title"] = $"Order #{Model.Order.Id} Details";

    // Check if the order has been entirely shipped (assuming Shipped is a boolean on Order model)
    bool isOrderShipped = Model.Order.Shipped;
}

<div class="container my-4 amazon-order-page">
    <div class="row">

        @* --- Left Column: Order Header and Item Details (Approx 75% width) --- *@
        <div class="col-lg-9">

            <h1 class="h2 fw-bold text-dark mb-4 border-bottom pb-2">
                Order Details <span class="text-amazon-dark">#@Model.Order.Id</span>
            </h1>

            @* --- Status & Summary Card (Amazon Style) --- *@
            <div class="card shadow-sm mb-4 border-0 amazon-card-light">
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-9">
                            <h3 class="h4 fw-bold mb-2 status-heading">
                                @(isOrderShipped ? "Delivered / Completed" : "Processing / Preparing for Shipment")
                            </h3>
                            <p class="text-muted small mb-1">
                                Placed on: <strong>@Model.Order.DateTime.ToString("MMMM dd, yyyy")</strong>
                            </p>
                            <p class="text-muted small mb-0">
                                Order Total: <span class="fw-bold price-red">@Model.Order.GrandTotal.ToString("C2")</span>
                            </p>
                        </div>
                        <div class="col-md-3 text-end d-flex align-items-center justify-content-end">
                            <a href="#" class="btn btn-sm btn-amazon-checkout-light fw-bold">Invoice</a>
                        </div>
                    </div>
                </div>
            </div>

            @* --- Items List --- *@
            <h2 class="h3 fw-bold mb-3 amazon-section-title">Order Items</h2>

            @foreach (var item in Model.OrderDetails)
            {
                <div class="card mb-3 border amazon-card-item">
                    <div class="card-body p-3">
                        <div class="row align-items-center">

                            <div class="col-2 col-md-1">
                                <img src="/media/products/@item.Image"
                                     class="img-fluid rounded-3 order-item-image"
                                     alt="@item.ProductName" />
                            </div>

                            <div class="col-10 col-md-7">
                                <a href="#" class="text-amazon-link fw-semibold item-name-link text-decoration-none">
                                    @item.ProductName
                                </a>
                                <p class="small text-muted mb-0">Qty: @item.Quantity</p>
                            </div>

                            <div class="col-6 col-md-2 text-md-center">
                                <p class="mb-0 small text-muted">Price: @item.Price.ToString("C2")</p>
                                <p class="fw-bold price-red mb-0">@((item.Price * item.Quantity).ToString("C2"))</p>
                            </div>

                            <div class="col-6 col-md-2 text-end">
                                @{
                                    string statusClass = item.IsProcessed ? "text-success" : "text-danger";
                                    string statusText = item.IsProcessed ? "Shipped" : "Pending";
                                    string statusIcon = item.IsProcessed ? "fa-check-circle" : "fa-clock";
                                }
                                <span class="small @statusClass fw-semibold">
                                    <i class="fas @statusIcon me-1"></i> @statusText
                                </span>
                            </div>

                        </div>
                    </div>
                </div>
            }

            <div class="mt-4">
                <a href="javascript:history.go(-1)" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-arrow-left me-2"></i> View All Orders
                </a>
            </div>

        </div>

        @* --- Right Column: Shipping & Payment Summary (Approx 25% width) --- *@
        <div class="col-lg-3">
            <div class="sticky-top pt-lg-5" style="top: 20px;">
                <div class="card border rounded-3 p-3 shadow-sm amazon-side-summary">
                    <h5 class="fw-bold mb-3 border-bottom pb-2">Order Summary</h5>

                    <div class="d-flex justify-content-between small text-muted">
                        <span>Items Subtotal:</span>
                        <span>@Model.Order.GrandTotal.ToString("C2")</span>
                    </div>
                    <div class="d-flex justify-content-between small text-muted mb-3">
                        <span>Shipping & Handling:</span>
                        <span class="text-success fw-semibold">FREE</span>
                    </div>

                    <div class="d-flex justify-content-between pt-2 border-top">
                        <span class="fw-bold fs-6">Grand Total:</span>
                        <span class="fw-bold fs-5 price-red">@Model.Order.GrandTotal.ToString("C2")</span>
                    </div>

                    <hr class="my-3" />

                    <h6 class="fw-bold mb-2">Shipping To</h6>
                    <p class="small text-muted mb-1">@Model.Order.UserName</p>
                    <p class="small text-muted mb-0">123 Main St, Anytown, CA 90210 (Example)</p>

                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* --- AMAZON COLOR PALETTE --- */
        :root {
            --amazon-price-red: #B12704;
            --amazon-dark-text: #0F1111;
            --amazon-link-teal: #007185;
            --amazon-link-teal-hover: #C7511F; /* Amazon Hover Orange */
            --amazon-background-light: #f7f7f7;
            --amazon-card-border: #ddd;
        }

        .amazon-order-page {
            color: var(--amazon-dark-text);
        }

        .text-amazon-link {
            color: var(--amazon-link-teal) !important;
        }

            .text-amazon-link:hover {
                color: var(--amazon-link-teal-hover) !important;
            }

        .price-red {
            color: var(--amazon-price-red) !important;
        }

        /* --- CARD STYLING --- */
        .amazon-card-light {
            background-color: #fcfcfc;
            border: 1px solid var(--amazon-card-border) !important;
        }

        .amazon-card-item {
            border: 1px solid var(--amazon-card-border) !important;
            background-color: #fff;
        }

        /* Header Card Style */
        .status-heading {
            color: #C7511F; /* Darker orange for emphasis */
        }

        /* Side Summary Box */
        .amazon-side-summary {
            background-color: var(--amazon-background-light);
            border: 1px solid var(--amazon-card-border) !important;
        }

        /* Order Items */
        .order-item-image {
            width: 70px;
            height: 70px;
            object-fit: contain; /* Better for product images */
            border: 1px solid #eee;
        }

        /* Button Style (Light) */
        .btn-amazon-checkout-light {
            background-color: #f0f2f2;
            border: 1px solid #c9c9c9;
            color: var(--amazon-dark-text) !important;
            border-radius: 7px;
            box-shadow: 0 1px 2px rgba(15, 17, 17, 0.15);
        }

            .btn-amazon-checkout-light:hover {
                background-color: #e0e0e0;
            }
    </style>
}