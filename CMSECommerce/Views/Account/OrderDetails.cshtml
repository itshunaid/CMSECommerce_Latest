@model OrderDetailsViewModel

@{
    if (Model.Order == null)
    {
        <div class="alert alert-warning" role="alert">
            No order details found.
        </div>
        return;
    }
    ViewData["Title"] = $"Order #{Model.Order.Id} Details";
    bool isOrderShipped = Model.Order.Shipped;

    // Safety references
    var profile = Model.UserProfile;
    var store = Model.UserProfile?.Store;
}

<div class="container my-4 amazon-order-page">
    <div class="row">

        @* --- Left Column: Order Header and Item Details --- *@
        <div class="col-lg-9">

            <h1 class="h2 fw-bold text-dark mb-4 border-bottom pb-2">
                Order Details <span class="text-amazon-dark">#@Model.Order.Id</span>
            </h1>

            @* --- Status & Summary Card --- *@
            <div class="card shadow-sm mb-4 border-0 amazon-card-light">
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-9">
                            <h3 class="h4 fw-bold mb-2 status-heading">
                                @(isOrderShipped ? "Delivered / Completed" : "Processing / Preparing for Shipment")
                            </h3>
                            <p class="text-muted small mb-1">
                                Placed on: <strong>@Model.Order.DateTime.ToString("MMMM dd, yyyy")</strong>
                            </p>
                            <p class="text-muted small mb-0">
                                Order Total: <span class="fw-bold price-red">@Model.Order.GrandTotal.ToString("C2")</span>
                            </p>
                        </div>
                        <div class="col-md-3 text-end d-flex align-items-center justify-content-end">
                            <a asp-controller="Orders" asp-action="Invoice" asp-route-id="@Model.Order.Id" target="_blank"
                               class="btn btn-sm btn-amazon-checkout-light fw-bold">
                                <i class="fas fa-file-invoice me-1"></i> Invoice
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            @* --- Items List --- *@
            <h2 class="h3 fw-bold mb-3 amazon-section-title">Order Items</h2>

            @foreach (var item in Model.OrderDetails)
            {
                <div class="card mb-3 border amazon-card-item">
                    <div class="card-body p-3">
                        <div class="row align-items-center">
                            <div class="col-2 col-md-1">
                                <img src="/media/products/@item.Image" class="img-fluid rounded-3 order-item-image" alt="@item.ProductName" />
                            </div>

                            <div class="col-10 col-md-5">
                                <a asp-controller="Products" asp-action="Product" asp-route-slug="@item.ProductName"
                                   class="text-amazon-link fw-semibold item-name-link text-decoration-none">
                                    @item.ProductName
                                </a>
                                <p class="small text-muted mb-1">Qty: @item.Quantity</p>

                                @* --- Seller Info logic --- *@
                                <div class="mt-2 p-2 rounded-2 bg-light border-start border-3 border-amazon-orange">
                                    <div class="small">
                                        <span class="text-muted">Sold by:</span>
                                        <span class="fw-bold text-dark">
                                            @(string.IsNullOrEmpty(item.ProductOwner) ? (store?.StoreName ?? "Platform Direct") : item.ProductOwner)
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-6 col-md-2 text-md-center mt-3 mt-md-0">
                                <p class="mb-0 small text-muted">Price: @item.Price.ToString("C2")</p>
                                <p class="fw-bold price-red mb-0">@((item.Price * item.Quantity).ToString("C2"))</p>
                            </div>

                            <div class="col-6 col-md-4 text-end mt-3 mt-md-0">
                                @{
                                    string statusClass = item.IsProcessed ? "text-success" : "text-danger";
                                    string statusText = item.IsProcessed ? "Shipped" : "Pending Seller Action";
                                    string statusIcon = item.IsProcessed ? "fa-check-circle" : "fa-clock";
                                }
                                <div class="d-flex flex-column align-items-end">
                                    <span class="small @statusClass fw-semibold">
                                        <i class="fas @statusIcon me-1"></i> @statusText
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-arrow-left me-2"></i> Back to My Orders
                </a>
            </div>
        </div>

        @* --- Right Column: Summary & Shipping --- *@
        <div class="col-lg-3">
            <div class="sticky-top pt-lg-5" style="top: 20px;">
                <div class="card border rounded-3 p-3 shadow-sm amazon-side-summary">
                    <h5 class="fw-bold mb-3 border-bottom pb-2">Order Summary</h5>

                    <div class="d-flex justify-content-between small text-muted">
                        <span>Items Subtotal:</span>
                        <span>@Model.Order.GrandTotal.ToString("C2")</span>
                    </div>

                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <span class="small text-muted">Shipping:</span>
                        <div class="text-end">
                            <div class="text-success fw-bold small">Calculated by Seller</div>
                            <div class="text-muted" style="font-size: 0.75rem; line-height: 1.2;">
                                Based on @(store?.City ?? "Seller Location")
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between pt-2 border-top">
                        <span class="fw-bold fs-6">Grand Total:</span>
                        <span class="fw-bold fs-5 price-red">@Model.Order.GrandTotal.ToString("C2")</span>
                    </div>

                    <hr class="my-3" />

                    @* --- SHIPPING ADDRESS SECTION (From Profile) --- *@
                    <h6 class="fw-bold mb-2"><i class="fas fa-truck me-1"></i> Shipping To</h6>
                    <div class="shipping-info-box small text-muted">
                        @if (profile != null)
                        {
                            <p class="fw-bold text-dark mb-1">@profile.FirstName @profile.LastName</p>
                            <p class="mb-1">@profile.HomeAddress</p>
                            <p class="mb-1">@profile.Store.City, @profile.Store.PostCode</p>

                            @if (!string.IsNullOrEmpty(profile.WhatsAppNumber))
                            {
                                <p class="mb-1 text-success"><i class="fab fa-whatsapp"></i> @profile.WhatsAppNumber</p>
                            }

                            @if (!string.IsNullOrEmpty(profile.HomePhoneNumber))
                            {
                                <p class="mb-0"><i class="fas fa-phone-alt"></i> @profile.HomePhoneNumber</p>
                            }
                        }
                        else
                        {
                            <p class="mb-1 fw-bold text-dark">@Model.Order.UserName</p>
                            <p class="fst-italic text-danger">Address details not found in profile.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --amazon-price-red: #B12704;
            --amazon-dark-text: #0F1111;
            --amazon-link-teal: #007185;
            --amazon-link-teal-hover: #C7511F;
            --amazon-background-light: #f7f7f7;
            --amazon-card-border: #ddd;
            --amazon-orange: #febd69;
        }

        .amazon-order-page {
            color: var(--amazon-dark-text);
        }

        .text-amazon-link {
            color: var(--amazon-link-teal) !important;
        }

            .text-amazon-link:hover {
                color: var(--amazon-link-teal-hover) !important;
                text-decoration: underline !important;
            }

        .price-red {
            color: var(--amazon-price-red) !important;
        }

        .amazon-card-light {
            background-color: #fcfcfc;
            border: 1px solid var(--amazon-card-border) !important;
        }

        .amazon-card-item {
            border: 1px solid var(--amazon-card-border) !important;
            background-color: #fff;
            transition: transform 0.2s;
        }

            .amazon-card-item:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.05);
            }

        .status-heading {
            color: #C7511F;
        }

        .amazon-side-summary {
            background-color: var(--amazon-background-light);
            border: 1px solid var(--amazon-card-border) !important;
        }

        .order-item-image {
            width: 70px;
            height: 70px;
            object-fit: contain;
            background: white;
            border: 1px solid #eee;
        }

        .btn-amazon-checkout-light {
            background-color: #f0f2f2;
            border: 1px solid #c9c9c9;
            color: var(--amazon-dark-text) !important;
            border-radius: 7px;
            box-shadow: 0 2px 5px rgba(213,217,217,.5);
        }

            .btn-amazon-checkout-light:hover {
                background-color: #e3e6e6;
            }

        .border-amazon-orange {
            border-color: var(--amazon-orange) !important;
        }

        .shipping-info-box p {
            margin-bottom: 2px;
        }
    </style>
}