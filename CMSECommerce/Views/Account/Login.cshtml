@model LoginViewModel

@{
    ViewData["Title"] = "Sign-In";
    const string controllerName = "Account";
}

<div class="amazon-login-page min-vh-100 d-flex align-items-center py-4">
    <div class="container overflow-hidden">
        <div class="row justify-content-center align-items-center">

            <div class="col-lg-5 d-none d-lg-flex flex-column justify-content-center align-items-start pe-5">
                <h1 class="display-5 fw-bold mb-3 text-amazon-dark">Welcome Back</h1>
                <p class="text-muted mb-4 small">
                    Sign in to access your orders, track shipments, and manage your account details.
                    <strong>Your security is our priority.</strong>
                </p>
                <ul class="list-unstyled text-muted small">
                    <li class="mb-2"><i class="bi bi-check-circle-fill me-2 text-amazon-link"></i> Secure and fast checkout</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill me-2 text-amazon-link"></i> View order history & invoices</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill me-2 text-amazon-link"></i> Sync your cart across devices</li>
                </ul>
            </div>

            <div class="col-12 col-sm-10 col-md-7 col-lg-4">

                <div class="text-center mb-4 d-lg-none">
                    <h3 class="fw-bold text-amazon-dark">CMSECommerce</h3>
                </div>

                @* --- STATUS ALERTS --- *@
                @if (ViewBag.RequestSubmitted == true)
                {
                    <div class="amazon-status-box border rounded mb-3 p-3 shadow-sm bg-white border-start-teal">
                        <div class="d-flex">
                            <i class="bi bi-info-circle-fill fs-4 me-3 text-amazon-link"></i>
                            <div>
                                <h6 class="fw-bold mb-1 text-amazon-dark">Request Status: Pending</h6>
                                <p class="small mb-0 text-muted">Review in progress. We'll email you once your account is unlocked.</p>
                            </div>
                        </div>
                    </div>
                }
                else if (ViewBag.IsLockedOut == true)
                {
                    <div class="amazon-status-box border rounded mb-3 p-3 shadow-sm bg-white border-start-orange">
                        <div class="d-flex align-items-start">
                            <i class="bi bi-exclamation-triangle-fill fs-4 me-3 icon-orange"></i>
                            <div class="w-100">
                                <h6 class="fw-bold mb-1 icon-orange">Account Locked</h6>

                                @* Displaying the Error Message from ModelState (Contains Admin Notes if Denied) *@
                                <div class="text-amazon-dark small mb-3">
                                    @Html.ValidationSummary(true, "", new { @class = "list-unstyled mb-0" })
                                </div>

                                <form asp-action="RequestAccountUnlock" asp-controller="@controllerName" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" value="@ViewBag.UserId" />
                                    <button type="submit" class="btn btn-amazon-secondary btn-sm w-100 py-1 fw-bold">
                                        Submit New Unlock Request
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }

                @* --- SIGN-IN BOX --- *@
                <div class="amazon-form-box p-4 border rounded shadow-sm bg-white">
                    <h2 class="h3 fw-bold mb-4 text-amazon-dark">Sign-In</h2>

                    <form method="post" asp-controller="@controllerName" asp-action="Login" role="form">
                        @* Keep only Model-level errors here if not locked out *@
                        @if (ViewBag.IsLockedOut != true)
                        {
                            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                        }

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label fw-bold small text-amazon-dark mb-1">Email or phone</label>
                            <input asp-for="UserName" class="form-control amazon-input-field shadow-none" autofocus />
                            <span asp-validation-for="UserName" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-3">
                            <div class="d-flex justify-content-between">
                                <label asp-for="Password" class="form-label fw-bold small text-amazon-dark mb-1">Password</label>
                                <a asp-action="ForgotPassword" class="small text-amazon-link text-decoration-none">Forgot Password?</a>
                            </div>
                            <input asp-for="Password" type="password" class="form-control amazon-input-field shadow-none" />
                            <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input class="form-check-input amazon-checkbox shadow-none" type="checkbox" asp-for="RememberMe">
                            <label class="form-check-label small text-amazon-dark" asp-for="RememberMe">Keep me signed in</label>
                        </div>

                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-amazon-checkout w-100 fw-bold">Continue</button>
                        </div>

                        <p class="small text-muted mb-0" style="font-size: 11px; line-height: 1.4;">
                            By continuing, you agree to our <a href="#" class="text-amazon-link">Conditions of Use</a> and <a href="#" class="text-amazon-link">Privacy Notice</a>.
                        </p>
                    </form>
                </div>

                @* --- REGISTER LINK --- *@
                <div class="text-center mt-4">
                    <div class="position-relative mb-3">
                        <hr class="m-0" />
                        <span class="position-absolute top-50 start-50 translate-middle bg-amazon-bg px-2 small text-muted">New to us?</span>
                    </div>
                    <a asp-action="Register" class="btn btn-amazon-secondary w-100 fw-bold">Create account</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --amazon-dark-text: #0F1111;
            --amazon-yellow-action: #FFD814;
            --amazon-yellow-hover: #F7CA00;
            --amazon-link-teal: #007185;
            --amazon-orange: #c45500;
            --amazon-bg: #f7f7f7;
        }

        body {
            background-color: var(--amazon-bg);
        }

        .bg-amazon-bg {
            background-color: var(--amazon-bg) !important;
        }

        .amazon-input-field {
            height: 31px;
            font-size: 14px;
            border: 1px solid #a6a6a6;
            border-radius: 3px;
        }

            .amazon-input-field:focus {
                border-color: #e77600 !important;
                box-shadow: 0 0 3px 2px rgba(228,121,17,.5) !important;
            }

        .btn-amazon-checkout {
            background: var(--amazon-yellow-action);
            border: 1px solid #FCD200;
            color: var(--amazon-dark-text);
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(213,217,217,.5);
        }

            .btn-amazon-checkout:hover {
                background: var(--amazon-yellow-hover);
            }

        .btn-amazon-secondary {
            background: #f0f2f2;
            border: 1px solid #c9c9c9;
            border-radius: 8px;
            color: var(--amazon-dark-text);
            box-shadow: 0 2px 5px rgba(213,217,217,.1);
        }

            .btn-amazon-secondary:hover {
                background: #e3e6e6;
            }

        .border-start-teal {
            border-left: 5px solid var(--amazon-link-teal) !important;
        }

        .border-start-orange {
            border-left: 5px solid var(--amazon-orange) !important;
        }

        .icon-orange {
            color: var(--amazon-orange);
        }

        .text-amazon-link {
            color: var(--amazon-link-teal) !important;
        }

            .text-amazon-link:hover {
                color: #C7511F !important;
                text-decoration: underline !important;
            }

        /* Fix for validation list styling in Amazon box */
        .amazon-status-box .validation-summary-errors ul {
            padding-left: 0;
            margin-bottom: 0;
            list-style: none;
        }
    </style>
}