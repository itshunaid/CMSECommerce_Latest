@model LoginViewModel

@{
    ViewData["Title"] = "Sign-In";
    const string controllerName = "Account";
}

<div class="amazon-login-page py-5">
    
    <div class="container d-flex justify-content-center overflow-hidden">

        <div class="col-lg-10 col-xl-8">

            
            <div class="row justify-content-center align-items-center">

                
                <div class="col-lg-6 d-none d-lg-flex flex-column justify-content-center align-items-start pe-4 me-auto">
                    <h1 class="display-5 fw-bold mb-3 text-amazon-dark">Welcome</h1>
                    <p class="text-muted mb-4 small">
                        Access your account to track orders, manage your wishlist, and explore deals.
                    </p>
                    <ul class="list-unstyled text-muted small">
                        <li class="mb-2"><i class="fas fa-check-circle me-2 text-amazon-link"></i> Track your orders</li>
                        <li class="mb-2"><i class="fas fa-check-circle me-2 text-amazon-link"></i> Personalized recommendations</li>
                        <li class="mb-2"><i class="fas fa-check-circle me-2 text-amazon-link"></i> Save your favorite products</li>
                    </ul>
                </div>

                
                <div class="col-lg-5 col-md-8 col-sm-10">

                    <div class="amazon-form-box p-4 border rounded shadow-sm bg-white">
                        <h2 class="h3 fw-bold mb-4 text-amazon-dark">Sign-In</h2>

                        <form method="post" asp-controller="@controllerName" asp-action="Login" role="form" title="User Login Form">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger small p-2" role="alert"></div>

                            <div class="form-group mb-3">
                                <label asp-for="UserName" class="form-label fw-bold small text-amazon-dark mb-1">
                                    User Name
                                </label>
                                <input asp-for="UserName" class="form-control amazon-input-field" autofocus />
                                <span asp-validation-for="UserName" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Password" class="form-label fw-bold small text-amazon-dark mb-1">
                                    Password
                                </label>
                                <input asp-for="Password" type="password" class="form-control amazon-input-field" />
                                <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                @if (Model.GetType().GetProperty("RememberMe") != null)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input amazon-checkbox" type="checkbox" asp-for="RememberMe">
                                        <label class="form-check-label small text-muted" asp-for="RememberMe">Keep me signed in</label>
                                    </div>
                                }
                                <a asp-controller="@controllerName" asp-action="ForgotPassword" class="small fw-semibold text-decoration-none text-amazon-link">
                                    Forgot your password?
                                </a>
                            </div>

                            <input type="hidden" asp-for="ReturnUrl" />

                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-amazon-checkout w-100 fw-bold">
                                    Continue
                                </button>
                            </div>

                        </form>

                    </div>

                
                    <div class="text-center mt-4">
                        <p class="small text-muted mb-3">
                            New to CMSECommerce?
                        </p>
                        <a asp-controller="@controllerName" asp-action="Register"
                           class="btn btn-amazon-secondary w-75 fw-bold">
                            Create account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* --- AMAZON COLOR PALETTE --- */
        :root {
            --amazon-dark-text: #0F1111;
            --amazon-yellow-action: #FFD814;
            --amazon-yellow-action-hover: #F7CA00;
            --amazon-link-teal: #007185;
            --amazon-link-teal-hover: #C7511F; /* Amazon Orange Hover */
            --amazon-light-button-bg: #f0f2f2;
            --amazon-light-button-border: #c9c9c9;
            --amazon-page-bg: #f7f7f7;
        }

        .amazon-login-page {
            background-color: var(--amazon-page-bg);
            min-height: 80vh;
        }

        .text-amazon-dark {
            color: var(--amazon-dark-text);
        }

        .text-amazon-link {
            color: var(--amazon-link-teal) !important;
        }

            .text-amazon-link:hover {
                color: var(--amazon-link-teal-hover) !important;
            }

        /* Central Form Box Styling */
        .amazon-form-box {
            border-color: #ddd !important;
            background-color: #fff;
        }

        /* Input Field Styling (Subtle Amazon look) */
        .amazon-input-field {
            height: 31px;
            padding: 3px 7px;
            font-size: 14px;
            border-radius: 3px;
            border: 1px solid #a6a6a6;
            box-shadow: 0 1px 0 rgba(0,0,0,.04);
        }

            .amazon-input-field:focus {
                border-color: #e77600; /* Amazon orange focus border */
                box-shadow: 0 0 3px 2px rgba(228,121,17,.5);
            }

        /* Primary Action Button (Continue) - Amazon Yellow */
        .btn-amazon-checkout {
            background-color: var(--amazon-yellow-action) !important;
            border-color: #FCD200 !important;
            color: var(--amazon-dark-text) !important;
            font-weight: 700;
            box-shadow: 0 2px 5px 0 rgba(213, 217, 217, .5);
            border-radius: 7px !important;
            height: 35px; /* Standard button height */
            line-height: 1.2;
            font-size: 13px;
        }

            .btn-amazon-checkout:hover {
                background-color: var(--amazon-yellow-action-hover) !important;
            }

        /* Secondary Action Button (Create Account) - Amazon Light Grey */
        .btn-amazon-secondary {
            background-color: var(--amazon-light-button-bg) !important;
            border: 1px solid var(--amazon-light-button-border) !important;
            color: var(--amazon-dark-text) !important;
            border-radius: 7px !important;
            box-shadow: 0 1px 2px rgba(15, 17, 17, 0.15);
            height: 35px;
            line-height: 1.2;
            font-size: 13px;
        }

            .btn-amazon-secondary:hover {
                background-color: #e0e0e0 !important;
                border-color: #a2a2a2 !important;
            }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}