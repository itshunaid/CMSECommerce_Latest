@model OrderDetailsViewModel
@using System.Globalization
@{
    Layout = "_Layout";
    ViewData["Title"] = "Tax Invoice - #" + Model.Order.Id;
    var indianCulture = new CultureInfo("en-IN");

    // Safety check for Profile and Store
    var profile = Model.UserProfile;
    // Note: Model.UserProfile.Store is populated via .Include() in the Controller
    var store = Model.UserProfile?.Store;
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>

<div class="container my-4 no-print">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="MyOrders" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Orders
        </a>
        <div class="btn-group shadow-sm">
            <button onclick="downloadInvoice()" class="btn btn-primary fw-bold">
                <i class="fas fa-file-pdf me-2"></i> Download PDF
            </button>
            <button onclick="window.print()" class="btn btn-dark fw-bold">
                <i class="fas fa-print me-2"></i> Print Invoice
            </button>
        </div>
    </div>
</div>

<div id="invoice-document">
    <div class="container invoice-wrapper bg-white shadow-sm border p-5 mb-5">

        @* --- Header Section --- *@
        <div class="row mb-5 align-items-center">
            <div class="col-6">
                @if (!string.IsNullOrEmpty(store?.StoreName))
                {
                    <h2 class="fw-bold text-dark mb-0">@store.StoreName</h2>
                    <p class="text-muted small mb-0">@store.StreetAddress, @store.City</p>
                    <p class="text-muted x-small">Contact: @store.Contact | @store.Email</p>
                }
                else
                {
                    <h2 class="fw-bold text-dark mb-0">Independent Seller</h2>
                    <p class="text-muted small">Quality Goods Delivered to Your Door</p>
                }
            </div>
            <div class="col-6 text-end">
                <h1 class="display-6 fw-bold text-uppercase text-secondary">Tax Invoice</h1>
                <p class="mb-0 fw-bold">Invoice #: @Model.Order.Id</p>
                <p class="text-muted small">Date: @Model.Order.DateTime.ToString("MMMM dd, yyyy")</p>
            </div>
        </div>

        @* --- Addresses Section --- *@
        <div class="row mb-5">
            <div class="col-6">
                <h6 class="text-muted text-uppercase fw-bold border-bottom pb-2 mb-3">Billed To</h6>
                <div class="ps-1">
                    @if (profile != null)
                    {
                        <p class="fw-bold mb-1">@profile.FirstName @profile.LastName</p>
                        <p class="text-muted small mb-1">@profile.HomeAddress</p>
                        <p class="text-muted small mb-1"><i class="fas fa-phone me-1"></i> @profile.HomePhoneNumber</p>
                        @if (!string.IsNullOrEmpty(profile.ITSNumber))
                        {
                            <p class="text-muted x-small mb-0">ITS ID: @profile.ITSNumber</p>
                        }
                    }
                    else
                    {
                        <p class="fw-bold mb-1">@Model.Order.UserName</p>
                        <p class="text-muted small mb-1">Contact: @Model.Order.PhoneNumber</p>
                    }
                </div>
            </div>
            <div class="col-6 text-end">
                <h6 class="text-muted text-uppercase fw-bold border-bottom pb-2 mb-3">Sold By</h6>
                <div class="pe-1">
                    @if (store != null && !string.IsNullOrEmpty(store.StoreName))
                    {
                        <p class="fw-bold mb-1">@store.StoreName</p>
                        <p class="text-muted small mb-1">@store.StreetAddress</p>
                        <p class="text-muted small mb-1">@store.City, @store.PostCode, @store.Country</p>
                        @if (!string.IsNullOrEmpty(store.GSTIN))
                        {
                            <p class="text-muted small mb-1"><strong>GSTIN:</strong> @store.GSTIN</p>
                        }
                        <p class="text-muted small mb-0">@store.Email</p>
                    }
                    else
                    {
                        <p class="fw-bold mb-1">@(profile?.FirstName) @(profile?.LastName)</p>
                        <p class="text-muted small mb-1">@profile?.BusinessAddress</p>
                        <p class="text-muted small mb-0">@profile?.WhatsAppNumber</p>
                    }
                </div>
            </div>
        </div>

        @* --- Line Items Table --- *@
        <div class="table-responsive mb-5">
            <table class="table table-hover border">
                <thead class="table-light text-uppercase small">
                    <tr>
                        <th class="py-3">Description</th>
                        <th class="py-3 text-center">Unit Price</th>
                        <th class="py-3 text-center">Qty</th>
                        <th class="py-3 text-end">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDetails)
                    {
                        <tr>
                            <td class="py-3">
                                <div class="fw-bold text-dark">@item.ProductName</div>
                                <div class="text-muted x-small">Category: @(item.ProductOwner ?? "General")</div>
                            </td>
                            <td class="py-3 text-center align-middle">@item.Price.ToString("C", indianCulture)</td>
                            <td class="py-3 text-center align-middle">@item.Quantity</td>
                            <td class="py-3 text-end align-middle fw-bold">@((item.Price * item.Quantity).ToString("C", indianCulture))</td>
                        </tr>
                    }
                </tbody>
                <tfoot class="border-0">
                    <tr>
                        <td colspan="2" class="border-0"></td>
                        <td class="text-end py-2 fw-bold text-muted border-0">Grand Total:</td>
                        <td class="text-end py-2 border-0 fs-5 fw-bold text-danger">@Model.Order.GrandTotal.ToString("C", indianCulture)</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        @* --- Payment & QR Section --- *@
        <div class="row mt-5">
            <div class="col-7">
                <h6 class="fw-bold text-dark border-bottom pb-2">Terms & Conditions</h6>
                <p class="text-muted x-small">
                    1. Goods once sold will not be taken back.<br />
                    2. Fulfillment managed by: <strong>@(store?.StoreName ?? "Independent Seller")</strong>.<br />
                    3. For support, contact: <strong>@(store?.Contact ?? profile?.WhatsAppNumber)</strong>.
                </p>
            </div>
            <div class="col-5 text-center">
                <div class="d-flex justify-content-center gap-3 mb-2">
                    @if (!string.IsNullOrEmpty(profile?.GpayQRCodePath))
                    {
                        <div class="text-center">
                            <img src="/@profile.GpayQRCodePath.TrimStart('/')" style="width: 80px; height: 80px; border: 1px solid #eee;" />
                            <p class="x-small mt-1 mb-0">GPay</p>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(profile?.PhonePeQRCodePath))
                    {
                        <div class="text-center">
                            <img src="/@profile.PhonePeQRCodePath.TrimStart('/')" style="width: 80px; height: 80px; border: 1px solid #eee;" />
                            <p class="x-small mt-1 mb-0">PhonePe</p>
                        </div>
                    }
                </div>
                <div class="pt-2 border-top">
                    <p class="small fw-bold text-dark mb-0">Authorized Signatory</p>
                    <p class="x-small text-muted">@DateTime.Now.ToString("dd-MMM-yyyy HH:mm")</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function downloadInvoice() {
            const element = document.getElementById('invoice-document');
            const options = {
                margin:       [0.5, 0.5, 0.5, 0.5],
                filename:     'Invoice_#@(Model.Order.Id).pdf',
                image:        { type: 'jpeg', quality: 0.98 },
                html2canvas:  { scale: 2, useCORS: true, logging: false },
                jsPDF:        { unit: 'in', format: 'a4', orientation: 'portrait' }
            };
            html2pdf().set(options).from(element).save();
        }
    </script>
}

@section Styles {
    <style>
        .invoice-wrapper {
            max-width: 850px;
            margin: auto;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .x-small {
            font-size: 0.75rem;
        }

        @@media print {
            .no-print, header, footer, .navbar {
                display: none !important;
            }

            .invoice-wrapper {
                border: none !important;
                box-shadow: none !important;
                padding: 0 !important;
                width: 100% !important;
                max-width: 100% !important;
            }

            body {
                background-color: white !important;
            }
        }
    </style>
}