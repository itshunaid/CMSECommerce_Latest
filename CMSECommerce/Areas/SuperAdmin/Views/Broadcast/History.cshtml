@model IEnumerable<CMSECommerce.Models.BroadcastMessage>

@{
    ViewData["Title"] = "Broadcast History";
}

<div class="container my-5">
    <div class="row mb-4">
        <div class="col-lg-10">
            <h2>
                <i class="fas fa-history me-2"></i>Broadcast Message History
            </h2>
        </div>
        <div class="col-lg-2 text-end">
            <a asp-action="Index" asp-controller="Broadcast" asp-area="SuperAdmin" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>New Message
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5" role="alert">
            <i class="fas fa-inbox fa-3x mb-3"></i>
            <h4>No broadcast messages yet</h4>
            <p class="mb-0">Start by sending your first broadcast message to sellers.</p>
            <a asp-action="Index" asp-controller="Broadcast" asp-area="SuperAdmin" class="btn btn-primary mt-3">
                <i class="fas fa-plus me-2"></i>Send New Message
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>
                            <i class="fas fa-heading me-2"></i>Subject
                        </th>
                        <th>
                            <i class="fas fa-user me-2"></i>Sent By
                        </th>
                        <th>
                            <i class="fas fa-users me-2"></i>Recipients
                        </th>
                        <th>
                            <i class="fas fa-calendar me-2"></i>Date Sent
                        </th>
                        <th>
                            <i class="fas fa-circle me-2"></i>Status
                        </th>
                        <th class="text-center">
                            <i class="fas fa-cog me-2"></i>Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var broadcast in Model)
                    {
                        <tr>
                            <td>
                                <strong>@broadcast.Subject</strong>
                            </td>
                            <td>
                                <span class="badge bg-secondary">
                                    @(broadcast.SentByUser?.UserName ?? "Unknown")
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-info">
                                    @broadcast.RecipientCount seller(s)
                                </span>
                                @if (broadcast.SendToAllSellers)
                                {
                                    <small class="text-muted d-block">(All Sellers)</small>
                                }
                            </td>
                            <td>
                                <small>@broadcast.DateSent.ToString("MMM dd, yyyy HH:mm")</small>
                            </td>
                            <td>
                                @if (broadcast.Status == "Sent")
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle me-1"></i>Sent
                                    </span>
                                }
                                else if (broadcast.Status == "Failed")
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-times-circle me-1"></i>Failed
                                    </span>
                                }
                                else if (broadcast.Status == "PartialSent")
                                {
                                    <span class="badge bg-warning">
                                        <i class="fas fa-exclamation-circle me-1"></i>Partial
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-clock me-1"></i>Pending
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Details"
                                   asp-route-id="@broadcast.Id"
                                   asp-controller="Broadcast"
                                   asp-area="SuperAdmin"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i>View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Styles {
    <style>
        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
        }

        .badge {
            font-size: 0.85rem;
            padding: 0.5rem 0.75rem;
        }
    </style>
}
