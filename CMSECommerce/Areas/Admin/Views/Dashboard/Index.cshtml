@model CMSECommerce.Areas.Admin.Models.AdminDashboardViewModel

<h1 class="mb-5 text-primary"><i class="fas fa-crown me-2"></i>Welcome, Admin!</h1>

<div class="row g-4">
    <div class="col-12">
        <partial name="_AdminSettingsPartial" />
    </div>
</div>

<div class="row g-4">

    @* Total Users *@
    <div class="col-xl-3 col-md-6">
        <div class="card shadow-lg h-100 border-0 rounded-3 text-white" style="background: linear-gradient(135deg,#4e73df,#224abe);">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-uppercase fw-bold mb-1 fs-6">Total Users</div>
                    <div class="h3 fw-bolder mb-0">@Model.UsersCount</div>
                </div>
                <i class="fas fa-users fa-3x opacity-75"></i>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center bg-white bg-opacity-10 p-3">
                <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="small text-white text-decoration-none fw-bold stretched-link">
                    Manage Users
                </a>
                <i class="fas fa-arrow-circle-right"></i>
            </div>
        </div>
    </div>

    @* Pending Seller Requests *@
    <div class="col-xl-3 col-md-6">
        @{
            string sellerReqClass = Model.PendingSubscriberRequests > 0 ? "linear-gradient(135deg,#e74a3b,#c0392b)" : "linear-gradient(135deg,#36b9cc,#1cc0c9)";
        }
        <div class="card shadow-lg h-100 border-0 rounded-3 text-white" style="background:@sellerReqClass;">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-uppercase fw-bold mb-1 fs-6">Pending Seller Requests</div>
                    <div class="h3 fw-bolder mb-0">@Model.PendingSubscriberRequests</div>
                </div>
                <i class="fas fa-user-tag fa-3x opacity-75"></i>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center bg-white bg-opacity-10 p-3">
                <a asp-area="Admin" asp-controller="SubscriberRequests" asp-action="Index" class="small text-white text-decoration-none fw-bold stretched-link">
                    Review Requests
                </a>
                <i class="fas fa-arrow-circle-right"></i>
            </div>
        </div>
    </div>

    @* Product Approval Required *@
    <div class="col-xl-3 col-md-6">
        <div class="card shadow-lg h-100 border-0 rounded-3 text-dark" style="background: linear-gradient(135deg,#f6c23e,#dda20a);">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-uppercase fw-bold mb-1 fs-6">Product Approval Required</div>
                    <div class="h3 fw-bolder mb-0">@Model.ProductsRequestCount</div>
                </div>
                <i class="fas fa-boxes fa-3x opacity-75"></i>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center bg-white bg-opacity-10 p-3">
                <a asp-area="Admin" asp-controller="Products" asp-action="PendingProducts" class="small text-dark text-decoration-none fw-bold stretched-link">
                    Review Pending Products
                </a>
                <i class="fas fa-arrow-circle-right"></i>
            </div>
        </div>
    </div>

    @* Total Orders *@
    <div class="col-xl-3 col-md-6">
        <div class="card shadow-lg h-100 border-0 rounded-3 text-white" style="background: linear-gradient(135deg,#36b9cc,#1cc0c9);">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-uppercase fw-bold mb-1 fs-6">Total Orders</div>
                    <div class="h3 fw-bolder mb-0">@Model.OrdersCount</div>
                </div>
                <i class="fas fa-shopping-basket fa-3x opacity-75"></i>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center bg-white bg-opacity-10 p-3">
                <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="small text-white text-decoration-none fw-bold stretched-link">
                    Manage Orders
                </a>
                <i class="fas fa-arrow-circle-right"></i>
            </div>
        </div>
    </div>

</div>

<div class="row g-4 mt-4">

    @* Total Active Products *@
    <div class="col-xl-3 col-md-6">
        <div class="card shadow-lg h-100 border-0 rounded-3 text-white" style="background: linear-gradient(135deg,#1cc88a,#17a673);">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-uppercase fw-bold mb-1 fs-6">Total Active Products</div>
                    <div class="h3 fw-bolder mb-0">@Model.ProductsCount</div>
                </div>
                <i class="fas fa-store fa-3x opacity-75"></i>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center bg-white bg-opacity-10 p-3">
                <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="small text-white text-decoration-none fw-bold stretched-link">
                    Manage All Products
                </a>
                <i class="fas fa-arrow-circle-right"></i>
            </div>
        </div>
    </div>

    @* Total Categories/Sections *@
    <div class="col-xl-3 col-md-6">
        <div class="card shadow-lg h-100 border-0 rounded-3 text-white bg-secondary">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-uppercase fw-bold mb-1 fs-6">Total Categories/Sections</div>
                    <div class="h3 fw-bolder mb-0">@Model.Categories</div>
                </div>
                <i class="fas fa-tags fa-3x opacity-50"></i>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center bg-secondary bg-opacity-75 p-3">
                <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="small text-white text-decoration-none fw-bold stretched-link">
                    Manage Categories
                </a>
                <i class="fas fa-arrow-circle-right"></i>
            </div>
        </div>
    </div>

    @* User Profile Image Requests *@
    <div class="col-xl-3 col-md-6">
        <div class="card shadow-lg h-100 border-0 rounded-3 text-white bg-secondary">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-uppercase fw-bold mb-1 fs-6">User Profile Image Requests</div>
                    <div class="h3 fw-bolder mb-0">@Model.UserProfilesCount</div>
                </div>
                <i class="fas fa-user-circle fa-3x opacity-50"></i>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center bg-secondary bg-opacity-75 p-3">
                <a asp-area="Admin" asp-controller="UsersProfile" asp-action="PendingImageApprovals" class="small text-white text-decoration-none fw-bold stretched-link">
                    Manage Requests
                </a>
                <i class="fas fa-arrow-circle-right"></i>
            </div>
        </div>
    </div>

    @* User Status Settings *@
    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm h-100 border-0 rounded-3">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-uppercase fw-bold mb-1 fs-6">User Status Settings</div>
                    <div class="mb-1 small text-muted">Configure online/cleanup thresholds</div>
                </div>
                <i class="fas fa-user-clock fa-2x text-secondary opacity-75"></i>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center p-3">
                <a asp-area="Admin" asp-page="/UserStatusSettings" class="small text-primary text-decoration-none fw-bold stretched-link">
                    Open Settings
                </a>
                <i class="fas fa-arrow-circle-right text-primary"></i>
            </div>
        </div>
    </div>

</div>
