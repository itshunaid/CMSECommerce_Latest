@using CMSECommerce.Areas.Admin.Models
@model RegisterUserViewModel

@{
    ViewData["Title"] = "Merchant Settings";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --amzn-orange: #FF9900;
        --amzn-blue: #007185;
        --amzn-border: #DDD;
        --amzn-light-bg: #f3f3f3;
        --amzn-danger: #c40000;
    }

    body {
        background-color: #fcfcfc;
        font-family: "Amazon Ember", Arial, sans-serif;
        color: #111;
    }

    .settings-wrapper {
        max-width: 1150px;
        margin: 30px auto;
        padding: 0 20px;
    }

    /* Layout Cards */
    .amzn-card {
        border: 1px solid var(--amzn-border);
        border-radius: 8px;
        background: #fff;
        margin-bottom: 25px;
        box-shadow: 0 1px 2px rgba(0,0,0,0.05);
    }

    .amzn-card-header {
        background-color: #f0f2f2;
        border-bottom: 1px solid var(--amzn-border);
        padding: 12px 20px;
        font-weight: 700;
        font-size: 15px;
    }

    .amzn-card-body {
        padding: 25px;
    }

    /* Forms */
    .form-label {
        font-weight: 700;
        font-size: 13px;
        margin-bottom: 4px;
        display: block;
    }

    .form-control {
        border: 1px solid #888;
        border-radius: 3px;
        font-size: 13px;
        padding: 7px 10px;
    }

        .form-control:focus {
            border-color: #e77600;
            box-shadow: 0 0 3px 2px rgba(228,121,17,0.5);
            outline: none;
        }

    /* Buttons */
    .btn-amzn-primary {
        background: linear-gradient(to bottom, #f7dfa5, #f0c14b);
        border: 1px solid #a88734;
        border-radius: 3px;
        color: #111;
        font-size: 13px;
        padding: 8px 25px;
    }

    .btn-amzn-secondary {
        background: #e7e9ec;
        border: 1px solid #adb1b8;
        border-radius: 3px;
        font-size: 13px;
        padding: 8px 25px;
        color: #111;
        text-decoration: none;
    }

    /* Deactivation Zone */
    .status-zone {
        border: 1px solid var(--amzn-orange);
        border-radius: 8px;
        background-color: #fffaf3;
        margin-top: 40px;
    }

    /* Modal Overlay */
    .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.6);
        z-index: 10000;
        justify-content: center;
        align-items: center;
    }

    .amzn-modal {
        background: #fff;
        padding: 30px;
        border-radius: 8px;
        width: 480px;
        border-top: 6px solid var(--amzn-orange);
    }
</style>

<div class="settings-wrapper">
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <h2 class="fw-bold mb-0">Merchant Settings</h2>
            <p class="text-muted small mb-0">Manage your identity, business location, and store visibility.</p>
        </div>
        <div>
            <span class="badge rounded-pill bg-success px-3 py-2">Account Active</span>
        </div>
    </div>

    <form asp-action="Edit" asp-area="Admin" asp-controller="Account" method="post" id="editMerchantForm">
        @* Crucial for context-aware Remote Validation *@
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small mb-4"></div>

        <div class="row">
            <div class="col-lg-7">
                <div class="amzn-card">
                    <div class="amzn-card-header">1. Login & Identity</div>
                    <div class="amzn-card-body">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email Address (Username)</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName"></span>
                            </div>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="ITSNumber" class="form-label">ITS Number</label>
                                <input asp-for="ITSNumber" class="form-control" />
                                <span asp-validation-for="ITSNumber"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="WhatsAppNumber" class="form-label"></label>
                                <input asp-for="WhatsAppNumber" class="form-control" />
                                <span asp-validation-for="WhatsAppNumber"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="amzn-card">
                    <div class="amzn-card-header">2. Profile Details</div>
                    <div class="amzn-card-body">
                        <div class="mb-3">
                            <label asp-for="Profession" class="form-label"></label>
                            <input asp-for="Profession" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="ServicesProvided" class="form-label"></label>
                            <textarea asp-for="ServicesProvided" class="form-control" rows="2"></textarea>
                        </div>
                        <div class="mb-3">
                            <label asp-for="About" class="form-label"></label>
                            <textarea asp-for="About" class="form-control" rows="4"></textarea>
                        </div>
                        <div class="row g-2">
                            <div class="col-md-4">
                                <label class="form-label small">Facebook</label>
                                <input asp-for="FacebookUrl" class="form-control" placeholder="URL" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label small">Instagram</label>
                                <input asp-for="InstagramUrl" class="form-control" placeholder="URL" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label small">LinkedIn</label>
                                <input asp-for="LinkedInUrl" class="form-control" placeholder="URL" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="amzn-card">
                    <div class="amzn-card-header">3. Store Information</div>
                    <div class="amzn-card-body">
                        <div class="mb-3">
                            <label asp-for="StoreName" class="form-label"></label>
                            <input asp-for="StoreName" class="form-control" />
                            <span asp-validation-for="StoreName"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="GSTIN" class="form-label"></label>
                            <input asp-for="GSTIN" class="form-control" />
                        </div>

                        <div class="mt-4 pt-2 border-top">
                            <label asp-for="HomeAddress" class="form-label">Home Address</label>
                            <textarea asp-for="HomeAddress" class="form-control mb-2" rows="2"></textarea>
                            <label asp-for="HomePhoneNumber" class="form-label">Home Phone</label>
                            <input asp-for="HomePhoneNumber" class="form-control mb-3" />
                        </div>

                        <div class="mt-3 pt-2 border-top">
                            <label asp-for="BusinessAddress" class="form-label">Business Address</label>
                            <textarea asp-for="BusinessAddress" class="form-control mb-2" rows="2"></textarea>
                            <label asp-for="BusinessPhoneNumber" class="form-label">Business Phone</label>
                            <input asp-for="BusinessPhoneNumber" class="form-control mb-3" />
                        </div>

                        <div class="row g-2">
                            <div class="col-6"><label asp-for="City" class="form-label"></label><input asp-for="City" class="form-control" /></div>
                            <div class="col-6"><label asp-for="PostCode" class="form-label"></label><input asp-for="PostCode" class="form-control" /></div>
                            <div class="col-12 mt-2"><label asp-for="Country" class="form-label"></label><input asp-for="Country" class="form-control" /></div>
                        </div>
                    </div>
                </div>

                <div class="amzn-card" style="border-top: 4px solid var(--amzn-orange);">
                    <div class="amzn-card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn-amzn-primary py-2 fw-bold">Update All Settings</button>
                            <a asp-action="Index" asp-controller="Dashboard" class="btn-amzn-secondary text-center">Discard Changes</a>
                        </div>
                    </div>
                </div>

                <div class="status-zone p-3 border shadow-sm">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-eye-slash text-warning me-2"></i>
                        <span class="fw-bold">Store Visibility</span>
                    </div>
                    <p class="small text-muted mb-3">Hiding your store will remove your products from the public marketplace, but keeps your account data intact.</p>
                    <button type="button" class="btn-amzn-secondary w-100" onclick="toggleDeactivateModal(true)">Deactivate Store</button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="modal-overlay" id="deactivateModal">
    <div class="amzn-modal shadow-lg">
        <h4 class="fw-bold mb-3">Hide Store from Public?</h4>
        <p class="small text-muted mb-4">
            Your store <strong>@Model.StoreName</strong> and all listings will be hidden immediately.
            You will still be able to log in and manage your profile.
        </p>

        <form asp-action="DeactivateStore" asp-controller="Account" asp-area="Admin" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="d-flex justify-content-end gap-2 border-top pt-3">
                <button type="button" class="btn-amzn-secondary" onclick="toggleDeactivateModal(false)">Stay Active</button>
                <button type="submit" class="btn-amzn-primary" style="font-weight:bold;">Confirm Deactivation</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleDeactivateModal(show) {
            document.getElementById('deactivateModal').style.display = show ? 'flex' : 'none';
        }

        // Close modal if user clicks outside of the box
        window.onclick = function(event) {
            let modal = document.getElementById('deactivateModal');
            if (event.target == modal) toggleDeactivateModal(false);
        }
    </script>
}