@model CMSECommerce.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<h1 class="mb-4 display-6 fw-bold text-dark">Edit Category: @Model.Name</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" class="p-4 border rounded shadow-lg bg-light">

            @* Hidden field to pass the Category ID back to the controller for update *@
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label fw-bold">Category Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ParentId" class="control-label fw-bold">Parent Category (optional)</label>
                <select asp-for="ParentId" asp-items="(IEnumerable<SelectListItem>)ViewBag.ParentCategories" class="form-select"></select>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Slug" class="control-label fw-bold">Slug (Auto-generated)</label>
                @* Display the slug but make it readonly/disabled as it's generated from the name in the controller *@
                <input asp-for="Slug" class="form-control" disabled />
            </div>

            <div class="d-flex justify-content-between pt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-warning fw-bold shadow-sm">
                    <i class="fas fa-edit"></i> Update Category
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}