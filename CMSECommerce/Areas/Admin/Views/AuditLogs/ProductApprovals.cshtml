@model CMSECommerce.Areas.Admin.Models.ProductApprovalsViewModel

@{
    ViewData["Title"] = "Product Approvals Audit Logs";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Product Approvals Audit Logs</h3>
                </div>
                <div class="card-body">
                    <!-- Filters -->
                    <form method="get" class="mb-4">
                        <div class="row">
                            <div class="col-md-3">
                                <input type="text" name="searchUser" value="@Model.SearchUser" class="form-control" placeholder="Search by user" />
                            </div>
                            <div class="col-md-2">
                                <input type="text" name="action" value="@Model.Action" class="form-control" placeholder="Action" />
                            </div>
                            <div class="col-md-2">
                                <input type="date" name="startDate" value="@(Model.StartDate?.ToString("yyyy-MM-dd"))" class="form-control" />
                            </div>
                            <div class="col-md-2">
                                <input type="date" name="endDate" value="@(Model.EndDate?.ToString("yyyy-MM-dd"))" class="form-control" />
                            </div>
                            <div class="col-md-1">
                                <button type="submit" class="btn btn-primary">Filter</button>
                            </div>
                        </div>
                    </form>

                    <!-- Audit Logs Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Timestamp</th>
                                    <th>User</th>
                                    <th>Action</th>
                                    <th>Entity Type</th>
                                    <th>Entity ID</th>
                                    <th>IP Address</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in Model.AuditLogs)
                                {
                                    <tr>
                                        <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>@(log.User?.UserName ?? "System")</td>
                                        <td>@log.Action</td>
                                        <td>@log.EntityType</td>
                                        <td>@log.EntityId</td>
                                        <td>@log.IpAddress</td>
                                        <td>
                                            <a href="@Url.Action("Details", new { id = log.Id })" class="btn btn-sm btn-info">Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.TotalPages > 1)
                    {
                        <nav aria-label="Audit logs pagination">
                            <ul class="pagination justify-content-center">
                                @if (Model.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("ProductApprovals", new { pageNumber = Model.CurrentPage - 1, searchUser = Model.SearchUser, action = Model.Action, startDate = Model.StartDate, endDate = Model.EndDate })">Previous</a>
                                    </li>
                                }

                                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("ProductApprovals", new { pageNumber = i, searchUser = Model.SearchUser, action = Model.Action, startDate = Model.StartDate, endDate = Model.EndDate })">@i</a>
                                    </li>
                                }

                                @if (Model.CurrentPage < Model.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("ProductApprovals", new { pageNumber = Model.CurrentPage + 1, searchUser = Model.SearchUser, action = Model.Action, startDate = Model.StartDate, endDate = Model.EndDate })">Next</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any client-side functionality here
    </script>
}
