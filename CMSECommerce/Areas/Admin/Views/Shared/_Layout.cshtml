<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMSECommerce.styles.css" asp-append-version="true" />

    <style>
        :root {
            /* Amazon Primary Colors */
            --amz-navy: #131921; /* Header/Global Background */
            --amz-navy-2: #232f3e; /* Secondary Bar/Menu */
            --amz-orange: #ff9900; /* Highlight/Logo Accent */
            --amz-link-blue: #007185; /* Link Blue */
            --amz-link-hover: #c7511f; /* Link Hover Orange */
            --amz-bg-light: #eaeded; /* Light gray page background */
        }

        body {
            background-color: var(--amz-bg-light); /* Light background for the overall page */
        }

        /* --- Header (Navbar) --- */
        .amz-header-primary {
            background-color: var(--amz-navy); /* Dark Navy Blue */
            border: none;
            box-shadow: none;
        }

            /* Logo/Brand */
            .amz-header-primary .navbar-brand {
                color: #fff; /* White text */
                font-weight: 700;
                letter-spacing: 0.5px;
                padding: 0 10px;
                display: flex;
                align-items: center;
            }

            /* Links (text-white makes it white) */
            .amz-header-primary .nav-link {
                color: #fff !important;
                font-size: 0.9rem;
                padding: 8px 15px;
                border: 1px solid transparent; /* To prevent movement on hover/active */
            }

                /* Links Hover Effect (Subtle glow/border) */
                .amz-header-primary .nav-link:hover {
                    border: 1px solid #fff;
                    box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.5);
                    border-radius: 3px;
                }

            /* Toggle Button (for mobile) */
            .amz-header-primary .navbar-toggler {
                border-color: #fff;
            }

            .amz-header-primary .navbar-toggler-icon {
                background-image: url("data:image/svg+xml,%3csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3e%3cpath stroke='rgba(255, 255, 255, 1)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
            }

        /* --- Main Content Area --- */
        .container {
            /* Max width adjustment to give a bit more breathing room */
            max-width: 1300px;
        }

        /* --- Footer --- */
        .amz-footer {
            background-color: var(--amz-navy-2); /* Darker footer */
            color: #ccc;
            border-top: none;
            padding: 10px 0;
            margin-top: 20px;
        }

            .amz-footer a {
                color: #fff;
                text-decoration: none;
            }

                .amz-footer a:hover {
                    color: var(--amz-orange);
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm amz-header-primary mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="\">
                    <span style="color:white; font-size:1.5rem;">A</span><span style="color:var(--amz-orange); font-size:1.5rem;">DMIN</span> Panel
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-link text-white">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Pages" asp-action="Index" class="nav-link text-white">Pages</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="nav-link text-white">Products</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="nav-link text-white">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="nav-link text-white">Users</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav justify-content-end">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-white me-2" style="font-style:italic;">
                                    Hello, @User.Identity.Name!
                                </span>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Account" asp-action="Logout" class="nav-link text-white">
                                    Log Out
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_NotificationsPartial" />
            @RenderBody()
        </main>
    </div>

    <footer class="amz-footer">
        <div class="container">
            &copy; @DateTime.Now.Year - CMSECommerce - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>