@model CMSECommerce.Models.SubscriberRequest

@{
    ViewData["Title"] = "Delete Subscriber Request";
}

<h2 class="mt-4 text-danger">Delete Request Confirmation</h2>
<hr />

<div class="alert alert-danger">
    <p><strong>Warning:</strong> You are about to permanently delete the subscriber request record for <strong>@Model.UserName</strong>.</p>
    <p>This action cannot be undone. Are you sure you want to proceed?</p>
</div>

<dl class="row">
    <dt class="col-sm-3">User Name</dt>
    <dd class="col-sm-9">@Model.UserName</dd>

    <dt class="col-sm-3">Date Submitted</dt>
    <dd class="col-sm-9">@Model.RequestDate.ToShortDateString()</dd>

    <dt class="col-sm-3">Current Status</dt>
    <dd class="col-sm-9">
        @{
            string statusClass = Model.Approved == null ? "badge bg-primary" :
            Model.Approved == true ? "badge bg-success" : "badge bg-danger";
            string statusText = Model.Approved == null ? "Pending" :
            Model.Approved == true ? "Approved" : "Rejected";
        }
        <span class="@statusClass font-weight-bold">@statusText</span>
    </dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger btn-lg mt-3">
        <i class="fas fa-trash"></i> Confirm Deletion
    </button>
    <a asp-action="Index" class="btn btn-secondary btn-lg mt-3">Cancel</a>
    @Html.AntiForgeryToken()
</form>