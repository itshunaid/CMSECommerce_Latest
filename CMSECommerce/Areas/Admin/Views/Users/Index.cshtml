@model global::System.Collections.Generic.IEnumerable<global::CMSECommerce.Areas.Admin.Models.UserViewModel>

@{
    ViewData["Title"] = "User Management";
    var allRoles = ViewBag.AllRoles as List<string> ?? new List<string>();
    var totalUsers = Model.Count();
    var lockedUsers = Model.Count(u => u.IsLockedOut);
    var deactivatedUsers = Model.Count(u => u.IsDeactivated);
}

<style>
    :root {
        --amz-navy: #232f3e;
        --amz-navy-2: #1e2a33;
        --amz-orange: #febd69;
        --amz-slate: #37475a;
        --amz-bg: #f4f7f9;
        --amz-border: #e0e0e0;
        --shadow-sm: 0 2px 8px rgba(0,0,0,0.06);
    }

    body { background-color: var(--amz-bg); font-family: 'Segoe UI', system-ui, -apple-system, sans-serif; }

    /* Product Card Styling */
    .user-card {
        background: white;
        border-radius: 12px;
        border: 1px solid var(--amz-border);
        transition: all 0.3s cubic-bezier(.25,.8,.25,1);
        height: 100%;
        position: relative;
        overflow: hidden;
    }

    .user-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        border-color: var(--amz-orange);
    }

    .card-header-img {
        height: 100px;
        background: var(--amz-navy);
        position: relative;
        margin-bottom: 45px;
    }

    .profile-img-container {
        position: absolute;
        bottom: -35px;
        left: 20px;
    }

    .profile-img-lg {
        width: 75px;
        height: 75px;
        border-radius: 50%;
        border: 4px solid white;
        object-fit: cover;
        box-shadow: var(--shadow-sm);
    }

    .card-body-content { padding: 0 1.25rem 1.25rem 1.25rem; }

    .user-name { font-size: 1.1rem; font-weight: 700; color: var(--amz-navy); margin-bottom: 2px; }
    .user-email { font-size: 0.85rem; color: #64748b; margin-bottom: 12px; }

    .role-badge {
        font-size: 0.65rem;
        padding: 4px 10px;
        border-radius: 50px;
        background: #f1f5f9;
        color: #475569;
        border: 1px solid #e2e8f0;
        text-transform: uppercase;
        font-weight: 600;
    }

    .status-ribbon {
        position: absolute;
        top: 12px;
        right: 12px;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.7rem;
        font-weight: 700;
        z-index: 2;
    }

    .ribbon-active { background: #dcfce7; color: #166534; }
    .ribbon-locked { background: #fee2e2; color: #991b1b; }

    .action-bar {
        border-top: 1px solid #f1f5f9;
        padding: 10px 15px;
        background: #fafafa;
        display: flex;
        justify-content: flex-end;
        gap: 8px;
    }

    .stat-card {
        background: white; padding: 1.25rem; border-radius: 10px; border: 1px solid var(--amz-border);
        display: flex; align-items: center; gap: 1rem; box-shadow: var(--shadow-sm);
    }

    .filter-section { background: white; padding: 1.5rem; border-radius: 12px; border: 1px solid var(--amz-border); margin-bottom: 2rem; }
    .filter-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; align-items: end; }
    .filter-label { font-size: 0.75rem; font-weight: 700; color: var(--amz-slate); text-transform: uppercase; margin-bottom: 0.5rem; }

    .action-btn {
        width: 34px; height: 34px; border-radius: 8px; border: 1px solid #e2e8f0;
        background: white; color: #64748b; display: flex; align-items: center; justify-content: center; transition: 0.2s;
    }
    .action-btn:hover { background: var(--amz-navy); color: white; }
    .btn-delete:hover { background: #ef4444 !important; border-color: #ef4444; }
</style>

<div class="container-fluid py-4">
    <div class="row align-items-center mb-4">
        <div class="col">
            <h3 class="fw-bold text-dark mb-0">User Directory</h3>
            <p class="text-muted small">Manage your team and system access settings.</p>
        </div>
        <div class="col-auto d-flex gap-2">
            <a asp-action="ExportUsersCsv" class="btn btn-light border btn-sm px-3">Export CSV</a>
            <a asp-action="Create" class="btn btn-primary btn-sm px-3" style="background: var(--amz-navy); border: none;">+ Add New User</a>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="stat-card">
                <div class="p-2 bg-primary-subtle rounded text-primary">
                    <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle></svg>
                </div>
                <div><span class="text-muted small d-block">Total Users</span><h4 class="fw-bold mb-0" id="user-count">@totalUsers</h4></div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="p-2 bg-danger-subtle rounded text-danger">
                    <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                </div>
                <div><span class="text-muted small d-block">Locked</span><h4 class="fw-bold mb-0">@lockedUsers</h4></div>
            </div>
        </div>
    </div>

    <div class="filter-section">
        <div class="filter-grid">
            <div>
                <label class="filter-label">Search Name</label>
                <input type="text" id="filter-userinfo" class="form-control form-control-sm" placeholder="e.g. John Doe" onkeyup="filterTable()">
            </div>
            <div>
                <label class="filter-label">Email Address</label>
                <input type="text" id="filter-email" class="form-control form-control-sm" placeholder="e.g. user@domain.com" onkeyup="filterTable()">
            </div>
            <div>
                <label class="filter-label">System Role</label>
                <select id="filter-role" class="form-select form-select-sm" onchange="filterTable()">
                    <option value="">All Roles</option>
                    @foreach (var r in allRoles) { <option value="@r">@r</option> }
                </select>
            </div>
            <div>
                <label class="filter-label">Account Status</label>
                <select id="filter-status" class="form-select form-select-sm" onchange="filterTable()">
                    <option value="">All Statuses</option>
                    <option value="Active">Active</option>
                    <option value="Disabled">Disabled</option>
                </select>
            </div>
            <input type="hidden" id="filter-profession" value="">
            <input type="hidden" id="filter-visibility" value="">
            <div>
                <button class="btn btn-outline-secondary btn-sm w-100" onclick="resetFilters()">Clear Filters</button>
            </div>
        </div>
    </div>

    <div class="row g-4" id="usersTbody">
        @foreach (var u in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 col-xl-3 user-item-container" 
                 data-status="@(u.IsLockedOut ? "Disabled" : "Active")"
                 data-visibility="@(u.IsDeactivated ? "Hidden" : "Visible")">
                
                <div class="user-card">
                    <span class="d-none" data-label="User Info" data-search-info="@u.UserName.ToLower()"></span>
                    <span class="d-none" data-label="Email" data-search-info="@u.Email.ToLower()"></span>
                    <span class="d-none" data-label="Role">@string.Join(", ", u.Roles)</span>

                    <div class="card-header-img">
                        <div class="status-ribbon @(u.IsLockedOut ? "ribbon-locked" : "ribbon-active")">
                            <span id="badge-islockedout-@u.Id">@(u.IsLockedOut ? "LOCKED" : "ACTIVE")</span>
                        </div>
                        <div class="profile-img-container">
                            <img src="@(string.IsNullOrEmpty(u.ProfileImagePath) ? "/images/default-user.png" : u.ProfileImagePath)" class="profile-img-lg" />
                        </div>
                    </div>

                    <div class="card-body-content">
                        <div class="user-name">@u.UserName</div>
                        <div class="user-email text-truncate">@u.Email</div>
                        
                        <div class="mb-3">
                            <div class="text-muted small fw-bold mb-1">ROLES</div>
                            <div class="d-flex flex-wrap gap-1">
                                @foreach (var role in u.Roles) {
                                    <span class="role-badge">@role</span>
                                }
                            </div>
                        </div>

                        <div class="small text-muted">
                            <i class="bi bi-telephone"></i> @(u.PhoneNumber ?? "No Phone")
                        </div>
                    </div>

                    <div class="action-bar">
                        <a asp-action="Edit" asp-route-id="@u.Id" class="action-btn" title="Edit">
                            <svg width="14" height="14" fill="currentColor" viewBox="0 0 16 16"><path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10z"/></svg>
                        </a>

                        <form asp-action="EnableDisable" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@u.Id" />
                            <button type="submit" class="action-btn" title="Toggle Access">
                                <svg width="14" height="14" fill="currentColor" viewBox="0 0 16 16"><path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/></svg>
                            </button>
                        </form>

                        @if (!u.IsDeactivated) {
                            <form asp-action="SoftDelete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@u.Id" />
                                <button type="submit" class="action-btn" title="Soft Delete">
                                    <svg width="14" height="14" fill="currentColor" viewBox="0 0 16 16"><path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/></svg>
                                </button>
                            </form>
                        } else {
                            <form asp-action="Restore" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@u.Id" />
                                <button type="submit" class="action-btn" title="Restore">
                                    <svg width="14" height="14" fill="currentColor" viewBox="0 0 16 16"><path d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"/></svg>
                                </button>
                            </form>
                        }

                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@u.Id" />
                            <button type="submit" class="action-btn btn-delete" title="Hard Delete">
                                <svg width="14" height="14" fill="currentColor" viewBox="0 0 16 16"><path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5z"/></svg>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // ARCHITECT NOTE: The logic below targets selectors that I've 
        // embedded inside the cards to maintain full backward compatibility.
        
        function filterTable() {
            const filters = {
                userInfo: document.getElementById('filter-userinfo').value.toLowerCase(),
                email: document.getElementById('filter-email').value.toLowerCase(),
                role: document.getElementById('filter-role').value.toLowerCase(),
                status: document.getElementById('filter-status').value.toLowerCase()
            };

            // Select card containers instead of table rows
            const cards = document.querySelectorAll('.user-item-container');
            let visibleCount = 0;

            cards.forEach(card => {
                const data = {
                    userInfo: card.querySelector('[data-label="User Info"]').getAttribute('data-search-info'),
                    email: card.querySelector('[data-label="Email"]').getAttribute('data-search-info'),
                    role: card.querySelector('[data-label="Role"]').textContent.toLowerCase(),
                    status: card.getAttribute('data-status').toLowerCase()
                };

                const match = (!filters.userInfo || data.userInfo.includes(filters.userInfo)) &&
                              (!filters.email || data.email.includes(filters.email)) &&
                              (!filters.role || data.role.includes(filters.role)) &&
                              (!filters.status || filters.status === data.status);

                card.style.display = match ? '' : 'none';
                if (match) visibleCount++;
            });

            document.getElementById('user-count').textContent = visibleCount;
        }

        function resetFilters() {
            ['filter-userinfo', 'filter-email', 'filter-role', 'filter-status'].forEach(id => {
                document.getElementById(id).value = '';
            });
            filterTable();
        }

        async function updateField(userId, fieldName, value) {
            const antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]').value;
            const badgeElement = document.getElementById(`badge-${fieldName.toLowerCase()}-${userId}`);
            const cardContainer = badgeElement.closest('.user-item-container');
            
            let finalValue = (typeof value === 'boolean') ? (value ? 'true' : 'false') : value;
            const data = new URLSearchParams({
                userId: userId, fieldName: fieldName, value: finalValue,
                __RequestVerificationToken: antiForgeryToken
            });

            try {
                const response = await fetch('/Admin/Users/UpdateUserField', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: data.toString()
                });

                if (response.ok) {
                    if (fieldName === 'IsLockedOut') {
                        const statusTxt = value ? 'Disabled' : 'Active';
                        cardContainer.setAttribute('data-status', statusTxt);
                        
                        // Update UI Ribbon
                        badgeElement.textContent = value ? 'LOCKED' : 'ACTIVE';
                        const ribbon = badgeElement.parentElement;
                        ribbon.className = `status-ribbon ${value ? 'ribbon-locked' : 'ribbon-active'}`;
                    }
                    filterTable();
                }
            } catch (error) {
                console.error('Update failed', error);
            }
        }
    </script>
}