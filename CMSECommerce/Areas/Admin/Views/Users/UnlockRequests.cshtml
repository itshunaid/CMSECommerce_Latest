@model IEnumerable<CMSECommerce.Models.UnlockRequest>

@{
    ViewData["Title"] = "Account Unlock Requests";
    Layout = "_Layout";
}

@Html.AntiForgeryToken()

<div class="container-fluid px-4 py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold text-dark mb-1">
                <i class="bi bi-shield-lock-fill text-primary me-2"></i>Account Unlock Requests
            </h1>
            <p class="text-muted">Manage user requests to reactivate disabled accounts and products.</p>
        </div>
        <div class="btn-group shadow-sm">
            <button class="btn btn-outline-secondary btn-sm active">All</button>
            <button class="btn btn-outline-secondary btn-sm">Pending</button>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body">
                    <h6 class="text-uppercase small fw-bold opacity-75">Pending Requests</h6>
                    @* Added id="pendingCount" to target via JS *@
                    <h2 class="mb-0" id="pendingCount">@Model.Count(r => r.Status == "Pending")</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="requestsTable">
                    <thead class="bg-light border-bottom">
                        <tr>
                            <th class="ps-4 py-3 text-uppercase small fw-bold text-muted">User Details</th>
                            <th class="py-3 text-uppercase small fw-bold text-muted">Request Date</th>
                            <th class="py-3 text-uppercase small fw-bold text-muted">Status</th>
                            <th class="pe-4 py-3 text-end text-uppercase small fw-bold text-muted">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    No unlock requests found.
                                </td>
                            </tr>
                        }
                        @foreach (var item in Model)
                        {
                            <tr id="row-@item.Id">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm me-3 bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                            <i class="bi bi-person text-secondary"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold">@item.UserName</div>
                                            <div class="small text-muted">@item.Email</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="small fw-medium">@item.RequestDate.ToString("MMM dd, yyyy")</div>
                                    <div class="text-muted smaller" style="font-size: 0.75rem;">@item.RequestDate.ToString("t")</div>
                                </td>
                                <td>
                                    <span class="badge rounded-pill status-badge @(item.Status == "Pending" ? "bg-warning-subtle text-warning border border-warning-subtle" : "bg-success-subtle text-success border border-success-subtle") px-3 py-2">
                                        <i class="bi @(item.Status == "Pending" ? "bi-clock-history" : "bi-check-circle") me-1"></i>
                                        <span class="status-text">@item.Status</span>
                                    </span>
                                </td>
                                <td class="pe-4 text-end">
                                    @if (item.Status == "Pending")
                                    {
                                        <div class="btn-group action-group">
                                            <button type="button" class="btn btn-success btn-sm rounded-pill px-3 fw-bold shadow-sm me-2 action-btn"
                                                    data-id="@item.Id" data-status="Approved">
                                                <i class="bi bi-unlock me-1"></i> Approve
                                            </button>
                                            <button type="button" class="btn btn-outline-danger btn-sm rounded-pill px-3 fw-bold action-btn"
                                                    data-id="@item.Id" data-status="Denied">
                                                Deny
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <button class="btn btn-light btn-sm rounded-pill px-3 disabled">Processed</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="actionModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-body text-center p-5">
                <i id="modalIcon" class="bi fs-1 mb-3"></i>
                <h4 id="modalTitle" class="fw-bold">Process Request</h4>
                <p id="modalDescription" class="text-muted"></p>

                <div class="text-start mt-3">
                    <label class="form-label small fw-bold">Admin Notes</label>
                    <textarea id="adminNotes" class="form-control" rows="3" placeholder="Add a note (optional)..."></textarea>
                </div>

                <div class="d-flex justify-content-center gap-2 mt-4">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn rounded-pill px-4" id="confirmAction">Confirm</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            let selectedId = 0;
            let selectedStatus = "";
            const actionModal = new bootstrap.Modal('#actionModal');

            // 1. Open Modal and Configure for Approve or Deny
            $('.action-btn').on('click', function () {
                selectedId = $(this).data('id');
                selectedStatus = $(this).data('status');

                if (selectedStatus === "Approved") {
                    $('#modalIcon').attr('class', 'bi bi-check-circle text-success fs-1 mb-3');
                    $('#modalTitle').text('Approve Request?');
                    $('#modalDescription').text("This will unlock the account and reactivate products.");
                    $('#confirmAction').attr('class', 'btn btn-success rounded-pill px-4').text('Yes, Approve');
                } else {
                    $('#modalIcon').attr('class', 'bi bi-x-circle text-danger fs-1 mb-3');
                    $('#modalTitle').text('Deny Request?');
                    $('#modalDescription').text("The user will remain locked. Please provide a reason if possible.");
                    $('#confirmAction').attr('class', 'btn btn-danger rounded-pill px-4').text('Yes, Deny');
                }

                $('#adminNotes').val('');
                actionModal.show();
            });

            // 2. Handle AJAX Submission
            $('#confirmAction').on('click', function () {
                const $btn = $(this);
                const notes = $('#adminNotes').val();

                $btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Processing...');

                $.ajax({
                    url: '/Admin/Users/ProcessUnlock',
                    type: 'POST',
                    data: {
                        id: selectedId,
                        status: selectedStatus,
                        notes: notes,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.succeeded) {
                            const row = $(`#row-${selectedId}`);

                            // A. Update Pending Count UI
                            const $countElement = $('#pendingCount');
                            let count = parseInt($countElement.text());
                            if (count > 0) {
                                $countElement.text(count - 1);
                            }

                            // B. Update Table Row UI
                            const badge = row.find('.status-badge');
                            if (selectedStatus === "Approved") {
                                badge.attr('class', 'badge rounded-pill bg-success-subtle text-success border border-success-subtle px-3 py-2 status-badge')
                                     .html('<i class="bi bi-check-circle me-1"></i> Approved');
                            } else {
                                badge.attr('class', 'badge rounded-pill bg-danger-subtle text-danger border border-danger-subtle px-3 py-2 status-badge')
                                     .html('<i class="bi bi-x-circle me-1"></i> Denied');
                            }

                            // C. Disable Actions
                            row.find('td:last-child').html('<button class="btn btn-light btn-sm rounded-pill px-3 disabled">Processed</button>');

                            actionModal.hide();
                        } else {
                            alert('Error: ' + response.message);
                        }
                    },
                    error: function () {
                        alert('System error. Please try again.');
                    },
                    complete: function() {
                        $btn.prop('disabled', false).text('Confirm');
                    }
                });
            });
        });
    </script>

    <style>
        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
        }

        .avatar-sm {
            font-size: 1.2rem;
        }

        .bg-warning-subtle {
            background-color: #fff3cd !important;
        }

        .bg-success-subtle {
            background-color: #d1e7dd !important;
        }

        .bg-danger-subtle {
            background-color: #f8d7da !important;
        }

        .text-warning {
            color: #856404 !important;
        }

        .text-success {
            color: #0f5132 !important;
        }

        .text-danger {
            color: #842029 !important;
        }

        .border-warning-subtle {
            border-color: #ffeeba !important;
        }

        .border-success-subtle {
            border-color: #badbcc !important;
        }

        .border-danger-subtle {
            border-color: #f5c2c7 !important;
        }
    </style>
}