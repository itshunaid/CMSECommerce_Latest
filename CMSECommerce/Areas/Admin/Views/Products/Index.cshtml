@model CMSECommerce.Areas.Admin.Models.ProductListViewModel
@using CMSECommerce.Areas.Admin.Models
@using CMSECommerce.Models
@{
    ViewData["Title"] = "Product Inventory";
    var amazonDarkBlue = "#232F3E";
    var amazonPrimaryActionGreen = "#1A7525";
    var amazonOrange = "#FF9900";
    var amazonRed = "#C40000";
    var amazonBackground = "#EAEDED";
    var amazonTableHeaderBg = "#000000";
}

<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />

<style>
    body {
        background-color: @amazonBackground;
        color: #111111;
    }

    /* Slider Styling */
    .slider-container {
        background: white;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 30px;
        border: 1px solid #ddd;
    }

    .slider-card {
        background: #fff;
        border: 1px solid #eee;
        border-radius: 5px;
        padding: 15px;
        transition: transform 0.2s;
    }

    .slider-img {
        width: 100%;
        height: 120px;
        object-fit: contain;
        margin-bottom: 10px;
    }

    .slider-price {
        color: @amazonRed;
        font-weight: bold;
    }

    /* Table Styling */
    .product-img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border: 1px solid #DDDDDD;
    }

    .admin-header h1 {
        color: @amazonDarkBlue;
        font-weight: 700;
    }

    /* Button Customizations */
    .btn-amazon-primary {
        background-color: @amazonPrimaryActionGreen;
        border-color: @amazonPrimaryActionGreen;
        color: white !important;
        font-size: 0.85rem;
    }

    .btn-amazon-secondary {
        background-color: #F0F2F2;
        border-color: #ADB1B8;
        color: @amazonDarkBlue;
        font-size: 0.85rem;
    }

    .btn-info {
        background-color: @amazonOrange;
        border-color: @amazonOrange;
        color: @amazonDarkBlue !important;
        font-size: 0.85rem;
    }

    .btn-danger-custom {
        background-color: white;
        border: 1px solid #d7373b;
        color: #d7373b;
        font-size: 0.85rem;
    }

        .btn-danger-custom:hover {
            background-color: #d7373b;
            color: white;
        }

    #productTable thead {
        background-color: @amazonTableHeaderBg !important;
        color: white;
    }

    /* Action Button Container */
    .action-group {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        justify-content: center;
    }

        .action-group .btn {
            display: inline-flex;
            align-items: center;
            white-space: nowrap;
        }

    /* Card Styling */
    .product-card {
        background: white;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s;
        height: 100%;
    }

        .product-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        padding: 15px;
    }

    .card-title {
        font-size: 1.1rem;
        font-weight: bold;
        color: @amazonDarkBlue;
        margin-bottom: 5px;
    }

    .card-category {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }

    .card-price {
        font-size: 1.2rem;
        font-weight: bold;
        color: @amazonRed;
        margin-bottom: 10px;
    }

    .card-status {
        margin-bottom: 15px;
    }

    .card-footer {
        background: #f8f9fa;
        border-top: 1px solid #dee2e6;
        padding: 10px 15px;
    }

        .card-footer .action-group {
            justify-content: space-between;
            gap: 4px;
        }

            .card-footer .action-group .btn {
                flex: 1;
                font-size: 0.8rem;
                padding: 6px 8px;
            }
</style>

<div class="container-fluid py-4">

    @* --- Header --- *@
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3 admin-header">
        <h1><i class="bi bi-boxes me-2" style="color: @amazonOrange;"></i> Inventory Management</h1>
        <a asp-action="Create" class="btn btn-amazon-primary btn-lg shadow-sm px-4">
            <i class="bi bi-plus-lg me-2"></i> Add New Product
        </a>
    </div>

    @* --- Slider Preview --- *@
    @if (Model.Products != null && Model.Products.Any())
    {
        <div class="slider-container shadow-sm">
            <h5 class="mb-3 text-muted"><i class="bi bi-eye-fill text-primary me-2"></i>Quick View Preview</h5>
            <div class="product-slider">
                @foreach (var item in Model.Products)
                {
                    <div class="slider-item px-2">
                        <div class="slider-card text-center shadow-sm">
                            <img src="/media/products/@item.Image" class="slider-img" alt="@item.Name">
                            <div class="text-truncate fw-bold small">@item.Name</div>
                            <div class="slider-price mb-2">@item.Price.ToString("C2")</div>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-amazon-secondary w-100">
                                <i class="bi bi-pencil-square me-1"></i> Quick Edit
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    @* --- Filter Form --- *@
    <form asp-action="Index" method="get" class="mb-4 p-4 bg-white rounded shadow-sm border">
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label small fw-bold">Search Product Name</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                    <input type="text" name="SearchName" class="form-control" value="@Model.CurrentSearchName" placeholder="e.g. Laptop" />
                </div>
            </div>
            <div class="col-md-3">
                <label class="form-label small fw-bold">Category</label>
                <input type="text" name="SearchCategory" class="form-control" value="@Model.CurrentSearchCategory" />
            </div>
            <div class="col-md-5 d-flex gap-2">
                <button type="submit" class="btn btn-amazon-primary flex-grow-1">
                    <i class="bi bi-funnel-fill me-2"></i> Apply Filters
                </button>
                <a asp-action="Index" class="btn btn-amazon-secondary flex-grow-1">
                    <i class="bi bi-arrow-counterclockwise me-2"></i> Reset List
                </a>
            </div>
        </div>
    </form>

    @* --- Main Inventory Cards --- *@
    @if (Model.Products != null && Model.Products.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var item in Model.Products)
            {
                <div class="col">
                    <div class="product-card">
                        <img src="/media/products/@item.Image" class="card-img-top" alt="@item.Name">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <div class="card-category">@item.Category.Name</div>
                            <div class="card-price">@item.Price.ToString("C2")</div>
                            <div class="card-status">
                                <span class="badge @(item.Status == ProductStatus.Approved ? "bg-success" : (item.Status == ProductStatus.Rejected ? "bg-danger" : "bg-warning text-dark"))">
                                    @item.Status
                                </span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="action-group">
                                @* Edit Button *@
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-pencil me-1"></i> Edit
                                </a>

                                @if (item.Status != ProductStatus.Approved)
                                {
                                    @* Approve Button *@
                                    <form asp-action="Approve" asp-route-id="@item.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-amazon-primary">
                                            <i class="bi bi-check-lg me-1"></i> Approve
                                        </button>
                                    </form>
                                }

                                @if (item.Status != ProductStatus.Rejected)
                                {
                                    @* Reject Button *@
                                    <button type="button" class="btn btn-sm btn-danger-custom"
                                            data-bs-toggle="modal" data-bs-target="#rejectModal"
                                            data-product-id="@item.Id">
                                        <i class="bi bi-x-circle me-1"></i> Reject
                                    </button>
                                }

                                @* Delete Button *@
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-amazon-secondary text-danger"
                                   onclick="return confirm('Confirm permanent deletion?');">
                                    <i class="bi bi-trash me-1"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox-fill text-muted" style="font-size: 3rem;"></i>
            <h4 class="text-muted mt-3">No products found</h4>
            <p class="text-muted">Try adjusting your filters or add a new product.</p>
        </div>
    }

    @* --- Pagination --- *@
    @if (Model.Products != null && Model.Products.TotalPages > 1)
    {
        <nav aria-label="Product pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                @if (Model.Products.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index"
                           asp-route-pageNumber="@(Model.Products.PageIndex - 1)"
                           asp-route-SearchName="@Model.CurrentSearchName"
                           asp-route-SearchCategory="@Model.CurrentSearchCategory"
                           asp-route-sortOrder="@Model.CurrentSortOrder">
                            <i class="bi bi-chevron-left"></i> Previous
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link"><i class="bi bi-chevron-left"></i> Previous</span>
                    </li>
                }

                @for (int i = Math.Max(1, Model.Products.PageIndex - 2); i <= Math.Min(Model.Products.TotalPages, Model.Products.PageIndex + 2); i++)
                {
                    <li class="page-item @(i == Model.Products.PageIndex ? "active" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-pageNumber="@i"
                           asp-route-SearchName="@Model.CurrentSearchName"
                           asp-route-SearchCategory="@Model.CurrentSearchCategory"
                           asp-route-sortOrder="@Model.CurrentSortOrder">
                            @i
                        </a>
                    </li>
                }

                @if (Model.Products.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index"
                           asp-route-pageNumber="@(Model.Products.PageIndex + 1)"
                           asp-route-SearchName="@Model.CurrentSearchName"
                           asp-route-SearchCategory="@Model.CurrentSearchCategory"
                           asp-route-sortOrder="@Model.CurrentSortOrder">
                            Next <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">Next <i class="bi bi-chevron-right"></i></span>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@* --- Rejection Modal --- *@
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Reject" method="post">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle me-2"></i>Reject Product</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="reject-product-id" />
                    <div class="mb-3">
                        <label class="form-label fw-bold">Reason for Rejection</label>
                        <textarea name="reason" class="form-control" rows="3" required placeholder="Specify why this item cannot be approved..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-amazon-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Confirm Reject</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.product-slider').slick({
                slidesToShow: 4,
                slidesToScroll: 1,
                autoplay: true,
                dots: true,
                arrows: true,
                responsive: [
                    { breakpoint: 1024, settings: { slidesToShow: 2 } },
                    { breakpoint: 600, settings: { slidesToShow: 1 } }
                ]
            });

            var rejectModal = document.getElementById('rejectModal');
            rejectModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                document.getElementById('reject-product-id').value = button.getAttribute('data-product-id');
            });
        });
    </script>
}