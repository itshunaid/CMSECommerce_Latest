@model CMSECommerce.Areas.Admin.Models.ProductListViewModel
@using CMSECommerce.Areas.Admin.Models
@using CMSECommerce.Models
@{
    ViewData["Title"] = "Product Inventory";
    string pageAction = "Index";

    var amazonDarkBlue = "#232F3E";
    var amazonPrimaryActionGreen = "#1A7525";
    var amazonOrange = "#FF9900";
    var amazonRed = "#C40000";
    var amazonBackground = "#EAEDED";
    var amazonTableHeaderBg = "#000000";
}

<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />

<style>
    body {
        background-color: @amazonBackground;
        color: #111111;
    }

    /* Slider Styling */
    .slider-container {
        background: white;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 30px;
        border: 1px solid #ddd;
    }

    .slider-item {
        padding: 10px;
        text-align: center;
    }

    .slider-card {
        background: #fff;
        border: 1px solid #eee;
        border-radius: 5px;
        padding: 15px;
        transition: transform 0.2s;
    }

        .slider-card:hover {
            transform: scale(1.02);
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

    .slider-img {
        width: 100%;
        height: 150px;
        object-fit: contain;
        margin-bottom: 10px;
    }

    .slider-price {
        color: @amazonRed;
        font-weight: bold;
        font-size: 1.1rem;
    }

    /* Existing Table Styles (Retained) */
    .product-img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border: 1px solid #DDDDDD;
    }

    .admin-header h1 {
        color: @amazonDarkBlue;
        font-weight: 700;
        font-size: 2.2rem;
    }

    .btn-amazon-primary {
        background-color: @amazonPrimaryActionGreen;
        border-color: @amazonPrimaryActionGreen;
        color: white;
        font-weight: 500;
        border-radius: 4px;
    }

        .btn-amazon-primary:hover {
            background-color: #156220;
            border-color: #156220;
        }

    .btn-amazon-secondary {
        background-color: #F0F2F2;
        border-color: #ADB1B8;
        color: @amazonDarkBlue;
        font-weight: 500;
        border-radius: 4px;
    }

        .btn-amazon-secondary:hover {
            background-color: #E3E6E6;
            border-color: #A2A6AC;
        }

    .btn-info {
        background-color: @amazonOrange;
        border-color: @amazonOrange;
        color: @amazonDarkBlue !important;
        font-weight: 500;
    }

    .filter-search-container {
        background-color: white !important;
        border: 1px solid #DDDDDD !important;
    }

    #productTable {
        background-color: white;
        border: 1px solid #DDDDDD;
        font-size: 0.95rem;
    }

        #productTable thead {
            background-color: @amazonTableHeaderBg !important;
            color: white;
        }

            #productTable thead a {
                color: white !important;
            }
</style>

<div class="container-fluid py-4">

    @* --- Action Header --- *@
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3 admin-header">
        <h1><i class="bi bi-boxes me-2" style="color: @amazonOrange;"></i> Product Inventory</h1>
        <a asp-action="Create" class="btn btn-amazon-primary btn-lg shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Add New Product
        </a>
    </div>

    @* --- NEW: Product Slider Section --- *@
    @if (Model.Products != null && Model.Products.Any())
    {
        <div class="slider-container shadow-sm">
            <h5 class="mb-3 text-muted"><i class="bi bi-lightning-charge-fill text-warning"></i> Quick Preview</h5>
            <div class="product-slider">
                @foreach (var item in Model.Products)
                {
                    <div class="slider-item">
                        <div class="slider-card">
                            <img src="/media/products/@item.Image" class="slider-img" alt="@item.Name">
                            <div class="text-truncate fw-bold small">@item.Name</div>
                            <div class="slider-price">@item.Price.ToString("C2")</div>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary mt-2 w-100">Quick Edit</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    @* --- Filter and Search Bar (Original Functionality) --- *@
    <form asp-action="Index" method="get" class="mb-4 p-3 rounded shadow-sm filter-search-container">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label for="SearchName" class="form-label text-muted fw-bold small">Name</label>
                <input type="text" name="SearchName" class="form-control" placeholder="Search by name" value="@Model.CurrentSearchName" />
            </div>
            <div class="col-md-3">
                <label for="SearchCategory" class="form-label text-muted fw-bold small">Category</label>
                <input type="text" name="SearchCategory" class="form-control" placeholder="Search by category" value="@Model.CurrentSearchCategory" />
            </div>
            <div class="col-md-3">
                <label for="SearchStatus" class="form-label text-muted fw-bold small">Status</label>
                <select name="SearchStatus" id="SearchStatus" class="form-select">
                    <option value="">All Statuses</option>
                    @foreach (var status in Enum.GetValues(typeof(ProductStatus)).Cast<ProductStatus>())
                    {
                        <option value="@status" selected="@(ViewBag.CurrentSearchStatus == status.ToString())">@status.ToString()</option>
                    }
                </select>
            </div>
            <div class="col-md-3 d-flex gap-2">
                <button type="submit" class="btn btn-amazon-primary w-50"><i class="bi bi-funnel-fill"></i> Filter</button>
                <a asp-action="Index" class="btn btn-amazon-secondary w-50"><i class="bi bi-x-lg"></i> Clear</a>
            </div>
        </div>
        <input type="hidden" name="SortOrder" value="@Model.CurrentSortOrder" />
        <input type="hidden" name="pageSize" value="@Model.CurrentPageSize" />
    </form>

    @* --- Table Logic (Original Functionality Retained) --- *@
    @if (Model.Products == null || !Model.Products.Any())
    {
        <div class="alert alert-info" role="alert"><i class="bi bi-info-circle-fill me-2"></i>No products found.</div>
    }
    else
    {
        <div class="table-responsive shadow-lg rounded-3">
            <table class="table table-striped table-hover align-middle border" id="productTable">
                <thead>
                    <tr>
                        <th style="width: 80px;">Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Status</th>
                        <th>Reject Reason</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td><img src="/media/products/@item.Image" class="img-thumbnail rounded product-img" /></td>
                            <td class="fw-bold">@item.Name</td>
                            <td><span class="fw-bold" style="color: @amazonPrimaryActionGreen;">@item.Price.ToString("C2")</span></td>
                            <td><span class="text-muted small">@item.Category.Name</span></td>
                            <td><span class="badge @(item.Status == ProductStatus.Approved ? "bg-success" : "bg-warning")">@item.Status</span></td>
                            <td>@item.RejectionReason</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="bi bi-pencil"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</div>

@section Scripts {
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

    <script>
        $(document).ready(function(){
            $('.product-slider').slick({
                infinite: true,
                slidesToShow: 4,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 3000,
                dots: true,
                arrows: true,
                responsive: [
                    { breakpoint: 1024, settings: { slidesToShow: 3 } },
                    { breakpoint: 768, settings: { slidesToShow: 2 } },
                    { breakpoint: 480, settings: { slidesToShow: 1 } }
                ]
            });
        });

        // Your existing Modal/Tooltip Logic
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            tooltipTriggerList.map(function (tooltipTriggerEl) { return new bootstrap.Tooltip(tooltipTriggerEl) })

            var rejectModal = document.getElementById('rejectModal');
            if (rejectModal) {
                rejectModal.addEventListener('show.bs.modal', function (event) {
                    var button = event.relatedTarget;
                    var productId = button.getAttribute('data-product-id');
                    rejectModal.querySelector('#reject-product-id').value = productId;
                });
            }
        });
    </script>
}