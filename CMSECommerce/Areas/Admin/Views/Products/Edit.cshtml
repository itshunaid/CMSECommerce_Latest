@model Product

@{
    ViewData["Title"] = "Edit Product";
    var mainImagePath = $"/media/products/{(string.IsNullOrWhiteSpace(Model.Image) ? "no-image.png" : Model.Image)}";
}

<div class="container py-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1 small">
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none text-muted">Inventory</a></li>
                    <li class="breadcrumb-item active">Edit Product</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0 fw-bold">Edit Product: @Model.Name</h1>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm rounded-pill px-3">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <form asp-action="Edit" enctype="multipart/form-data" id="mainProductForm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm border-0"></div>
                <input type="hidden" asp-for="Id" id="productId" />
                <input type="hidden" asp-for="Image" />

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3 border-bottom">
                        <h5 class="mb-0 fw-bold text-dark">Basic Information</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold small text-uppercase text-muted"></label>
                            <input asp-for="Name" class="form-control border-2 shadow-none" placeholder="Product Title" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold small text-uppercase text-muted"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label fw-bold small text-uppercase text-muted">Price (₹)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-2">₹</span>
                                    <input asp-for="Price" class="form-control border-2 shadow-none" placeholder="0.00" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="StockQuantity" class="form-label fw-bold small text-uppercase text-muted">Inventory</label>
                                <input asp-for="StockQuantity" type="number" class="form-control border-2 shadow-none" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3 border-bottom">
                        <h5 class="mb-0 fw-bold text-dark">Main Listing Image</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row align-items-center g-4">
                            <div class="col-sm-4 text-center">
                                <img src="@mainImagePath" class="img-fluid rounded border p-2 bg-white shadow-sm" style="max-height: 140px;" />
                            </div>
                            <div class="col-sm-8">
                                <label class="form-label fw-bold small text-uppercase text-muted">Replace Main Photo</label>
                                <input asp-for="ImageUpload" class="form-control border-2" type="file" onchange="previewMain(this);" />
                                <div class="mt-3" id="mainPrevContainer" style="display: none;">
                                    <img src="" id="imgpreview" class="img-thumbnail" style="max-width: 100px;" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-grid d-md-flex justify-content-md-end mb-5">
                    <button type="submit" class="btn btn-warning btn-lg px-5 fw-bold shadow rounded-pill text-dark border-0">
                        Update Product
                    </button>
                </div>
            </form>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm sticky-top" style="top: 1rem;">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0 fw-bold text-dark">Gallery Management</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-2 mb-4" id="galleryWrapper">
                        @if (Model.GalleryImages != null && Model.GalleryImages.Any())
                        {
                            @foreach (var image in Model.GalleryImages)
                            {
                                <div class="col-4 col-lg-6 gallery-item-container">
                                    <div class="position-relative border rounded p-1 gallery-card bg-white h-100">
                                        <img class="img-fluid rounded w-100" src="/media/gallery/@Model.Id/@image" style="height: 80px; object-fit: cover;" />
                                        <button type="button" data-name="@image" class="btn btn-danger btn-sm deleteImage position-absolute top-0 end-0 m-1 rounded-circle p-0" style="width:24px; height:24px;">
                                            <i class="bi bi-x"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12 text-center py-3" id="emptyMsg">
                                <p class="text-muted small mb-0 italic">No gallery images found.</p>
                            </div>
                        }
                    </div>

                    <hr class="opacity-10" />

                    <div class="mt-3">
                        <label class="form-label fw-bold small text-uppercase text-muted mb-3">Add New Photos</label>
                        <form asp-action="UploadImages" class="dropzone rounded-3 border-2 border-dashed bg-light" id="galleryDropzone"></form>
                        <button id="btnStartUpload" type="button" class="btn btn-dark w-100 mt-3 fw-bold py-2 shadow-sm">
                            <i class="bi bi-cloud-arrow-up me-2"></i>Upload to Gallery
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://unpkg.com/dropzone@6.0.0-beta.1/dist/dropzone.css" rel="stylesheet" />
    <script src="https://unpkg.com/dropzone@6.0.0-beta.1/dist/dropzone-min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/40.1.0/classic/ckeditor.js"></script>

    <script>
        // 1. CKEditor Initialization
        ClassicEditor.create(document.querySelector('#Description')).catch(err => console.error(err));

        // 2. Local Main Image Preview
        function previewMain(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = e => { $('#imgpreview').attr('src', e.target.result); $('#mainPrevContainer').show(); };
                reader.readAsDataURL(input.files[0]);
            }
        }

        // 3. Dropzone AJAX Upload (No Refresh)
        Dropzone.autoDiscover = false;
        $(function () {
            const productId = "@Model.Id";

            const dz = new Dropzone("#galleryDropzone", {
                autoProcessQueue: false,
                paramName: "files",
                uploadMultiple: true,
                parallelUploads: 5,
                acceptedFiles: "image/*",
                init: function () {
                    const self = this;

                    $("#btnStartUpload").click(function () {
                        if (self.getQueuedFiles().length > 0) {
                            self.processQueue();
                            $(this).prop("disabled", true).html('<span class="spinner-border spinner-border-sm me-2"></span>Uploading...');
                        }
                    });

                    this.on("sendingmultiple", (data, xhr, formData) => formData.append("id", productId));

                    this.on("successmultiple", function (files, response) {
                        if (response.trim() === "ok") {
                            // UI Update: Append new images immediately
                            files.forEach(file => {
                                const newImgHtml = `
                                    <div class="col-4 col-lg-6 gallery-item-container">
                                        <div class="position-relative border rounded p-1 gallery-card bg-white h-100 border-success">
                                            <img class="img-fluid rounded w-100" src="${file.dataURL}" style="height: 80px; object-fit: cover;" />
                                            <span class="badge bg-success position-absolute top-0 start-0 m-1">Added</span>
                                            <small class="text-muted d-block text-center mt-1" style="font-size:10px">Save to enable delete</small>
                                        </div>
                                    </div>`;
                                $("#galleryWrapper").append(newImgHtml);
                            });

                            // Cleanup
                            $("#emptyMsg").remove();
                            self.removeAllFiles();
                            $("#btnStartUpload").prop("disabled", false).html('<i class="bi bi-cloud-arrow-up me-2"></i>Upload to Gallery');
                        }
                    });
                }
            });

            // 4. Immediate Delete AJAX (No Refresh)
            $(document).on("click", ".deleteImage", function (e) {
                e.preventDefault();
                const btn = $(this);
                const container = btn.closest(".gallery-item-container");
                const imageName = btn.data("name");

                if (confirm("Delete this image permanently from the server?")) {
                    container.css("opacity", "0.4");

                    $.ajax({
                        type: "POST",
                        url: "/Admin/Products/DeleteImage",
                        data: { id: productId, imageName: imageName },
                        dataType: "text",
                        success: function (res) {
                            if (res.trim() === "ok") {
                                container.fadeOut(300, function() {
                                    $(this).remove();
                                    if ($(".gallery-item-container").length === 0) {
                                        $("#galleryWrapper").html('<div class="col-12 text-center py-3" id="emptyMsg"><p class="text-muted small mb-0 italic">No gallery images found.</p></div>');
                                    }
                                });
                            } else {
                                container.css("opacity", "1");
                                alert("Failed: " + res);
                            }
                        },
                        error: function() {
                            container.css("opacity", "1");
                            alert("Network error.");
                        }
                    });
                }
            });
        });
    </script>

    <style>
        .btn-warning {
            background-color: #ffd814;
            transition: 0.2s;
        }

            .btn-warning:hover {
                background-color: #f7ca00;
            }

        .gallery-card {
            transition: all 0.2s ease-in-out;
        }

            .gallery-card:hover {
                transform: translateY(-2px);
                border-color: #febd69 !important;
                box-shadow: 0 4px 8px rgba(0,0,0,0.05);
            }

        .dropzone {
            border: 2px dashed #ced4da !important;
            min-height: 100px !important;
        }

        .ck-editor__editable {
            min-height: 250px;
        }
    </style>
}