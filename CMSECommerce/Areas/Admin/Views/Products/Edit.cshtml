@model Product

@{
    ViewData["Title"] = "Edit Product";
    // Define the path to the product's main image
    var mainImagePath = $"/media/products/{(string.IsNullOrWhiteSpace(Model.Image) ? "no-image.png" : Model.Image)}";
}

<div class="row">
    <div class="col-12">
        <h1 class="mb-4">✏️ Edit Product: @Model.Name</h1>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">Product Details</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data" class="row g-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Image" />

                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label">Price (₹)</label>
                        <div class="input-group">
                            <span class="input-group-text">₹</span>
                            <input asp-for="Price" class="form-control" placeholder="0.00" type="number" step="0.01" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="StockQuantity" class="form-label"></label>
                        <input asp-for="StockQuantity" type="number" min="0" class="form-control" placeholder="0" />
                        <span asp-validation-for="StockQuantity" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label" for="CategoryId">Category</label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                            <option value="">-- Choose a category --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="5" placeholder="Detailed product description..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <h6 class="mt-3">Product Image Management</h6>
                        <hr class="mt-0" />
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">Current Main Image</label>
                                <div class="border rounded p-2 text-center">
                                    <img src="@mainImagePath" class="img-fluid" style="max-height: 150px;" alt="Current Main Image" />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="ImageUpload" class="form-label">Upload New Image</label>
                                <input asp-for="ImageUpload" class="form-control" type="file" onchange="img_pathUrl(this);" />
                                <span asp-validation-for="ImageUpload" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">New Image Preview</label>
                                <div class="border rounded p-2 text-center">
                                    <img src="" id="imgpreview" style="max-width: 150px; height: auto; display: block; margin: 0 auto;" alt="New Image Preview" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 text-end pt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">Gallery Images</h5>
            </div>
            <div class="card-body">
                @if (Model.GalleryImages?.Any() != true)
                {
                    <p class="text-muted">There are no gallery images for this product yet.</p>
                }
                else
                {
                    <div class="row g-3">
                        @foreach (var image in Model.GalleryImages)
                        {
                            <div class="col-4 col-sm-3 col-md-2 text-center">
                                <div class="border rounded p-2">
                                    <img class="img-fluid mb-2" src="/media/gallery/@Model.Id/@image" style="height: 80px; width: auto;" alt="Gallery Image" />
                                    <a data-name="@image" class="deleteImage confirm btn btn-sm btn-danger w-100">Delete</a>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">Upload New Gallery Images</h5>
            </div>
            <div class="card-body">
                <form asp-action="UploadImages" class="dropzone" id="upload" enctype="multipart/form-data"></form>
                <button id="btnupload" class="btn btn-success mt-3">
                    <i class="bi bi-upload"></i> Upload Files
                </button>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">← Back to List</a>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script src="https://cdn.ckeditor.com/ckeditor5/40.1.0/classic/ckeditor.js"></script>

    <script src="https://unpkg.com/dropzone@6.0.0-beta.1/dist/dropzone-min.js"></script>
    <link href="https://unpkg.com/dropzone@6.0.0-beta.1/dist/dropzone.css" rel="stylesheet" type="text/css" />

    <script>
        // CKEditor 5 Initialization
        ClassicEditor
            .create(document.querySelector('#Description'))
            .catch(error => {
                console.error(error);
            });

        // Function for Image Preview
        function img_pathUrl(input) {
            if (input.files && input.files[0]) {
                const imgElement = document.getElementById('imgpreview');
                imgElement.src = URL.createObjectURL(input.files[0]);
            }
        }

        // Dropzone Configuration
        Dropzone.autoDiscover = false;
        $(function () {
            var dz = null;
            $("#upload").dropzone({
                autoProcessQueue: false,
                paramName: "File Upload",
                maxFilesize: 5, //mb
                maxThumbnailFilesize: 1, //mb
                maxFiles: 5,
                parallelUploads: 5,
                acceptedFiles: ".jpeg,.png,.jpg",
                uploadMultiple: true,
                addRemoveLinks: true,

                init: function () {
                    dz = this;
                    $("#btnupload").click(function () {
                        dz.processQueue();
                        $(this).attr("disabled", "disabled");
                    });
                    dz.on("sending", function (file, xhr, formData) {
                        formData.append("id", @Model.Id);
                    });
                },
                success: function (file) {
                    var preview = $(file.previewElement);
                    preview.addClass("dz-success text-success");
                    setTimeout(function () {
                        dz.removeFile(file);
                    }, 2000);

                },
                queuecomplete: function () {
                    // Reload the page after all uploads are complete
                    setTimeout(() => location.reload(), 2000);
                },
                dictDefaultMessage: "You can drag and drop your images here or click to select files.",
                dictRemoveFile: "Remove"
            });

            // Delete Gallery Image Confirmation and Post
            $("a.deleteImage").on("click", function (e) {
                e.preventDefault();

                if (!confirm("Are you sure you want to delete this gallery image?")) {
                    return;
                }

                const $this = $(this);
                const url = "/admin/products/DeleteImage";
                const imageName = $this.data("name");

                $.post(url, { id: @Model.Id, imageName: imageName }, function (data) {
                    if (data === "ok") {
                        $this.closest('.col-4, .col-sm-3, .col-md-2').fadeOut("fast", function() {
                             $(this).remove();
                        });
                    } else {
                        alert("Error deleting image.");
                    }
                }).fail(function() {
                    alert("A server error occurred while deleting the image.");
                });
            });
        });
    </script>
}