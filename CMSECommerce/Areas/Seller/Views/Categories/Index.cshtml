@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories Index";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4 fw-bold text-dark">Category Management</h1>
    <p>
        <a asp-action="Create" class="btn btn-warning shadow-sm fw-bold">
            <i class="fas fa-plus me-1"></i> Add New Category
        </a>
    </p>
</div>

<hr />

<div class="table-responsive">
    <table class="table table-striped table-bordered shadow-sm">
        <thead class="bg-dark text-warning">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    Slug
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Slug)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-2 shadow-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger shadow-sm">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>