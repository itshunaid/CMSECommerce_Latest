@model IEnumerable<CMSECommerce.Models.OrderDetail>

@{
    // Filter out cancelled items so they don't appear in the processing lists
    // This ensures that Sellers/Admins only see items they actually need to ship.
    var activeItems = Model.Where(d => !d.IsCancelled).ToList();

    ViewData["Title"] = ViewBag.IsProcessed ? "Processed Orders" : "New Orders (Unprocessed Items)";

    // Retrieve search parameters for form persistence
    string currentSearchString = ViewBag.CurrentSearchString ?? string.Empty;
    string currentSearchField = ViewBag.CurrentSearchField ?? "Product";
}

<div class="container py-5">
    @if (!ViewBag.IsProcessed)
    {
        <h1 class="display-5 fw-bold text-dark mb-4">🆕 New Orders Awaiting Processing</h1>
        <p class="lead text-muted">
            This table displays individual line items that you need to fulfill.
            <span class="badge bg-info text-dark">Note: Cancelled items are automatically excluded from this view.</span>
        </p>
    }
    else
    {
        <h1 class="display-5 fw-bold text-dark mb-4">✅ Processed & Shipped Orders</h1>
        <p class="lead text-muted">
            This table displays items that have already been marked as processed and shipped.
        </p>
    }

    @* Display Status Messages *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* Use activeItems.Any() to handle empty states correctly *@
    @if (!activeItems.Any())
    {
        @if (!ViewBag.IsProcessed)
        {
            <div class="alert alert-success text-center mt-5 border-2" role="alert">
                <h4 class="alert-heading">All Orders Processed! 🎉</h4>
                <p class="mb-0">You have no new orders awaiting processing. (Cancelled items are hidden).</p>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center mt-5 border-2" role="alert">
                <h4 class="alert-heading">No Processed Orders Found</h4>
                <p class="mb-0">You haven't marked any items as processed yet.</p>
            </div>
        }
    }
    else
    {
        @* Summary Cards: Calculated ONLY from non-cancelled items *@
        @if (!ViewBag.IsProcessed)
        {
            decimal totalRevenue = activeItems.Sum(d => d.Price * d.Quantity);
            <div class="row mb-4">
                <div class="col-md-6 col-lg-4">
                    <div class="card text-white bg-danger mb-3 shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="card-title opacity-75">Pending Revenue</h5>
                            <p class="card-text fs-3 fw-bold">@totalRevenue.ToString("C")</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="card text-white bg-warning text-dark mb-3 shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="card-title opacity-75">Items Awaiting Shipment</h5>
                            <p class="card-text fs-3 fw-bold">@activeItems.Sum(d => d.Quantity)</p>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* Search Bar *@
        <div class="row mb-4">
            <div class="col-12">
                <form asp-action="@(ViewBag.IsProcessed ? "Shipped" : "Index")" method="get">
                    <div class="input-group shadow-sm">
                        <select name="searchField" class="form-select" style="max-width: 150px;">
                            <option value="Product" selected="@(currentSearchField == "Product")">Product</option>
                            <option value="Customer" selected="@(currentSearchField == "Customer")">Customer</option>
                            <option value="OrderId" selected="@(currentSearchField == "OrderId")">Order ID</option>
                            <option value="Subtotal" selected="@(currentSearchField == "Subtotal")">Subtotal</option>
                            <option value="Price" selected="@(currentSearchField == "Price")">Price</option>
                            <option value="Qty" selected="@(currentSearchField == "Qty")">Qty</option>
                            <option value="Contact" selected="@(currentSearchField == "Contact")">Contact</option>
                        </select>
                        <input type="text" name="searchString" class="form-control" placeholder="Search active orders..." value="@currentSearchString" />
                        <button class="btn btn-primary px-4" type="submit">
                            <i class="fas fa-search me-1"></i> Search
                        </button>
                        @if (!string.IsNullOrEmpty(currentSearchString))
                        {
                            <a asp-action="@(ViewBag.IsProcessed ? "Shipped" : "Index")" class="btn btn-secondary border-start">Clear</a>
                        }
                    </div>
                </form>
            </div>
        </div>

        @* Table View *@
        <div class="table-responsive">
            <table class="table table-hover table-striped border rounded-3 overflow-hidden shadow-sm align-middle">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 5%;"></th>
                        <th style="width: 20%;">Product</th>
                        <th style="width: 15%;">Customer</th>
                        <th style="width: 15%;">Contact</th>
                        <th style="width: 5%;">Qty</th>
                        <th style="width: 10%;">Price</th>
                        <th style="width: 10%;">Subtotal</th>
                        <th style="width: 10%;">Order ID</th>
                        @if (!ViewBag.IsProcessed)
                        {
                            <th style="width: 10%;">Action</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @* Loop through activeItems only *@
                    @foreach (var item in activeItems.OrderBy(d => d.OrderId))
                    {
                        <tr>
                            <td>
                                <img src="/media/products/@item.Image" class="img-thumbnail rounded-3" alt="@item.ProductName" style="width: 50px; height: 50px; object-fit: cover;">
                            </td>
                            <td>
                                <div class="fw-bold text-dark">@item.ProductName</div>
                                <span class="text-muted small">ID: @item.ProductId</span>
                            </td>
                            <td>@item.Customer</td>
                            <td>
                                <a href="tel:@item.CustomerNumber" class="text-decoration-none small">
                                    <i class="fas fa-phone me-1"></i> @item.CustomerNumber
                                </a>
                            </td>
                            <td class="text-center">@item.Quantity</td>
                            <td>@item.Price.ToString("C")</td>
                            <td class="fw-bold text-primary">@((item.Price * item.Quantity).ToString("C"))</td>
                            <td>
                                <a asp-area="" asp-controller="Orders" asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-sm btn-outline-secondary">
                                    #@item.OrderId
                                </a>
                            </td>
                            @if (!ViewBag.IsProcessed)
                            {
                                <td>
                                    <form asp-action="ToggleProcessed" method="post" class="d-inline-block">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="detailId" value="@item.Id" />
                                        <input type="hidden" name="setTo" value="true" />
                                        <button type="submit" class="btn btn-success btn-sm fw-bold shadow-sm"
                                                data-bs-toggle="tooltip" title="Mark as Processed / Shipped">
                                            <i class="fas fa-check me-1"></i> Process
                                        </button>
                                    </form>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* View Toggler *@
        <div class="text-center mt-4">
            @if (!ViewBag.IsProcessed)
            {
                <a asp-action="Shipped" class="btn btn-outline-primary shadow-sm">
                    <i class="fas fa-history me-2"></i> View Processed/Completed Orders
                </a>
            }
            else
            {
                <a asp-action="Index" class="btn btn-outline-primary shadow-sm">
                    <i class="fas fa-inbox me-2"></i> View New Orders Awaiting Processing
                </a>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Initialize Bootstrap tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}