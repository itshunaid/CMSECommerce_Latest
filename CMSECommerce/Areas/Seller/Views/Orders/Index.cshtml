@model IEnumerable<CMSECommerce.Models.OrderDetail>

@{
    // Filter out cancelled items so they don't appear in the processing lists
    var activeItems = Model.Where(d => !d.IsCancelled).ToList();

    ViewData["Title"] = ViewBag.IsProcessed ? "Processed Orders" : "New Orders (Unprocessed Items)";

    // Retrieve search parameters for form persistence
    string currentSearchString = ViewBag.CurrentSearchString ?? string.Empty;
    string currentSearchField = ViewBag.CurrentSearchField ?? "Product";
}

<div class="container py-5">
    @if (!ViewBag.IsProcessed)
    {
        <h1 class="display-5 fw-bold text-dark mb-4">🆕 New Orders Awaiting Processing</h1>
        <p class="lead text-muted">
            This table displays individual line items that you need to fulfill.
            <span class="badge bg-info text-dark">Note: Cancelled items are automatically excluded from this view.</span>
        </p>
    }
    else
    {
        <h1 class="display-5 fw-bold text-dark mb-4">✅ Processed & Shipped Orders</h1>
        <p class="lead text-muted">
            This table displays items that have already been marked as processed and shipped.
        </p>
    }

    @* Display Status Messages *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!activeItems.Any())
    {
        <div class="alert @(ViewBag.IsProcessed ? "alert-info" : "alert-success") text-center mt-5 border-2" role="alert">
            <h4 class="alert-heading">@(ViewBag.IsProcessed ? "No Processed Orders Found" : "All Orders Processed! 🎉")</h4>
            <p class="mb-0">@(ViewBag.IsProcessed ? "You haven't marked any items as processed yet." : "You have no new orders awaiting processing.")</p>
        </div>
    }
    else
    {
        @* Summary Cards *@
        @if (!ViewBag.IsProcessed)
        {
            decimal totalRevenue = activeItems.Sum(d => d.Price * d.Quantity);
            <div class="row mb-4">
                <div class="col-md-6 col-lg-4">
                    <div class="card text-white bg-danger mb-3 shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="card-title opacity-75">Pending Revenue</h5>
                            <p class="card-text fs-3 fw-bold">@totalRevenue.ToString("C", new System.Globalization.CultureInfo("en-IN"))</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="card text-white bg-warning text-dark mb-3 shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="card-title opacity-75">Items Awaiting Shipment</h5>
                            <p class="card-text fs-3 fw-bold">@activeItems.Sum(d => d.Quantity)</p>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* Search Bar *@
        <div class="row mb-4">
            <div class="col-12">
                <form asp-action="@(ViewBag.IsProcessed ? "Shipped" : "Index")" method="get">
                    <div class="input-group shadow-sm">
                        <select name="searchField" class="form-select" style="max-width: 150px;">
                            <option value="Product" selected="@(currentSearchField == "Product")">Product</option>
                            <option value="Customer" selected="@(currentSearchField == "Customer")">Customer</option>
                            <option value="OrderId" selected="@(currentSearchField == "OrderId")">Order ID</option>
                            <option value="Contact" selected="@(currentSearchField == "Contact")">Contact</option>
                        </select>
                        <input type="text" name="searchString" class="form-control" placeholder="Search orders..." value="@currentSearchString" />
                        <button class="btn btn-primary px-4" type="submit">
                            <i class="fas fa-search me-1"></i> Search
                        </button>
                        @if (!string.IsNullOrEmpty(currentSearchString))
                        {
                            <a asp-action="@(ViewBag.IsProcessed ? "Shipped" : "Index")" class="btn btn-secondary border-start">Clear</a>
                        }
                    </div>
                </form>
            </div>
        </div>

        @* Table View *@
        <div class="table-responsive">
            <table class="table table-hover table-striped border rounded-3 overflow-hidden shadow-sm align-middle">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 5%;"></th>
                        <th style="width: 20%;">Product</th>
                        <th style="width: 15%;">Customer</th>
                        <th style="width: 15%;">Contact</th>
                        <th style="width: 5%;">Qty</th>
                        <th style="width: 10%;">Subtotal</th>
                        <th style="width: 10%;">Order ID</th>
                        @if (!ViewBag.IsProcessed)
                        {
                            <th style="width: 20%;" class="text-center">Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in activeItems.OrderBy(d => d.OrderId))
                    {
                        <tr>
                            <td>
                                <img src="/media/products/@item.Product.Image" class="img-thumbnail rounded-3" alt="@item.Product.Name" style="width: 50px; height: 50px; object-fit: cover;">
                            </td>
                            <td>
                                <div class="fw-bold text-dark">@item.Product.Name</div>
                                <span class="text-muted small">ID: @item.ProductId</span>
                            </td>
                            <td>@item.Customer</td>
                            <td>
                                <a href="tel:@item.CustomerNumber" class="text-decoration-none small">
                                    <i class="fas fa-phone me-1"></i> @item.CustomerNumber
                                </a>
                            </td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="fw-bold text-primary">@((item.Price * item.Quantity).ToString("C", new System.Globalization.CultureInfo("en-IN")))</td>
                            <td>
                                <a asp-area="" asp-controller="Orders" asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-sm btn-outline-secondary">
                                    #@item.OrderId
                                </a>
                            </td>
                            @if (!ViewBag.IsProcessed)
                            {
                                <td class="text-center">
                                    <div class="btn-group shadow-sm">
                                        @* Process Button *@
                                        <form asp-action="ToggleProcessed" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="detailId" value="@item.Id" />
                                            <input type="hidden" name="setTo" value="true" />
                                            <button type="submit" class="btn btn-success btn-sm fw-bold" data-bs-toggle="tooltip" title="Mark as Processed">
                                                <i class="fas fa-check"></i> Process
                                            </button>
                                        </form>

                                        @* Cancel Button (Triggering Modal) *@
                                        <button type="button" class="btn btn-outline-danger btn-sm fw-bold"
                                                onclick="openCancelModal(@item.Id, '@item.Product.Name', @item.OrderId)"
                                                data-bs-toggle="tooltip" title="Cancel Item">
                                            <i class="fas fa-times"></i> Cancel
                                        </button>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a asp-action="@(ViewBag.IsProcessed ? "Index" : "Shipped")" class="btn btn-outline-primary shadow-sm">
                <i class="fas @(ViewBag.IsProcessed ? "fa-inbox" : "fa-history") me-2"></i>
                View @(ViewBag.IsProcessed ? "New" : "Processed") Orders
            </a>
        </div>
    }
</div>

@* --- Seller Cancellation Modal --- *@
<div class="modal fade" id="sellerCancelModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <form asp-action="CancelOrderDetail" asp-controller="Orders" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title fw-bold"><i class="fas fa-exclamation-circle me-2"></i>Cancel Item</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="detailId" id="modalDetailId" />
                    <p class="mb-3">Are you sure you want to cancel <strong id="modalProductName"></strong> from Order <strong id="modalOrderIdDisplay"></strong>?</p>

                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Cancellation Reason (Visible to Customer)</label>
                        <select name="reason" class="form-select" required>
                            <option value="" selected disabled>Select a reason...</option>
                            <option value="Out of Stock">Out of Stock</option>
                            <option value="Pricing Error">Pricing Error</option>
                            <option value="Damaged Item">Damaged Item</option>
                            <option value="Shipping Restrictions">Shipping Restrictions</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="alert alert-warning py-2 small">
                        <i class="fas fa-info-circle me-1"></i> This item will be removed from your processing list.
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary btn-sm px-3" data-bs-dismiss="modal">Keep Item</button>
                    <button type="submit" class="btn btn-danger btn-sm px-4 fw-bold shadow-sm">Confirm Cancellation</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize Bootstrap tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });

        // Function to populate and open the Seller Cancellation Modal
        function openCancelModal(detailId, productName, orderId) {
            document.getElementById('modalDetailId').value = detailId;
            document.getElementById('modalProductName').innerText = productName;
            document.getElementById('modalOrderIdDisplay').innerText = "#" + orderId;

            var cancelModal = new bootstrap.Modal(document.getElementById('sellerCancelModal'));
            cancelModal.show();
        }
    </script>
}