@model IEnumerable<CMSECommerce.Models.OrderDetail>

@{
    ViewData["Title"] = "Cancelled Items";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-5 fw-bold text-secondary">🚫 Cancelled Items</h1>
            <p class="lead text-muted">Review items that were removed from orders.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-2"></i>Back to New Orders
        </a>
    </div>

    @* Search Bar *@
    <div class="row mb-4">
        <div class="col-12">
            <form asp-action="Cancelled" method="get">
                <div class="input-group shadow-sm">
                    <select name="searchField" class="form-select" style="max-width: 150px;">
                        <option value="Product">Product</option>
                        <option value="Customer">Customer</option>
                        <option value="OrderId">Order ID</option>
                    </select>
                    <input type="text" name="searchString" class="form-control" placeholder="Search cancelled items..." value="@ViewBag.CurrentSearchString" />
                    <button class="btn btn-secondary px-4" type="submit">Search</button>
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 border rounded bg-light">
            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
            <h4>No cancelled items found!</h4>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle border shadow-sm">
                <thead class="table-secondary">
                    <tr>
                        <th>Product</th>
                        <th>Customer</th>
                        <th>Cancelled By</th>
                        <th>Reason</th>
                        <th class="text-end">Lost Revenue</th>
                        <th>Order</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="opacity-75">
                            <td>
                                <div class="fw-bold">@item.Product.Name</div>
                                <small class="text-muted">Qty: @item.Quantity</small>
                            </td>
                            <td>@item.Customer</td>
                            <td>
                                <span class="badge bg-dark">@item.CancelledByRole</span>
                            </td>
                            <td>
                                <span class="fst-italic text-wrap" style="max-width: 250px; display: block;">
                                    "@item.CancellationReason"
                                </span>
                            </td>
                            <td class="text-end fw-bold text-danger">
                                @((item.Price * item.Quantity).ToString("C"))
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-sm btn-light border">
                                    #@item.OrderId
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>