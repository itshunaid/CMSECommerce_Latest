@using CMSECommerce.Models
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product Inventory";
    string pageAction = "Index";

    string currentSearch = ViewBag.CurrentSearch;
    string currentStatus = ViewBag.CurrentStatus;
    string selectedCategory = ViewBag.SelectedCategory ?? "0";
}

@* ------------------ NOTIFICATIONS ------------------ *@
<div class="container-fluid px-0">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 mb-4">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 mb-4">
            <i class="bi bi-x-octagon-fill me-2"></i> @TempData["Error"]
            <button class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
</div>

@* ------------------ HEADER ------------------ *@
<div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
    <div>
        <h1 class="fw-bold mb-1">
            <i class="bi bi-box-seam me-2 text-warning"></i>Product Inventory
        </h1>
       
    </div>
    <a asp-action="Create" class="btn btn-warning btn-lg rounded-pill shadow-sm">
        <i class="bi bi-plus-lg me-2"></i>Add Product
    </a>
</div>

@* ------------------ FILTER BAR ------------------ *@
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label small fw-bold">Category</label>
                <select id="selectCategory" class="form-select" asp-items="ViewBag.Categories">
                    <option value="0">All Categories</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label small fw-bold">Status</label>
                <select id="selectStatus" class="form-select">
                    <option value="">All</option>
                    <option value="Approved" selected="@(currentStatus == "Approved")">Approved</option>
                    <option value="Pending" selected="@(currentStatus == "Pending")">Pending</option>
                    <option value="Rejected" selected="@(currentStatus == "Rejected")">Rejected</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label small fw-bold">Search</label>
                <div class="input-group">
                    <input id="searchQuery" class="form-control" value="@currentSearch" placeholder="Search products..." />
                    <button id="searchButton" class="btn btn-dark">Search</button>
                </div>
            </div>
            <div class="col-md-3 text-end">
                <span class="badge bg-light text-dark px-3 py-2 border">
                    @ViewBag.TotalItems Results
                </span>
            </div>
        </div>
    </div>
</div>

@* ------------------ AMAZON STYLE PRODUCT GRID ------------------ *@
<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="amazon-card h-100">

                @* Status *@
                <div class="position-absolute m-2 z-2">
                    @Html.Raw(GetStatusBadge(item.Status.ToString()))
                </div>

                @* Visibility *@
                <div class="position-absolute top-0 end-0 m-2 z-2">
                    <input type="checkbox"
                           class="form-check-input visibility-checkbox"
                           data-product-id="@item.Id"
                           @(item.IsVisible ? "checked" : "") />
                </div>

                @* Image *@
                <div class="amazon-img">
                    <img src="/media/products/@item.Image" alt="@item.Name" />
                </div>

                @* Body *@
                <div class="amazon-body">
                    <div class="small text-muted fw-bold">@item.Category?.Name</div>
                    <div class="amazon-title">@item.Name</div>

                    <div class="amazon-price">@item.Price.ToString("C2")</div>

                    <div class="small fw-bold @(item.StockQuantity > 0 ? "text-success" : "text-danger")">
                        Stock: @item.StockQuantity
                    </div>

                    @if (item.Status.ToString() == "Rejected" && !string.IsNullOrEmpty(item.RejectionReason))
                    {
                        <div class="alert alert-danger py-2 small mt-2">
                            <strong>Reason:</strong> @item.RejectionReason
                        </div>
                    }

                    <div class="d-flex gap-2 mt-auto">
                        <a asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-outline-secondary w-100">Edit</a>

                        <a asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-outline-danger w-100 confirm"
                           data-confirm-title="Delete Product"
                           data-confirm-message="Delete '@item.Name'?">
                            Delete
                        </a>
                    </div>
                </div>

            </div>
        </div>
    }
</div>

@* ------------------ PAGINATION ------------------ *@
@if (ViewBag.TotalPages > 1)
{
    <div class="mt-5">
        <pagination page-count="@ViewBag.TotalPages"
                    page-target="@pageAction"
                    category-id="@selectedCategory"
                    page-number="@ViewBag.PageNumber"
                    page-range="@ViewBag.PageRange"
                    search-query="@currentSearch"
                    status-filter="@currentStatus">
        </pagination>
    </div>
}

@* ------------------ AMAZON STYLE CSS ------------------ *@
<style>
    .amazon-card {
        border: 1px solid #e3e6e6;
        border-radius: 8px;
        background: #fff;
        box-shadow: 0 2px 5px rgba(0,0,0,.08);
        transition: transform .2s, box-shadow .2s;
        position: relative;
    }

        .amazon-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 25px rgba(0,0,0,.15);
        }

    .amazon-img {
        height: 220px;
        background: #f7f8f8;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .amazon-img img {
            max-height: 180px;
            max-width: 100%;
            object-fit: contain;
        }

    .amazon-body {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: .35rem;
    }

    .amazon-title {
        font-size: .95rem;
        font-weight: 600;
        min-height: 40px;
    }

    .amazon-price {
        font-size: 1.25rem;
        font-weight: 700;
        color: #B12704;
    }
</style>

@functions {
    string GetStatusBadge(string status)
    {
        string css = status switch
        {
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            _ => "bg-warning text-dark"
        };
        return $"<span class='badge {css} px-3 py-2 shadow-sm'>{status}</span>";
    }
}

@section Scripts {
    @Html.AntiForgeryToken()
    <script>
        $(function () {

            const baseUrl = "@Url.Action(pageAction)";

            function applyFilters() {
                const p = new URLSearchParams();
                if ($("#selectCategory").val() !== "0") p.append("categoryId", $("#selectCategory").val());
                if ($("#selectStatus").val()) p.append("status", $("#selectStatus").val());
                if ($("#searchQuery").val()) p.append("search", $("#searchQuery").val());
                window.location.href = baseUrl + "?" + p.toString();
            }

            $("#selectCategory,#selectStatus").change(applyFilters);
            $("#searchButton").click(applyFilters);
            $("#searchQuery").keypress(e => e.which === 13 && applyFilters());

            $('.confirm').click(function (e) {
                if (!confirm($(this).data('confirm-title') + ": " + $(this).data('confirm-message')))
                    e.preventDefault();
            });

            $('.visibility-checkbox').change(function () {
                const cb = $(this);
                $.post('@Url.Action("ToggleVisibility", "Products")', {
                    id: cb.data('product-id'),
                    isVisible: cb.is(':checked'),
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                }).fail(() => {
                    cb.prop('checked', !cb.is(':checked'));
                    alert('Visibility update failed');
                });
            });
        });
    </script>
}
