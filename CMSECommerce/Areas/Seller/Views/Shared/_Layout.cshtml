<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Weypaari</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMSECommerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <style>
        :root {
            --amz-navy: #131921;
            --amz-navy-2: #232f3e;
            --amz-orange: #ff9900;
            --amz-yellow: #f3a847;
            --amz-bg-light: #eaeded;
        }

        body {
            background-color: var(--amz-bg-light);
        }

        /* Header Styling */
        .amz-header-primary {
            background-color: var(--amz-navy);
            padding: 5px 0;
        }

            .amz-header-primary .navbar-brand {
                color: #fff !important;
                font-weight: 700;
                font-size: 1.5rem;
            }

            .amz-header-primary .nav-link {
                color: #fff !important;
                font-size: 0.9rem;
                padding: 8px 15px;
                border: 1px solid transparent;
            }

                .amz-header-primary .nav-link:hover,
                .amz-header-primary .show > .nav-link {
                    border: 1px solid #fff;
                    border-radius: 3px;
                }

        /* Sub-Menu (Dropdown) Styling */
        .amz-dropdown-menu {
            background-color: #fff;
            border-radius: 4px;
            border: 1px solid #ddd;
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
            margin-top: 5px;
        }

        .amz-dropdown-item {
            font-size: 0.9rem;
            padding: 8px 20px;
            color: var(--amz-navy);
        }

            .amz-dropdown-item:hover {
                background-color: #f0f2f2;
                color: var(--amz-orange);
            }

        /* Footer */
        .amz-footer {
            background-color: var(--amz-navy-2);
            color: #ccc;
            padding: 20px 0;
            margin-top: 40px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg amz-header-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <i class="fas fa-box" style="color:var(--amz-orange); margin-right:5px;"></i>
                    <span style="font-weight: 300;">WE</span><span style="color:var(--amz-orange);">y</span>paari
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a asp-area="Seller" asp-controller="Dashboard" asp-action="Index" class="nav-link">
                                <i class="fas fa-home me-1"></i> Dashboard
                            </a>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-cube me-1"></i> Inventory
                            </a>
                            <ul class="dropdown-menu amz-dropdown-menu">
                                <li><a class="dropdown-item amz-dropdown-item" asp-area="Seller" asp-controller="Products" asp-action="Index">View All Products</a></li>
                                <li><a class="dropdown-item amz-dropdown-item" asp-area="Seller" asp-controller="Products" asp-action="Create">Add New Product</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item amz-dropdown-item" asp-area="Seller" asp-controller="Categories" asp-action="Index">View All Catgories</a></li>
                                <li><a class="dropdown-item amz-dropdown-item" asp-area="Seller" asp-controller="Categories" asp-action="Create">Add New Category</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-cog me-1"></i> Orders Management
                            </a>
                            <ul class="dropdown-menu amz-dropdown-menu">
                                <li><a class="dropdown-item amz-dropdown-item" asp-area="Seller" asp-controller="Orders" asp-action="Index">Orders Pending</a></li>
                                <li><a class="dropdown-item amz-dropdown-item" asp-area="Seller" asp-controller="Orders" asp-action="Shipped">Order Shipped</a></li>
                            </ul>
                        </li>
                    </ul>

                    <ul class="navbar-nav justify-content-end align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item me-2">
                                <span class="nav-link" style="cursor: default;">
                                    Hello, <span style="font-weight:600; color:var(--amz-orange);">@User.Identity.Name</span>
                                </span>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Account" asp-action="Logout" class="nav-link">
                                    <i class="fas fa-sign-out-alt me-1"></i> Log Out
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link">Sign In</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            <partial name="_NotificationsPartial" />
            @RenderBody()
        </main>
    </div>

    <footer class="amz-footer">
        <div class="container text-center">
            <p class="mb-1">&copy; @DateTime.Now.Year - Weypaari CMSECommerce</p>
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>